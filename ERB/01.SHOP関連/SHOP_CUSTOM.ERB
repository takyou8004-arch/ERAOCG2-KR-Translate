@CUSTOM_CHARAMAKE(대상캐릭터,カード_ID)
#DIM DYNAMIC 대상캐릭터
#DIM DYNAMIC カード_ID

IF カード_ID <= 0
	CALL NAME_CUSTOM(대상캐릭터)
ELSE
	CALLFORM CARDNAME_{カード_ID}, "名前"
	NAME:대상캐릭터 = %RESULTS%
	CALLFORM CARDNAME_{カード_ID}, "略称"
	CALLNAME:대상캐릭터 = %RESULTS%

	CALLFORM CARD_{カード_ID}, "攻撃力"
	SIF RESULT <= 500
		RESULT = 500
	MAXBASE:대상캐릭터:체력 = RESULT
	BASE:대상캐릭터:체력 = RESULT
	CALLFORM CARD_{カード_ID}, "守備力"
	SIF RESULT <= 500
		RESULT = 500
	MAXBASE:대상캐릭터:기력 = RESULT
	BASE:대상캐릭터:기력 = RESULT

	CALLFORM CARD_{カード_ID}, "성별"
	TALENT:대상캐릭터:성별 = RESULT
	IF RESULT == 2 || RESULT == 3
		PRINTFORML 여자아이로 하시겠습니까？
		PRINTFORML [0] - 예
		PRINTFORML [1] - 아니오
		BINPUT
		IF RESULT == 0
			TALENT:대상캐릭터:성별 = 1
		ENDIF
	ELSE
		TALENT:대상캐릭터:성별 = 1
	ENDIF

	CALLFORM CARD_{カード_ID}, "속성"
	TALENT:대상캐릭터:속성 = RESULT
	CALLFORM CARD_{カード_ID}, "종족"
	TALENT:대상캐릭터:종족 = RESULT
ENDIF


CALL CUSTOM_TERMINAL(대상캐릭터)
RETURN RESULT

@CUSTOM_TERMINAL(대상캐릭터)
#DIM DYNAMIC モード選択
#DIM DYNAMIC 대상캐릭터
TALENT:대상캐릭터:키스미경험 = 1
CFLAG:대상캐릭터:키스상실상대 = -1
CFLAG:대상캐릭터:처녀버린상대 = -1
CFLAG:대상캐릭터:동정버린상대 = -1

$INPUT_LOOP

IF 대상캐릭터 == 0
	;排他処理
	IF TALENT:대상캐릭터:성별 & 1
		ABL:대상캐릭터:호모끼 = 0
		ABL:대상캐릭터:게이중독 = 0
		EXP:대상캐릭터:게이경험 = 0
		SIF !(TALENT:대상캐릭터:성별 & 2)
			EXP:대상캐릭터:사정경험 = 0
	ELSE
		ABL:대상캐릭터:Ｖ감각 = 0
		ABL:대상캐릭터:레즈끼 = 0
		ABL:대상캐릭터:레즈중독 = 0
		EXP:대상캐릭터:레즈경험 = 0
		EXP:대상캐릭터:분유경험 = 0
		EXP:대상캐릭터:Ｖ경험 = 0
		EXP:대상캐릭터:파이즈리경험 = 0
		EXP:대상캐릭터:Ｖ성교경험 = 0
		EXP:대상캐릭터:Ｖ확장경험 = 0
		TALENT:대상캐릭터:Ｖ감도 = 0
		TALENT:대상캐릭터:처녀 = 0
		TALENT:대상캐릭터:모유체질 = 0
		TALENT:대상캐릭터:가슴사이즈 = 0

	ENDIF
	IF TALENT:대상캐릭터:성별 & 2
		MAXBASE:대상캐릭터:정력 = 1000
		BASE:대상캐릭터:정력 = 1000
	ELSE
		TALENT:대상캐릭터:동정 = 0
		MAXBASE:대상캐릭터:정력 = 0
		BASE:대상캐릭터:정력 = 0
	ENDIF
	IF TALENT:대상캐릭터:처녀 == 1
		ABL:대상캐릭터:Ｖ감각 = 0
		EXP:대상캐릭터:Ｖ경험 = 0
		EXP:대상캐릭터:Ｖ성교경험 = 0
		EXP:대상캐릭터:Ｖ확장경험 = 0
	ELSEIF TALENT:대상캐릭터:성별 & 1 && EXP:대상캐릭터:Ｖ경험 == 0
		EXP:대상캐릭터:Ｖ경험 = 1
	ENDIF
ENDIF
CALL PRINT_STATE(대상캐릭터,10)

;最終결정
IF モード選択 == 1000
	CUSTOMDRAWLINE —
	PRINTL 이것으로 정말 괜찮습니까？
;名前の설정
ELSEIF モード選択 == 1001
	CALL NAME_CUSTOM(대상캐릭터)
	モード選択 = 0
	GOTO INPUT_LOOP
;ベース설정
ELSEIF モード選択 == 1002
	CALL BASE_CUSTOM(대상캐릭터)
;素質설정
ELSEIF モード選択 == 1003
	CALL TALENT_CUSTOM(대상캐릭터,LOCAL:101)
;能力설정
ELSEIF モード選択 == 1004
	CALL ABL_CUSTOM(대상캐릭터)
;경험설정
ELSEIF モード選択 == 1005
	CALL EXP_CUSTOM(대상캐릭터)
ELSEIF モード選択 == 1006
	CALL CHANGE_OUTFIT(대상캐릭터,1)
	モード選択 = 1000
ENDIF
CUSTOMDRAWLINE —
SETCOLOR C_YELLOW
PRINTFORM %"[1000] - 결정",30,LEFT%
RESETCOLOR

PRINTFORM %"[1001] - 이름 변경",30,LEFT%
PRINTFORM %"[1002] - 체력、기력의 설정",30,LEFT%
PRINTL
PRINTFORM %"[1003] - 소질 설정",30,LEFT%
PRINTFORM %"[1004] - 능력 설정",30,LEFT%
PRINTFORM %"[1005] - 경험 설정",30,LEFT%
PRINTFORM %"[1006] - 복장 설정",30,LEFT%
PRINTL
SIF 대상캐릭터 != 0
	PRINTFORM %"[9999] - 파기하다",30,LEFT%
PRINTL

BINPUT
IF RESULT == 9999
	PRINTL 이 캐릭터를 삭제하시겠습니까？
	CUSTOMDRAWLINE —
	PRINTFORML 
	PRINTFORML 
	PRINTFORML [0] - 예
	PRINTFORML [1] - 아니오
	BINPUT
	SIF RESULT == 1
		GOTO INPUT_LOOP
	RETURN 9999
ENDIF
IF RESULT == 1000

	PRINTL 이 설정으로 됩니까？
	CUSTOMDRAWLINE —
	PRINTFORML 
	PRINTFORML 
	PRINTFORML [0] - 예
	PRINTFORML [1] - 아니오
	BINPUT
	IF RESULT == 0
		SIF !EQUIP:대상캐릭터:0
			CALL CLOTHES_CUSTOM
		RETURN 1
	ELSE
		GOTO INPUT_LOOP
	ENDIF
ELSEIF RESULT >= 1000
	モード選択 = RESULT
	GOTO INPUT_LOOP
ENDIF
;ベース설정
IF モード選択 == 1002
	IF RESULT == 0 && MAXBASE:대상캐릭터:0 > 1000
		MAXBASE:대상캐릭터:0 -= 100
	ELSEIF RESULT == 1 && MAXBASE:대상캐릭터:0 < 3000
		MAXBASE:대상캐릭터:0 += 100
	ELSEIF RESULT == 2 && MAXBASE:대상캐릭터:1 > 1000
		MAXBASE:대상캐릭터:1 -= 100
	ELSEIF RESULT == 3 && MAXBASE:대상캐릭터:1 < 3000
		MAXBASE:대상캐릭터:1 += 100
	ENDIF
	BASE:대상캐릭터:0 = MAXBASE:대상캐릭터:0
	BASE:대상캐릭터:1 = MAXBASE:대상캐릭터:1
	GOTO INPUT_LOOP
;素質설정
ELSEIF モード選択 == 1003
	;ページ送り
	SIF RESULT == 998 && LOCAL:101
		LOCAL:101 --
	SIF RESULT == 999
		LOCAL:101 ++
	SIF RESULT < 0 || RESULT > 500 || TALENTNAME:RESULT == ""
		GOTO INPUT_LOOP
	;함락素質ほか
	SIF (RESULT >= 3 && RESULT <= 5) || RESULT == 9 || RESULT == 34 || (RESULT >= 72 && RESULT <= 76) || RESULT == 84 || RESULT == 85 || (RESULT >= 153 && RESULT <= 155)
		GOTO INPUT_LOOP
	;성별
	IF RESULT == 2
		IF TALENT:대상캐릭터:RESULT == 3
			TALENT:대상캐릭터:RESULT = 1
		ELSE
			TALENT:대상캐릭터:RESULT ++
		ENDIF
	;성별嗜好
	ELSEIF RESULT == 81
		IF TALENT:대상캐릭터:RESULT == 3
			TALENT:대상캐릭터:RESULT = -1
		ELSE
			TALENT:대상캐릭터:RESULT ++
		ENDIF
	;몸두께
	ELSEIF RESULT == 120
		IF TALENT:대상캐릭터:RESULT == 4
			TALENT:대상캐릭터:RESULT = 0
		ELSE
			TALENT:대상캐릭터:RESULT ++
		ENDIF
	;가슴사이즈
	ELSEIF RESULT == 121
		IF TALENT:대상캐릭터:RESULT == 2
			TALENT:대상캐릭터:RESULT = -2
		ELSE
			TALENT:대상캐릭터:RESULT ++
		ENDIF
		CALL SHOP_BUST_RESET(대상캐릭터)
	ELSEIF RESULT == 122
		IF TALENT:대상캐릭터:RESULT == 3
			TALENT:대상캐릭터:RESULT = -1
		ELSE
			TALENT:대상캐릭터:RESULT ++
		ENDIF
	ELSEIF RESULT == 128
		IF TALENT:대상캐릭터:RESULT == 3
			TALENT:대상캐릭터:RESULT = -1
		ELSE
			TALENT:대상캐릭터:RESULT ++
		ENDIF
		CALL SHOP_BUTT_RESET(대상캐릭터)
	ELSEIF RESULT == 190
		IF TALENT:대상캐릭터:RESULT == 6
			TALENT:대상캐릭터:RESULT = 0
		ELSE
			TALENT:대상캐릭터:RESULT ++
		ENDIF
	ELSEIF RESULT == 191
		IF TALENT:대상캐릭터:RESULT == 17
			TALENT:대상캐릭터:RESULT = 0
		ELSE
			TALENT:대상캐릭터:RESULT ++
		ENDIF

	;オンオフ型の素質
	ELSEIF TALENTNAME:RESULT == GET_TALENTNAME(RESULT,1) || RESULT == 1
		TALENT:대상캐릭터:RESULT = !TALENT:대상캐릭터:RESULT
	;量的素質
	ELSE
		;성별
		IF LOCAL == 2
			IF TALENT:대상캐릭터:RESULT == 3
				TALENT:대상캐릭터:RESULT = 1
			ELSE
				TALENT:대상캐릭터:RESULT ++
			ENDIF
		;端まで行くと-1を掛ける
		ELSEIF STRLENS(GET_TALENTNAME(RESULT,TALENT:대상캐릭터:RESULT + 1)) || TALENT:대상캐릭터:RESULT == -1
			TALENT:대상캐릭터:RESULT ++
		ELSE
			TALENT:대상캐릭터:RESULT = -1 * TALENT:대상캐릭터:RESULT
		ENDIF
	ENDIF
;能力설정
ELSEIF モード選択 == 1004
	LOCAL = RESULT / 2
	SIF !STRLENS(ABLNAME:LOCAL)
		GOTO INPUT_LOOP
	;同性愛관계
	IF !(TALENT:대상캐릭터:성별 & 1) && (LOCAL == 17 || LOCAL == 32)
		GOTO INPUT_LOOP
	ELSEIF TALENT:대상캐릭터:성별 & 1 && (LOCAL == 18 || LOCAL == 33)
		GOTO INPUT_LOOP
	ENDIF
	;중독관계
	SIF LOCAL >= 30
		GOTO INPUT_LOOP
	;奇数(+)
	IF RESULT % 2
		IF ABL:대상캐릭터:LOCAL >= 5
			GOTO INPUT_LOOP
		ELSE
			ABL:대상캐릭터:LOCAL ++
		ENDIF
	;偶数(-)
	ELSE
		IF ABL:대상캐릭터:LOCAL <= 0
			GOTO INPUT_LOOP
		ELSE
			ABL:대상캐릭터:LOCAL --
		ENDIF
	ENDIF
ELSEIF モード選択 == 1005
	LOCAL = RESULT
	SIF !STRLENS(EXPNAME:LOCAL)
		GOTO INPUT_LOOP
	;同性愛관계
	IF !(TALENT:대상캐릭터:성별 & 1) && LOCAL == 41
		GOTO INPUT_LOOP
	ELSEIF TALENT:대상캐릭터:성별 & 1 && LOCAL == 42
		GOTO INPUT_LOOP
	ENDIF
	PRINTFORM %EXPNAME:LOCAL%을 입력해주세요      
	PRINTBUTTON "[취소]",-1
	INPUT
	SIF RESULT < 0
		GOTO INPUT_LOOP
	EXP:대상캐릭터:LOCAL = MIN(RESULT,50)
ELSEIF モード選択 == 1006
	
ENDIF
GOTO INPUT_LOOP

