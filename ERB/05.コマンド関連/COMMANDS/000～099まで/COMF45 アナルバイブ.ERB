;-------------------------------------------------
;애널바이브
;도구사용コマンド、レベル2
;-------------------------------------------------
@COM45
;着脱の処理
TEQUIP:애널바이브 = !TEQUIP:애널바이브 
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
DOWNBASE:체력 += 60
DOWNBASE:기력 += 150

CALL SOURCE_CALC_쾌Ａ(TARGET, MASTER,250)
CALL SOURCE_CALC_노출(TARGET, MASTER, 50)
CALL SOURCE_CALC_접촉(TARGET, MASTER, 20)

LOCAL = 250 * PAIN_CHECK_A(TARGET) / 1000
CALL SOURCE_CALC_고통(TARGET, MASTER, LOCAL)

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
STAIN:7 |= STAIN:4
STAIN:4 |= STAIN:7
;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;Ａ경험
EXP:Ａ경험 ++

;同性愛　레즈なら戻り値1게이なら戻り値2
IF HETEROSEX(TARGET,MASTER)
	EXP:(50 + HETEROSEX(TARGET,MASTER)) += 1
	EXP:MASTER:(50 + HETEROSEX(TARGET,MASTER)) += 1
ENDIF

EXP:MASTER:도구사용경험 ++

RETURN 1
;-------------------------------------------------
;装着계속の処理
;-------------------------------------------------
@EQUIP_COM45(ARG)
;애널바이브 삽입중
PRINTL ＜애널 바이브 삽입중＞

DOWNBASE:ARG:체력 += 30
DOWNBASE:ARG:기력 += 80

CALL SOURCE_CALC_쾌Ａ(ARG, -1,125)
CALL SOURCE_CALC_노출(ARG, MASTER, 25)
LOCAL = 100 * PAIN_CHECK_A(ARG) / 1000
CALL SOURCE_CALC_고통(ARG, MASTER, LOCAL)

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;자위実行時は경험＋１
SIF EXP_UP(22,ARG)
	EXP:ARG:Ａ경험 ++

RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------

@COM_ABLE45
;애널바이브実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(45)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:14
	RETURN 1
;아이템を持っているか、아이템なし설정でないとダメ
SIF ITEM:5 == 0 && NOITEM == 0
	RETURN 0


;하반신착의
SIF TEQUIP:0 & 4
	RETURN 0
;관장＋애널プラグ사용중はダメ
SIF TEQUIP:21
	RETURN 0
;애널비즈사용중は불가
SIF TEQUIP:15
	RETURN 0
;バルーン사용중は불가
SIF TEQUIP:22
	RETURN 0
;電極사용중は불가
SIF TEQUIP:23
	RETURN 0
RETURN 1
