@CARDCAN_31052(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 효과使用불가,3

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,31052)
SIF RESULT == 1
	RETURN 0
;戦闘破壊時의 효과
;参考：애플 매지션 걸（발동条件部分のみ）、御巫の誘い輪舞
IF 종류 == 戦破壊→묘지
	SIF 발동済_1(듀얼리스트,31052)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF !GROUPMATCH(묘지送り종류,"破壊","戦闘破壊")
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

;상대의 효과에 誘発する
;参考：凶導の白기사
ELSEIF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,31052)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0

	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

    CALL FULLRESET
	효과条件종류 = モン全般
	효과条件표시 = 表側표시
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_31052(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 選択カード
#DIM DYNAMIC セット先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 戦破壊→묘지
    ;발동チェック
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31052)
	IF RESULT == 0
		CALL FULLRESET
		효과条件名前 = 그레이돌 이글
		효과条件종류 = モン全般
	
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
        	CALL CARD_DISPOSE(듀얼리스트,"묘지",選択カード,마함行き)
        	セット先 = カード설치先
			CALL FULLRESET
			효과条件표시 = 表側표시
			효과추가종류 = 50 + セット先
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
			CALL SET_FIELD_INFO(듀얼리스트,"마함",セット先,"装",コントロール先,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31052)
	IF RESULT == 0
        CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
        セット先 = カード설치先
		CALL FULLRESET
		효과条件표시 = 表側표시
		효과추가종류 = 50 + セット先
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
		CALL SET_FIELD_INFO(듀얼리스트,"마함",セット先,"装",コントロール先,1)
	ENDIF
ENDIF