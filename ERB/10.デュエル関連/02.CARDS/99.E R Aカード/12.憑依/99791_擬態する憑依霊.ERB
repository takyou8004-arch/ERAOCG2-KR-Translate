@CARDNAME_99791,参照先
;ココで지정 카드의 名前、略称を返す予定
;;; 카드의 名称やカテゴリの지정をする部分;;;
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 의태하는 빙의령
	CASE "略称"
		RESULTS = P 미믹
	CASE "カテゴリ"
		RESULTS:0 = 포제션
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_99791(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常함정
ENDSELECT

RETURN 0

