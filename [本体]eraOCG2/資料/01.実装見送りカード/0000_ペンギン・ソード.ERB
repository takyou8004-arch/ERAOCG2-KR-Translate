#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = ペンギン・ソード
	CASE "略称"
		RESULTS = ペンギン・ソード
	CASE "カテゴリ"
		RESULTS:0 = ペンギン
ENDSELECT


