@CARDNAME_26605,参照先
;ココで指定カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = RR－インペイル・レイニアス
	CASE "略称"
		RESULTS = インペイル・Ｌ
	CASE "カテゴリ"
		RESULTS:0 = レイドラプターズ
ENDSELECT


@CARD_26605(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
	
		RETURN 効果モン
	CASE "属性"
		RETURN 闇属性
	CASE "種族"
		RETURN 鳥獣族
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1700
	CASE "守備力"
		RETURN 1000
ENDSELECT

RETURN 0

@CARD_EXPLANATION_26605(種類)
#DIM DYNAMIC 種類

PRINTL このカード名の②の効果は１ターンに１度しか使用できない。
CALLFORM CARD_ABLE(0,召喚時 ,特殊召喚時)
PRINTL ①：このカードが召喚・特殊召喚した場合、
PRINTL フィールドの攻撃表示 몬스터 １장을 対象として発動できる。
PRINTL そのモンスターを守備表示にする。
CALLFORM CARD_ABLE(2,攻撃後誘発)
PRINTL ②：このカードが攻撃したダメージステップ終了時に、
PRINTL 自分の墓地の「RR」 몬스터 １장을 対象として発動できる。
PRINTL そのモンスターを守備表示で特殊召喚する。

@CARDCAN_26605(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件達成
CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,26605)
SIF RESULT == 1
	RETURN 0

IF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲相手戦場 = 1
	効果条件表示 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻撃後誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 発動済_2(決闘者,26605)
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,0,"墓地")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = レイドラプターズ
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_26605(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,26605)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲戦場 = 1
		効果範囲相手戦場 = 1
		効果条件表示 = 1
		CALL CARD_CHOOSE_ADV(決闘者,ゾーン,場所)
		IF RESULT != 9999
			CALL CARD_SELECT(決闘者,RESULT)
			選択カード = RESULT
			CALL SET_FIELD_INFO(対象者（CS）,参照先（CS）,選択カード,"表",2,1)
		ENDIF
	ENDIF
ELSEIF 種類 == 攻撃後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,26605,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ = レイドラプターズ
		効果条件種類 = モン全般
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所,"守備表示")
	ENDIF
ENDIF
