@CARDCAN_73173(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,5

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73173)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲필드 = 1
	素材範囲손패 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = 의식
	효과条件名前 = ナイト・オブ・포톤ドラゴン
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲묘지 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = 의식
	효과条件名前 = ナイト・オブ・포톤ドラゴン
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73173(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード


IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73173)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL RESETAREA_MAT
		IF 종류 == 묘지起動
			素材範囲묘지 = 1
		ELSE
			素材範囲손패 = 1
			素材範囲필드 = 1
		ENDIF
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件名前 = ナイト・オブ・포톤ドラゴン
		효과条件소환可 = 1
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			選択カード -= 100
			CALL RESETAREA_MAT
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_손패:{選択カード}")}(듀얼리스트,選択カード)
			IF 종류 == 묘지起動
				素材範囲묘지 = 1
			ELSE
				素材範囲손패 = 1
				素材範囲필드 = 1
			ENDIF
			TRYCALLFORM RITSUMMON(듀얼리스트, 選択カード,"손패")
		ENDIF
	ENDIF
ENDIF

