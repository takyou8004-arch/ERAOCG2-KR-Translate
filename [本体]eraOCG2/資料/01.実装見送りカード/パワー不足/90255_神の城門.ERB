@CARDNAME_92965,参照先
;ココで指定カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 神の城門
	CASE "略称"
		RESULTS = 神の城門
	CASE "カテゴリ"
		RESULTS:0 = ヴァルハラ
		RESULTS:1 = ゲームオリジナル
ENDSELECT


@CARD_92965(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"

		RETURN 通常罠
ENDSELECT

RETURN 0

@CARD_EXPLANATION_92965(種類)
#DIM DYNAMIC 種類

PRINTL このカード名のカードは１ターンに１枚しか発動できない。
PRINTL 自分필드에 「ヴァルハラ」カードが存在する場合、このカードの発動は手札からもできる。
CALLFORM CARD_ABLE(1,攻撃時誘発)
PRINTL ①：相手モンスターの直接攻撃宣言時、
PRINTL 自分の手札・デッキ・フィールドから「ヴァルハラ」카드 １枚を墓地へ送って発動できる。
PRINTL このターン、自分が受ける全てのダメージは半分になる。


@CARDCAN_92965(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 効果先
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,92965)
SIF RESULT == 1
	RETURN 0
IF 種類 == 攻撃時誘発
	IF ゾーン == "手札"
		CALL FULLRESET
		効果範囲戦場 = 1
		効果範囲魔罠 = 1
		効果条件スーパーカテゴリ = ヴァルハラ
		効果条件名前:0 = 神の居城－ヴァルハラ
		効果条件名前:1 = ヘカテリス
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSEIF ゾーン == "魔罠"
		IF GETVAR(@"%決闘者%_魔_表:場所") == 3
			CALL FULLRESET
			効果範囲手札 = 1
			効果範囲デッキ = 1
			効果範囲戦場 = 1
			効果範囲魔罠 = 1
			効果条件スーパーカテゴリ = ヴァルハラ
			効果条件名前:0 = 神の居城－ヴァルハラ
			効果条件名前:1 = ヘカテリス
			効果条件他所 = 1
			CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
			SIF RESULT != 1
				RETURN 0
		ENDIF
	ELSE
		RETURN 0
	ENDIF
	SIF 発動済_1(決闘者,92963)
		RETURN 0
	SIF 戦闘場所(決闘者) != 5
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_92965(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 相手レベル
#DIM DYNAMIC 相手攻撃力

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 攻撃時誘発
	;カード発動確認
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,92965,1)
	IF RESULT == 0
		;通常魔法汎用処理
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲手札 = 1
		効果範囲デッキ = 1
		効果範囲戦場 = 1
		効果範囲魔罠 = 1
		効果条件スーパーカテゴリ = ヴァルハラ
		効果条件名前:0 = 神の居城－ヴァルハラ
		効果条件名前:1 = ヘカテリス
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL SET_PLAYER_INFO(決闘者,"ダメージ半化",1)
		ENDIF
	ENDIF
ENDIF
