@CARDCAN_26613(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件達成
CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,26613)
SIF RESULT == 1
	RETURN 0

IF 種類 == 攻撃時誘発
	SIF ゾーン != "手札"
		RETURN 0
	SIF ターンプレイヤー == 決闘者
		RETURN 0
	TRYCALLFORM CARDNAME_{戦闘カードID(決闘者)},"カテゴリ"
	SIF RESULTS != "レイドラプターズ"
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_26613(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 攻撃時誘発
	;カード発動確認
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,26501)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所,除外行き)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(決闘者,"自動処理",戦闘場所(決闘者,1),"墓地")
	ENDIF
ENDIF