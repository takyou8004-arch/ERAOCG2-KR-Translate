	CASE "名前"
		RESULTS = フォトン・リザード
	CASE "略称"
		RESULTS = Ｐｔリザード
	CASE "カテゴリ"
		RESULTS:0 = フォトン
ENDSELECT


@CARD_23186(参照先)
#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN 効果モン
	CASE "属性"
		RETURN 光属性
	CASE "種族"
		RETURN ドラゴン族
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 900
	CASE "守備力"
		RETURN 1200
