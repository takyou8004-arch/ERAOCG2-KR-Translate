@CARDNAME_72663,参照先
;ココで指定カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = ラプターズ・アルティメット・メイス
	CASE "略称"
		RESULTS = Ｒ・Ｕ・メイス
	CASE "カテゴリ"
		RESULTS:0 = レイドラプターズ
ENDSELECT


@CARD_72663(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN 装備魔法
ENDSELECT

RETURN 0

@CARD_EXPLANATION_72663(種類)
#DIM DYNAMIC 種類

PRINTL 「RR」몬스터에 のみ装備可能。
CALLFORM CARD_ABLE(0,攻守変動)
PRINTL ①：装備モンスターの攻撃力は１０００アップし、その戦闘で発生する自分への戦闘ダメージは０になる。
CALLFORM CARD_ABLE(0,攻撃時誘発)
PRINTL ②：装備モンスターが相手モンスターと戦闘を行う場合、以下の効果から１つを選んで発動できる。
PRINTL ●装備モンスターはその戦闘では破壊されない。
PRINTL ●デッキから「RUM」魔法카드 １枚を手札に加える。


@CARDCAN_72663(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 選択カード

CALL 装備判定(決闘者,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,72663)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == 手札起動
	IF 種類 == 魔罠起動
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件カテゴリ = レイドラプターズ
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻守変動 || 種類 == 永続効果
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻撃時誘発
	SIF ゾーン != "魔罠"
		RETURN 0
	IF ゾーン == "魔罠"
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
		RETURN 0
	ENDIF
	SIF バトルフェイズ != 1
		RETURN 0
	SIF 戦闘場所(決闘者) != 装備先
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72663(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者

#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL 装備判定(決闘者,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%

IF 種類 == 魔罠起動 || 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,72663)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件カテゴリ = レイドラプターズ
		CALLFORM CARD_EQUIP_ADV(決闘者,場所,ゾーン)
	ENDIF
ELSEIF 種類 == 攻守変動
	CALL STATCHANGE_BASIC(決闘者,"装備",場所,1000)
ELSEIF 種類 == 永続効果
	CALL SET_PLAYER_INFO(決闘者,"ダメージ無効",3)
ELSEIF 種類 == 攻撃時誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,72663)
	IF RESULT == 0
		CALL YN_CHOICE(決闘者,"●装備モンスターはその戦闘では破壊されない。","●デッキから「RUM」魔法카드 １枚を手札に加える。")
		IF RESULT == 0
			CALL STATCHANGE_EFFECT(決闘者,"装備",場所,"戦耐",1)
		ELSEIF RESULT == 1
			CALL FULLRESET
			効果条件カテゴリ = RUM
			効果条件種類 = 魔法全般
			CALL CARD_ADD_BASIC(決闘者,"デッキ",ゾーン,場所)
		ENDIF
	ENDIF
ENDIF