@CARDCAN_93175(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 効果先
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL 装備判定(決闘者,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,93175)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 && GETVAR(@"%決闘者%_魔_表:場所") == 1
	SIF 発動済_3(決闘者,93175)
		RETURN 0
	TRYCALLFORM CARD_{GETVAR(@"%決闘者%_戦場:装備先")}, "種類"
	SIF MATCH(RESULT,エクシーズ) || MATCH(RESULT,リンク)
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_星:装備先") > 8
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,92340,"魔罠")
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	RETURN 1
ELSEIF 種類 == 魔罠起動 || 種類 == 手札起動 || 種類 == フリー誘発
	SIF 発動済_1(決闘者,93175)
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,0,"墓地")
	SIF RESULT == 1
		RETURN 0
	IF ゾーン == "手札"
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件名前 = ギャラクシーアイズ・フォトン・ドラゴン
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		効果範囲戦場 = 1
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 0
			RETURN 0
		CALL FULLRESET
		効果範囲相手戦場 = 1
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSEIF ゾーン == "魔罠"
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
			RETURN 0
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 1
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = ギャラクシー
	効果条件種類 = モン全般
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻守変動
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF 装備先 == 5
		RETURN 0
	RETURN 1
ELSEIF 種類 == ターン終了時強制
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_93175(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 設定レベル
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 装備先種族
#DIM DYNAMIC 装備先レベル
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL 装備判定(決闘者,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%

IF 種類 == 魔罠起動 && GETVAR(@"%決闘者%_魔_表:場所") == 1
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,93175,3)
	IF RESULT == 0
		装備先種族 = GETVAR(@"%装備者%_MZ_種:装備先")
		装備先レベル = GETVAR(@"%装備者%_MZ_星:装備先")
		CALL FULLRESET
		効果追加種類:0 = 100 + 装備先種族
		効果追加種類:1 = 140 + 装備先レベル
		CALL CARD_SP_SUMMON(決闘者, "魔罠", 場所)
		IF RESULT
			CALL FULLRESET
			効果条件種類 = エクシーズ
			強制必要素材名前 = リギャラクシー
			効果条件召喚可 = 1
			CALL CARD_CHOOSE_BASIC(決闘者,"EXデッキ",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				TRYCALLFORM CARDSUMMON_{RESULT:99}(決闘者,選択カード)
				CALL XYZSUMMON(決闘者, 選択カード)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 種類 == 魔罠起動 || 種類 == 手札起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,93175,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ = ギャラクシー
		効果条件種類 = モン全般
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所,"攻撃表示")
		IF RESULT
			CALL FULLRESET
			効果範囲戦場 = 1
			効果条件固定 = カード召喚先
			CALLFORM CARD_EQUIP_ADV(決闘者,場所,ゾーン)
		ENDIF
	ENDIF
ELSEIF 種類 == 攻守変動
	CALLFORM CARD_{GETVAR(@"%装備者%_戦場:装備先")}("攻撃力")
	攻撃力修正 = -RESULT / 2
	CALL STATCHANGE_BASIC(決闘者,"装備",場所,攻撃力修正)
ELSEIF 種類 == ターン終了時強制
	CALL CARD_DISPOSE(決闘者,ゾーン,装備先)
ENDIF
