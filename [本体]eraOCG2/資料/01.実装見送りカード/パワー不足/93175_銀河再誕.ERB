#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = リギャラクシー
	CASE "略称"
		RESULTS = 銀河再誕
	CASE "カテゴリ"
		RESULTS:0 = ギャラクシー
		RESULTS:1 = ゲームオリジナル
ENDSELECT


@CARD_93175(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN 通常罠
	CASE "属性"
		RETURN 光属性
	CASE "種族"
		RETURN 未確認族
	CASE "レベル"
		RETURN 1
	CASE "攻撃力"
		RETURN 0
	CASE "守備力"
		RETURN 0
	CASE "分割"
		RETURN 効果なし
ENDSELECT

RETURN 0

