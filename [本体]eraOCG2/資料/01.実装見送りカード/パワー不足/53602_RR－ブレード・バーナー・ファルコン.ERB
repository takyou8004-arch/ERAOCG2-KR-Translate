@CARDCAN_53602(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,53602)
SIF RESULT == 1
	RETURN 0
IF 種類 == EX召喚時
	SIF GETVAR(@"ライフ_%決闘者%") + 3000 > GETVAR(@"ライフ_%対面者%") 
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻撃後誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") <= 0
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	SIF 直前戦闘破壊ID(決闘者,1) == 0
		RETURN 0
	CALL FULLRESET
	効果範囲相手戦場 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_53602(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 破壊枚数
#DIM 選択カード


CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == EX召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,53602)
	IF RESULT == 0
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"永攻",3000)
	ENDIF
ELSEIF 種類 == 攻撃後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,53602)
	IF RESULT == 0
		CALL FULLRESET
		破壊枚数 = GETVAR(@"%決闘者%_MZ_Ｘ:場所") + 1
		REPEAT 破壊枚数
			CALL FULLRESET
			効果条件任意 = 1
			CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"墓地")
			SIF RESULT != 1
				BREAK
		REND
	ENDIF
ENDIF
