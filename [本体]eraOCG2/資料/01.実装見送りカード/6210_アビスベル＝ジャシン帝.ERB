@CARDCAN_6210(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,6210)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動
	SIF 発動済_1(決闘者,6210)
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,6210,ゾーン)
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0

	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = アビス
	効果条件固名前 = アビスベル＝ジャシン帝
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 効果後誘発
	SIF 発動済_2(決闘者,6210)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_最召場所") == 場所
		RETURN 0
	CALL FULLRESET
	効果条件カテゴリ = アビス
	CALL CARD_CHECK_FIN_DATA(決闘者,"特殊召喚")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦場起動
	SIF 発動済_3(決闘者,6210)
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0	
	SIF メインフェイズ != 1
		RETURN 0
	SIF モンスター数(決闘者) >= 5
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = アビス
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 身代効果
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件表示 = 20
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	SIF 破壊対象ゾーン != "戦場"
		RETURN 0
	SIF 破壊対象場所 != 場所
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_6210(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 手札起動 
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,6210,1)
	IF RESULT == 0
		CALL FULLRESET
		効果条件カテゴリ = アビス
		効果条件固名前 = アビスベル＝ジャシン帝
		効果条件種類 = モン全般
		CALL CARD_ADD_GY_BASIC(決闘者,"デッキ",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(決闘者,ゾーン,場所)
			CALL CARD_SS_RESTRICTION(決闘者,"アビス")
		ENDIF
	ENDIF
ELSEIF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,6210,2)
	IF RESULT == 0
		CALL FULLRESET
		効果条件カテゴリ = アビス
		効果条件種類 = 魔罠全般
		CALL CARD_ADD_BASIC(決闘者,"デッキ",ゾーン,場所)
	ENDIF
ELSEIF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,6210,3)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ = アビス
		効果条件種類 = モン全般
		効果追加種類 = 10 + デッキ行き
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所,"攻撃表示")
	ENDIF
ELSEIF 種類 == 身代効果
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,6210)
	IF RESULT == 0
		CALL FULLRESET
		効果条件表示 = 20
		CALL CARD_ADD_GY_BASIC(決闘者,"手札",ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
	ENDIF
	RETURN 0
ENDIF