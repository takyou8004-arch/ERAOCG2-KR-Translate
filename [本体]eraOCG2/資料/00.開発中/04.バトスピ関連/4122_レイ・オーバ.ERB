@CARDCAN_4122(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4122)

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,4122)
SIF RESULT == 1
	RETURN 0


IF 種類 == 手札起動
	IF TALENT:カード主:愛妻
		SIF 発動済_1(決闘者,4122)
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 決闘者
			RETURN 0
		CALL CARD_SS_CHECK(決闘者,4122,"手札")
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		効果範囲戦場 = 1
		効果範囲魔罠 = 1
		効果条件カテゴリ = バトルスピリッツ
		効果条件表示 = 表側表示
		効果条件CNT = 1
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT:9 < 1
			RETURN 0
	ELSE
		RETURN 0	
	ENDIF
	RETURN 1
ELSEIF 種類 == 効果後誘発
	SIF 発動済_2(決闘者,4122)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果条件属性 = 炎属性
	効果条件スーパーカテゴリ = 詩姫
	CALL CARD_CHECK_FIN_DATA(決闘者,"召喚全般")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦場起動
	IF TALENT:カード主:愛妻
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 決闘者
			RETURN 0
		SIF 発動済_3(決闘者,4122)
			RETURN 0
		CALL FULLRESET
		効果範囲魔罠 = 1
		効果条件カテゴリ = 創界神
		効果条件表示 = 表側表示
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ELSE
		RETURN 0	
	ENDIF
ENDIF

@CARDEFFECT_4122(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタ数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 軽減数
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4122)


IF 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,4122,1)
	IF RESULT == 0
		PRINTL コアカウンターを取り除くカードを選択
		CALL FULLRESET
		効果範囲戦場 = 1
		効果範囲魔罠 = 1
		効果条件カテゴリ = バトルスピリッツ
		効果条件表示 = 表側表示
		効果条件個Ｃ所持 = 1
		CALL CARD_CHOOSE_ADV(決闘者,ゾーン,場所)
		IF RESULT != 9999
			PRINTL コアが取り除かれました
			CALL CARD_SELECT(決闘者,RESULT)
			CALL SET_FIELD_INFO(対象者（CS）,参照先（CS）,選択カード（CS）,"個Ｃ",-1)

			CALL FULLRESET
			CALL CARD_SP_SUMMON(決闘者,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,4122,2)
	IF RESULT == 0
		CALL FULLRESET
		効果条件スーパーカテゴリ = ブレイヴ
		効果条件種類 = 装備魔法
		効果条件任意 = 1
		CALL CARD_ADD_BASIC(決闘者,"デッキ",ゾーン,場所,3)
	ENDIF
ELSEIF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,4122,3)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲魔罠 = 1
		効果条件カテゴリ = 創界神
		効果条件表示 = 表側表示
		CALL CARD_CHOOSE_ADV(決闘者,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_SELECT(決闘者,選択カード)
			CALL SET_FIELD_INFO(決闘者,参照先（CS）,選択カード（CS）,"個Ｃ",2)
		ENDIF

		CALL FULLRESET
		CALL CARD_EQUIP_CHECK(決闘者,場所,ゾーン)
		IF RESULT != 0
			効果条件表示 = 表側表示
			効果条件任意 = 1
			効果追加種類 = 11
			CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"永攻DOWN",2500)
		ELSE
			効果条件表示 = 表側表示
			効果条件任意 = 1
			効果追加種類 = 11
			CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"永攻DOWN",1000)
		ENDIF
	ENDIF
ENDIF

