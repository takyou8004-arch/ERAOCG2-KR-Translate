@CARDNAME_4122,参照先
;ココで指定カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4122)

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = レイ・オーバ
	CASE "略称"
		RESULTS = レイ
	CASE "カテゴリ"
		RESULTS:0 = 詩姫
		RESULTS:4 = バトルスピリッツ
		IF TALENT:カード主:愛妻
			RESULTS:1 = 契約
		ENDIF
ENDSELECT


