@CARDCAN_99555(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 対戦カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99555)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 
	SIF !(メインフェイズ == 1 || バトルフェイズ == 1 )
		RETURN 0
	
	IF ゾーン == "손패"
		;セット카드가あれば使えない
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件표시 = 裏側표시
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT > 0
			RETURN 0
	ELSEIF ゾーン == "마함"
		;세트한 턴에 は使えない
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 2
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	
	;필드에 牝が居なければ使えない
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 0
		RETURN 0
		
	RETURN 1
ELSEIF 종류 == 묘지起動
	
	SIF 발동済_2(듀얼리스트,99555)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件종류 = 通常モン
	효과条件종족 = 야수족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	
	RETURN 1
ENDIF

@CARDEFFECT_99555(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 参照場所
#DIM DYNAMIC 상대플래그
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 選択カードID_保
#DIM DYNAMIC 参照カードID
#DIM DYNAMIC 암소대상
#DIMS DYNAMIC 암소名称
#DIM DYNAMIC 元乳サイズ
#DIM DYNAMIC 現乳サイズ
#DIM DYNAMIC 암소最大ID
#DIMS DYNAMIC 最大듀얼리스트
#DIMS DYNAMIC 암소最大名称
#DIM DYNAMIC 암소最大サイズ
#DIMS DYNAMIC カテゴリ名称
#DIM DYNAMIC 절정횟수


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99555,1)
	IF RESULT == 0
		
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件성별 = 牝性
		
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
	
		IF RESULT != -1
			選択カード = RESULT
			選択カードID = RESULT:99
			選択カードID_保 = RESULT:99
			
			IF 選択カード >= 2000
				選択カード = 選択カード - 2000
				상대플래그 = 1
			ENDIF
			
			;ホルスタインカードなら、마법함정のカードIDを参照
			IF 상대플래그 == 0
				CALL HORUSTEIN_GET_DATA(듀얼리스트,選択カード,選択カードID)
			ELSE
				CALL HORUSTEIN_GET_DATA(対面者,選択カード,選択カードID)
			ENDIF
			암소名称 = %RESULTS:0%
			参照場所 = RESULT:0
			参照カードID = RESULT:99
			
			SIF 参照場所 != -1
				選択カードID = 参照カードID
			
			암소最大サイズ = -5
			;필드의 가슴サイズチェック
			FOR カウンタ,0,5
				SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
					CONTINUE
				CALL HORUSTEIN_GET_DATA(듀얼리스트,カウンタ,GETVAR(@"%듀얼리스트%_MZ_ID:{カウンタ}") )
				CALL HORUSTEIN_GET_BUST(RESULT:99, GETVAR(@"%듀얼리스트%_MZ_가슴追:カウンタ"))
				IF RESULT:2 > 암소最大サイズ 
					암소最大サイズ = RESULT:2
					암소最大ID = GETVAR(@"%듀얼리스트%_MZ_ID:カウンタ")
					最大듀얼리스트 = %듀얼리스트%
					;PRINTFORML 암소最大ID{암소最大ID} 암소最大サイズ {암소最大サイズ} 가슴追{GETVAR(@"%듀얼리스트%_MZ_가슴追:カウンタ")}
				ENDIF
			NEXT
			FOR カウンタ,0,5
				SIF GETVAR(@"%対面者%_필드:{カウンタ}") == -1
					CONTINUE
				CALL HORUSTEIN_GET_DATA(対面者,カウンタ,GETVAR(@"%対面者%_MZ_ID:{カウンタ}") )
				CALL HORUSTEIN_GET_BUST(RESULT:99, GETVAR(@"%対面者%_MZ_가슴追:カウンタ"))
				IF RESULT:2 > 암소最大サイズ 
					암소最大サイズ = RESULT:2
					암소最大ID = GETVAR(@"%対面者%_MZ_ID:カウンタ")
					最大듀얼리스트 = %対面者%
				ELSE
							
				ENDIF
			NEXT
			
			;자신의 ホルスタイン마법함정のチェック
			;몬스터 존에 存在していなくても、가슴の変化情報が個Cに乗っているため
			FOR カウンタ,0,5
				SIF GETVAR(@"%듀얼리스트%_마함:{カウンタ}") == -1
					CONTINUE
				;乳の登録情報は、個別Cで관리
				IF GETVARS(@"%듀얼리스트%_魔_追カテ:カウンタ") == "登録情報：ホルスタイン-美乳" || GETVARS(@"%듀얼리스트%_魔_追カテ:カウンタ") == "登録情報：ホルスタイン-愛乳" || GETVARS(@"%듀얼리스트%_魔_追カテ:カウンタ") == "登録情報：ホルスタイン-旨乳"|| GETVARS(@"%듀얼리스트%_魔_追カテ:カウンタ") == "登録情報：ホルスタイン-EX乳"
					
					CALL HORUSTEIN_GET_BUST(GETVAR(@"%듀얼리스트%_魔_ID:{カウンタ}") , GETVAR(@"%듀얼리스트%_魔_個Ｃ:カウンタ"))
					IF RESULT:2 > 암소最大サイズ 
						암소最大サイズ = RESULT:2 
						암소最大ID = GETVAR(@"%듀얼리스트%_魔_ID:カウンタ")
						最大듀얼리스트 = %듀얼리스트%
					ENDIF
				ENDIF
			NEXT
			
			;最後に見た카드가ホルスタインカードなら、마법함정の카드를 参照
			CALL HORUSTEIN_GET_DATA(最大듀얼리스트,選択カード,암소最大ID)
			
			参照場所 = RESULT:0
			参照カードID = RESULT:99
			
			SIF 参照場所 != -1
				암소最大ID = 参照カードID
			
			CALL HORUSTEIN_GET_DATA(듀얼리스트,-1,암소最大ID)
			암소最大名称 = %RESULTS:0%
			
			CALL HORUSTEIN_PRINT_STATE(듀얼리스트,-1,암소最大ID, 암소最大サイズ,2,1);2乳上書き(比較なし)、1화상アイコンのみ
			
			PRINTFORML 
			SETCOLOR C_GOLD
			PRINTFORM ★最大サイズ★ ：
			RESETCOLOR
			SETCOLOR C_PINK
			PRINTFORM  [%GET_TALENTNAME(121,암소最大サイズ)%] 
			RESETCOLOR
			PRINTFORML %암소最大名称%
			PRINTFORML 
			
			;現在のサイズを취득
			CALL HORUSTEIN_GET_BUST(選択カードID, GETVAR(@"%대상者（CS）%_MZ_가슴追:選択カード"))
			元乳サイズ = RESULT:0
			現乳サイズ = RESULT:2
			
			CALL HORUSTEIN_GET_DATA(듀얼리스트,-1,選択カードID)
			암소名称 = %RESULTS:0%
			암소대상 = RESULT:1
			
			PRINTFORM 　現在サイズ　 ：
			PRINTFORM  [%GET_TALENTNAME(121,現乳サイズ)%] 
			RESETCOLOR
			PRINTFORML %암소名称%
			PRINTFORMW 
			
			;CALL HORUSTEIN_PRINT_STATE(選択カードID, 現乳サイズ,,,2,1);乳上書き(比較なし)、1화상アイコンのみ
			
			;가슴のサイズによって選択肢の표시有無
			IF 암소最大サイズ <= 現乳サイズ
				;サイズアップのみ
				PRINTFORML
				PRINTFORMW 選択した카드가一番大きい乳のため、「乳をひと回り大きくする」が選択されます。
				RESULT = 0
			ELSE
				;選択可能
				CALL YN_CHOICE(듀얼리스트,"「乳をひと回り大きくする」","「フィールドで一番乳の大きい몬스터와 同じ大きさにする。」")
			ENDIF

			;ホルスタイン몬스터의 경우、마법の方に個別Cを乗せる
			IF INRANGE (選択カードID_保, 179556, 179559) 
				SIF 選択カードID_保 == 179556
					カテゴリ名称 = 登録情報：ホルスタイン-美乳
				SIF 選択カードID_保 == 179557
					カテゴリ名称 = 登録情報：ホルスタイン-愛乳
				SIF 選択カードID_保 == 179558
					カテゴリ名称 = 登録情報：ホルスタイン-旨乳
				SIF 選択カードID_保 == 179559
					カテゴリ名称 = 登録情報：ホルスタイン-EX乳
				
				FOR カウンタ,0,5
					IF (상대플래그 == 1 && GETVAR(@"상대_MZ_所有:選択カード") == 1 ) || (상대플래그 == 0 && GETVAR(@"자신_MZ_所有:選択カード") == 1 ) 
						SIF GETVARS(@"자신_魔_追カテ:カウンタ") != カテゴリ名称
							CONTINUE
						상대플래그 = 0
					ELSEIF (상대플래그 == 0 && GETVAR(@"자신_MZ_所有:選択カード") == 2 ) || (상대플래그 == 1 && GETVAR(@"상대_MZ_所有:選択カード") == 2 )
						;상대의 カードなら、상대의 場を見る
						SIF GETVARS(@"상대_魔_追カテ:カウンタ") != カテゴリ名称
							CONTINUE
						상대플래그 = 1
					ELSE
						CONTINUE
					ENDIF
					IF RESULT == 0
						CALL SET_FIELD_INFO("자신","마함",カウンタ,"個Ｃ",1,,상대플래그)
						現乳サイズ += 1
					ELSE
						CALL SET_FIELD_INFO("자신","마함",カウンタ,"個Ｃ",암소最大サイズ - 元乳サイズ,上書きモード,상대플래그)
						現乳サイズ = 암소最大サイズ
					ENDIF
					BREAK
				NEXT
				
			ELSE
				IF RESULT == 0
					;乳を大きくする
					CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"가슴追",1,,상대플래그)
					現乳サイズ += 1
				ELSE
					;フィールドで一番乳の大きい몬스터와 同じ大きさにする。」
					CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"가슴追",암소最大サイズ - 元乳サイズ,上書きモード,상대플래그)
					現乳サイズ = 암소最大サイズ
				ENDIF
			ENDIF
			
			PRINTFORML 
			PRINTFORML ホルスの従者達が%암소名称%を取りみ、怪しげな주문を唱え始めた…
			PRINTFORMW 
			
			;名前から가슴のサイズの変動まで표시
			CALL HORUSTEIN_PRINT_STATE(듀얼리스트,場所,選択カードID, 現乳サイズ-元乳サイズ)
			
			IF 암소대상 != -1
				CALL PRINT_STATE_CLOTH(암소대상)
			ENDIF
			PRINTL
			PRINTFORML
			PRINTL □ 健康状態 □——————————————————————————————————————————————————————————————————————————————————
			PRINTFORML 
			PRINTFORML ・母乳の量　…　検査대상外
			PRINTFORML ・母乳品質　…　検査대상外
			PRINTFORM ・乳 感 度　… 
			FONTSTYLE 4
			PRINTFORM  検査대상外 
			FONTSTYLE 0
			SETCOLOR C_PINK
			PRINTFORML  → 敏感
			RESETCOLOR
			PRINTFORML ・性　　欲　…　検査대상外
			PRINTFORML ・触　　診　… 　異常なし
			PRINTFORM 　　　　　　　　　　　　
			FONTSTYLE 8
			PRINTFORML 　評 価：― 
			FONTSTYLE 0
			PRINTFORML 
			PRINTL □ 特記事項 □——————————————————————————————————————————————————————————————————————————————————
			PRINTFORML 
			SETCOLOR C_PINK
			PRINTFORML ・発情しています。
			PRINTFORML 　サイズが大きくなった影響か、一時的に敏感になっているようです。強い刺激はお控えください。
			PRINTFORML 
			RESETCOLOR
			
			CALL HORUSTEIN_GET_BUST(選択カードID,現乳サイズ-元乳サイズ)
			PRINTFORM ・乳のサイズが [%GET_TALENTNAME(121,RESULT:0)%] から
			SETCOLOR C_H_PINK
			PRINTFORM  [%GET_TALENTNAME(121,RESULT:2)%] 
			RESETCOLOR
			PRINTFORML になっています。
			PRINTFORML 　このカードで付与される発情状態は、乳のサイズによって攻撃が失敗する確率が変動します。
			PRINTFORML 　以下、参考資料となります。ご参考ください。
			PRINTFORML 
			PRINTFORML 　[並み]以下　：５０％程度
			SETCOLOR C_D_GRAY
			PRINTFORML 　　[巨乳]　　：６０％程度
			SETCOLOR 0X222222
			PRINTFORML 　　[爆乳]　　：７０％程度
			SETCOLOR 0X111111
			PRINTFORML 　 [ウシ乳] 　：８０％程度
			RESETCOLOR
			PRINTFORML 
			;PRINTFORML 　　[魔乳]　　：９０％程度
			;PRINTFORML 
			;PRINTFORML 　 [規格外] 　：１００％
			;PRINTFORML 

			CUSTOMDRAWLINE —
			PRINTFORMW 
			
			IF INRANGE (RESULT:2 , 2, 4) 
				PRINTFORML
				PRINTFORML %암소名称%は大きくなった乳を重そうに押さえている…
				PRINTFORMW 
			ELSEIF RESULT:2 >= 5
				PRINTFORML
				PRINTFORML %암소名称%は乳がデカすぎて動けないようだ…
				PRINTFORMW 
			ENDIF
		
			SETCOLOR C_PINK
			CUSTOMDRAWLINE —
			PRINTFORML
			PRINTFORML %암소名称%は発情している…
			PRINTFORML 
			CUSTOMDRAWLINE —
			PRINTFORML
			RESETCOLOR
			
			
			;発情値설정
			SELECTCASE 現乳サイズ
				CASE IS < 0
					CALL STATCHANGE_EFFECT(대상者（CS）,"自身",選択カード,"発情",150)
					PRINTFORML %암소名称%は発情している…
				CASE 1 ;巨乳
					CALL STATCHANGE_EFFECT(대상者（CS）,"自身",選択カード,"発情",160)
				CASE 2 ;爆乳
					CALL STATCHANGE_EFFECT(대상者（CS）,"自身",選択カード,"発情",170)
				CASE 3 ;牛乳
					CALL STATCHANGE_EFFECT(대상者（CS）,"自身",選択カード,"発情",180)
				CASE 4 ;魔乳
					CALL STATCHANGE_EFFECT(대상者（CS）,"自身",選択カード,"発情",190)
				CASE 5 ;規格外
					CALL STATCHANGE_EFFECT(대상者（CS）,"自身",選択カード,"発情",200)
			CASEELSE
					CALL STATCHANGE_EFFECT(대상者（CS）,"自身",選択カード,"発情",200)
			ENDSELECT
			
			IF 암소대상 != -1 && (現乳サイズ-元乳サイズ) > 0
				;元のサイズより大きい分だけ強い刺激になる
				CALL EROTIC_MOVE("バスト조교",암소대상,-1, 100 + (現乳サイズ-元乳サイズ) * 50)
				
				PRINTFORML 
				절정횟수 += RESULT:1
			ENDIF
			
			IF 절정횟수 > 0
				
				SETCOLOR C_PINK
				PRINTFORML 
				PRINTFORML %암소名称%は大きくなったばかりで敏感な乳を揺らしてしまい
				PRINTFORML その僅かな刺激で{절정횟수}回イってしまった…
				PRINTFORMW 
				RESETCOLOR
