RESETCOLOR
CALLFORM CARD_ABLE(0,永続効果)
PRINTL ④：このカードは罠내성을 持つ。
CALL TEXT_DECORATION("ROGUE")


@CARDCAN_40071(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,40071)
	SIF RESULT == 1
		RETURN 0

IF 種類 == 召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,40071)
		RETURN 0
	SIF 発動済_2(決闘者,40071)
		RETURN 0
	SIF モンスター数(決闘者) >= 5
		RETURN 0

	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = 惑乱魔
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = 惑乱魔
	効果条件種類 = モン全般
	CALL CARD_SS_CHECK(決闘者,0,"墓地")
	SIF RESULT == 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 戦場起動 ;&& GETVAR(@"%決闘者%_MZ_表:場所") == 1 || 種類 == フリー誘発
	SIF 発動済_1(決闘者,40071)
		RETURN 0
	SIF 発動済_2(決闘者,40071)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_表:場所") != 1
		RETURN 0
	SIF 魔罠数(決闘者) >= 5
		RETURN 0
		
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ:0 = 落とし穴
	効果条件カテゴリ:1 = 蜜穴
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 攻撃時誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	SIF ターンプレイヤー == 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_表:場所") == 2
		RETURN 0
	RETURN 1

ELSEIF 種類 == 攻撃時強制誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	SIF ターンプレイヤー == 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_表:場所") == 2
		RETURN 0
	RETURN 1

ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_40071(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 自己卡片
#DIM DYNAMIC 自己守備力修正
#DIM DYNAMIC 对方卡片
#DIM DYNAMIC 对方攻撃力修正
#DIM DYNAMIC 調教対象

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,40071,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ = 惑乱魔
		効果条件種類 = モン全般
		効果追加種類 = 190
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所,"守備表示")
	ENDIF

ELSEIF 種類 == 戦場起動 ;&& GETVAR(@"%決闘者%_MZ_表:場所") == 1 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,40071,2)
	IF RESULT == 0
		CALL FULLRESET
		効果条件カテゴリ:0 = 落とし穴
		効果条件カテゴリ:1 = 蜜穴
		効果条件種類 = 通常罠
		CALL CARD_SET_BASIC(決闘者,"墓地",ゾーン,場所,"裏側表示")
	ENDIF

ELSEIF 種類 == 攻撃時誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,40071)
	IF RESULT == 0
		自己卡片 = 戦闘場所(決闘者)
		自己守備力修正 = GETVAR(@"%決闘者%_MZ_守:自己卡片")
		对方卡片 = 戦闘場所(決闘者,1)
		对方攻撃力修正 = GETVAR(@"%対面者%_MZ_攻:对方卡片")
		TRYCALLFORM CARD_{戦闘カードID(決闘者,1)}("性別")
		IF RESULT == 牝性
			調教対象 = GETVAR(@"%対面者%_戦場:对方卡片")
			CALL CARD_EROTICS(調教対象)
			IF RESULT != -1
				調教対象 = RESULT
				SETCOLOR C_PINK
				PRINTFORMW 蒂奥将分泌的粘液涂抹在%CALLNAME:調教対象%的敏感处,冰凉粘腻的触感混合着快感挑动着%CALLNAME:調教対象%的神经。
				RESETCOLOR
				CALL EROTIC_MOVE("全身レズ愛撫",調教対象,NO_TO_CHARANUM(1375))
			ENDIF
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(決闘者,"自動処理",对方卡片,"永攻DOWN",800)

		ELSEIF RESULT == 雄性 || RESULT == ふたなり && (对方攻撃力修正 - 800 ) - 自己守備力修正 >= 0
			調教対象 = GETVAR(@"%対面者%_戦場:对方卡片")
			CALL CARD_EROTICS(調教対象)
			IF RESULT != -1
				調教対象 = RESULT
				SETCOLOR C_PINK
				PRINTFORMW 蒂奥沉溺于交欢的快感，被%CALLNAME:調教対象%的肉棒彻底征服了……！
				RESETCOLOR
				CALL EROTIC_MOVE("前穴凌辱",NO_TO_CHARANUM(1375),調教対象)
				IF 魔罠数(対面者) < 5
					SETCOLOR C_PINK
					PRINTFORMW 随后就那样被%CALLNAME:調教対象%当作肉铠带走了……
					RESETCOLOR
					CALL CARD_EQUIP_MONSTER(対面者,对方卡片,"相手戦場",自己卡片,(1 + 2))
				ENDIF
			ELSE
				CALLFORM CARDNAME_{GETVAR(@"%対面者%_戦場:对方卡片")}("名前")
				SETCOLOR C_PINK
				PRINTFORMW 蒂奥沉溺于交欢的快感，被%RESULTS%的肉棒彻底征服了……！
				RESETCOLOR
				CALL EROTIC_MOVE("前穴凌辱",NO_TO_CHARANUM(1375), -1)
				IF 魔罠数(対面者) < 5
					SETCOLOR C_PINK
					PRINTFORMW 随后就那样被%RESULTS%当作肉铠带走了……
					RESETCOLOR
					CALL CARD_EQUIP_MONSTER(対面者,对方卡片,"相手戦場",自己卡片,(1 + 2))
				ENDIF
			ENDIF

		ELSEIF RESULT == 雄性 || RESULT == ふたなり
			調教対象 = GETVAR(@"%対面者%_戦場:对方卡片")
			CALL CARD_EROTICS(調教対象)
			IF RESULT != -1
				調教対象 = RESULT
				SETCOLOR C_PINK
				PRINTFORMW 蒂奥将分泌的粘液涂抹在%CALLNAME:調教対象%的肉棒，冰凉粘腻的触感混合着快感挑动着%CALLNAME:調教対象%的神经。
				RESETCOLOR
				CALL EROTIC_MOVE("全身愛撫",調教対象,NO_TO_CHARANUM(1375))
			ENDIF
			CALL CARD_REMOVAL_BASIC(決闘者,"自動処理",对方卡片,"永攻DOWN",800)
			
		ELSE
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(決闘者,"自動処理",对方卡片,"永攻DOWN",800)
		ENDIF
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"表",2,1)
	ENDIF

ELSEIF 種類 == 攻撃時強制誘発
	CALL FULLRESET
	IF RESULT == 0
		IF 戦闘場所(決闘者,1) != 5
			CALL CARD_EROTICS(戦闘カードID(決闘者,1))
			IF RESULT != 0
				調教対象 = RESULT
			ENDIF
		ENDIF
		IF 調教対象 > 0
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORML 在%CALLNAME:調教対象%接近时，蒂奥身边巨大的夹子突然闭合，将二人关在了其中。
			RESETCOLOR
		ENDIF		
	ENDIF		

ELSEIF 種類 == 永続効果
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"罠耐")
ENDIF


