@CARDCAN_40079(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要的卡

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,40079)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,40079)
		RETURN 0
    SIF ターンプレイヤー != 듀얼리스트
    	RETURN 0
    SIF メインフェイズ != 1
    	RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") < 0
		RETURN 0

    CALL FULLRESET
	효과条件종류 = モン全般
	효과条件성별 = 牝性
	효과条件カテゴリ = 蜜罐
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
    SIF RESULT != 1
    	RETURN 0	
    RETURN 1

ELSEIF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,40079)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") < 0
		RETURN 0

    CALL FULLRESET
    효과範囲필드 = 1
    효과条件종류 = モン全般
    효과条件성별 = 성별在
    CALL CARD_CHECK_START_DATA(듀얼리스트,1)
    SIF RESULT != 1
		RETURN 0
		
    RETURN 1

ELSEIF 종류 == ターン終了時
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_3(듀얼리스트,40079)
		RETURN 0

    CALL FULLRESET
	효과条件종류 = モン全般
    효과条件성별 = 성별在
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
    SIF RESULT != 1
    	RETURN 0
    RETURN 1

ELSEIF 종류 == 攻守変動 || 종류 == リアクション효과
	SIF ゾーン != "필드"
		RETURN 0

    CALL FULLRESET
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
    SIF RESULT != 1
    	RETURN 0
    RETURN 1


ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1 
ENDIF


@CARDEFFECT_40079(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 守備力修正
#DIM DYNAMIC X消費
#DIM DYNAMIC X素材数
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 选择卡片
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 필드单体
#DIM DYNAMIC カード_ID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40079,1,X消費1)
	IF RESULT == 0
		효과範囲마함 = 1
		효과条件종류 = モン全般
		효과条件성별 = 牝性
		효과条件カテゴリ = 蜜罐
		효과추가종류 = 140 + 4
		효과추가カテ = 蜜罐
		효과추가カテ = 惑乱魔
        CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

		CALL CARD_LOADUP

		조교대상 = GETVAR(@"%듀얼리스트%_필드:カード소환先")
        CALL CARD_EROTICS(조교대상)
		IF RESULT != -1
			조교대상 = RESULT
			SETCOLOR C_PINK
			PRINTFORML
			PRINTFORMW %CALLNAME:조교대상%在阿洛美勒丝的调教中굴복了,成为了阿洛美勒丝的宠物……！
			PRINTFORML
			RESETCOLOR
			CALL EROTIC_MOVE("全身레즈愛撫",조교대상, -1)
		ENDIF
    ENDIF

ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40079,2,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"選択")
		IF RESULT == 1
			选择卡片 = RESULT:1
			IF 选择卡片 != 9999
				TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:选择卡片")}("名前")
				조교대상 = GETVAR(@"%対面者%_필드:选择卡片")

				CALL CARD_EROTICS(조교대상)
				IF RESULT != -1
					조교대상 = RESULT
					SETCOLOR C_PINK
					PRINTFORML
					PRINTFORMW %CALLNAME:조교대상%被阿洛美勒丝偷袭,就那样被捕获改造成了蜜罐……！
					PRINTFORML
					RESETCOLOR
					CALL EROTIC_MOVE("묘상捕縛",조교대상, -1)
				ENDIF
				효과추가カテ = 蜜罐
				CALL CARD_EQUIP_MONSTER(듀얼리스트,場所,"상대필드",选择卡片,(1 + 2))
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40079,3)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_마함:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_魔_装:カウンタ") != 場所
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_魔_リ数:カウンタ") >= 10
				CONTINUE
		
			CALL CARD_EROTICS(GETVAR(@"%듀얼리스트%_마함:カウンタ"))
			IF RESULT != -1
				조교대상 = RESULT
				TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_마함:カウンタ")}, "성별"
				IF RESULT == 牝性
					SETCOLOR C_PINK
					PRINTFORML
					PRINTFORML 阿洛美勒丝用혀头在%CALLNAME:조교대상%腔内贪婪的汲取着养分。
					PRINTFORMW 阿洛美勒丝的攻守与엑시즈素材増加了！
					PRINTFORML
					RESETCOLOR
					CALL EROTIC_MOVE("クリトリス凌辱",조교대상,-1)
					CALL SET_FIELD_INFO(듀얼리스트,"마함",カウンタ,"リ数",1,0,1)
				ELSEIF RESULT == 雄性 || RESULT == ふたなり
					SETCOLOR C_PINK
					PRINTFORML
					PRINTFORML 阿洛美勒丝用嘴榨取着%CALLNAME:조교대상%的精液。
					PRINTFORMW 阿洛美勒丝的攻守与엑시즈素材増加了！
					PRINTFORML
					RESETCOLOR
					CALL EROTIC_MOVE("全身愛撫",조교대상,-1)
					CALL SET_FIELD_INFO(듀얼리스트,"마함",カウンタ,"リ数",1,0,1)
				ENDIF
			ENDIF
		NEXT

		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",1000)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永守",1000)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",1)
	ENDIF

ELSEIF 종류 == 지속효과
    CALL FULLRESET
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	SIF RESULT == 1
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦無")

	IF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") >= 0
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")
	ENDIF

ELSEIF 종류 == リアクション효과
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_마함:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_魔_装:カウンタ") != 場所
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_魔_リ数:カウンタ") >= 10
			CONTINUE
			
		CALL CARD_EROTICS(GETVAR(@"%듀얼리스트%_마함:カウンタ"))
		IF RESULT != -1
			조교대상 = RESULT
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_마함:カウンタ")}, "성별"
			IF RESULT == 牝性
				SETCOLOR C_PINK
				PRINTFORML
				PRINTFORML 阿洛美勒丝的手指刺激着%CALLNAME:조교대상%的腔道。
				PRINTFORML
				RESETCOLOR
				CALL EROTIC_MOVE("クリトリス凌辱",조교대상,-1)
				CALL SET_FIELD_INFO(듀얼리스트,"마함",カウンタ,"リ数",1,0,1)
			ELSEIF RESULT == 雄性 || RESULT == ふたなり
				SETCOLOR C_PINK
				PRINTFORML
				PRINTFORML 阿洛美勒丝撸动着%CALLNAME:조교대상%的肉棒。
				PRINTFORML
				RESETCOLOR
				CALL EROTIC_MOVE("全身愛撫",조교대상,-1)
				CALL SET_FIELD_INFO(듀얼리스트,"마함",カウンタ,"リ数",1,0,1)
			ENDIF
		ENDIF
	NEXT
ENDIF