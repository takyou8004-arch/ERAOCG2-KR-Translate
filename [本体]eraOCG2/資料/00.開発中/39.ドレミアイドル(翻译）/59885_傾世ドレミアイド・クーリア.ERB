@CARDSUMMON_59885(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 8
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
	素材条件종족 = 천사족
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,59885) 
	RETURN RESULT
ENDIF


@CARDCAN_59885(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59885)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = ドレミコード
	효과条件종류 = EX以外全般
	효과条件レベル:0 = 2
	효과条件レベル:1 = 4
	효과条件レベル:2 = 6
	효과条件レベル:3 = 8
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = ドレミコード
	효과条件종류 = EX以外全般
	효과条件レベル:0 = 1
	효과条件レベル:1 = 3
	효과条件レベル:2 = 5
	효과条件レベル:3 = 7
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ:0 = キューティア推し
	효과条件カテゴリ:1 = ドリーミア推し
	효과条件カテゴリ:2 = エリーティア推し
	효과条件カテゴリ:3 = ファンシア推し
	효과条件カテゴリ:4 = グレーシア推し
	효과条件カテゴリ:5 = エンジェリア推し
	효과条件カテゴリ:6 = ビューティア推し
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_59885(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 布教者
#DIM DYNAMIC 布教者ID
#DIMS DYNAMIC 布教内容

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59885,1)
	IF RESULT == 0
		カウンタ = 0
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ = ドレミコード
		효과条件종류 = EX以外全般
		효과条件レベル:0 = 1
		효과条件レベル:1 = 3
		효과条件レベル:2 = 5
		효과条件レベル:3 = 7
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		SIF RESULT != 9999
			カウンタ++
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ = ドレミコード
		효과条件종류 = EX以外全般
		효과条件レベル:0 = 2
		효과条件レベル:1 = 4
		효과条件レベル:2 = 6
		효과条件レベル:3 = 8
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		SIF RESULT != 9999
			カウンタ++	
		IF カウンタ == 2
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件종류 = モン全般
			효과条件カテゴリ:0 = キューティア推し
			효과条件カテゴリ:1 = ドリーミア推し
			효과条件カテゴリ:2 = エリーティア推し
			효과条件カテゴリ:3 = ファンシア推し
			효과条件カテゴリ:4 = グレーシア推し
			효과条件カテゴリ:5 = エンジェリア推し
			효과条件カテゴリ:6 = ビューティア推し
			효과条件표시 = 表側표시
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT != 9999
				布教者 = RESULT - 2000
				布教者ID = RESULT:99
				布教内容 = %GETVARS(@"%対面者%_MZ_追カテ:布教者")%
		
				PRINTFORML 
				SELECTCASE 布教内容
					CASE "キューティア推し"
							SETCOLOR C_H_PINK
						TRYCALLFORM CARDNAME_{布教者ID},"名前"
						PRINTFORML 「%RESULTS%」が隣接するモンスターたちに「キューティア」の魅力を宣伝します！
					CASE "ドリーミア推し"
							SETCOLOR C_G_YELLOW
						TRYCALLFORM CARDNAME_{布教者ID},"名前"
						PRINTFORML 「%RESULTS%」が隣接するモンスターたちに「ドリーミア」の魅力を宣伝します！
					CASE "エリーティア推し"
							SETCOLOR C_L_BLUE
						TRYCALLFORM CARDNAME_{布教者ID},"名前"
						PRINTFORML 「%RESULTS%」が隣接するモンスターたちに「エリーティア」の魅力を宣伝します！
					CASE "ファンシア推し"
							SETCOLOR C_W_RED
						TRYCALLFORM CARDNAME_{布教者ID},"名前"
						PRINTFORML 「%RESULTS%」が隣接するモンスターたちに「ファンシア」の魅力を宣伝します！
					CASE "グレーシア推し"
							SETCOLOR C_P_BLUE
						TRYCALLFORM CARDNAME_{布教者ID},"名前"
						PRINTFORML 「%RESULTS%」が隣接するモンスターたちに「グレーシア」の魅力を宣伝します！
					CASE "エンジェリア推し"
							SETCOLOR C_ORANGE
						TRYCALLFORM CARDNAME_{布教者ID},"名前"
						PRINTFORML 「%RESULTS%」が隣接するモンスターたちに「エンジェリア」の魅力を宣伝します！
					CASE "ビューティア推し"
							SETCOLOR C_W_BLUE
						TRYCALLFORM CARDNAME_{布教者ID},"名前"
						PRINTFORML 「%RESULTS%」が隣接するモンスターたちに「ビューティア」の魅力を宣伝します！
				ENDSELECT
				PRINTFORMW
					RESETCOLOR
				CALL CARD_SET_CATEGORY(対面者,"필드",MAX(布教者-1,0),布教内容)
				CALL CARD_SET_CATEGORY(対面者,"필드",MIN(布教者+1,4),布教内容)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = ドレミコード
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"対耐")
	
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = ドレミコード
	효과条件分割 = 펜듈럼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"攻避")
ENDIF
