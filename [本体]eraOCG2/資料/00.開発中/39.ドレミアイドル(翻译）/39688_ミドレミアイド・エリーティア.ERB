		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = ドレミコード
	효과条件종류 = モン全般
	효과条件レベル:0 = 2
	효과条件レベル:1 = 4
