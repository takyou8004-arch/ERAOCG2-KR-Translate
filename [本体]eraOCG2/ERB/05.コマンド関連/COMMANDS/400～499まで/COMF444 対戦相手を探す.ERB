;대전상대를 찾는다
@COM_ABLE444
;이동実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(444)
	RETURN RESULT
SIF CFLAG:우후후 == 2
	RETURN 0

SIF CFLAG:MASTER:현재위치 <= 20 || CFLAG:MASTER:현재위치 == 場所_직장
	RETURN 0
SIF CFLAG:MASTER:현재위치 >= 800
	RETURN 0
SIF 依頼플래그:依頼_受領中 == 1
	RETURN 0
RETURN 1

