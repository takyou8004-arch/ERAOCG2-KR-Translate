@COM_ABLE44
;바이브実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(44)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:바이브
	RETURN 1
;オトコだとダメ
SIF !(TALENT:2 & 1)
	RETURN 0
;아이템を持っているか、아이템なし설정でないとダメ
SIF ITEM:4 == 0 && NOITEM == 0
	RETURN 0
SIF TEQUIP:TARGET:로터 == 1 && TALENT:MASTER:금단의지식 != 1
	RETURN 0
;딜도NG
SIF TEQUIP:딜도
	RETURN 0
;하반신착의
SIF TEQUIP:0 & 4
	RETURN 0


RETURN 1