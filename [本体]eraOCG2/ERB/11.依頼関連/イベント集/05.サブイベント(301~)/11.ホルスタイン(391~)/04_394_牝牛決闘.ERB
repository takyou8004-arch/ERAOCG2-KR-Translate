	효과条件ID = 79555
	효과条件CNT = 1
	CALL CARD_CHECK_ADV("자신")
	SIF RESULT == 1
		RETURN 3

ELSEIF ターン数 == 2
;상대メイン
	IF メインフェイズ == 1 && メインフェイズ２ == 0
		RETURN 7
	ELSEIF バトルフェイズ == 1
		;バトルフェイズ、묘지에 インポートあり
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件ID = 99553
		효과条件CNT = 1
		CALL CARD_CHECK_ADV("자신")
