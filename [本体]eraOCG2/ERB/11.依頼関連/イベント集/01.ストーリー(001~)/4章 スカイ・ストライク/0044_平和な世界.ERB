		IF 選択カード != 9999
			攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_攻:選択カード")
			CALL CARD_DISPOSE(듀얼리스트,"필드",選択カード,10)
			CALL FULLRESET
			효과条件攻撃力 = 攻撃力修正
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"묘지")
		ENDIF
	ENDIF
