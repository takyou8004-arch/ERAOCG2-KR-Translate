	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1024501,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF
