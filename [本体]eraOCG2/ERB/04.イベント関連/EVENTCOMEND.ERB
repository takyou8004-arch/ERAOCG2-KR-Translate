	;眠いと기력이 減少していく
	IF TIME_PROGRESS(CFLAG:MASTER:314) >= 960 && !CFLAG:MASTER:수면
		BASE:MASTER:체력 = MAX(BASE:MASTER:체력 - 3 * TIME_PROGRESS(TFLAG:시간경과) , 0)
		BASE:MASTER:기력 = MAX(BASE:MASTER:기력 - 5 * TIME_PROGRESS(TFLAG:시간경과) , 0)
	ENDIF
