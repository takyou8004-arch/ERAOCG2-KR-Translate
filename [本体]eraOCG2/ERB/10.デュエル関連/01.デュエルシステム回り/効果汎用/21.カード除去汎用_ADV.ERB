@CARD_REMOVAL_ADV(듀얼리스트,효과範囲,場所,除去種,修正値,反転플래그)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 대상者

#DIMS DYNAMIC 효과範囲
#DIMS DYNAMIC 除去種

;묘지、패、덱、제외
#DIM DYNAMIC カードID
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード,10
#DIM DYNAMIC 魔選択カード,10

#DIM DYNAMIC 対選択カード,10
#DIM DYNAMIC 対魔選択カード,10


#DIM DYNAMIC 選択カード_ID,10
#DIM DYNAMIC 実손패セット,200

#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 修正値
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 발동ゾーン
#DIMS DYNAMIC 대상カード名
#DIM DYNAMIC 대상カードID

#DIM DYNAMIC 現在最大攻撃力
#DIM DYNAMIC ダメージ量
#DIM DYNAMIC 反転플래그
#DIM DYNAMIC 마법함정플래그
#DIM DYNAMIC 裏側플래그
#DIM DYNAMIC 攻撃力手渡
#DIM DYNAMIC 除去成功数
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 複数カウンタ
VARSET 효과추가종류除去보존
VARSET 효과추가カテ보존

FOR カウンタ,0,10
	효과추가종류除去보존:カウンタ = 효과추가종류:カウンタ
NEXT
효과추가カテ보존 = %효과추가カテ%

カードID = 処理中_효과ID

IF 효과条件複数 == 100
	RETURN 0
ELSEIF INRANGE(효과条件複数,50,89)
	효과条件複数 = 90
ENDIF

VARSET 現在最大攻撃力, -1
VARSET 選択カード, -1
VARSET 他参照選択カード, -1
VARSET 他参照選択カードID,-1

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 反転플래그 == 1
	대상者 = %듀얼리스트%
ELSE
	대상者 = %対面者%
ENDIF
;VARSET 選択カード, -1

IF 효과範囲상대필드 == 0 && 효과範囲필드 == 0 && 효과範囲상대마함 == 0 && 효과範囲마함 == 0
	효과範囲상대필드 = 1
ENDIF
$CHOICE_LOOP
CUSTOMDRAWLINE —
PRINTFORML 【제외효과확인】 
CUSTOMDRAWLINE —
PRINTL
SELECTCASE 효과範囲
;――――――――――――――――――――――――――――――全体破壊―――――――――――――――――――――――――
	CASE "全体除去"
		IF 효과範囲필드 == 1
			FOR カウンタ,0,5
				IF 효과条件他所 > 0
					SIF カウンタ == 場所
						CONTINUE
				ENDIF
				CALL CARD_REMOVAL_ABLE(듀얼리스트,듀얼리스트,"全体",カウンタ,除去種,カードID)
				SIF RESULT != 1
					CONTINUE
				選択カード:カウンタ = カウンタ
			NEXT
		ENDIF
		IF 효과範囲마함 == 1
			VARSET 魔選択カード, -1
			FOR カウンタ,0,5
				CALL CARD_REMOVAL_ABLE(듀얼리스트,듀얼리스트,"全体",カウンタ,除去種,カードID,1)
				SIF RESULT != 1
					CONTINUE
				魔選択カード:カウンタ = カウンタ
			NEXT
		ENDIF
		IF 효과範囲상대필드 == 1
			VARSET 対選択カード, -1
			FOR カウンタ,0,5
				CALL CARD_REMOVAL_ABLE(対面者,듀얼리스트,"全体",カウンタ,除去種,カードID)
				SIF RESULT != 1
					CONTINUE
				対選択カード:カウンタ = カウンタ
			NEXT
		ENDIF
		IF 효과範囲상대마함 == 1
			VARSET 対魔選択カード, -1
			FOR カウンタ,0,5
				CALL CARD_REMOVAL_ABLE(対面者,듀얼리스트,"全体",カウンタ,除去種,カードID,1)
				SIF RESULT != 1
					CONTINUE
				対魔選択カード:カウンタ = カウンタ
			NEXT
		ENDIF


		FOR カウンタ,0,5
			SIF (選択カード:カウンタ) == -1
				CONTINUE
			CALL CARD_REMOVAL_AFTERMATH(듀얼리스트,듀얼리스트,選択カード:カウンタ,除去種,カードID,修正値)
			除去成功数 ++
		NEXT
		FOR カウンタ,0,5
			SIF (魔選択カード:カウンタ) == -1
				CONTINUE
			CALL CARD_REMOVAL_AFTERMATH(듀얼리스트,듀얼리스트,魔選択カード:カウンタ,除去種,カードID,修正値,1)
			除去成功数 ++
		NEXT

		FOR カウンタ,0,5
			SIF (対選択カード:カウンタ) == -1
				CONTINUE
			CALL CARD_REMOVAL_AFTERMATH(対面者,듀얼리스트,対選択カード:カウンタ,除去種,カードID,修正値)
			除去成功数 ++
		NEXT
		FOR カウンタ,0,5
			SIF (対魔選択カード:カウンタ) == -1
				CONTINUE
			CALL CARD_REMOVAL_AFTERMATH(対面者,듀얼리스트,対魔選択カード:カウンタ,除去種,カードID,修正値,1)
			除去成功数 ++
		NEXT
		RESULT:1 = 除去成功数
		RETURN 1
;――――――――――――――――――――――――――――――単体破壊―――――――――――――――――――――――――
	CASE "単体除去"
		VARSET 条件달성
		VARSET 現在最大攻撃力, -1
		IF 효과条件複数
			FOR カウンタ,0,複数カウンタ
				효과条件選択済:カウンタ = 選択カード:カウンタ 
			NEXT
		ENDIF
		
		IF 효과範囲필드 == 1
			FOR カウンタ,0,5
				IF 효과条件他所 > 0
					SIF カウンタ == 場所
						CONTINUE
				ENDIF
				IF 효과条件複数 > 0
					SIF MATCH(효과条件選択済, カウンタ)
						CONTINUE
				ENDIF
				CALL CARD_REMOVAL_ABLE(듀얼리스트,듀얼리스트,"単体",カウンタ,除去種,カードID)
				IF RESULT == 0 
					CONTINUE
				ELSEIF RESULT == 2 && 듀얼리스트 == "상대"
					CONTINUE
				ELSEIF RESULT == 1
					条件달성 = 1
				ENDIF
				IF 듀얼리스트 == "자신"
					VARSET 대상カード名
					VARSET 대상カードID
					대상カードID = GETVAR(@"%듀얼리스트%_필드:カウンタ")
					CALL CARD_SETCOLOR(듀얼리스트,"필드",カウンタ)
					CALLFORM CARD_KANPRINT("필드",カウンタ,대상カードID)
				ELSEIF 듀얼리스트 == "상대"
					IF  GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ") > 現在最大攻撃力
						現在最大攻撃力 =  GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ")
						選択カード = カウンタ			
					ENDIF
				ENDIF
			NEXT
		ENDIF
		IF 효과範囲상대필드 == 1
			FOR カウンタ,0,5
				IF 효과条件複数 > 0
					SIF MATCH(효과条件選択済, カウンタ + 2000)
						CONTINUE
				ENDIF
				CALL CARD_REMOVAL_ABLE(対面者,듀얼리스트,"単体",カウンタ,除去種,カードID)
				IF RESULT == 0 
					CONTINUE
				ELSEIF RESULT == 2 && 듀얼리스트 == "상대"
					CONTINUE
				ELSEIF RESULT == 1
					条件달성 = 1
				ENDIF

				IF 듀얼리스트 == "자신"
					VARSET 대상カードID
					VARSET 裏側플래그
				
					裏側플래그 = GETVAR(@"%対面者%_MZ_表:カウンタ") 
					대상カードID = GETVAR(@"%対面者%_필드:カウンタ")
					IF 対面者 != 듀얼리스트
						SETCOLOR C_GRAY
						IF GETVAR(@"%対面者%_MZ_破耐:カウンタ") >= 1 && 除去種 == "묘지"
							CALLFORM CARD_KANPRINT("상대필드",カウンタ + 2000,대상カードID,1,裏側플래그)
						ELSEIF GETVAR(@"%対面者%_MZ_対耐:カウンタ") >= 1
							CALLFORM CARD_KANPRINT("상대필드",カウンタ + 2000,대상カードID,2,裏側플래그)
						ELSE
							TRYCALLFORM CARD_{カードID}, "종류"
							IF GETVAR(@"%対面者%_MZ_モ耐:カウンタ") >= 1 && INRANGE(RESULT, 0,15)
								CALLFORM CARD_KANPRINT("상대필드",カウンタ + 2000,대상カードID,3,裏側플래그)
							ELSEIF GETVAR(@"%対面者%_MZ_魔耐:カウンタ") >= 1 && INRANGE(RESULT, 20,30)
								CALLFORM CARD_KANPRINT("상대필드",カウンタ + 2000,대상カードID,4,裏側플래그)
							ELSEIF GETVAR(@"%対面者%_MZ_함정耐:カウンタ") >= 1 && INRANGE(RESULT, 30,40)
								CALLFORM CARD_KANPRINT("상대필드",カウンタ + 2000,대상カードID,5,裏側플래그)
							ELSE
								RESETCOLOR
								CALL CARD_SETCOLOR(対面者,"필드",カウンタ,裏側플래그)
								CALLFORM CARD_KANPRINT("상대필드",カウンタ + 2000,대상カードID,0,裏側플래그)
							ENDIF
						ENDIF
					ELSE
						CALL CARD_SETCOLOR(対面者,"필드",カウンタ)
						CALLFORM CARD_KANPRINT("필드",カウンタ + 2000,대상カードID)
					ENDIF
					RESETCOLOR
				ELSEIF 듀얼리스트 == "상대"
					IF  GETVAR(@"%対面者%_MZ_攻:カウンタ") + 9999 > 現在最大攻撃力
						現在最大攻撃力 =  GETVAR(@"%対面者%_MZ_攻:カウンタ") + 9999
						選択カード = カウンタ  + 2000
					ENDIF
				ENDIF
			NEXT
		ENDIF

		IF 효과範囲마함 == 1
			FOR カウンタ,0,5
				IF 효과条件他所 > 0
					SIF カウンタ == 場所
						CONTINUE
				ENDIF
				IF 효과条件複数 > 0
					SIF MATCH(효과条件選択済, カウンタ + 10)
						CONTINUE
				ENDIF
				CALL CARD_REMOVAL_ABLE(듀얼리스트,듀얼리스트,"単体",カウンタ,除去種,カードID,1)
				IF RESULT == 0 
					CONTINUE
				ELSEIF RESULT == 2 && 듀얼리스트 == "상대"
					CONTINUE
				ELSEIF RESULT == 1
					条件달성 = 1
				ENDIF
				IF 듀얼리스트 == "자신"
					VARSET 대상カードID
					대상カードID = GETVAR(@"%듀얼리스트%_마함:カウンタ")
					CALL CARD_SETCOLOR(듀얼리스트,"마함",カウンタ)
					CALLFORM CARD_KANPRINT("마함",カウンタ + 10,대상カードID)
				ELSEIF 듀얼리스트 == "상대"
					IF 選択カード == 9999
						選択カード = カウンタ + 10
					ENDIF
				ENDIF
			NEXT
		ENDIF

		IF 효과範囲상대마함 == 1
			FOR カウンタ,0,5
				IF 효과条件複数 > 0
					SIF MATCH(효과条件選択済, カウンタ + 2010)
						CONTINUE
				ENDIF

				CALL CARD_REMOVAL_ABLE(対面者,듀얼리스트,"単体",カウンタ,除去種,カードID,1)
				IF RESULT == 0 
					CONTINUE
				ELSEIF RESULT == 2 && 듀얼리스트 == "상대"
					CONTINUE
				ELSEIF RESULT == 1
					条件달성 = 1
				ENDIF
				IF 듀얼리스트 == "자신"
					VARSET 대상カードID
					VARSET 裏側플래그
					SIF GETVAR(@"%対面者%_魔_表:カウンタ") != 1
						裏側플래그 = 3
					대상カードID = GETVAR(@"%対面者%_마함:カウンタ")
					IF 対面者 != 듀얼리스트
						SETCOLOR C_GRAY
						IF GETVAR(@"%対面者%_魔_破耐:カウンタ") >= 1 && 除去種 == "묘지"
							CALLFORM CARD_KANPRINT("상대마함",カウンタ + 2010,대상カードID,1,裏側플래그)
						ELSEIF GETVAR(@"%対面者%_魔_対耐:カウンタ") >= 1
							CALLFORM CARD_KANPRINT("상대마함",カウンタ + 2010,대상カードID,2,裏側플래그)
						ELSE
							RESETCOLOR
							CALL CARD_SETCOLOR(対面者,"마함",カウンタ,裏側플래그)
							CALLFORM CARD_KANPRINT("상대마함",カウンタ + 2010,대상カードID,0,裏側플래그)
						ENDIF
					ELSE
						CALL CARD_SETCOLOR(対面者,"마함",カウンタ)
						CALLFORM CARD_KANPRINT("마함",カウンタ + 2010,대상カードID)
					ENDIF
					RESETCOLOR
				ELSEIF 듀얼리스트 == "상대"
					IF 選択カード == 9999
						TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_마함:カウンタ")}, "名前"
						選択カード = カウンタ + 2010
					ENDIF
				ENDIF
			NEXT
		ENDIF
				IF 효과範囲묘지 == 1
			FOR カウンタ,0,紙束最大値
				CALL CARD_REMOVAL_ABLE(듀얼리스트,듀얼리스트,"単体",カウンタ,除去種,カードID,2)
				IF RESULT == 0 
					CONTINUE
				ELSEIF RESULT == 1
					条件달성 = 1
				ENDIF
				IF 듀얼리스트 == "자신"
					VARSET 대상カードID
					대상カードID = GETVAR(@"%듀얼리스트%_묘지:カウンタ")
					CALL CARD_SETCOLOR(듀얼리스트,"묘지",カウンタ)
					CALLFORM CARD_KANPRINT("묘지",カウンタ + 200,대상カードID)
				ELSEIF 듀얼리스트 == "상대"
					IF 選択カード == 9999
						選択カード = カウンタ + 200
					ENDIF
				ENDIF
			NEXT
		ENDIF
		IF 효과範囲상대묘지 == 1
			FOR カウンタ,0,紙束最大値
				CALL CARD_REMOVAL_ABLE(対面者,듀얼리스트,"単体",カウンタ,除去種,カードID,2)
				IF RESULT == 0 
					CONTINUE
				ELSEIF RESULT == 1
					条件달성 = 1
				ENDIF
				IF 듀얼리스트 == "자신"
					VARSET 대상カードID
					대상カードID = GETVAR(@"%対面者%_묘지:カウンタ")
					CALL CARD_SETCOLOR(対面者,"묘지",カウンタ)
					CALLFORM CARD_KANPRINT("상대묘지",カウンタ + 2200,대상カードID)
				ELSEIF 듀얼리스트 == "상대"
					IF 選択カード == 9999
						選択カード = カウンタ + 2200
					ENDIF
				ENDIF
			NEXT
		ENDIF


		RESETCOLOR
		IF 듀얼리스트 == "자신"
			CUSTOMDRAWLINE ―
			PRINTL
			IF  (INRANGE(효과条件複数,90,99) || 효과条件複数 == 任意の数) && 複数カウンタ >= 1
				　PRINTL [8888] - 결정
			ENDIF
			IF 条件달성 != 0 && 효과条件任意 != 1
				SETCOLOR C_GRAY
				PRINTL 　(9999) - 돌아간다(선택할 수 있는 카드가 없습니다)
				RESETCOLOR
			ELSE
				PRINTL 　[9999] - 돌아간다
			ENDIF
			PRINTL
			BINPUT
			選択カード:複数カウンタ = RESULT
			IF 選択カード:複数カウンタ == 8888
				PRINTL 이 이상 고를 수 없습니다。
			ENDIF
		ELSEIF 듀얼리스트 == "상대"
			IF 選択カード:複数カウンタ == -1 &&  (INRANGE(효과条件複数,90,99) || 효과条件複数 == 任意の数) && 複数カウンタ >= 1 
				選択カード:複数カウンタ = 8888
			ELSEIF 選択カード:複数カウンタ == -1
				選択カード:複数カウンタ = 9999
				SETCOLOR C_W_RED
				CUSTOMDRAWLINE —
				PRINTL 【선택 가능한 카드가 없습니다】
				CUSTOMDRAWLINE —
				RESETCOLOR
				WAIT
			ENDIF
			IF 選択カード:複数カウンタ == 8888
				SETCOLOR C_W_RED
				PRINTL 이 이상 고르지 않는 것 같습니다。
				RESETCOLOR
			ENDIF
		ENDIF

		IF 選択カード:複数カウンタ == 9999
			PRINTFORMW 돌아갑니다。
			RETURN 0
		ELSEIF 選択カード:複数カウンタ == 8888
			選択カード:複数カウンタ = -1
			GOTO INPUT_SKIP
		ELSEIF 選択カード:複数カウンタ != 9999
			CALL CARD_SELECT(듀얼리스트,選択カード:複数カウンタ)
			選択カード_ID = GETVAR(@"%대상者（CS）%_%参照先（CS）%:{選択カード（CS）}")
			CALL SELECT_UI_SET(듀얼리스트,選択カード_ID,12,選択カード:複数カウンタ)
			IF RESULT == 1
				GOTO CHOICE_LOOP
			ENDIF
		ENDIF

		IF 효과条件複数 != 0
			IF 효과条件複数 > (複数カウンタ + 1)
				複数カウンタ ++
				SIF INRANGE(효과条件複数,90,99) && 複数カウンタ >= (100 - 효과条件複数)
					GOTO INPUT_SKIP
				GOTO CHOICE_LOOP
			ENDIF
		ENDIF
		$INPUT_SKIP
		IF 효과条件複数 != 0
			FOR カウンタ,0,(複数カウンタ + 1)
				VARSET 마법함정플래그
				SIF 選択カード:カウンタ == -1
					CONTINUE

				CALL CARD_SELECT(듀얼리스트,選択カード:カウンタ)
				IF 参照先（CS） == "마함"
					마법함정플래그 = 1
				ELSEIF 参照先（CS） == "묘지"
					마법함정플래그 = 2
				ENDIF
				CALL CARD_REMOVAL_AFTERMATH(대상者（CS）,듀얼리스트,選択カード（CS）,除去種,カードID,修正値,마법함정플래그)
				SIF RESULT != 1
					RETURN 0
			NEXT
			RESULT:1 = 複数カウンタ
		ELSE
			CALL CARD_SELECT(듀얼리스트,選択カード)
			他参照選択カードID = GETVAR(@"%대상者（CS）%_%参照先（CS）%:選択カード（CS）")
			他参照選択カード = 選択カード（CS）
			IF 除去種 == "選択"
				RESULT:99 = 他参照選択カードID
				;RESULT:10 = 選択カード
				RESULT:1 = 選択カード（CS）
				RETURN 1
			ENDIF
			IF 参照先（CS） == "마함"
				마법함정플래그 = 1
			ELSEIF 参照先（CS） == "묘지"
				마법함정플래그 = 2
			ENDIF
			CALL CARD_REMOVAL_AFTERMATH(대상者（CS）,듀얼리스트,選択カード（CS）,除去種,カードID,修正値,마법함정플래그)
			SIF RESULT != 1
				RETURN 0
		ENDIF
		RESULT:2 = 選択カード_ID
		RETURN 1
