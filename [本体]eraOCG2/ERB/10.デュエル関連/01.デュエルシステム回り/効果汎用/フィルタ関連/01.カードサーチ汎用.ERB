@CARD_ADD_BASIC(듀얼리스트,元参照先,ゾーン,場所,めくり数)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 대상者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 元参照先
#DIMS DYNAMIC 参照先
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カードID
#DIM DYNAMIC めくり数
#DIM DYNAMIC 選択カード,99
#DIM DYNAMIC 選択カード_ID,99
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 複数カウンタ
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 最大値
#DIM DYNAMIC 消去カード
#DIM DYNAMIC 一時보존,99
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択数
#DIM DYNAMIC 山切り無し
#DIM DYNAMIC ランダム値
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
SIF 효과条件山切り無し == 1
	山切り無し = 1
SIF 효과条件複数 == 100
	RETURN 0


VARSET 選択カード,-1

SELECTCASE 元参照先
	CASE "필드","마함","손패","묘지","덱","EX덱","제외"
		대상者 = %듀얼리스트%
		参照先 = %元参照先%
	CASE "상대필드"
		대상者 = %対面者%
		参照先 = 필드
	CASE "상대마함"
		대상者 = %対面者%
		参照先 = 마함
	CASE "상대손패"
		대상者 = %対面者%
		参照先 = 손패
	CASE "상대묘지"
		대상者 = %対面者%
		参照先 = 묘지
	CASE "상대덱"
		대상者 = %対面者%
		参照先 = 덱
	CASE "상대EX덱"
		대상者 = %対面者%
		参照先 = EX덱
	CASE "상대제외"
		대상者 = %対面者%
		参照先 = 제외	
ENDSELECT



IF 参照先 == "덱"
	CALL URARA_CHANCE(듀얼리스트,カードID,"덱") ;Anonym추가
	IF RESULT == 1
		CALL SHUFFLE(듀얼리스트)
		RETURN 0
	ENDIF
ENDIF

IF 参照先 == "묘지"
	CALL WARASHI_CHANCE(듀얼리스트,カードID,"雑多")
	IF RESULT == 1
		RETURN 0
	ENDIF
ENDIF


$CHOICE_LOOP
カードID = 処理中_효과ID
IF 듀얼리스트 == "자신"
	CUSTOMDRAWLINE —
	PRINT 【카드를 선택해 주세요】
	IF オプション_略표시 == 1
		PRINTBUTTON "[간이표시중]", 6666
	ELSE
		PRINTBUTTON "[간이표시]", 6666
	ENDIF
	PRINTFORM　%"[7777] - 필드 / 패 정보 확인",55,RIGHT%
	PRINTL


	CUSTOMDRAWLINE —
	PRINTL 
ELSEIF 듀얼리스트 == "상대"
	CALL ENEMY_RUTIN_CARD_ADD(元参照先,場所,カードID)
ENDIF


$INPUT_LOOP
IF 효과条件複数
	FOR カウンタ,0,複数カウンタ
		효과条件選択済:カウンタ = 選択カード:カウンタ 
	NEXT
ENDIF

CALL CARD_FILTER_BASIC(듀얼리스트,元参照先,ゾーン,場所,めくり数)
条件달성 = RESULT:1

IF 듀얼리스트 == "자신"
	PRINTL
	IF  (INRANGE(효과条件複数,90,99) || 효과条件複数 == 任意の数) && 複数カウンタ >= 1
		PRINTL 　[8888] - 결정
	ENDIF
	IF 条件달성 != 0 && 효과条件任意 != 1
		SETCOLOR C_GRAY
		PRINTFORM 　(9999) - 돌아간다(선택 가능한 카드가 있습니다)
		RESETCOLOR
	ELSE
		PRINTFORM 　%"[9999] - 돌아간다",41,LEFT%
	ENDIF
	PRINTL
	BINPUT
	選択カード:複数カウンタ = RESULT
	IF RESULT == 7777
		CALL DIPLAY_BOARD(2)			
		GOTO CHOICE_LOOP
	ELSEIF RESULT == 6666
		オプション_略표시 ^= 1
		GOTO CHOICE_LOOP
	ELSEIF 選択カード:複数カウンタ == 8888
		PRINTL 이 이상 고를 수 없습니다。
	ENDIF
ELSEIF 듀얼리스트 == "상대"
	IF RESULT == 9999 &&  (INRANGE(효과条件複数,90,99) || 효과条件複数 == 任意の数) && 複数カウンタ >= 1 
		選択カード:複数カウンタ = 8888
	ELSE
		選択カード:複数カウンタ = RESULT
	ENDIF
	IF 選択カード:複数カウンタ == 8888
		SETCOLOR C_W_RED
		PRINTL 이 이상 고르지 않는것 같습니다。
		RESETCOLOR
	ENDIF
ENDIF

IF 選択カード:複数カウンタ == 9999
	PRINTFORMW 돌아갑니다。
	RETURN 0
ELSEIF 選択カード:複数カウンタ == 8888
	選択カード:複数カウンタ = -1
	GOTO INPUT_SKIP
ELSEIF 選択カード:複数カウンタ != 9999
	選択カード_ID = GETVAR(@"%대상者%_%参照先%:{選択カード:複数カウンタ}")
	CALL SELECT_UI_SET(듀얼리스트,選択カード_ID,1)
	IF RESULT == 1
		GOTO CHOICE_LOOP
	ENDIF
ENDIF

IF 효과条件複数 != 0
	IF 효과条件複数 > (複数カウンタ + 1)
		IF 효과条件固名前選択
			CALLFORM CARDNAME_{GETVAR(@"%대상者%_%参照先%:{選択カード:複数カウンタ}")},"名前"
			효과条件固名前:複数カウンタ = %RESULTS%
		ENDIF
		複数カウンタ ++
		SIF INRANGE(효과条件複数,90,99) && 複数カウンタ >= (100 - 효과条件複数)
			GOTO INPUT_SKIP
		GOTO INPUT_LOOP
	ELSE
		;大きいほうにリアレンジする
		$INPUT_SKIP
		FOR カウンタ,0,(複数カウンタ + 1)
			最大値 = -1
			FOR カウンタB,0,(複数カウンタ + 1)
				IF 選択カード:カウンタB >= 最大値
					最大値 = 選択カード:カウンタB
					一時보존:カウンタ = 選択カード:カウンタB
					消去カード = カウンタB
				ENDIF
			NEXT
			ARRAYREMOVE 選択カード, 消去カード, 1
		NEXT
		FOR カウンタ,0,(複数カウンタ + 1)
			選択カード:カウンタ = 一時보존:カウンタ
		NEXT
	ENDIF
ENDIF

IF 参照先 == "덱"
	CALL CARD_FIN_ID_SET(듀얼리스트,選択カード_ID,"덱취득")
ENDIF


IF 효과条件複数 != 0
	IF 효과条件RND == 1
		ランダム値 = RAND:(複数カウンタ + 1)
		選択カード_ID = GETVAR(@"%대상者%_%参照先%:(選択カード:ランダム値)")
		CALL CARD_FIN_ID_SET(대상者,選択カード_ID,"효과취득")
		CALL CARD_DISPOSE(대상者,参照先,(選択カード:ランダム値),손패行き)
	ELSE
		FOR カウンタ,0,(複数カウンタ + 1)
			SIF 選択カード:カウンタ == -1
				CONTINUE
			選択カード_ID:カウンタ = GETVAR(@"%대상者%_%参照先%:(選択カード:カウンタ)")
			CALL CARD_FIN_ID_SET(대상者,選択カード_ID,"효과취득")

			CALL CARD_DISPOSE(대상者,参照先,(選択カード:カウンタ),손패行き)
		NEXT
	ENDIF
ELSE
	選択カード_ID = GETVAR(@"%대상者%_%参照先%:選択カード")
	CALL CARD_FIN_ID_SET(대상者,選択カード_ID,"효과취득")
	CALL CARD_DISPOSE(대상者,参照先,選択カード,손패行き)
ENDIF


IF 参照先 == "덱" && 山切り無し != 1
	CALL SHUFFLE(대상者)
	CALL CARD_FIN_ID_SET(듀얼리스트,選択カード_ID,"덱취득")
ENDIF
VARSET RESULT

FOR カウンタ,0,(複数カウンタ + 1)
	RESULT:(カウンタ + 1) = 選択カード_ID:カウンタ
NEXT
RETURN 1



