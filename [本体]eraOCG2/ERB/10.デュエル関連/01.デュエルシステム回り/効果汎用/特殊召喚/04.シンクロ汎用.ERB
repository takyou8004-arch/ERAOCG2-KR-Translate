@SYNSUMMON(듀얼리스트,소환カード,素材行先플래그)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 대상者

#DIMS DYNAMIC カード名
#DIMS DYNAMIC 参照先

#DIM DYNAMIC 上級値
#DIM DYNAMIC カードID
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC カウンタC
#DIM DYNAMIC EX参照
#DIM DYNAMIC 選択カード,10
#DIM DYNAMIC 選択カード_ID,10
#DIM DYNAMIC 상대지정カード
#DIM DYNAMIC 소환カード
#DIM DYNAMIC 소환カード_ID
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択済カード
#DIM DYNAMIC 現在最小攻撃力
#DIM DYNAMIC レベル合計
#DIM DYNAMIC 상대レベル
#DIM DYNAMIC 상대攻撃力
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 使用素材名前,99
;ザポルグ追記20241009
#DIM DYNAMIC 素材行先플래그
#DIM DYNAMIC 속성セットビット
#DIM DYNAMIC 素材数起動
#DIM DYNAMIC 효과추가종류보존,20
#DIM DYNAMIC 素材ID起動 ;Anonym추가
#DIM DYNAMIC 보존素材ID


;엑시즈소환
VARSET 選択カード, -1
VARSET レベル合計
VARSET 使用素材名前

SIF 素材条件素材数起動 >= 1
	素材数起動 = 1
SIF 素材条件素材ID起動 >= 1 ;Anonym추가
	素材ID起動 = 素材条件素材ID起動

FOR カウンタ,0,10
	효과추가종류보존:カウンタ = 효과추가종류:カウンタ
NEXT

IF 듀얼리스트 == "상대"
	カードID = GETVAR(@"%듀얼리스트%_EX덱:소환カード")	
	CALL SYNCAN(듀얼리스트,소환カード,カードID)
	IF RESULT == 1
		素材数 = RESULT:50
		FOR カウンタ,0,素材数
			選択カード:カウンタ = RESULT:(1 + カウンタ)
			選択カード_ID:カウンタ = GETVAR(@"%듀얼리스트%_필드:{選択カード:カウンタ}")
		NEXT
		GOTO INPUT_SKIP
	ENDIF
	RETURN 0
ENDIF


$CHOICE_LOOP
IF 素材数 >= 1
	TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{소환カード}")}(듀얼리스트,소환カード,(9 + 素材数))
ELSEIF 素材数 == 0
	SIF 強制必要素材名前 != "" && 素材条件名前 == ""
		素材条件名前 = %強制必要素材名前%
ENDIF

IF 듀얼리스트 == "자신"
	TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_EX덱:{소환カード}")}, "名前"
	カード名 = %RESULTS%
	PRINTFORML 소환카드：《%カード名%》

	CUSTOMDRAWLINE —
	PRINTW 소재로 할 몬스터를 골라주세요：
	PRINTFORML 필요 레벨：{レベル合計}/{必要レベル数}
	CUSTOMDRAWLINE —
	PRINTL
ENDIF

IF 素材数 == 0
	CALL CARD_FILTER_EXSS(듀얼리스트,소환カード,싱크로,選択カード,"EX덱")
ELSE
	CALL CARD_FILTER_EXSS(듀얼리스트,소환カード,싱크로,選択カード,"EX덱",レベル合計)
ENDIF

IF 듀얼리스트 == "자신"
	PRINTL
	PRINTL 　[9999] - 돌아간다
	PRINTL
	BINPUT
	選択カード:素材数 = RESULT
ENDIF

IF 選択カード:素材数 == 9999
	PRINTFORMW 돌아갑니다。
	VARSET ALT条件
	RETURN 0
ELSEIF INRANGE (選択カード:素材数, 0, 5)
	選択カード:素材数 = RESULT
	選択カード_ID:素材数 = GETVAR(@"%듀얼리스트%_필드:{選択カード:素材数}")
	レベル合計 += GETVAR(@"%듀얼리스트%_MZ_星:{選択カード:素材数}")
ENDIF

TRYCALLFORM CARDNAME_{GETVAR(@"選択カード_ID:{素材数}")}, "名前"
使用素材名前:素材数 = %RESULTS%
PRINTFORMW %使用素材名前:素材数%를 소재로합니다({素材数+1}체째)

;Anonym추가
;현재의 소재의 수と、素材条件素材ID起動で지정した数が同じなら起動
IF 素材ID起動 == 素材数 + 1
	CALL CARD_SELECT(듀얼리스트,選択カード:素材数)
	보존素材ID = GETVAR(@"%대상者（CS）%_%参照先（CS）%:{RESULT}")
ENDIF
素材数 ++

IF レベル合計 == 必要レベル数
	$INPUT_SKIP
	FOR カウンタ,0,素材数
		IF 지정素材名前 != ""
			TRYCALLFORM CARDNAME_{選択カード_ID:カウンタ}, "名前"
			IF RESULTS == 지정素材名前
				条件달성 = 1
			ENDIF
		ENDIF
		IF 지정素材カテゴリ != ""
			TRYCALLFORM CARDNAME_{選択カード_ID:カウンタ}, "カテゴリ"
			FOR カウンタC,0,5
				IF RESULTS:カウンタC != ""
					SIF MATCH(RESULTS:カウンタC, 지정素材カテゴリ)
						条件달성 = 1
					SIF MATCH(지정素材カテゴリ, RESULTS:カウンタC)
						条件달성 = 1
				ENDIF
			NEXT
		ENDIF
		IF 지정素材속성 != 0
			TRYCALLFORM CARD_{選択カード_ID:カウンタ}, "속성"
			IF RESULT == 지정素材속성:0
				条件달성 = 1
				SIF 지정素材汎数 == 1
					SETBIT 속성セットビット, 0
			ENDIF
			
			TRYCALLFORM CARD_{選択カード_ID:カウンタ}, "속성"
			IF RESULT == 지정素材속성:1
				条件달성 += 1				
				SIF 지정素材汎数 == 1
					SETBIT 속성セットビット, 1
			ENDIF
		ENDIF
		IF 지정素材종족 != 0
			TRYCALLFORM CARD_{選択カード_ID:カウンタ}, "종족"
			IF MATCH(지정素材종족, RESULT)
				条件달성 = 1
			ENDIF
		ENDIF
	NEXT
	FOR カウンタ,0,素材数
		CALL CARD_DISPOSE(듀얼리스트, "필드", (選択カード:カウンタ),素材行先플래그)
		CALLFORM CARD_STANBY(選択カード_ID:カウンタ,듀얼리스트,S素材時효과,"묘지")
	NEXT

	SIF 条件달성 >= 1
		SETVAR @"%듀얼리스트%_MZ_条達:現필드(듀얼리스트)", 2
	SIF 지정素材汎数 == 1
		SETVAR @"%듀얼리스트%_MZ_条達:現필드(듀얼리스트)", 속성セットビット


	PRINTFORML {素材数}체의 몬스터를 튜닝！

	;ザポルグ追記20250309
	소환カード_ID = GETVAR(@"%듀얼리스트%_EX덱:{소환カード}")
	TRYCALLFORM CARD_FINISHER_SHOKO(듀얼리스트,소환カード_ID)

	CALL MAT_EVENT_CHECK(듀얼리스트,カード名,使用素材名前)

	PRINTFORMW 싱크로 소환！레벨{必要レベル数}！%カード名%！！
	
	IF 素材数起動 == 1
		SETVAR @"%듀얼리스트%_MZ_汎数:現필드(듀얼리스트)", 素材数
	ENDIF
	IF 보존素材ID > 0 ;Anonym추가
		SETVAR @"%듀얼리스트%_MZ_汎数:現필드(듀얼리스트)", 보존素材ID
	ENDIF

	VARSET 효과추가종류
	FOR カウンタ,0,10
		효과추가종류:カウンタ = 효과추가종류보존:カウンタ
	NEXT
	CALL CARD_EX_SUMMON(듀얼리스트, "EX덱", 소환カード)
	IF 듀얼리스트 == "자신"
		リザルト：SYN소환 = 1
	ENDIF
	VARSET ALT条件
	RETURN 1
ELSE
	GOTO CHOICE_LOOP
ENDIF

@SYNCAN(듀얼리스트,소환カード,カードID)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カードID
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタA
#DIM DYNAMIC カウンタB
#DIM DYNAMIC カウンタC
#DIM DYNAMIC 固名前CNT
#DIM DYNAMIC R종족CNT

#DIM DYNAMIC EX参照
#DIM DYNAMIC 選択カード,10
#DIM DYNAMIC 選択カードA,10
#DIM DYNAMIC 選択カードB,10
#DIM DYNAMIC ADDレベル설정

#DIM DYNAMIC 最大値
#DIM DYNAMIC 消去カード
#DIM DYNAMIC 一時보존,99
#DIM DYNAMIC 소환カード
#DIM DYNAMIC 소환カード_ID
#DIM DYNAMIC 素材数A
#DIM DYNAMIC 素材数B
#DIM DYNAMIC レベル合計

#DIM DYNAMIC 必要レベル
#DIM DYNAMIC 설정レベル
#DIM DYNAMIC 選択済カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 最大値減

#DIM DYNAMIC 보존素材数
#DIM DYNAMIC 選択カード보존,10

#DIMS DYNAMIC 素材条件固名前설정,99

#DIM DYNAMIC 素材条件R종족설정,99

VARSET RESULT
VARSET 選択カード, -1
CALL CARD_EX_CHECK(듀얼리스트,カードID)
SIF RESULT == 1
	RETURN 0
;PRINTL A通過
IF 듀얼리스트 == "상대"
	CALL ENEMY_RUTIN_EXSUM(소환カード,カードID,싱크로) 
	SIF RESULT == 1
		RETURN 0
ENDIF
;PRINTL B通過

TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:소환カード")}(듀얼리스트,소환カード,0)
必要レベル = 必要レベル数


$CHOICE_LOOP_A
TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:소환カード")}(듀얼리스트,소환カード,0)
;"強制"必要素材名前があるなら以下を処理
IF 強制必要素材名前 != ""
	;素材の名前と必要素材が一致してなかったら、自動的にNGでRETURN0。	
	IF 素材条件名前 != 強制必要素材名前 && 素材条件名前 != ""
		;PRINTFORML ここ通過失敗
		RETURN 0
	;それ以外なら素材条件名前を설정。
	ELSE
		;PRINTFORML ここ通過成功
		素材条件名前 = %強制必要素材名前%
	ENDIF
ENDIF

IF 素材条件固名前起動 == 1
	FOR カウンタ,0,固名前CNT
		素材条件固名前:カウンタ = %素材条件固名前설정:カウンタ%
	NEXT
ENDIF

IF 素材条件R종족起動 == 1
	FOR カウンタ,0,R종족CNT
		素材条件R종족:カウンタ = 素材条件R종족설정:カウンタ
	NEXT
ENDIF




CALL CARD_FILTER_EXSS(듀얼리스트,소환カード,싱크로,選択カード,"EX덱",0,1)
IF RESULT == 1
	選択カード:素材数A = RESULT:1
	素材数A ++
	GOTO CHOICE_LOOP_A
ELSEIF (RESULT == 0 || RESULT == 9999) && 素材数A == 0
	RETURN 0
ENDIF

;PRINTFORML 素材数A:{素材数A}
FOR カウンタ,0,素材数A
	選択カードA:カウンタ = 選択カード:カウンタ
NEXT


VARSET 選択カード, -1
$CHOICE_LOOP_B
TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:소환カード")}(듀얼리스트,소환カード,10)
IF 素材条件固名前起動 == 1
	FOR カウンタ,0,固名前CNT
		素材条件固名前:カウンタ = %素材条件固名前설정:カウンタ%
	NEXT
ENDIF

IF 素材条件R종족起動 == 1
	FOR カウンタ,0,R종족CNT
		素材条件R종족:カウンタ = 素材条件R종족설정:カウンタ
	NEXT
ENDIF



CALL CARD_FILTER_EXSS(듀얼리스트,소환カード,싱크로,選択カード,"EX덱",1,1)
IF RESULT == 1
	選択カード:素材数B = RESULT:1
	素材数B ++
	GOTO CHOICE_LOOP_B
ELSEIF (RESULT == 0 || RESULT == 9999) && 素材数B == 0
	RETURN 0
ENDIF

;レベルが大きいほうにリアレンジする
FOR カウンタ,0,素材数B
	最大値 = -1
	FOR カウンタB,0,素材数B
		SIF 選択カード:カウンタB == -1
			CONTINUE		
		설정レベル =  GETVAR(@"%듀얼리스트%_MZ_星:(選択カード:カウンタB)")
		IF 설정レベル >= 最大値
			最大値 = 설정レベル
			一時보존:カウンタ = 選択カード:カウンタB
			消去カード = カウンタB	
		ENDIF
	NEXT
	ARRAYREMOVE 選択カード, 消去カード, 1
NEXT

;PRINTFORML 素材数B:{素材数B}
FOR カウンタ,0,素材数B
	選択カードB:カウンタ = 一時보존:カウンタ
NEXT

FOR カウンタA,0,素材数A
	FOR カウンタ,0,素材数B
		選択カードB:カウンタ = 一時보존:カウンタ
	NEXT
	VARSET 最大値減

	FOR カウンタC,0,素材数B
		VARSET レベル合計
		VARSET 選択カード보존,-1
		VARSET 보존素材数
		レベル合計 += GETVAR(@"%듀얼리스트%_MZ_星:(選択カードA:カウンタA)")
		選択カード보존:0 = (選択カードA:カウンタA)
		FOR カウンタB,0,素材数B - 最大値減
			VARSET ADDレベル설정 
			;PRINTFORML 〇　選択カード保存１:{選択カード保存:0} 　　　選択カードB:{選択カードB:カウンタB}
			IF 選択カード보존:0 == 選択カードB:カウンタB
				CONTINUE
			ENDIF
			ADDレベル설정 = GETVAR(@"%듀얼리스트%_MZ_星:(選択カードB:カウンタB)")
			;PRINTFORML レベル合計:{レベル合計}/ADDレベル設定:{ADDレベル設定}/必要レベル:{必要レベル}
			IF レベル合計 + ADDレベル설정 < 必要レベル
				レベル合計 += ADDレベル설정
				IF 듀얼리스트 == "상대"
					보존素材数 ++
					選択カード보존:보존素材数 = (選択カードB:カウンタB)
				ENDIF
			ELSEIF レベル合計 + ADDレベル설정 == 必要レベル
				IF 듀얼리스트 == "상대"
					보존素材数 ++
					選択カード보존:보존素材数 = (選択カードB:カウンタB)

					RESULT:50 = 보존素材数 + 1
					FOR カウンタ,0,보존素材数 + 1
						RESULT:(1 + カウンタ) = 選択カード보존:カウンタ
					NEXT
				ENDIF
				RETURN 1
			ELSE
				CONTINUE
			ENDIF
		NEXT
		最大値減 += 1
		ARRAYREMOVE 選択カードB, 0, 1
	NEXT
NEXT

RETURN 0



