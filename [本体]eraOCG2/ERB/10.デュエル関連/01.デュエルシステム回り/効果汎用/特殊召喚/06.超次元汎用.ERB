@DIMSUMMON(듀얼리스트,ゾーン,場所,소환플래그)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 대상者

#DIMS DYNAMIC カード名
#DIMS DYNAMIC 生物名
#DIMS DYNAMIC 要塞名
#DIMS DYNAMIC 武装名
#DIMS DYNAMIC 参照先
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 場所

#DIM DYNAMIC カードID
#DIM DYNAMIC 상대지정カード
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 生物コスト
#DIM DYNAMIC 装備コスト
#DIM DYNAMIC 要塞コスト
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択済カード
#DIM DYNAMIC 링크合計
#DIM DYNAMIC 上級値
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 戦闘耐性플래그
#DIM DYNAMIC 破壊耐性플래그
#DIM DYNAMIC 대상耐性플래그
#DIM DYNAMIC 마법耐性플래그
#DIM DYNAMIC モンスター耐性플래그
#DIM DYNAMIC 함정耐性플래그
#DIMS DYNAMIC 素材条件固名前설정,99
#DIM DYNAMIC 素材条件R종족설정,99
#DIM DYNAMIC カードコスト,10
#DIM DYNAMIC カードコスト보존,10

#DIM DYNAMIC コスト설정
#DIMS DYNAMIC 使用素材名前,99 ;Anonym追記
#DIM DYNAMIC 소환불가
#DIM DYNAMIC 소환플래그



$CHOICE_LOOP
カードID = 処理中_효과ID
IF 듀얼리스트 == "자신"
	CUSTOMDRAWLINE —
	PRINTL 【초차원에서 출현할 카드를 골라주세요】
	IF オプション_略표시 == 1
		PRINTBUTTON "[간이표시중]", 6666
	ELSE
		PRINTBUTTON "[간이표시]", 6666
	ENDIF
	PRINTFORML　%"[7777] - 필드・패 정보 확인",55,RIGHT%

	CUSTOMDRAWLINE —
	PRINTL 
ELSEIF 듀얼리스트 == "상대"
	CALL ENEMY_RUTIN_CARD_ADD("EX덱",場所,カードID)
ENDIF

CALL CARD_FILTER_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
条件달성 = RESULT:1

IF 듀얼리스트 == "자신"
	PRINTL
	IF 条件달성 != 0 && 효과条件任意 != 1
		SETCOLOR C_GRAY
		PRINTL 　(9999) - 돌아간다(선택 가능한 카드가 있습니다)
		RESETCOLOR
	ELSE
		PRINTL 　[9999] - 돌아간다
	ENDIF
	PRINTL
	BINPUT
		IF RESULT == 7777
		CALL DIPLAY_BOARD(2)			
		GOTO CHOICE_LOOP
	ELSEIF RESULT == 6666
		オプション_略표시 ^= 1
		GOTO CHOICE_LOOP
	ENDIF

	選択カード = RESULT
ELSEIF 듀얼리스트 == "상대"
	選択カード = RESULT
ENDIF

IF 選択カード == 9999
	PRINTFORMW 돌아갑니다。
	RETURN 0
ELSEIF 選択カード != 9999
	選択カード_ID = GETVAR(@"%듀얼리스트%_EX덱:選択カード")
	CALL SELECT_UI_SET(듀얼리스트,選択カード_ID,1)
	IF RESULT == 1
		GOTO CHOICE_LOOP
	ENDIF
ENDIF

ARRAYSORT 효과条件レベル,BACK
コスト설정 = 효과条件レベル
SIF 효과条件レベル <= 0
	コスト설정 = 99

;FOR カウンタ,0,15
;	PRINTFORML 효과条件レベル:{カウンタ}：{효과条件レベル:カウンタ}
;NEXT

VARSET 使用素材名前
VARSET カードコスト,999
VARSET 生物コスト,999
VARSET 装備コスト,999
VARSET 要塞コスト,999

;소환플래그 == 1 : 발동元のウェポン装備のみ
;소환플래그 == 2 : 선택한 ウェポンを何かに장착한다
;소환플래그 == 4 : フォートレス설치
;소환플래그 == 8 : クリーチャーの소환のみ 

;選択カード_ID = GETVAR(@"%듀얼리스트%_EX덱:選択カード")


VARSET 상대지정カード

CALL CARD_EX_CHECK(듀얼리스트,選択カード_ID)
SIF RESULT == 1
	소환불가 = 1


TRYCALLFORM CARDNAME_{選択カード_ID}, "名前"
生物名 = %RESULTS%
TRYCALLFORM CARDNAME_{選択カード_ID}, "要塞名"
要塞名 = %RESULTS%
TRYCALLFORM CARDNAME_{選択カード_ID}, "武装名"
武装名 = %RESULTS%
;PRINTFORMW 選択カード_ID：{選択カード_ID}　ウェポン：%武装名%


TRYCALLFORM CARD_{選択カード_ID}, "レベル"
生物コスト = RESULT

TRYCALLFORM CARD_{選択カード_ID}, "コスト"
FOR カウンタ,0,10
	カードコスト:カウンタ = RESULT:カウンタ
NEXT
	
ARRAYSORT カードコスト,FORWARD,0,10
IF カードコスト보존:0 != 999
	IF カードコスト보존:1 != 999
		装備コスト = カードコスト:0
		要塞コスト = カードコスト:1
	ELSE
		IF 武装名 != ""
			装備コスト = カードコスト:0
		ENDIF
		IF 要塞名 != ""
			要塞コスト = カードコスト:0
		ENDIF
	ENDIF
ENDIF

IF 듀얼리스트 == "자신"
	CUSTOMDRAWLINE —
	PRINTL
	PRINTL 효과의 설정처를 선택해 주세요
	PRINTL
	CUSTOMDRAWLINE —
ENDIF

IF 듀얼리스트 == "자신"
	PRINTL 
;	PRINTFORML 生物コスト:{生物コスト} / コスト설정:{コスト설정} / GETBIT(소환플래그,3):{GETBIT(소환플래그,3)}
	IF 生物名 != "" && 生物コスト <= コスト설정 && GETBIT(소환플래그,3) == 1
		SETCOLOR C_PSY_RED
		PRINTFORML 　[1] - 몬스터로서《%生物名%》를 특수소환。
	ENDIF

;	PRINTFORML 요새코스트:{要塞コスト} / 코스트설정:{コスト설정} / GETBIT(소환플래그,2):{GETBIT(소환플래그,2)}
	IF 要塞名 != "" && 要塞コスト <= コスト설정 && GETBIT(소환플래그,2) == 1 
		SETCOLOR C_MAGIC_G
		PRINTFORML 　[2] - 지속마법으로서《%要塞名%》를 앞면표시로 세트한다。
	ENDIF

;	PRINTFORML 장착코스트:{装備コスト} / 코스트설정:{コスト설정} / GETBIT(소환플래그,0):{GETBIT(소환플래그,0)}
	IF 武装名 != "" && 装備コスト <= コスト설정 && GETBIT(소환플래그,0) == 1 
		SETCOLOR C_ORANGE
		PRINTFORML 　[3] - 장착마법으로서《%武装名%》를 장착한다。
	ENDIF
;	PRINTFORML 장착코스트:{装備コスト} / 코스트설정:{コスト설정} / GETBIT(소환플래그,1):{GETBIT(소환플래그,1)}
	IF 武装名 != "" && 装備コスト <= コスト설정 && GETBIT(소환플래그,1) == 1
		SETCOLOR C_ORANGE
		PRINTFORML 　[4] - 장착마법으로서《%武装名%》를 장착한다。
	ENDIF
	RESETCOLOR
	PRINTL 
	CUSTOMDRAWLINE —
	PRINTL 
	PRINTL 　[9999] - 돌아간다
	PRINTL 
	BINPUT
ELSE
	RESULT = 9999
	SIF 装備コスト <= コスト설정 && 소환플래그 == 2
		RESULT = 4

	SIF 装備コスト <= コスト설정 && 소환플래그 == 1
		RESULT = 3


	SIF 要塞コスト <= コスト설정
		RESULT = 2

	SIF 生物コスト <= コスト설정 && 소환불가 == 0
		RESULT = 1

ENDIF


IF RESULT == 9999
	RETURN 0
ELSEIF RESULT == 1
	;ここまで
	PRINTFORMW 초차원 홀 접속！！　%生物名%！！
	CALL CARD_EX_SUMMON(듀얼리스트, "EX덱", 選択カード,"")

ELSEIF RESULT == 2
	PRINTFORMW 초차원 홀 접속！！　포트리스、%要塞名%！！
	CALL CARD_ADD(듀얼리스트, "EX덱", "마함", 選択カード, "表側표시")

ELSEIF RESULT == 3
	PRINTFORMW 초차원 홀 접속！！　웨폰、%武装名%！！
	CALL CARD_EQUIP_MONSTER(듀얼리스트,場所,"EX덱",選択カード)
	CALLFORM CARD_STANBY(選択カード_ID,듀얼리스트,他효과起動,"EX덱")
ELSEIF RESULT == 4
	PRINTFORMW 초차원 홀 접속！！　웨폰、%武装名%！！
	CALL FULLRESET
	효과範囲필드 = 1
	CALLFORM CARD_EQUIP_ADV(듀얼리스트,選択カード,"EX덱")
	CALLFORM CARD_STANBY(選択カード_ID,듀얼리스트,他효과起動,"EX덱")
ENDIF

RETURN 1


@INVASION(듀얼리스트,ゾーン,場所,重ねる플래그)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 대상者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カードID
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 회복量
#DIM DYNAMIC 重ねる플래그

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
カード소환先 = 戦闘場所(듀얼리스트)


カードID = GETVAR(@"%듀얼리스트%_%ゾーン%:場所")
IF カードID <= -1
	PRINTFORMW 해당하는 몬스터가 존재하지 않습니다。
	RETURN 0
ENDIF
CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,소멸行き)
選択カードID = GETVAR(@"%듀얼리스트%_필드:カード소환先")
CALL CARD_DISPOSE(듀얼리스트,"필드",カード소환先,疑似묘지行き)
SETVAR @"%듀얼리스트%_필드:カード소환先" , カードID


CALL CARD_LOADUP
IF GETVAR(@"%対面者%_みずき효과")
	회복量 = GETVAR(@"%듀얼리스트%_MZ_攻:カード소환先")
	CALL LIFE_CHANGE(対面者,"増加","효과",회복量)
ENDIF



;ザポルグ追記20250309
TRYCALLFORM CARD_FINISHER_SHOKO(듀얼리스트,カードID)

TRYCALLFORM CARD_FINISHER(듀얼리스트,カードID)
IF 듀얼리스트 == "상대"
	CALL KOJO_MESSAGE_SEND("DUEL",OPPOSER,3,カードID)
ENDIF


CALL PRINT_STATE_DUEL(カードID)
CALL TEXT_DECORATION("INVASION")
PRINTFORML 침략、발동！！
CALL TEXT_DECORATION("INVASION")
CALLFORM CARDNAME_{カードID}("名前")
PRINTFORML %듀얼리스트%는 %ゾーン%에서『{場所}』%RESULTS%를 소환했습니다。
PRINTFORMW

CALL CARD_ADDITIONAL_EFFECT(듀얼리스트)


CALL CARD_LOADUP
IF GETVAR(@"%対面者%_みずき효과")
	회복量 = GETVAR(@"%듀얼리스트%_MZ_攻:カード소환先")
	CALL LIFE_CHANGE(対面者,"増加","효과",회복量)
ENDIF

CALL CARD_SUMACT(듀얼리스트,"EX특수",カード소환先,カードID,듀얼리스트,ゾーン)
CALL CARD_SUMRESERV(듀얼리스트,"EX특수",カード소환先 ,カードID,ゾーン)

SIF ゾーン == "EX덱"
	SETVAR @"%듀얼리스트%_EX소환済",  1
SETVAR @"%듀얼리스트%_SS소환済",  1
IF 重ねる플래그 == 1
	SETVAR @"%듀얼리스트%_MZ_変化元ID:カード소환先", 選択カードID
ENDIF

IF カードID == GETVAR(@"%듀얼리스트%_필드:カード소환先")
	CALLFORM CARD_STANBY(カードID,듀얼리스트,특수소환時,"필드",カード소환先)
ENDIF
RETURN 1

;超越
@STRIDE(듀얼리스트,ゾーン,場所,カードID)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 대상者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カードID
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 회복量
#DIM DYNAMIC 重ねる플래그

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL FULLRESET
효과条件종류 = モン全般
효과条件行先플래그 = 제외行き
효과条件任意 = 1
CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
IF RESULT == 1
	CALL FULLRESET
	효과条件カテゴリ = %素材条件カテゴリ%
	효과条件カテゴリ:1 = %素材条件カテゴリ:1%
	효과条件行先플래그 = 소멸行き
	효과条件任意 = 1
	CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
	IF RESULT == 1
		選択カードID = RESULT:1
		CALL CARD_LOADUP
		PRINTFORML
		PRINTFORML
		PRINTFORML 초월《스트라이드》、제너레이션！
		CALL PRINT_STATE_DUEL(カードID)
		CALL FULLRESET
		CALL CARD_EX_SUMMON(듀얼리스트,"EX덱",場所,"攻撃표시")
		SETVAR @"%듀얼리스트%_MZ_変化元ID:カード소환先", 選択カードID
	ELSE
		RETURN 0
	ENDIF
ELSE
	RETURN 0
ENDIF


CALL CARD_LOADUP
IF GETVAR(@"%対面者%_みずき효과")
	회복量 = GETVAR(@"%듀얼리스트%_MZ_攻:カード소환先")
	CALL LIFE_CHANGE(対面者,"増加","효과",회복量)
ENDIF



;ザポルグ追記20250309
TRYCALLFORM CARD_FINISHER_SHOKO(듀얼리스트,カードID)

TRYCALLFORM CARD_FINISHER(듀얼리스트,カードID)
IF 듀얼리스트 == "상대"
	CALL KOJO_MESSAGE_SEND("DUEL",OPPOSER,3,カードID)
ENDIF


CALL CARD_ADDITIONAL_EFFECT(듀얼리스트)

CALL CARD_LOADUP
IF GETVAR(@"%対面者%_みずき효과")
	회복量 = GETVAR(@"%듀얼리스트%_MZ_攻:カード소환先")
	CALL LIFE_CHANGE(対面者,"増加","효과",회복量)
ENDIF

CALL CARD_SUMACT(듀얼리스트,"EX특수",カード소환先,カードID,듀얼리스트,ゾーン)
CALL CARD_SUMRESERV(듀얼리스트,"EX특수",カード소환先 ,カードID,ゾーン)

SIF ゾーン == "EX덱"
	SETVAR @"%듀얼리스트%_EX소환済", 1
SETVAR @"%듀얼리스트%_SS소환済", 1
SETVAR @"%듀얼리스트%_超越済", 1


IF カードID == GETVAR(@"%듀얼리스트%_필드:カード소환先")
	CALLFORM CARD_STANBY(カードID,듀얼리스트,EX소환時,"필드",カード소환先)
	VARSET RESULT
	TRYCALLFORM CARDCAN_{カードID}(듀얼리스트,EX소환時強制,"필드",カード소환先)
	SIF RESULT == 1
		TRYCALLFORM CARDEFFECT_{カードID}(듀얼리스트,EX소환時強制,"필드",カード소환先)
ENDIF

@STRIDECAN(듀얼리스트,소환カード,カードID) 
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC カードID
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 固名前CNT
#DIM DYNAMIC R종족CNT
#DIM DYNAMIC R속성CNT

#DIM DYNAMIC 選択カード,10
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択済カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 링크合計
#DIM DYNAMIC 素材条件종족설정

#DIM DYNAMIC 上級値
#DIMS DYNAMIC 대상者
#DIMS DYNAMIC 参照先

VARSET 選択カード, -1
CALL CARD_EX_CHECK(듀얼리스트,カードID)
SIF RESULT == 1
	RETURN 0
IF 듀얼리스트 == "상대"
	CALL ENEMY_RUTIN_EXSUM(소환カード,カードID) 
	SIF RESULT == 1
		RETURN 0
ENDIF

SIF ターン数 <= 1
	RETURN 0
CALL FULLRESET
효과範囲손패 = 1
효과条件종류 = モン全般
CALL CARD_CHECK_ADV(듀얼리스트)
SIF RESULT != 1
	RETURN 0
SIF GETVAR(@"%듀얼리스트%_超越済") != 0
	RETURN 0

SIF 強制必要素材名前 != "" && 素材条件名前 == ""
	素材条件名前 = %強制必要素材名前%

FOR カウンタ,0,7
	素材条件종류:カウンタ = カウンタ + 1
NEXT

CALL FULLRESET
CALL CARD_FILTER_EXSS(듀얼리스트,소환カード,링크,選択カード,"EX덱",0,1)
IF RESULT == 1
	RETURN 1
ELSE
	RETURN 0
ENDIF
