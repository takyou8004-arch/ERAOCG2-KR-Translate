@IRAI_EVENT_35(参照先)
#DIMS DYNAMIC 参照先
#DIM DYNAMIC 대상캐릭터

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE  "名前"
		;표시するタイトル
		RESULTS = (ST-EX)空白の카드와 千年マーカー
	CASE "이벤트種"
		;이벤트の종류
		RETURN 이벤트_通常
	CASE "依頼先"
		;이벤트が発生する場所、場所名に関してはDIM.ERHを確認（ERBの99.その他内にある）
		;RETURN 即時開始で受けた後すぐに이벤트を開始することもできる
		RETURN 即時開始
	CASE "詳細"
		;単純な説明文、ここに必要な情報を書く：
		PRINTL 어느 날, 생각나는 대로 빈 카드에 낙서를 해봤더니……
		PRINTL 
		PRINTL
		PRINTL 보수: 기능 해금
	CASE "条件"
		;下の依頼_完了횟수:○○は、○○に入るIDの依頼を보고、그것이 クリアされていない状態なら受けられませんよって返す
		SIF 依頼_完了횟수:34 == 0
			RETURN 0
		RETURN 1
ENDSELECT

RETURN 0

