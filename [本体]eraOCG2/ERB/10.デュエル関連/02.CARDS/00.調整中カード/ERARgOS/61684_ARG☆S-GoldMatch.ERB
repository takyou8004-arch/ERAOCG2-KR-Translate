@CARDNAME_61684,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = ARG☆S─GoldMatch
	CASE "略称"
		RESULTS = GoldMatch
	CASE "カテゴリ"
		RESULTS:0 = ARG☆S
		RESULTS:1 = 게임 오리지널
ENDSELECT


