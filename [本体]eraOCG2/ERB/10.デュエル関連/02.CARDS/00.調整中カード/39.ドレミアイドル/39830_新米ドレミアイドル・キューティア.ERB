@CARDEFFECT_39830(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択場所
#DIM DYNAMIC レベル
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 実行役대상


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39830)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39834,1)
	IF RESULT == 0
		CALL FULLRESET
        素材条件カテゴリ = 도레미코드
		효과条件종류:0 = 싱크로
		효과条件종류:1 = 링크
		효과条件소환可 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択場所 = RESULT
		IF 選択場所 != 9999
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択場所}")}(듀얼리스트,選択場所)
			CALL SYNSUMMON(듀얼리스트, 選択場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39830,2)
	IF RESULT == 0
		
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ = 도레미아이돌
		효과条件종류 = EX以外全般
		효과条件固名前 = 신참 도레미아이돌 큐티아
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"永星",2)
		ENDIF
	ENDIF

ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39830,3)
	IF RESULT == 0
		CALL FULLRESET
		選択場所 = 戦闘場所(듀얼리스트,1)
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		조교대상 = NO_TO_CHARANUM(2086)

		CALL Doremi_fans(対面者,選択場所,조교대상,"攻撃")
		CALL EVADE_ATTACK(듀얼리스트)
	ENDIF

ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39830,4)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,EX덱行き)

		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 도레미코드
		효과条件종류 = 마함全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		
		CALL Doremi_business(対面者,2086)
	ENDIF

ELSEIF 종류 == ターン終了時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39830)
	IF RESULT == 0
		조교대상 = NO_TO_CHARANUM(2086)
		CALL Doremi_FansAttack(듀얼리스트,조교대상,場所)
	ENDIF
ENDIF

