@CARDEFFECT_39835(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択場所
#DIM DYNAMIC レベル
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 実行役대상


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39835)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
	
ELSEIF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39835,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"상대필드",ゾーン,場所)
		選択場所 = RESULT
		조교대상 = NO_TO_CHARANUM(2091)
		CALL Doremi_fans(対面者,選択場所,조교대상,"登場")
	ENDIF
	
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39835,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン, 場所)

		SIF ゾーン == "손패"
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"選択")

		CALL CARD_RESERV(듀얼리스트,39835)
		LOCAL = カード소환先
	ENDIF


ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39835,3)
	IF RESULT == 0
		CALL FULLRESET
		選択場所 = 戦闘場所(듀얼리스트,1)
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		조교대상 = NO_TO_CHARANUM(2091)

		CALL Doremi_fans(対面者,選択場所,조교대상,"攻撃")
		CALL EVADE_ATTACK(듀얼리스트)
	ENDIF

ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39835,4)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,EX덱行き)
		
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 도레미코드
		효과条件종류 = モン全般
		CALL 효과条件レベル_ADV(3, "以下")
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		CALL Doremi_business(対面者,2091)
	ENDIF
	
ELSEIF 종류 == ターン終了時予約
	
	場所 = LOCAL	
	TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:場所")}, "名前"
	IF RESULTS == "도레미아이돌 엔제리아"
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,"필드",場所,마함行き)
	ENDIF

ELSEIF 종류 == ターン終了時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39835)
	IF RESULT == 0
		조교대상 = NO_TO_CHARANUM(2091)

		CALL Doremi_FansAttack(듀얼리스트,조교대상,場所)
	ENDIF
ENDIF
