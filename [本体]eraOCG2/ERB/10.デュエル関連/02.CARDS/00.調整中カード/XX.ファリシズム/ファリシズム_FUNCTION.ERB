						CALL EROTIC_MOVE("파이즈리",조교대상,-1,500)
				ENDSELECT
				;20250729추가 성희롱의 도에 따라 카운터가 오르도록
				CALL CARD_COUNTER_SYMMETRIA(듀얼리스트,종류,ゾーン,場所,1)
				CALL SET_FIELD_INFO(듀얼리스트,"마함",カウンタ,"リ数",1)
			ENDIF
		ENDIF
	NEXT
	PRINTFORMW 바쳐진 쾌락에 의해, 어신체는 힘을 얻었다.
	CALL RECOVER_PERMIL(MASTER,1000,"체력",1)
	CALL RECOVER_PERMIL(MASTER,1000,"기력",1)
ENDIF
RETURN 0

