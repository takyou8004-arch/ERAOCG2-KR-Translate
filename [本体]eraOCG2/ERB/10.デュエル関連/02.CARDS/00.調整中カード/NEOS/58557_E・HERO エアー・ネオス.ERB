@CARDSUMMON_58557(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件名前 = 엘리멘틀 히어로 네오스
ELSEIF EX参照 >= 10
	素材条件名前 = N 에어 허밍버드
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,58557) 
	RETURN RESULT
ENDIF



@CARDCAN_58557(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58557)
SIF RESULT == 1
	RETURN 0


IF 종류 == EX덱起動
	CALL CARD_EX_CHECK(듀얼리스트,42364)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前 = 엘리멘틀 히어로 네오스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前 = N 에어 허밍버드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動 || 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") == GETVAR(@"ライフ_%対面者%")
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드→戦離
	SIF 발동済_2(듀얼리스트,58557)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件レベル = 7
	효과条件カテゴリ = 네오스
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_58557(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58557)
	IF RESULT == 0
		CALL RESETAREA_MAT
		素材範囲필드 = 1
		CALL FULLRESET
		TRYCALLFORM CARDSUMMON_58557(듀얼리스트,場所)
		CALL FUSSUMMON(듀얼리스트,場所,덱行き)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"追戦",1)
ELSEIF 종류 == 攻守変動
	IF GETVAR(@"ライフ_%듀얼리스트%") > GETVAR(@"ライフ_%対面者%")
		攻撃力修正 = GETVAR(@"ライフ_%듀얼리스트%") - GETVAR(@"ライフ_%対面者%")
	ELSE
		攻撃力修正 = GETVAR(@"ライフ_%対面者%") - GETVAR(@"ライフ_%듀얼리스트%")
	ENDIF
	SIF 攻撃力修正 != 0
		CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)
ELSEIF 종류 == 필드→戦離
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58557,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件レベル = 7
		효과条件カテゴリ = 네오스
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == ターン終了時強制
	CALL FULLRESET
	효과条件名前 = N 에어 허밍버드
	CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
	IF RESULT != 1
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,덱行き)
	ENDIF
ENDIF
