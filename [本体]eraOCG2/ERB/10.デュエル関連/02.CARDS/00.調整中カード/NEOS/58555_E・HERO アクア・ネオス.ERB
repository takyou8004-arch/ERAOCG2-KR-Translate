@CARDNAME_58555,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 엘리멘틀 히어로 아쿠아 네오스
	CASE "略称"
		RESULTS = 아쿠아 네오스
	CASE "カテゴリ"
		RESULTS:0 = HERO
		RESULTS:1 = E•HERO
		RESULTS:2 = 네오스
ENDSELECT


@CARD_58555(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 전사족
	CASE "レベル"
		RETURN 8
	CASE "攻撃力"
		RETURN 3100
	CASE "守備力"
		RETURN 2800
	;レベルを１上げ、攻守を素材の合計に
	CASE "특수불가"
		RETURN 1
	CASE "성별"
		RETURN 雄性
ENDSELECT

RETURN 0

