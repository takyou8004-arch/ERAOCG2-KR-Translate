@CARDEFFECT_429682(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,429682,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 일루미네이션 스타즈
		효과条件종류 = モン全般
		효과条件行先플래그 = EX덱行き
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"손패")
			RETURN 1
		ENDIF
	ENDIF
	RETURN 0
ELSEIF 종류 == 맥시멈条件
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦無")
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = 일루미네이션 스타즈
	효과条件他所 = 1
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과条件名前 = 【디바인 크론】일루미네이션 스타즈
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,0,GETVAR(@"%듀얼리스트%_MZ_守:場所"))
ENDIF
