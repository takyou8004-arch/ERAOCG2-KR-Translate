#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 사카키 유우야
	CASE "略称"
		RESULTS = 유우야
	CASE "カテゴリ"
		RESULTS:0 = 듀얼리스트
ENDSELECT


@CARD_2615(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 마법사족
	;レベル目安、子供は레벨 ２、学生３、成人４、大人なお姉さんは５くらいをイメ-ジ
	CASE "レベル"
		RETURN 3
	;체력을 10で割った数字を攻撃力に、기력을 10で割った数字を守備力に
	CASE "攻撃力"
		RETURN 100
	CASE "守備力"
		RETURN 100
	CASE "성별"
		RETURN 雄性
	CASE "듀얼리스트"
		RETURN 1
ENDSELECT
RETURN 0

