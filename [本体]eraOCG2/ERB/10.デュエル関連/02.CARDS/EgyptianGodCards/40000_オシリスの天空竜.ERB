@CARDCAN_40000(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과先
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,40000)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과소환 
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 最終소환決者 == 듀얼리스트
		RETURN 0
	SIF 最終소환타입 == ""
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,40000)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과 || 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_召種:場所") <= 召種通常
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_40000(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃修正
#DIM DYNAMIC 守備修正
#DIM DYNAMIC 효과先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과소환
	CALL FULLRESET
	효과条件複数 = 3
	CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40000)
	IF RESULT == 0
		;召雷弾！
		SETCOLOR C_RED
			PRINTFORML 
			PRINTFORML 오시리스의 제2의 입에서 소뢰탄이 터졌다!
			PRINTFORMW 
		RESETCOLOR
		효과先 = 最終소환場所
		IF GETVAR(@"%対面者%_MZ_攻:효과先") < 2001 || GETVAR(@"%対面者%_MZ_守:효과先") < 2001
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",最終소환場所,"묘지")
		ELSEIF GETVAR(@"%対面者%_MZ_モ耐:효과先") == 0
			CALL FULLRESET
			효과추가종류 = 10
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",最終소환場所,"永攻DOWN",2000)
		ELSE
			SETCOLOR C_RED
				PRINTFORML 
				PRINTFORML 그러나 오시리스의 소뢰탄은 불발!
				PRINTFORMW 
			RESETCOLOR
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40000,1)
	IF RESULT == 0
		SETCOLOR C_RED
			PRINTFORML 
			PRINTFORML 신 앞에서 사라져라, 초전도파 썬더포스!!!
			PRINTFORMW 
		RESETCOLOR
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		CALL CARDDRAW_BASIC(듀얼리스트,RESULT)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"묘지")
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃修正 = RESULT * 1000
	CALL STATCHANGE_BASIC(듀얼리스트,"자신",場所,攻撃修正,攻撃修正)
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲묘지 = 1
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲제외 = 1
	효과条件名前 = 오시리스의 천공룡
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1 
		CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"モ耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"魔耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"함정耐")
	ENDIF
ELSEIF 종류 == ターン終了時強制
	CALL FULLRESET
	CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
ENDIF


