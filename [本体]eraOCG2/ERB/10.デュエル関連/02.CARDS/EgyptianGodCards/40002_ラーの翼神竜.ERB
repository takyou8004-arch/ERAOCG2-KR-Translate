@CARDCAN_40002(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,40002)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과소환 
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 3
		条件달성 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 3
		条件달성 = 1
	SIF 条件달성 == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 특수소환時
	SIF 듀얼리스트 == "상대" && ターン数 == 1
		RETURN 0
	SIF 듀얼리스트 == "상대" && ターンプレイヤー == "자신"
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 1000
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_所有:場所") == 1 && 듀얼리스트 == "상대"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_所有:場所") == 2 && 듀얼리스트 == "자신"
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == チェーン可否
	RETURN 1
ENDIF
@CARDEFFECT_40002(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 攻撃修正
#DIM DYNAMIC 守備修正
#DIM DYNAMIC 条件달성A
#DIM DYNAMIC 条件달성B
#DIM DYNAMIC LRESULT
#DIM DYNAMIC 효과先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과소환
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 3
		条件달성A = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 3
		条件달성B = 1
	IF 条件달성A == 1 && 条件달성B == 1
		PRINTFORML 누구의 필드에 소환하시겠습니까?
		PRINTFORML [0] - 자신 필드
		PRINTFORML [1] - 상대 필드
		BINPUT
		LRESULT = RESULT
	ELSEIF 条件달성A == 1 && 条件달성B == 0
		LRESULT = 0
	ELSEIF 条件달성B == 1 && 条件달성A == 0
		LRESULT = 1
	ELSE
		RETURN 0
	ENDIF
	IF LRESULT == 0
		CALL FULLRESET
		효과条件複数 = 3
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		攻撃修正 += RESULT:99
		守備修正 += RESULT:98
		CALL CARD_SUMMON(듀얼리스트,場所,"攻撃표시")
		CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"永攻",攻撃修正)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"永守",守備修正)
	ELSEIF LRESULT == 1
		CALL FULLRESET
		효과条件複数 = 3
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"상대필드",ゾーン,場所)
		攻撃修正 += RESULT:99
		守備修正 += RESULT:98

		CALL CARD_SUMMON_RA(듀얼리스트,場所,"攻撃표시")
		CALL SET_FIELD_INFO(対面者,"필드",カード소환先,"永攻",攻撃修正)
		CALL SET_FIELD_INFO(対面者,"필드",カード소환先,"永守",守備修正)
	ENDIF
	CALL CARDSUMMON_AA_40002
	RETURN 0
ELSEIF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40002)
	IF RESULT == 0
		攻撃修正 = GETVAR(@"ライフ_%듀얼리스트%") - 1
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",攻撃修正)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",攻撃修正)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永守",攻撃修正)
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40002,10)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",1000)
		SETCOLOR C_YELLOW_2
			PRINTFORML 
			PRINTFORML 모든 것을 태워라, 갓 피닉스!
			PRINTFORMW 
		RESETCOLOR
		FOR カウンタ,0,5
			SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
				CONTINUE
			CALL FULLRESET
			CALL CARD_DISPOSE(対面者,"필드",カウンタ)
		NEXT
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦耐",1)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"破耐",1)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲묘지 = 1
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲제외 = 1
	효과条件名前 = 라의 익신룡
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1 
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"モ耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"魔耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")
	ENDIF
ELSEIF 종류 == ターン終了時強制
	IF GETVAR(@"%듀얼리스트%_MZ_召種:場所") != 召種通常
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		RETURN 0
	ENDIF
	IF GETVAR(@"%듀얼리스트%_MZ_所有:場所") == 1 && 듀얼리스트 == "상대"
		CALL FULLRESET
		CALL CARD_GET_CONTROL(対面者,場所)
	ELSEIF GETVAR(@"%듀얼리스트%_MZ_所有:場所") == 2 && 듀얼리스트 == "자신"
		CALL FULLRESET
		CALL CARD_GET_CONTROL(対面者,場所)
	ENDIF
ENDIF


