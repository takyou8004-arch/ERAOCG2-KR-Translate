@CARDNAME_39643,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 서큐베 바르모니카
	CASE "略称"
		RESULTS = 서큐베
	CASE "カテゴリ"
		RESULTS:0 = 바르모니카
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_39643(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 천사족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1200
	CASE "守備力"
		RETURN 2100
	CASE "성별"
		RETURN 牝性
	CASE "分割"
		RETURN 펜듈럼
	CASE "튜너"
		RETURN 1
ENDSELECT
RETURN 0

