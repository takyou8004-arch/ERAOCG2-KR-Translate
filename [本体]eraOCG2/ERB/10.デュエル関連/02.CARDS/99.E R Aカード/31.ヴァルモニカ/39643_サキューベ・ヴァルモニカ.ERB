@CARDCAN_39643(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39643)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = 서큐베 바르모니카
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ライフ変強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	SIF ダメージ受者 != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,39643,"마함")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = 서큐베 바르모니카
	효과条件個Ｃ所持 = 3
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件名前 = 셀레트리체 바르모니카
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과 || 종류 == リアクション효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前 = 셀레트리체 바르모니카
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 특수소환時
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前 = 셀레트리체 바르모니카
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,39643)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 바르모니카
	효과条件名前:0 = 바르모니카 서키아레
	효과条件名前:1 = 음도의 바르모니카
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39643(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39643)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == ライフ変強制誘発
	CALL FULLRESET
	CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",1)
	PRINTFORML
	PRINTFORMW 분홍색 잔이 가득 차 간다（현재의 響鳴카운터{GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所")}개）
	PRINTFORML
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39643)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39643,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件名前 = 셀레트리체 바르모니카
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 지속효과
	;耐性付与
	CALL FULLRESET
	효과条件名前 = 셀레트리체 바르모니카
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"接可")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"発情")
ELSEIF 종류 == リアクション효과
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")}, "名前"
		SIF !MATCH(RESULTS, "셀레트리체 바르모니카")
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_リ数:カウンタ") >= 1
			CONTINUE
		PRINTFORML
		SETCOLOR C_PINK 
		PRINTFORMW 서큐베 바르모니카의 속삭임을 듣게된 셀레트리체 바르모니카는 발정했다!
		RESETCOLOR
		;CALL EROTIC_MOVE("",NO_TO_CHARANUM(2140),,500)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"リ数",1)
	NEXT
ELSEIF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39643)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과範囲EX덱 = 1
		효과範囲묘지 = 1
		효과条件名前 = 데모네 바르모니카
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		条件달성 = RESULT
		IF 条件달성 > 0
			PRINTFORML
			PRINTFORMW 서큐베 바르모니카는 데모네 바르모니카를 %CALLNAME:MASTER%에게 내밀었다!
			PRINTFORML
		ENDIF
		REPEAT 条件달성
			TARGET = NO_TO_CHARANUM(2142)
			CALL MESSAGE_COM65
			CALL COM54
			CALL CARD_EROTICS_END(NO_TO_CHARANUM(2142))
			WAIT
			TARGET = LOCAL
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",500)
		REND
		
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과範囲EX덱 = 1
		효과範囲묘지 = 1
		효과条件名前 = 안젤로 바르모니카
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		条件달성 = RESULT
		IF 条件달성 > 0
			PRINTFORML
			PRINTFORMW 서큐베 바르모니카는 안젤로 바르모니카를 %CALLNAME:MASTER%에게 내밀었다!
			PRINTFORML
		ENDIF
		REPEAT 条件달성
			TARGET = NO_TO_CHARANUM(2141)
			CALL MESSAGE_COM65
			CALL COM54
			CALL CARD_EROTICS_END(NO_TO_CHARANUM(2141))
			WAIT
			TARGET = LOCAL
			CALL LIFE_CHANGE(듀얼리스트,"増加","효과",500)
		REND

		CALL RESETAREA_MAT
		CALL FULLRESET
        素材条件カテゴリ = 바르모니카
		효과条件종류 = 싱크로
		효과条件소환可 = 1
		효과条件任意 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
			CALL SYNSUMMON(듀얼리스트, 選択カード)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39643,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 바르모니카
		효과条件名前:0 = 바르모니카 서키아레
		효과条件名前:1 = 음도의 바르모니카
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		選択カード_ID = RESULT:1
		IF 選択カード_ID > 0
			CALLFORM CARDEFFECT_{選択カード_ID}(듀얼리스트,마함起動,"효과処理",選択カード)
		ENDIF
	ENDIF
ENDIF


