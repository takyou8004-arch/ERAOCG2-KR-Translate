@CARDNAME_39704,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 바이오 플랜트 룩터
	CASE "略称"
		RESULTS = 촉수궁 묘상공주
	CASE "カテゴリ"
		RESULTS:0 = 촉수
		RESULTS:1 = 묘상
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_39704(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1400
	CASE "守備力"
		RETURN 1400
	CASE "성별"
		RETURN 牝性
ENDSELECT

RETURN 0

@CARD_EXPLANATION_39704(종류)
#DIM DYNAMIC 종류

CALL TEXT_DECORATION("ROGUE")
PRINTL 이 카드명의  ①②의 효과는 각각 1턴에 1번밖에 사용할 수 없다。
PRINTL 이 카드는 "묘상"으로 완성품이 되었습니다。
CALL CARD_ABLE(1,소환時,특수소환時)
PRINTL ①：이 카드가 일반 / 특수 소환 했을 경우에 발동할 수 있다。
PRINTL 덱에서 이카드 이외의 "촉수" 몬스터를 1장을 묘지로 보내고,
PRINTL 보낸 몬스터의 레벨 X 200 만큼 공격력을 올립니다
CALL CARD_ABLE(2,필드起動)
PRINTL ②：필드의 이 카드를 마법 / 함정 존으로 보내고 발동할 수 있다。
PRINTL 자신의 덱에서 「촉수궁─텐타클 팰리스」 1장을 발동시킵니다。
CALL TEXT_DECORATION("ROGUE")

@CARDCAN_39704(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39704)
SIF RESULT == 1
	RETURN 0


IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,39704)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 촉수
	효과条件종류 = モン全般
	효과条件固名前 = 바이오 플랜트 룩터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,39704)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0	
	SIF メインフェイズ != 1
		RETURN 0
	SIF 마함数(듀얼리스트) >= 4
		RETURN 0
	SIF GETVARS(@"%듀얼리스트%_フィールド名")  ==  "촉수궁"
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件名前 = 촉수궁─텐타클 팰리스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39704(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カードID
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39704,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 촉수
		효과条件종류 = モン全般
		효과条件固名前 = 바이오 플랜트 룩터
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			カードID = RESULT:1
			CALLFORM CARD_{カードID}("レベル")
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",(RESULT * 200))
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39704,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과条件名前 = 촉수궁─텐타클 팰리스
		CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"表側표시")
	ENDIF
ENDIF


