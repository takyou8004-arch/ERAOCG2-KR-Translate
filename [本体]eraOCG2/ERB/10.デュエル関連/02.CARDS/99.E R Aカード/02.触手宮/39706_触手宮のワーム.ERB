@CARDNAME_39706,参照先
;ココで지정 카드의 名前、略称を返す予定
;CALLFORM 等で名前を취득する際に使用されたりする
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 촉수궁의 웜
	CASE "略称"
		RESULTS = 촉수궁 웜
	CASE "カテゴリ"
		RESULTS:0 = 촉수
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_39706(参照先)
;종족他を설정。
;CALLFORM 等でステータスを취득する際に使用されたりする
#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
	
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 1
	CASE "攻撃力"
		RETURN 200
	CASE "守備力"
		RETURN 200
ENDSELECT

RETURN 0

