@CARDCAN_79691(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79691)
SIF RESULT == 1
	RETURN 0


IF 종류 == ターン終了時
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0		
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,79691)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 드래곤메이드
	효과条件Ｘ素所持 = 999
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_79691(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 変化ID
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 素材数
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79691,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 드래곤메이드
		효과条件Ｘ素所持 = 999
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			選択カード = RESULT
			素材数 += GETVAR(@"%듀얼리스트%_MZ_Ｘ:選択カード") + 1
			
			IF 듀얼리스트 == "자신"
				変化ID = GETVAR(@"%듀얼리스트%_MZ_変化元ID:選択カード")
				IF 変化ID == -1
					CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",選択カード)
					조교대상 = RESULT
					PRINTFORML
					SETCOLOR C_PINK
					PRINTFORMW %NAME:MASTER%는 %NAME:조교대상%에게 노력한 포상을 주었다!
					RESETCOLOR
					CALL EROTIC_MOVE("정음",조교대상,MASTER,素材数*100)
				ELSE
					CALL CARD_EROTICS(変化ID)
					조교대상 = RESULT
					IF 조교대상 != -1
						PRINTFORML
						PRINTFORMW %NAME:MASTER%는 루 드래곤메이드  %CALLNAME:조교대상%에게 노력한 포상을 주었다!
						PRINTFORML
						CALL EROTIC_MOVE("정음",조교대상,MASTER,素材数*100)
					ELSE
						TRYCALLFORM CARDNAME_{変化ID},"略称"
						PRINTFORML
						PRINTFORMW %NAME:MASTER%는 루 드래곤메이드 %RESULTS%에게 노력한 포상을 주었다!
					ENDIF
				ENDIF
			ENDIF

			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"Ｘ",-1)
		ENDIF

		;PRINTFORML 取り除いた素材数:{素材数}
		IF 素材数 >= 1
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",素材数*300,1)
		ENDIF
		IF 素材数 >= 2
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件名前 = 드래곤메이드의 야간포상
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
		IF 素材数 >= 3
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
		ENDIF
		IF 素材数 >= 4 && 마함数(듀얼리스트) < 5
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = 드래곤메이드
			효과条件종류 = 함정全般
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"裏側표시")
		ENDIF
	ENDIF

ENDIF
