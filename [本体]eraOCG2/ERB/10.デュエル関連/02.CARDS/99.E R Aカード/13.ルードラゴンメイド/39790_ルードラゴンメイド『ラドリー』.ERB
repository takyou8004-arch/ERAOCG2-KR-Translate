@CARDCAN_39790(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39790)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF 발동済_3(듀얼리스트,39790)
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,39790)
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 700
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	SIF モンスター数(듀얼리스트) < 5
		효과範囲상대필드 = 1
	효과条件종족 = 드래곤족
	효과条件속성 = 물속성
	효과条件固名前 = 루 드래곤메이드『라도리』
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,39790)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲상대묘지 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,39790)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39790(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 듀얼元ライフ
#DIM DYNAMIC 소환素材
#DIM DYNAMIC 소환素材レベル
#DIMS DYNAMIC 소환素材名前
#DIMS DYNAMIC 대상者
#DIMS DYNAMIC 参照先
#DIM DYNAMIC 조교대상
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 対面カード使用
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39790,3)
	IF RESULT == 0
		;소재를 選択
		CALL FULLRESET
		효과範囲필드 = 1
		SIF モンスター数(듀얼리스트) < 5
			효과範囲상대필드 = 1
		효과条件종족 = 드래곤족
		효과条件속성 = 물속성
		효과条件固名前 = 루 드래곤메이드『라도리』
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			소환素材 = RESULT:1
			対面カード使用 = RESULT:10
			TRYCALLFORM CARD_{소환素材},"レベル"
			소환素材レベル = RESULT
			;ライフコスト
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",800)
			;フレ-バ-
			IF 듀얼리스트 == "자신"
				IF 소환素材 == 2060 && 対面カード使用 == 0 || 소환素材 == 12060 && 対面カード使用 == 0
					PRINTFORML
					SETCOLOR C_L_BLUE
					PRINTFORMW 라도리가 음란한 옷차림으로 나타났다.
					RESETCOLOR
					CALL CARD_EROTICS(소환素材)
					IF RESULT != -1
						CALL EROTIC_MOVE("노출単発",RESULT,-1,소환素材レベル*100)
						WAIT
					ENDIF
				ELSE
					TRYCALLFORM CARDNAME_{소환素材},"名前"
					소환素材名前 = %RESULTS%
					PRINTFORML
					PRINTFORML %CALLNAME:MASTER%를%소환素材名前%덮어 눌렀다!
					PRINTFORMW 저항하는%소환素材名前%를 구속한 채로, 조교를 시작한다!
					CALL CARD_EROTICS(소환素材)
					조교대상 = RESULT
					IF 조교대상 != -1
						FOR カウンタ,0,소환素材レベル
							CALL EROTIC_MOVE("全身凌辱",조교대상,MASTER,100)
						NEXT
					ENDIF
					PRINTFORML
					PRINTFORMW ………
					PRINTFORMW %소환素材名前%는 %CALLNAME:MASTER%에게 굴복하여, 음란한 의상을 입은 메이드가 되었다!
					PRINTFORML 
				ENDIF
			ENDIF
			;특수소환
			CALL FULLRESET
			효과추가종류:0 = 効追Ｘ素
			;SIF 소환素材レベル >= 7
			SIF 소환素材 == 12060
				효과추가종류:1 = 効追条達
			SIF !GROUPMATCH(소환素材, 2060, 12060)
				효과추가종류:2 = 効追変化ID + 소환素材
			CALL CARD_EX_SUMMON(듀얼리스트,ゾーン,場所,"守備표시")
			リザルト：XYZ소환 = 1
		ENDIF
	ENDIF
ELSEIF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39790,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲상대묘지 = 1
		효과条件任意 = 1
		효과条件複数 = 98
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39790,2)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",1)
		IF 듀얼리스트 == "자신"
			소환素材 = GETVAR(@"%듀얼리스트%_MZ_変化元ID:場所")
			IF 소환素材 == -1
				PRINTFORML
				SETCOLOR C_L_BLUE
				PRINTFORMW 라도리는%NAME:MASTER%으로 부터 정기를 받았다!
				RESETCOLOR
				PRINTFORML
				CALL EROTIC_MOVE("펠라치오",NO_TO_CHARANUM(2060),MASTER,100)
			ELSE
				CALL CARD_EROTICS(소환素材)
				조교대상 = RESULT
				IF 조교대상 != -1
					PRINTFORML
					SETCOLOR C_L_BLUE
					PRINTFORMW 루 드래곤메이드  %CALLNAME:조교대상%는 %NAME:MASTER%으로 부터 정기를 받았다!
					RESETCOLOR
					PRINTFORML
					CALL EROTIC_MOVE("펠라치오",조교대상,MASTER,100)
				ELSE
					TRYCALLFORM CARDNAME_{소환素材},"略称"
					PRINTFORML
					SETCOLOR C_L_BLUE
					PRINTFORMW 루 드래곤메이드 %RESULTS%는 %NAME:MASTER%으로 부터 정기를 받았다!
					RESETCOLOR
				ENDIF
			ENDIF
		ENDIF
		
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"덱")
		IF GETVAR(@"%듀얼리스트%_MZ_条達:場所") != 0
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"덱")
		ENDIF

		PRINTFORML
		SETCOLOR C_L_BLUE
		PRINTFORMW 라도리는 귀찮은 손님을 내쫒았다!
		RESETCOLOR
		PRINTFORML

		IF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= 1
			PRINTFORML
			SETCOLOR C_L_BLUE
			PRINTFORMW 그후, 라도리는 넘어져 쓰러졌다!
			RESETCOLOR
			PRINTFORML
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,破壊行き)
		ENDIF

	ENDIF
ENDIF

