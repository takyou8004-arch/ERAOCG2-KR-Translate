@CARDNAME_79849,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 마인드컨트롤러
	CASE "略称"
		RESULTS = MC 컴퓨터
	CASE "カテゴリ"
		RESULTS:0 = MC
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_79849(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_79849(종류)
#DIM DYNAMIC 종류
CALL TEXT_DECORATION("ROGUE")
CALL CARD_ABLE(1,마함起動,손패起動)
IF TALENT:MASTER:금단의지식 == 1
	PRINTL ①：상대의 덱에 마인드 컨트롤 카드를 １０장 생성하고、셔플한다。그 후 ３장 드로우 시킨다。
	PRINTL 그 후、상대 덱의 매수가 ４０장 이상이면、상대는 덱의 매수가 ４０장이 될때까지 드로우한다。	
ELSE
	PRINTL ①：상대의 덱에 마인드 컨트롤 카드를 랜덤으로 １０장 생성하고、셔플한다。그 후 ３장 드로우시킨다。
ENDIF

CALL TEXT_DECORATION("ROGUE")

@CARDCAN_79849(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79849)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_79849(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 操作不能
#DIM DYNAMIC 횟수

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79849)
	IF RESULT == 0

		CALL 対面者판정(듀얼리스트)
		対面者 = %RESULTS%
		CALL CARD_EROTICS(상대プレイヤー,対面者)


		IF TALENT:MASTER:금단의지식 == 1
			IF 듀얼리스트 == "자신"
				PRINTL 마인드 컨트롤러에 커맨드를 입력하시겠습니까？（１종류의 최면카드를 １０장 생성합니다）
				PRINTL [0] - 예
				PRINTL [1] - 아니오
				INPUT
			ELSE
				操作不能 = 1
			ENDIF

			IF RESULT == はい
			PRINTFORMW 수수께끼의 컨트롤러가 출현하여、커맨드를 입력할 수 있다！
				PRINTL [0] - ↑↓ＸＹＸＹ（걷어올림）
				PRINTL [1] - ←←ＢＢＢＢ（요호의 춤）
				PRINTL [2] - ↑↓←→ＸＹ（자위의 선언）
				PRINTL [3] - ←→ＡＢＸＹ（가슴 만지작）
				PRINTL [4] - →←ＡＢＸＹ（클리 만지작）
				PRINTL [5] - ↑↓ＡＢＸＹ（보지 만지작）
				PRINTL [6] - ↓↑ＢＡＹＸ（엉덩이 만지작）
				PRINTL [7] - ＸＹＸＹＸＹ（정음보급）
				PRINTL [8] - ＬＲＬＲＬＲ（냄새맡기）
				PRINTL [9] - 커맨드를 입력하지않는다
				BINPUT

				IF RESULT == 0
					REPEAT 10
						CALL CARD_GENERATE_DECK(対面者,79840)
					REND
				ELSEIF RESULT == 1
					REPEAT 10
						CALL CARD_GENERATE_DECK(対面者,79841)
					REND
				ELSEIF RESULT == 2
					REPEAT 10
						CALL CARD_GENERATE_DECK(対面者,79842)
					REND
				ELSEIF RESULT == 3
					REPEAT 10
						CALL CARD_GENERATE_DECK(対面者,79843)
					REND
				ELSEIF RESULT == 4
					REPEAT 10
						CALL CARD_GENERATE_DECK(対面者,79844)
					REND
				ELSEIF RESULT == 5
					REPEAT 10
						CALL CARD_GENERATE_DECK(対面者,79845)
					REND
				ELSEIF RESULT == 6
					REPEAT 10
						CALL CARD_GENERATE_DECK(対面者,79846)
					REND
				ELSEIF RESULT == 7
					REPEAT 10
						CALL CARD_GENERATE_DECK(対面者,79847)
					REND
				ELSEIF RESULT == 8
					REPEAT 10
						CALL CARD_GENERATE_DECK(対面者,79848)
					REND
				ELSEIF RESULT == 9
					操作不能 = 1
				ENDIF

			ELSE
				操作不能 = 1
			ENDIF
		ELSE
			操作不能 = 1
		ENDIF
		IF 操作不能 == 1
		PRINTFORMW 수수께끼의 컨트롤러가 출현하여、커맨드가 자동입력된다！
			REPEAT 10
					SELECTCASE RAND:9
						CASE 0
							CALL CARD_GENERATE_DECK(対面者,79840)
						CASE 1
							CALL CARD_GENERATE_DECK(対面者,79841)
						CASE 2
							CALL CARD_GENERATE_DECK(対面者,79842)
						CASE 3
							CALL CARD_GENERATE_DECK(対面者,79843)
						CASE 4
							CALL CARD_GENERATE_DECK(対面者,79844)
						CASE 5
							CALL CARD_GENERATE_DECK(対面者,79845)
						CASE 6
							CALL CARD_GENERATE_DECK(対面者,79846)
						CASE 7
							CALL CARD_GENERATE_DECK(対面者,79847)
						CASE 8
							CALL CARD_GENERATE_DECK(対面者,79848)
					ENDSELECT
			REND
		ENDIF
		SETCOLOR C_PINK 
		PRINTFORMW 상대의 덱에 최면 카드가 10장 생성되었다.
		RESETCOLOR

		CALL SHUFFLE(対面者)

		CALL CARDDRAW_BASIC(対面者,3)
		IF 듀얼리스트 == "자신"
			IF TALENT:MASTER:금단의지식 == 1
				IF 現山札数(対面者) > 40
					SETCOLOR C_PINK 
					PRINTFORMW 상대의 댁에 쌓인 최면카드가 흘러넘쳤다…
					RESETCOLOR
					;４０장을 超えるとそのまま횟수分ドロー효과へ
					횟수 = 現山札数(対面者) - 40
					CALL CARDDRAW_BASIC(対面者,횟수)
				ENDIF
			ENDIF			
		ENDIF
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
