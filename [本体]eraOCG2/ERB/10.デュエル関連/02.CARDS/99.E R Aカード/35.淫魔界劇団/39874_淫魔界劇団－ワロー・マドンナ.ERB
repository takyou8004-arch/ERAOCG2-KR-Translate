@CARDCAN_39874(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39874)
SIF RESULT == 1
	RETURN 0

;P
IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	IF 듀얼리스트 != "자신"
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件名前 = 음마계극단－와로 마돈나
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 마함起動
	SIF 발동済_1(듀얼리스트,39874)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,39874,"마함")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 음마계극단
	효과条件固名前 = 음마계극단－와로 마돈나
	효과条件分割 = 펜듈럼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ELSEIF 종류 == 발동強制誘発
	SIF 발동済_2(듀얼리스트,39874)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 음마계극단
	효과条件종류 = 마함全般
	CALL CARD_CHECK_START_DATA_2(듀얼리스트,2)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
;M
ELSEIF 종류 == 효과後誘発
	SIF 발동済_3(듀얼리스트,39874)
		RETURN 0
	SIF ゾーン != "EX덱"
		RETURN 0
	SIF 마함数(対面者) >= 5
		RETURN 0
	CALL FULLRESET
	효과条件성별 = 牝性
	효과条件固名前 = 음마계극단－와로 마돈나
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_39874(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

;P
IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39874)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39874,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",1000)
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン, 場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 음마계극단
			효과条件固名前 = 음마계극단－와로 마돈나
			효과条件分割 = 펜듈럼
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
			CALL CARD_SS_RESTRICTION(듀얼리스트,"마계극단")
		ENDIF
	ENDIF
ELSEIF 종류 == 발동強制誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39874,2)
	IF RESULT == 0
		PRINTFORMW
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件성별 = 牝性
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,,,1)
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,破壊行き)
	ENDIF
;モンスター효과-------------------------
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39874,3)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_ADD(対面者,"상대EX덱","마함",場所)
	ENDIF
ENDIF


