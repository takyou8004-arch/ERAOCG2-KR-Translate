@CARDNAME_79809,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 음마계대본의 촬영 준비
	CASE "略称"
		RESULTS = "촬영 준비"
	CASE "カテゴリ"
		RESULTS:0 = 마계대본
		RESULTS:1 = 음마계대본
		RESULTS:2 = E.R.A
ENDSELECT


