@CARDCAN_79809(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79809)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,79809)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ELSEIF 종류 == 破壊→묘지
	SIF 발동済_2(듀얼리스트,79809)
		RETURN 0
	SIF 処理中_듀얼리스트 == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과範囲마함 = 1
	효과範囲상대마함 = 1
	효과条件カテゴリ = 음마계극단
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 음마계대본
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_79809(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79809,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성 = 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = モン全般
		효과条件성별 = 牝性
		IF 条件달성 != 1
		효과条件カテゴリ = 음마계극단
		ELSE
			효과範囲상대덱 = 1
		ENDIF
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		IF RESULT == 1
			選択カード = RESULT:1
			CALL CARD_EROTICS(選択カード)
			IF RESULT != -1
				조교대상 = RESULT
				SETCOLOR C_YELLOW
				PRINTFORMW 촬영준비가 정리되어、%CALLNAME:조교대상%에게 인터뷰가 시작되었다
				PRINTL
				SELECTCASE RAND:3
					CASE 0
					PRINTFORMW %CALLNAME:조교대상%는 연령을 질문받고있다…
						SELECTCASE TALENT:(조교대상):연령
							;子供
							CASE -2
								PRINTFORMW %CALLNAME:조교대상%의 외견은 아무리 봐도 어린이지만、마계에선 합법인 연령인듯 하다
							;学生
							CASE -1
								SELECTCASE TALENT:(조교대상):소속
									CASE 1
										PRINTFORMW 모 아카데미아의 학생이라는듯 하다
									CASEELSE
										PRINTFORMW 평소엔 학생인듯 하다
								ENDSELECT
							;若者
							CASE 0
								PRINTFORML
							;大人
							CASE 1 TO 2
								PRINTFORML
						ENDSELECT
					CASE 1
						PRINTFORM 가슴 사이즈를 질문받은 %CALLNAME:조교대상%는、
						IF TALENT:(조교대상):수치심 == 1 || TALENT:(조교대상):정조 == 1 || TALENT:(조교대상):자기과시욕 == -1
							PRINT 부끄러운듯이
						ENDIF
						PRINTFORMW %DECIMAL_STRING(CFLAG:(조교대상):가슴초기치 + CFLAG:(조교대상):가슴성장,2)%cm의 %TOSTR_CUPSIZE(조교대상)%컵이라고 대답했다
					CASE 2
					PRINTFORM 자위에 대해서 질문받은 %CALLNAME:조교대상%는、
					IF TALENT:(조교대상):무지 == 1 
						PRINTFORMW 잘 모른다고 대답했다
					ELSE
						IF TALENT:(조교대상):수치심 == 1 || TALENT:(조교대상):정조 == 1 || TALENT:(조교대상):자기과시욕 == -1
							PRINT 부끄러운듯이
						ENDIF
						IF ABL:(조교대상):자위중독 > 0 || TALENT:(조교대상):자위하기쉬움 == 1
							PRINTW 매일 하고있다고 대답했다
						ELSEIF EXP:(조교대상):자위경험 == 0
							PRINTW 한적 없다고 대답했다
						ELSE
							PRINTW 가끔 한다고 대답했다
						ENDIF
					ENDIF
				ENDSELECT
				RESETCOLOR
				CALL EROTIC_MOVE("晒しもの",조교대상,-1,150)
			ENDIF
			TRYCALLFORM CARDNAME_{選択カード}, "カテゴリ"	
			IF !MATCH(RESULTS, "음마계극단")
				CALL CARD_SET_CATEGORY(듀얼리스트,"마함",カード설치先,"마계극단")
				CALL CARD_SET_CATEGORY(듀얼리스트,"마함",カード설치先,"음마계극단",1)
			ENDIF
			;インタビューだけで売るのはちょっと
			;SIF GETVARS(@"%듀얼리스트%_フィールド名") == "淫魔界スタジオ"
				;CALL INMAKAIFILM_GENERATE(듀얼리스트,79809,1,選択カード)
		ENDIF
	ENDIF
ELSEIF 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79809,2)
	IF RESULT == 0
		REPEAT 5
			SIF 마함数(듀얼리스트) >= 5
				BREAK
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = 음마계대본
			효과条件固名前 = 음마계대본의 촬영 준비
			효과条件종류 = 마함全般
			효과条件任意 = 1
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"使化裏側표시")
			SIF RESULT == 9999
				BREAK
		REND
	ENDIF
ENDIF