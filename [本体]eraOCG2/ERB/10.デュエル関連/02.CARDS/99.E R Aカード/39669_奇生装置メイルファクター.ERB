@CARDCAN_39669(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39669)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,39669)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件종족 = 기계족
	효과条件속성 = 어둠속성
	효과条件除去種 = 묘지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종족 = 기계족
	효과条件성별 = 無性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,39669)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件종족 = 기계족
	효과条件除去種 = 強奪
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == リアクション효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_装:場所") == -1
		RETURN 0
	装備先 = GETVAR(@"%듀얼리스트%_魔_装:場所")
	SIF GETVAR(@"%듀얼리스트%_MZ_リ数:装備先") >= 10
		RETURN 0
	CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",装備先)
	SIF RESULT == -1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39669(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39669,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件종족 = 기계족
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場単体",場所,"묘지")
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件종족 = 기계족
			효과条件성별 = 無性
			효과条件固ID = 39669
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39669,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		場所 = カード설치先
		CALL FULLRESET
		효과条件표시 = 表側표시
		효과条件종족 = 기계족
		효과추가종류 = 130 + 場所 ;이 카드가 필드를 離れる경우、장착 몬스터를 파괴한다。
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
		選択カード_ID = RESULT:2
		CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"装",コントロール先,1)
		CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"武種",1,1)
		TRYCALLFORM CARDNAME_{조교대상},"名前"
		IF RESULTS != ""
			PRINTFORML 
			PRINTFORMW 메일팩터에 기생당한 %RESULTS%는 의사와는 관계없이 장을 움직이고 있다.
		ENDIF
		CALL CARD_EROTICS(選択カード_ID)
		IF RESULT != -1
			조교대상 = RESULT
			CALL EROTIC_MOVE("구속晒し",조교대상,-1,100)
		ENDIF

	ENDIF
ELSEIF 종류 == リアクション효과
	CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",装備先)
	IF RESULT != -1
		조교대상 = RESULT
		PRINTFORML 
		PRINTFORMW 메일팩터에 기생당한 %RESULTS%는 의사와는 관계없이 장을 움직이고 있다.
		CALL EROTIC_MOVE("구속晒し",조교대상,-1,100)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",装備先,"リ数",1)
	ENDIF
ENDIF
