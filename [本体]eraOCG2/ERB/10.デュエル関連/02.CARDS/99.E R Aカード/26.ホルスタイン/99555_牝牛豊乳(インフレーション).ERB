@CARDCAN_99555(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 대상カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99555)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 
	SIF !(メインフェイズ == 1 || バトルフェイズ == 1 )
		RETURN 0
	
	IF ゾーン == "손패"
		;セット카드가 あれば使えない
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件표시 = 裏側표시
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT > 0
			RETURN 0
	ELSEIF ゾーン == "마함"
		;세트 한 턴에 は使えない
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 2
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	
	;필드에 牝が居なければ使えない
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 0
		RETURN 0
		
	RETURN 1
ELSEIF 종류 == 묘지起動
	
	SIF 발동済_2(듀얼리스트,99555)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件종류 = 通常モン
	효과条件종족 = 야수족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	
	RETURN 1
ENDIF

@CARDEFFECT_99555(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 参照場所
#DIM DYNAMIC 상대플래그
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 選択カードID_保
#DIM DYNAMIC 参照カードID
#DIM DYNAMIC 암소대상
#DIMS DYNAMIC 암소名称
#DIM DYNAMIC 元乳サイズ
#DIM DYNAMIC 現乳サイズ
#DIM DYNAMIC 암소最大ID
#DIMS DYNAMIC 最大듀얼리스트
#DIMS DYNAMIC 암소最大名称
#DIM DYNAMIC 암소最大サイズ
#DIMS DYNAMIC カテゴリ名称
#DIM DYNAMIC 절정횟수


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99555,1)
	IF RESULT == 0
		
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件성별 = 牝性
		
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
	
		IF RESULT != -1
			選択カード = RESULT
			選択カードID = RESULT:99
			選択カードID_保 = RESULT:99
			
			IF 選択カード >= 2000
				選択カード = 選択カード - 2000
				상대플래그 = 1
			ENDIF
			
			;호루스타인カードなら、마법함정のカードIDを参照
			IF 상대플래그 == 0
				CALL HORUSTEIN_GET_DATA(듀얼리스트,選択カード,選択カードID)
			ELSE
				CALL HORUSTEIN_GET_DATA(対面者,選択カード,選択カードID)
			ENDIF
			암소名称 = %RESULTS:0%
			参照場所 = RESULT:0
			参照カードID = RESULT:99
			
			SIF 参照場所 != -1
				選択カードID = 参照カードID
			
			암소最大サイズ = -5
			;필드의 가슴サイズチェック
			FOR カウンタ,0,5
				SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
					CONTINUE
				CALL HORUSTEIN_GET_DATA(듀얼리스트,カウンタ,GETVAR(@"%듀얼리스트%_MZ_ID:{カウンタ}") )
				CALL HORUSTEIN_GET_BUST(RESULT:99, GETVAR(@"%듀얼리스트%_MZ_가슴追:カウンタ"))
				IF RESULT:2 > 암소最大サイズ 
					암소最大サイズ = RESULT:2
					암소最大ID = GETVAR(@"%듀얼리스트%_MZ_ID:カウンタ")
					最大듀얼리스트 = %듀얼리스트%
					;PRINTFORML 암소最大ID{암소最大ID} 암소最大サイズ {암소最大サイズ} 가슴追{GETVAR(@"%듀얼리스트%_MZ_가슴追:カウンタ")}
				ENDIF
			NEXT
			FOR カウンタ,0,5
				SIF GETVAR(@"%対面者%_필드:{カウンタ}") == -1
					CONTINUE
				CALL HORUSTEIN_GET_DATA(対面者,カウンタ,GETVAR(@"%対面者%_MZ_ID:{カウンタ}") )
				CALL HORUSTEIN_GET_BUST(RESULT:99, GETVAR(@"%対面者%_MZ_가슴追:カウンタ"))
				IF RESULT:2 > 암소最大サイズ 
					암소最大サイズ = RESULT:2
					암소最大ID = GETVAR(@"%対面者%_MZ_ID:カウンタ")
					最大듀얼리스트 = %対面者%
				ELSE
							
				ENDIF
			NEXT
			
			;자신의 호루스타인마법함정のチェック
			;モンスターゾーン에 존재하고ていなくても、가슴の変化情報が個Cに乗っているため
			FOR カウンタ,0,5
				SIF GETVAR(@"%듀얼리스트%_마함:{カウンタ}") == -1
					CONTINUE
				;乳の登録情報は、個別Cで관리
				IF GETVARS(@"%듀얼리스트%_魔_追カテ:カウンタ") == "登録情報：호루스타인─미유" || GETVARS(@"%듀얼리스트%_魔_追カテ:カウンタ") == "登録情報：호루스타인─애유" || GETVARS(@"%듀얼리스트%_魔_追カテ:カウンタ") == "登録情報：호루스타인─지유"|| GETVARS(@"%듀얼리스트%_魔_追カテ:カウンタ") == "登録情報：호루스타인─EX유"
					
					CALL HORUSTEIN_GET_BUST(GETVAR(@"%듀얼리스트%_魔_ID:{カウンタ}") , GETVAR(@"%듀얼리스트%_魔_個Ｃ:カウンタ"))
					IF RESULT:2 > 암소最大サイズ 
						암소最大サイズ = RESULT:2 
						암소最大ID = GETVAR(@"%듀얼리스트%_魔_ID:カウンタ")
						最大듀얼리스트 = %듀얼리스트%
					ENDIF
				ENDIF
			NEXT
			
			;마지막으로見た카드가 호루스타인カードなら、마법함정の 카드를 参照
			CALL HORUSTEIN_GET_DATA(最大듀얼리스트,選択カード,암소最大ID)
			
			参照場所 = RESULT:0
			参照カードID = RESULT:99
			
			SIF 参照場所 != -1
				암소最大ID = 参照カードID
			
			CALL HORUSTEIN_GET_DATA(듀얼리스트,-1,암소最大ID)
			암소最大名称 = %RESULTS:0%
			
			CALL HORUSTEIN_PRINT_STATE(듀얼리스트,-1,암소最大ID, 암소最大サイズ,2,1);2乳上書き(比較なし)、1画像アイコンのみ
			
			PRINTFORML 
			SETCOLOR C_GOLD
			PRINTFORM ★最大サイズ★ ：
			RESETCOLOR
			SETCOLOR C_PINK
			PRINTFORM  [%GET_TALENTNAME(121,암소最大サイズ)%] 
			RESETCOLOR
			PRINTFORML %암소最大名称%
			PRINTFORML 
			
			;현재의 サイズを취득
			CALL HORUSTEIN_GET_BUST(選択カードID, GETVAR(@"%대상者（CS）%_MZ_가슴追:選択カード"))
			元乳サイズ = RESULT:0
			現乳サイズ = RESULT:2
			
			CALL HORUSTEIN_GET_DATA(듀얼리스트,-1,選択カードID)
			암소名称 = %RESULTS:0%
			암소대상 = RESULT:1
			
			PRINTFORM 　現在サイズ　 ：
			PRINTFORM  [%GET_TALENTNAME(121,現乳サイズ)%] 
			RESETCOLOR
			PRINTFORML %암소名称%
			PRINTFORMW 
			
			;CALL HORUSTEIN_PRINT_STATE(選択カードID, 現乳サイズ,,,2,1);乳上書き(比較なし)、1画像アイコンのみ
			
			;가슴のサイズによって選択肢の표시有無
			IF 암소最大サイズ <= 現乳サイズ
				;サイズアップのみ
				PRINTFORML
				PRINTFORMW 선택한 카드가 가장 커다란 가슴이기 때문에、"가슴을 한단계 크게 한다"가 선택됩니다。
				RESULT = 0
			ELSE
				;選択可能
				CALL YN_CHOICE(듀얼리스트,""乳をひと回り大きくする"",""フィールドで一番乳の大きい몬스터와 同じ大きさ로 한다。"")
			ENDIF

			;호루스타인 몬스터의 경우、마법の方に個別Cを乗せる
			IF INRANGE (選択カードID_保, 179556, 179559) 
				SIF 選択カードID_保 == 179556
					カテゴリ名称 = 登録情報：호루스타인─미유
				SIF 選択カードID_保 == 179557
					カテゴリ名称 = 登録情報：호루스타인─애유
				SIF 選択カードID_保 == 179558
					カテゴリ名称 = 登録情報：호루스타인─지유
				SIF 選択カードID_保 == 179559
					カテゴリ名称 = 登録情報：호루스타인─EX유
				
				FOR カウンタ,0,5
					IF (상대플래그 == 1 && GETVAR(@"상대_MZ_所有:選択カード") == 1 ) || (상대플래그 == 0 && GETVAR(@"자신_MZ_所有:選択カード") == 1 ) 
						SIF GETVARS(@"자신_魔_追カテ:カウンタ") != カテゴリ名称
							CONTINUE
						상대플래그 = 0
					ELSEIF (상대플래그 == 0 && GETVAR(@"자신_MZ_所有:選択カード") == 2 ) || (상대플래그 == 1 && GETVAR(@"상대_MZ_所有:選択カード") == 2 )
						;상대의 카드なら、상대의 場を見る
						SIF GETVARS(@"상대_魔_追カテ:カウンタ") != カテゴリ名称
							CONTINUE
						상대플래그 = 1
					ELSE
						CONTINUE
					ENDIF
					IF RESULT == 0
						CALL SET_FIELD_INFO("자신","마함",カウンタ,"個Ｃ",1,,상대플래그)
						現乳サイズ += 1
					ELSE
						CALL SET_FIELD_INFO("자신","마함",カウンタ,"個Ｃ",암소最大サイズ - 元乳サイズ,上書きモード,상대플래그)
						現乳サイズ = 암소最大サイズ
					ENDIF
					BREAK
				NEXT
				
			ELSE
				IF RESULT == 0
					;乳を大きくする
					CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"가슴追",1,,상대플래그)
					現乳サイズ += 1
				ELSE
					;フィールドで一番乳の大きい몬스터와 同じ大きさ로 한다。"
					CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"가슴追",암소最大サイズ - 元乳サイズ,上書きモード,상대플래그)
					現乳サイズ = 암소最大サイズ
				ENDIF
