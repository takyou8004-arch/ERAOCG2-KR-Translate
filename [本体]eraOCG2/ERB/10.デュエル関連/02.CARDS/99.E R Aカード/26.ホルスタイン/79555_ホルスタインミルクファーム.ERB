@CARDCAN_79555(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79555)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 
	SIF !(メインフェイズ == 1 && ターンプレイヤー == 듀얼리스트) && バトルフェイズ != 1
		RETURN 0
	;他、各種효과의 발동可否をチェックする(下記の内、一つでもOKなら발동可能)
	;일반 몬스터(패의 通常)
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = 通常モン
	;효과条件종족 = 야수족
	;효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	
	;효과モンスター(패의 효과+묘지의 호루스타인モンスター)
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류:0 = 효과モン
	효과条件종류:1 = 의식
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종족 = 야수족
		효과条件カテゴリ = 호루스타인
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
	ENDIF
	
	;마법 카드(패의 마법+덱の호루스타인마법 카드)
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = 마법全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = 通常마법
		효과条件カテゴリ = 호루스타인
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
	ENDIF
	
	;함정(패의 함정+덱の호루스타인 함정 카드 )
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = 함정全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = 함정全般
		효과条件カテゴリ = 호루스타인
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
	ENDIF
	
	RETURN 0
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1
ELSEIF 종류 == チェーン可否
	SIF !GROUPMATCH(チェーン可否종류, 마함起動)
		RETURN 0
	
	RETURN 1
ENDIF

@CARDEFFECT_79555(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 효과条件_1
#DIM DYNAMIC 효과条件_2
#DIM DYNAMIC 효과条件_3
#DIM DYNAMIC 효과条件_4
#DIM DYNAMIC 選択カード종류
#DIMS DYNAMIC カテゴリ名称
#DIMS DYNAMIC 암소名称
#DIM DYNAMIC 암소대상
#DIM DYNAMIC 암소가슴追
#DIM DYNAMIC 参照場所;마법함정に置かれた호루스타인の参照先
#DIM DYNAMIC 参照カードID;마법함정に置かれた호루스타인の参照先

IF  종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79555)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79555)
	IF RESULT == 0
;＞＞条件설정開始―――――――――――――――――――――――――――――――――
		;일반 몬스터(패의 通常)
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종류 = 通常モン
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			효과条件_1 = 1
	
	;효과モンスター(패의 효과+호루스타인 몬스터의 チェック)
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류:0 = 효과モン
	효과条件종류:1 = 의식
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종족 = 야수족
		효과条件カテゴリ = 호루스타인
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			효과条件_2 = 1
	ENDIF
	
	;마법 카드(패의 마법+덱の호루스타인마법 카드)
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = 마법全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = 通常마법
		효과条件カテゴリ = 호루스타인
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			효과条件_3 = 1
	ENDIF
	
	;함정(패의 함정+덱の호루스타인 함정 카드 )
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = 함정全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = 함정全般
		효과条件カテゴリ = 호루스타인
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			효과条件_4 = 1
	ENDIF
;＞＞条件설정終了―――――――――――――――――――――――――――――――――
	
	カウンタ = 0
	;0から始まる連番でなければならない
	CALL FULLRESET
	효과範囲손패 = 1
	IF 효과条件_1
		효과条件종류:カウンタ = 通常モン
		カウンタ++
	ENDIF
	IF 효과条件_2
		효과条件종류:カウンタ = 효과モン
		カウンタ++
		효과条件종류:カウンタ = 의식
		カウンタ++
	ENDIF
	IF 효과条件_3
		효과条件종류:カウンタ = 通常마법
		효과条件종류:(カウンタ+1) = 装備마법
		효과条件종류:(カウンタ+2) = 速攻마법
		효과条件종류:(カウンタ+3) = 지속마법
		효과条件종류:(カウンタ+4) = フィールド
		カウンタ += 5
	ENDIF
	IF 효과条件_4
		효과条件종류:カウンタ = 通常함정
		효과条件종류:(カウンタ+1) = 지속함정
		カウンタ++
	ENDIF
	CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
	IF RESULT == 1
			;★デバッグ用チェッカ-
			;PRINTFORMW 효과1：{효과条件_1} 효과2：{효과条件_2} 효과3：{효과条件_3} 효과4：{효과条件_4}
			選択カードID = RESULT:1
			CALLFORM CARD_{選択カードID},"종류"
			選択カード종류 = RESULT
	
	SELECTCASE 選択カード종류
			;●일반 몬스터：그 카드가 야수족牝性 몬스터의 경우、LPを1000ポイント回復する。
			CASE 通常モン
				CALLFORM CARD_{選択カードID},"성별"
				IF RESULT == 牝性
					CALLFORM CARD_{選択カードID},"종족"
					IF RESULT == 야수족
						;ランダム효과でも良いかも、LP回復、ドロー、소환権추가みたいな
						CALL HORUSTEIN_GET_DATA(듀얼리스트,,選択カードID)
						암소名称 = %RESULTS:0%
						参照場所 = RESULT:0
						参照カードID = RESULT:99
						암소가슴追 = GETVAR(@"%듀얼리스트%_魔_個Ｃ:参照場所")						
						PRINTFORML %암소名称%에게서 짜낸 우유를 마셨다！
						;호루스타인 몬스터의 경우、きっちり착유する
						IF INRANGE (選択カードID, 179556, 179558) 
							;착유する
							CALL HORUSTEIN_GET_MILK(듀얼리스트,参照カードID,암소가슴追);★
						ENDIF						
						;乳を吸ってLP回復
						CALL LIFE_CHANGE(듀얼리스트,"増加","효과",1000)
					ELSE
						;수じゃないなら乳を揉むだけとか？						
					ENDIF
				ENDIF
			;●효과モンスター：묘지의 "호루스타인" 몬스터를 특수 소환한다。
			CASE 효과モン,의식
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件カテゴリ  = 호루스타인
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				
				IF RESULT != -1
					選択カードID = RESULT:1
					CALL HORUSTEIN_GET_DATA(듀얼리스트,カード소환先,選択カードID);★
					암소名称 = %RESULTS:0%
					;◆小さな가슴でも違和感のない描写にする
					SELECTCASE 選択カードID
					CASE 179556
						;미유
						PRINTFORMW %암소名称%의 아름다운 가슴이 유연하게 흔들렸다…
						CALL HORUSTEIN_RAND_COW_TXT(1,0)
					CASE 179557
						;애유
						PRINTFORMW %암소名称%의 귀여운 유두가 탱글하고 떨렸다…
						CALL HORUSTEIN_RAND_COW_TXT(1,1)
					CASE 179558
						;지유
						PRINTFORMW %암소名称%의 무심결에 빨고싶어지는 젖이 촉촉하고 요염해보인다…
						CALL HORUSTEIN_RAND_COW_TXT(1,2)
					CASE 179559
						;EXは明確にデカイ
						PRINTFORMW %암소名称%의 머리보다 커다란 젖이 푸앙하는 소리를 내며 떨렸다…
						CALL HORUSTEIN_RAND_COW_TXT(1,3)
					ENDSELECT
				ENDIF
				PRINTFORMW 
			;●마법 카드：「호루스타인」마법 카드를 패에 넣는다。
			CASE 20 TO 29
				CALL FULLRESET
				효과条件カテゴリ = 호루스타인
				효과条件종류 = 마법全般
				CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
			;● 함정 카드 ：「호루스타인」함정 카드를 패에 넣는다。
			CASE 30 TO 39	
				CALL FULLRESET
				효과条件カテゴリ = 호루스타인
				효과条件종류 = 함정全般
				CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
			ENDSELECT
		ENDIF
	ENDIF

ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "밀크 팜")
ENDIF