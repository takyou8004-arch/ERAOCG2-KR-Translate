@CARDCAN_59596(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59596)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF 발동済_3(듀얼리스트,59596)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,59596)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 함정全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,59596)
		RETURN 0
	SIF 발동済_2(듀얼리스트,59596)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = ARG☆S
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,59596)
		RETURN 0
	SIF 발동済_2(듀얼리스트,59596)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"필드","묘지")
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"소환出処",1,2)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件分割 = 分割在り
	효과条件종류 = 지속함정
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ENDIF

@CARDEFFECT_59596(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件合致数
#DIM DYNAMIC 参照カードID
#DIM DYNAMIC 캐릭터番号
#DIM DYNAMIC X素材표시用
#DIM DYNAMIC 素質チェック
#DIM DYNAMIC カード추가先
#DIM DYNAMIC アルゴ確認


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59596,3)
	IF RESULT == 0
		CALL RESETCONDITION_MAT
		必要素材数 = 1
		素材条件종류 = 함정全般
		重ねてＸ = 1
		;효과추가종류 = 効追不材
		TRYCALLFORM XYZSUMMON(듀얼리스트,場所)
		
		;SSまで含めたARG☆S縛り。이 카드를 素材利用불가にする縛りと、どっちが動きとして良いかは使い込んで判断
		;トップハットやアーマード、가가가絡めたエクリプスなどの他テーマEXが増えた時の展開ルート伸ばし警戒ならSS縛りが丸そう。
		;eraOCG2的には他テーマとの混合で展開が大きく伸びるよりは、덱が純化していくほうが動き方も分かりやすくていいかなと思う。
		CALL CARD_SS_RESTRICTION(듀얼리스트,"ARG☆S")
		
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59596,1,X消費1)
	IF RESULT == 0
		;덱 / 묘지에서 제외
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = ARG☆S
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			;묘지제외から拾う
			CALL FULLRESET
			효과範囲묘지 = 1
			효과範囲제외 = 1
			효과条件カテゴリ = ARG☆S
			효과条件성별 = 牝性
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59596,2)
	IF RESULT == 0
		;자신を제외하고 、덱에서 지속함정몬스터를 セットする
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,제외行き)
		;実際のセット処理の直前に現마함の情報を拾ってくることで、その後に추가される位置を취득している
		カード추가先 = 現마함(듀얼리스트)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件分割 = 分割在り
		효과条件종류 = 지속함정
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"裏側표시")
		参照カードID = RESULT:1
		IF RESULT == 1 && 듀얼리스트 == "자신"
			
			;セットした카드가 ARG☆Sであればエロ조교を行う
			;듀얼리스트が자신의 時のみ処理する
			CALL CHARA_KIZUNA_59595(参照カードID,1680)
			アルゴ確認 = RESULT:1
			IF アルゴ確認 == 1
				CALL CARD_EROTICS(参照カードID,듀얼리스트)
				캐릭터番号 = RESULT
				
				;エロ조교の前の文章。カードごとで動きが若干異なる位置調整
				PRINTFORML 앙화의 미디어의 인도로、%CALLNAME:캐릭터番号%가 시합의 필드에 불려오기 직전에、
				PRINTFORMW %CALLNAME:MASTER%는 대기실에서 워밍업하는 %CALLNAME:캐릭터番号%를 방문했다。
				PRINTL 
				
				;ここで조교の분기処理に合流する。
				CALL ARGOSTARS_DUEL_TRAIN(듀얼리스트,参照カードID)
				
				;ここで캐릭터の조교状態に応じてセットしたカードに利用可能にする処理を行う
				CALL CARDID_TALENTCHECK(参照カードID)
				素質チェック = RESULT
				IF 素質チェック & 32 || 素質チェック & 64
					;[親愛] 또는 [굴복됨]の場合(32or64)、セットした카드를 そのターンに使用可能にする
					;参考：白銀城の狂時計
					CALL SET_FIELD_INFO(듀얼리스트,"마함",カード추가先,"表",2,1)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF

