@CARDCAN_99605(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99605)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1 || (종류 == フリー誘発 && ゾーン == "마함")
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	SIF 발동済_1(듀얼리스트,99605)
		RETURN 0
	IF ターンプレイヤー == 듀얼리스트
		CALL CARD_DRAW_CHECK
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = E.R.A
		효과条件종류 = 通常함정
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT >= 3
			RETURN 1
	ELSEIF ターンプレイヤー != 듀얼리스트
		SIF 마함数(듀얼리스트) == 5
			RETURN 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = E.R.A
		효과条件종류 = 通常함정
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
	ENDIF
	RETURN 0
ELSEIF 종류 == 효과後強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = E.R.A
	효과条件종류 = 通常함정
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_99605(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 攻撃力
#DIM DYNAMIC 攻撃モンスター
#DIM DYNAMIC 攻撃モンスター_ID
#DIMS DYNAMIC 攻撃モンスター名
#DIM DYNAMIC 守備力
#DIM DYNAMIC 守備モンスター
#DIM DYNAMIC 守備モンスター_ID
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1 || (종류 == フリー誘発 && ゾーン == "마함")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99605,1)
	IF RESULT == 0
		IF ターンプレイヤー == 듀얼리스트
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = E.R.A
			효과条件종류 = 通常함정
			효과条件複数 = 3
			효과条件行先플래그 = 덱行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT == 1
				CALL CARDDRAW_BASIC(듀얼리스트,1)
		ELSEIF ターンプレイヤー != 듀얼리스트
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = E.R.A
			효과条件종류 = 通常함정
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"使化裏側표시")
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後強制誘発
	CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
	IF RESULT != -1
		조교대상 = RESULT
		PRINTFORML
		SETCOLOR C_PINK 
		PRINTFORML 발동된 함정이 %CALLNAME:조교대상%을 덮친다！
		RESETCOLOR
		CALL EROTIC_MOVE("생체파츠",조교대상,,800)
	ENDIF
	CALL LIFE_CHANGE(듀얼리스트,"減少","효과",800,1)
ELSEIF 종류 == 마함起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99605)
	IF RESULT == 0
	ENDIF
ENDIF
