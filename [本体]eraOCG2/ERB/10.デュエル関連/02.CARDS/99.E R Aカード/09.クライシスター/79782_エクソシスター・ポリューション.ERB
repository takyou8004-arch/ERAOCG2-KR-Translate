@CARDNAME_79782,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 엑소시스터 폴루션
	CASE "略称"
		RESULTS = ES폴루션
	CASE "カテゴリ"
		RESULTS:0 = 엑소시스터
		RESULTS:1 = 크라이시스터
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_79782(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 速攻마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_79782(종류)
