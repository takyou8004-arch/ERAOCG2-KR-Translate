@CARDNAME_79781,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 엑소시스터 크라임
	CASE "略称"
		RESULTS = EXS 크라임
	CASE "カテゴリ"
		RESULTS:0 = 엑소시스터
		RESULTS:1 = 크라이시스터
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_79781(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 速攻마법
ENDSELECT

RETURN 0

