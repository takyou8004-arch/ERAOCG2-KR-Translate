@CARDCAN_79781(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79781)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,79781)
		RETURN 0
	SIF 발동済_2(듀얼리스트,79781)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 800
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲EX덱 = 1
	효과条件名前:0 = 엑소시스터 마르파
	효과条件名前:1 = 크라이시스터 마르파
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종족 = 마법사족
	효과条件속성 = 빛속성
	효과条件固名前 = 엑소시스터 마르파
	효과条件종류 = モン全般
	효과条件성별 = 牝性
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_1(듀얼리스트,79781)
		RETURN 0
	SIF 발동済_2(듀얼리스트,79781)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ:0 = 엑소시스터
	효과条件カテゴリ:1 = 크라이시스터
	효과条件カテゴリ:2 = 카타르시스터
	효과条件종류 = モン全般
	효과条件スーパーカテゴリ = 악령
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 5
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79781(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79781,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",800)
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲EX덱 = 1
		효과条件名前:0 = 엑소시스터 마르파
		효과条件名前:1 = 크라이시스터 마르파
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT != 1
			RETURN
		
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종족 = 마법사족
		효과条件속성 = 빛속성
		효과条件固名前 = 엑소시스터 마르파
		효과条件종류 = モン全般
		효과条件성별 = 牝性
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		SIF 選択カード == 9999
			RETURN
		CALL CARD_SELECT(듀얼리스트,選択カード)
		選択カード = RESULT
		選択カード_ID = GETVAR(@"%듀얼리스트%_덱:選択カード")
		TRYCALLFORM CARDNAME_{選択カード_ID},"カテゴリ"
		IF RESULTS == "엑소시스터"
			SELECTCASE 選択カード_ID
				CASE 2100
					CALL CARD_RECONSTRUCT(듀얼리스트,"덱",選択カード,39780)
					PRINTFORML
					SETCOLOR C_RED
					PRINTFORMW 이런, 에리스의 모습이......?
					PRINTFORML
					PRINTFORML 엑소시스터 에리스는 크라이시스터 에리스로 교체되었다!
					RESETCOLOR
					PRINTFORML
				CASE 2101
					CALL CARD_RECONSTRUCT(듀얼리스트,"덱",選択カード,39781)
					PRINTFORML
					SETCOLOR C_RED
					PRINTFORMW 이런, 스텔라의 모습이......?
					PRINTFORML
					PRINTFORML 엑소시스터 스텔라는 크라이시스터 스텔라로 교체되었다!
					RESETCOLOR
					PRINTFORML
				CASE 2102
					CALL CARD_RECONSTRUCT(듀얼리스트,"덱",選択カード,39782)
					PRINTFORML
					SETCOLOR C_RED
					PRINTFORMW 이런, 소피아의 모습이......?
					PRINTFORML
					PRINTFORML 엑소시스터 소피아는 크라이시스터 소피아로 교체되었다!
					RESETCOLOR
					PRINTFORML
				CASE 2103
					CALL CARD_RECONSTRUCT(듀얼리스트,"덱",選択カード,39783)
					PRINTFORML
					SETCOLOR C_RED
					PRINTFORMW 이런, 이렌느의 모습이......?
					PRINTFORML
					PRINTFORML 엑소시스터 이렌느는 크라이시스터 이렌느로 교체되었다!
					RESETCOLOR
					PRINTFORML
			ENDSELECT
		ELSEIF RESULTS != "크라이시스터"
			TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
			SETCOLOR C_RED
			PRINTFORML
			PRINTFORMW %RESULTS%는 크라이시스터에게 떨어뜨려졌다!
			RESETCOLOR
			PRINTFORML
			효과추가カテ = 크라이시스타
		ENDIF
		CALL CARD_SP_SUMMON(듀얼리스트,"덱",選択カード,"守備표시")
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79781,2)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",800)
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件カテゴリ:0 = 엑소시스터
		효과条件カテゴリ:1 = 크라이시스터
		효과条件カテゴリ:2 = 카타르시스터
		효과条件종류 = モン全般
		효과条件スーパーカテゴリ = 악령
		효과条件複数 = 5
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 크라이시스터
			효과条件종류 = モン全般
			효과条件任意 = 1
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF



