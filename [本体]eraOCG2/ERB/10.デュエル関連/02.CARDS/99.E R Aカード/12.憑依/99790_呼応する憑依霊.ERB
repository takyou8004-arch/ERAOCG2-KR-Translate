	CASE "名前"
		RESULTS = 호응하는 빙의령
	CASE "略称"
		RESULTS = P 고스트
	CASE "カテゴリ"
		RESULTS:0 = 포제션
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_99790(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常함정
ENDSELECT

RETURN 0

