@CARDCAN_59532(듀얼리스트, 종류, ゾーン, 場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 조교대상 = -1

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트, 종류, ゾーン, 場所, 59532)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時強制
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == ライフ変強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ダメージ受者 == 듀얼리스트
		RETURN 0
	SIF !GROUPMATCH(ダメージ종류, "戦闘", "直接戦闘")
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	CALL FULLRESET
	CALL CARD_EROTICS(상대プレイヤー, 듀얼리스트)
	IF RESULT != -1
		조교대상 = RESULT
		;상대가 あなた（＝MASTER）の場合は발동불가、それ 이외의 조교대상なら許可
		;SIF 조교대상 == MASTER
		;	RETURN 0
		RETURN 1
	ELSE
		;대상상대가 -1(조교대상じゃない캐릭터？)の場合も효과발동불가
		RETURN 0
	ENDIF
	;よくわからんがとりま발동불가で
	RETURN 0
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_59532(듀얼리스트, 종류, ゾーン, 場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件合致数
#DIM DYNAMIC 与ダメージ量
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 조교대상 = -1
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59532)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件종류 = 마함全般
		효과条件カテゴリ = 섀도르
		효과条件固名前起動 = 1
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		条件合致数 = RESULT
		IF 条件合致数 != 0
			CALL FULLRESET
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦",条件合致数)
		ENDIF
	ENDIF
ELSEIF 종류 == ライフ変強制誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59532)
	IF RESULT == 0
		CALL FULLRESET
		
		CALL CARD_EROTICS(상대プレイヤー, 듀얼리스트)
		IF RESULT != -1
			조교대상 = RESULT
			;MASTER상대だと何も起きない
			;SIF 조교대상 == MASTER
			;	RETURN 0
			;상대プレイヤーに戦闘ダメージに応じた강도の"拷問処理"を実施
			;	DOWNBASE:조교대상:체력 += (80 * 実보정) / 100
			;	DOWNBASE:조교대상:기력 += (50 * 実보정) / 100
			;	CALL SOURCE_CALC_접촉(조교대상, 実行役대상, (50 * 実보정) / 100)
			;	CALL SOURCE_CALC_고통(조교대상, 実行役대상, (200 * 実보정) / 100)
			
			与ダメージ量 = GETVAR(@"%対面者%_変動値_保")
			SIF 与ダメージ量 == 0
				RETURN 0
			;상대가 男の場合は조교강도が半分になる処理
			SIF TALENT:조교대상:성별 == 2
				TIMES 与ダメージ量, 0.50
			
			;もう一回半減処理(男は1/4、それ以外は1/2となる)
			TIMES 与ダメージ量, 0.50
			
			;フレ-バ-텍스트
			PRINTFORML 네피림의 전신에서 엄청난 수의 그림자 실이 넘쳐 나오며 %CALLNAME:조교대상%향해 쇄도했다！
			PRINTFORML 더 이상 결투（듀얼)라고도 조교라고도 부를 수 없는, 단지 상대를 부수기 위한 순수한 비난이 펼쳐지고 있다……
			
			CALL EROTIC_MOVE("拷問処理",조교대상,-1,与ダメージ量)
			
			
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 섀도르
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	条件合致数 = RESULT
	攻撃力修正 = 条件合致数 * 500
	CALL STATCHANGE_BASIC(듀얼리스트,"자신",場所,攻撃力修正)
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"対耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"貫通")
ENDIF
