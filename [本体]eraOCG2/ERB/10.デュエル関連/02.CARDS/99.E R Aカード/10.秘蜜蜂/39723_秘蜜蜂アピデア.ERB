@CARDCAN_39723(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39723)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF 발동済_1(듀얼리스트,39723)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 비밀벌
	효과条件レベル = 1
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 戦破壊→묘지
	SIF 발동済_2(듀얼리스트,39723)
		RETURN 0
	SIF !GROUPMATCH(묘지送り종류,"破壊","戦闘破壊","リリース")
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 비밀벌
	효과条件レベル = 1
	효과条件固名前 = 비밀벌 아피데어
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF 발동済_3(듀얼리스트,39723)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39723(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 조교대상 = -1


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39723)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39723,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ = 비밀벌
		효과条件レベル = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"攻撃표시")
	ENDIF
ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39723,2)
	IF RESULT == 0
		CALL FULLRESET
        효과範囲덱 = 1
		효과条件カテゴリ = 비밀벌
		효과条件固名前 = 비밀벌 아피데어
		효과条件レベル = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"攻撃표시")
		CALL FULLRESET
		CALL LIFE_CHANGE(듀얼리스트,"増加","효과",400)
	ENDIF
	EX소환可能종족 = 곤충족
	CALL CARD_EX_RESTRICTION(듀얼리스트)
ELSEIF 종류 == 攻撃時強制誘発
	CALL FULLRESET
	IF 戦闘場所(듀얼리스트,1) != 5
		CALL CARD_EROTICS(戦闘カードID(듀얼리스트,1))
		IF RESULT != -1
			조교대상 = RESULT
		ENDIF
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",GETVAR(@"%듀얼리스트%_MZ_攻:場所"),1)
	ELSE
		CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
		IF RESULT != -1
			조교대상 = RESULT
		ENDIF
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",GETVAR(@"%듀얼리스트%_MZ_攻:場所"),1)
	ENDIF
	IF 조교대상 >= 0
		PRINTFORML %CALLNAME:조교대상%은 몸속에 떼지은 벌들에게 애무되어、엉덩이구멍에 밴 부끄러운꿀을 듬뿍 채집당했다。
		CALL EROTIC_MOVE("애널解し",조교대상,-1,GETVAR(@"%듀얼리스트%_MZ_攻:場所"))
	ENDIF
	CALL EVADE_ATTACK(듀얼리스트)
ELSEIF 종류 == ターン終了時
	CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
	IF RESULT != -1
		조교대상 = RESULT
		PRINTFORML %CALLNAME:조교대상%은 몸속에 떼지은 벌들에게 애무되어、엉덩이구멍에 밴 부끄러운꿀을 듬뿍 채집당했다。
		PRINTFORM 너무 많이가서 몸을 경련시키는 %CALLNAME:조교대상%을 거들떠도 보지않고、벌들은 채집한 암컷꿀을 마스터에게 헌상한다。
		CALL EROTIC_MOVE("애널解し",조교대상,-1,400)
	ENDIF
	CALL FULLRESET
	CALL LIFE_CHANGE(듀얼리스트,"減少","효과",400,1)
	CALL FULLRESET
	CALL LIFE_CHANGE(듀얼리스트,"増加","효과",400)
	CALL CARD_EFFECT_USE(듀얼리스트,39721,3)
ENDIF

