@CARDCAN_79680(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79680)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		IF GETVARS(@"%듀얼리스트%_フィールド名") != "트립 트리트 트럭！"
			SIF ターンプレイヤー != 듀얼리스트
				RETURN 0
		ENDIF
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,79680)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79680(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 회복量
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウント数
#DIM DYNAMIC ドロー枚数
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79680,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲상대필드 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1	
			PRINTL 어느 쪽에 효과를 사용하시겠습니까?
			CALL YN_CHOICE(듀얼리스트,"●상대플레이어","●상대 몬스터")
		ELSE
			RESULT = 0
		ENDIF
		IF RESULT == 0
			CALL SET_PLAYER_INFO(듀얼리스트,"薬Ｃ",1,1,1)
			
			CALL FIELD_INFO_COUNT(듀얼리스트,"薬Ｃ",1,2)
			회복量 += RESULT + GETVAR(@"%対面者%_薬Ｃ")
			CALL LIFE_CHANGE(対面者,"増加","효과", 회복量 * 100)

			SIF 듀얼리스트 == "자신"
			PRINTL 패를 덱으로 되돌리시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			SIF RESULT == いいえ
				RETURN 0
			
			FOR カウンタ,0,紙束最大値
				SIF GETVAR(@"%듀얼리스트%_손패:カウンタ") == -1
					CONTINUE
				CALL CARD_DISPOSE(듀얼리스트,"손패",カウンタ,덱行き)
				ドロー枚数 ++
			NEXT
			CALL CARDDRAW_BASIC(듀얼리스트,ドロー枚数)
			
			IF GETVAR(@"%対面者%_薬Ｃ") >= 7
                IF ターンプレイヤー == 듀얼리스트
    				CALL SET_PLAYER_INFO(듀얼리스트,"バトルスキップ", 1)
                ELSE
		            CALL SET_PLAYER_INFO(듀얼리스트,"バトルスキップ",1,1)
                ENDIF
            ENDIF

		ELSEIF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
			IF RESULT == 1
				選択カード = RESULT:1
				CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",選択カード,1)
				IF RESULT != -1
					조교대상 = RESULT
					PRINTFORML %CALLNAME:조교대상%는 과자가 가져다주는 고양에 저항하지 못하고、자위를 시작해버렸다。
					CALL EROTIC_MOVE("麻薬자위",조교대상)
				ENDIF
				CALL SET_FIELD_INFO(対面者,"필드",選択カード,"薬Ｃ",1)

				
				CALL FIELD_INFO_COUNT(듀얼리스트,"薬Ｃ",1,2)
				회복量 += RESULT + GETVAR(@"%対面者%_薬Ｃ")
				CALL LIFE_CHANGE(対面者,"増加","효과", 회복量 * 100)

				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = 트립 트리트
				효과条件任意 = 1
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)

				FOR カウンタ,0,5
					SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
						CONTINUE
					SIF GETVAR(@"%対面者%_MZ_薬Ｃ:カウンタ") <= 1
						CONTINUE
					CALL FULLRESET
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",カウンタ,"強奪")
					条件달성 = 1
				NEXT
				IF 条件달성 && 듀얼리스트 == "자신"
					PRINTL 상대 필드의 하수인은 과자를 요구하며 당신에게 머리를 숙여왔다.
					PRINTL 지금 이 순간부터 당신은 그들의 지배자다. 자, 어떻게 다루어줄까?
				ENDIF
			ENDIF

		ENDIF
	ENDIF
ENDIF


