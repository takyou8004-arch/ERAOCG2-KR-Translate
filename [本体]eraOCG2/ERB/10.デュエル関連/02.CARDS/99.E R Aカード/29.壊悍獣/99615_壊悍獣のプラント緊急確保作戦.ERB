		CALL CARD_SET_CATEGORY(対面者,"마함",괴수플랜트위치,"괴수플랜트")
		CALL SET_FIELD_INFO(対面者,"마함",괴수플랜트위치,"悪Ｃ",3)
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99615,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1		
효과条件カテゴリ = 괴한수
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"無効",1,1)
	ENDIF
ENDIF

