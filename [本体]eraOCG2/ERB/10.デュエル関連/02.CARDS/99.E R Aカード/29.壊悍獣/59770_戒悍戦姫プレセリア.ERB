@CARDCAN_59770(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ数

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59770)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,59770)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲필드 = 1
	효과条件名前 = 계한전희의 정환수
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件성별 = 牝性
	효과条件固カテゴリ = 계한전희
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	TRYCALLFORM CARDNAME_{戦闘カードID(듀얼리스트,1)}("カテゴリ")
	SIF !MATCH(RESULTS, "E.R.A")
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,59770)
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = E.R.A
	효과条件固名前 = 계한전희의 정환수
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件カテゴリ:0 = 괴한수
	효과条件カテゴリ:1 = 괴수플랜트
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT:10 < 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,59770)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件カテゴリ = 괴수플랜트
	CALL CARD_CHECK_ADV(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件カテゴリ:0 = 괴한수
	효과条件カテゴリ:1 = 괴수플랜트
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT:10 < 5
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_59770(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 戦闘カード
#DIM DYNAMIC 変身カードID
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 守備力修正
#DIM DYNAMIC 戦姫소환先
#DIM DYNAMIC 戦姫コ奪取先
#DIMS DYNAMIC ヒロインネーム

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59770)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲필드 = 1
		효과条件名前 = 계한전희의 정환수
		효과条件行先플래그 = 묘지行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件固カテゴリ = 계한전희
			효과条件성별 = 牝性
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				変身カードID = RESULT:1
				CALL FULLRESET
				CALL CARD_EX_SUMMON_PLEASUREHEROIN(듀얼리스트,場所,変身カードID)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_MZ_変化元ID:場所")}("攻撃力")
	攻撃力修正 = MAX(2000, RESULT + 500)
	TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_MZ_変化元ID:場所")}("守備力")
	守備力修正 = MAX(2000, RESULT + 500)
	CALL STATCHANGE_BASIC(듀얼리스트,"자신",場所,攻撃力修正,守備力修正)
	CALL STATCHANGE_OTHER(듀얼리스트,"자신",場所,"性",1)
ELSEIF 종류 == 攻撃時強制誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59770)
	IF RESULT == 0
		戦闘カード = 戦闘場所(듀얼리스트)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",戦闘カード,"一時",1000)
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59770,1)
	IF RESULT == 0
		CALL USE_COUNTER_PLESUREBEAST(듀얼리스트,종류,ゾーン,場所,5)
		IF RESULT == 1
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"묘지")
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",1000)
			RETURN 1
		ENDIF
	ENDIF
	RETURN 0
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59770)
	IF RESULT == 0
		CALL USE_COUNTER_PLESUREBEAST(듀얼리스트,종류,ゾーン,場所,5)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			효과条件固名前 = 계한전희의 정환수
			효과条件カテゴリ = E.R.A
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF