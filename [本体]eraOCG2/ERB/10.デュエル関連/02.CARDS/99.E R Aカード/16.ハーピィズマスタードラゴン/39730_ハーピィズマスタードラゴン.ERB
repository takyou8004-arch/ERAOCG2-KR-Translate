@CARDCAN_39730(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39730)
SIF RESULT == 1
	RETURN 0


IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,39730)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 해피
	효과条件성별 = 牝性
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",2)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 해피
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과条件名前:0 = 드래곤의 베이비 해피
	효과条件名前:1 = 해피의 차일드 드래곤
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,39730)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 해피
	효과条件성별 = 牝性
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF 破壊대상ゾーン != "필드"
		RETURN 0
	SIF 破壊대상場所 != 場所
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과","戦闘")
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 해피
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_39730(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 조교대상
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39730,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 해피
		효과条件성별 = 牝性
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード_ID = RESULT:99
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永攻",500)
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲덱 = 1
			효과条件名前:0 = 드래곤의 베이비 해피
			효과条件名前:1 = 해피의 차일드 드래곤
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			
			CALL CARD_EROTICS(選択カード_ID,듀얼리스트)
			조교대상 = RESULT
			IF 조교대상 != -1
				PRINTFORML 
				PRINTFORMW 해피의 마스터 드래곤은 %NAME:RESULT%에게 씨를넣고、아이 몬스터를 낳게했다。
				CALL EROTIC_MOVE("疑似출산",조교대상)
			ELSE
				PRINTFORML 
				TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
				PRINTFORMW 해피의 마스터 드래곤은 %RESULTS%에게 씨를넣고、아이 몬스터를 낳게했다。
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39730,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 해피
		효과条件성별 = 牝性
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		選択カード_ID = RESULT:1
		CALL CARD_EROTICS(選択カード_ID,듀얼리스트)
		IF RESULT > -1
			PRINTFORML 
			PRINTFORML 해피의 마스터 드래곤은 노예인 %NAME:RESULT%를 불러내어、자신에게 봉사시켰다。
			CALL EROTIC_MOVE("펠라치오",조교대상)
		ELSE
			PRINTFORML 
			TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
			PRINTFORMW 해피의 마스터 드래곤은 노예인 %RESULTS%를 불러내었다。
		ENDIF
	ENDIF
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39730,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 해피
		효과条件성별 = 牝性
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT == 1
			RETURN 1
		ENDIF
	ENDIF
	RETURN 0
ENDIF
