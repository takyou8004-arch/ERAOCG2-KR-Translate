@CARDNAME_39730,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 해피의 마스터 드래곤
	CASE "略称"
		RESULTS = 해피의 주룡
	CASE "カテゴリ"
		RESULTS:0 = 해피
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_39730(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 7
	CASE "攻撃力"
		RETURN 2500
	CASE "守備力"
		RETURN 2000
	CASE "성별"
		RETURN 雄性
ENDSELECT

RETURN 0

