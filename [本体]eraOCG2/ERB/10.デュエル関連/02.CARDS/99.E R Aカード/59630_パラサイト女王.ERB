@CARDSUMMON_59540(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2
素材条件素材ID起動 = 1

IF EX参照 == 0 || EX参照 == 1
	素材条件성별 = 牝性
ELSEIF EX参照 >= 10
	素材条件レベル = 2
	素材条件カテゴリ = 패러사이트
ENDIF


IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,59540) 
	RETURN RESULT
ENDIF



@CARDCAN_59540(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59540)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,59540)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	;효과範囲손패 = 1
	효과範囲필드 = 1
	;효과範囲마함 = 1
	효과条件名前 = 다크 패러사이트 퓨저너
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件성별 = 牝性
	효과条件종류 = モン全般
	효과条件固名前 = 패러사이트 여왕
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 특수소환時 || 종류 == EX소환時
	;SIF 발동済_1(듀얼리스트,59540)
	;	RETURN 0
	SIF	마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 패러사이트
	효과条件종류 = モン全般
	효과条件うらら解除 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF	GETVAR(@"%듀얼리스트%_MZ_汎数:場所") > 0
		RETURN 1
	SIF	GETVAR(@"%듀얼리스트%_MZ_変化元ID:場所") >= 0
		RETURN 1
	RETURN 0
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 패러사이트
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	SIF RESULT == 0
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	효과条件除去種 = 強奪
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_59540(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正値
#DIM DYNAMIC 選択횟수
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 出処
#DIM DYNAMIC 대상A
#DIM DYNAMIC 대상A_ID
#DIM DYNAMIC 대상B
#DIM DYNAMIC 대상B_ID
#DIM DYNAMIC 元素材カード_ID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59540)
	IF RESULT == 0
		CALL FULLRESET
		;효과範囲손패 = 1
		효과範囲필드 = 1
		;효과範囲마함 = 1
		효과条件名前 = 다크 패러사이트 퓨저너
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲상대필드 = 1
			효과条件성별 = 牝性
			효과条件종류 = モン全般
			효과条件固名前 = 패러사이트 여왕
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			元素材カード_ID = RESULT:1
			IF RESULT == 1
				;PRINTFORMW 元の素材のカードID：{元素材カード_ID}
				CALL FULLRESET
				CALL CARD_EX_SUMMON(듀얼리스트,"EX덱",場所)
				;소환소재로 한 牝性 몬스터의 IDを引き継ぐ。（参考：淫靡な슬라임クイ-ン）
				CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"汎数",元素材カード_ID,上書きモード)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	元素材カード_ID = GETVAR(@"%듀얼리스트%_MZ_汎数:場所")
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"変化元ID",元素材カード_ID)
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"汎数",-1)
	;CALL FULLRESET
	;접촉조교も可能にしたかったが、どうもカードID上書きだけでは접촉조교は出来ないみたいなので削除
	;CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"接可")
ELSEIF 종류 == 특수소환時 || 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59540)
	IF RESULT == 0
		選択횟수 = 0
		WHILE 選択횟수 < 3
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = 패러사이트
			효과条件종류 = モン全般
			효과条件任意 = 1
			CALL CARD_EQUIP_MONSTER_ADV(듀얼리스트,ゾーン,場所,,59540)
			選択カード = RESULT
			IF 選択カード != 9999
				選択횟수 += 1
			ELSEIF 選択カード == 9999
				選択횟수 += 3
			ENDIF
			SIF	마함数(듀얼리스트) >= 5
				選択횟수 += 3
		WEND
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 패러사이트
	효과条件종류 = モン全般
	효과条件固名前 = 패러사이트 여왕
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正値 =  RESULT * 300
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正値,0)
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59540,10)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
		대상A_ID = RESULT:1
		대상A = コントロール先
		IF RESULT == 1
			;コントロール先に자신의 마함の"패러사이트" 몬스터를 装備させる
			CALL FULLRESET
			효과範囲마함 = 1
			효과条件カテゴリ = 패러사이트
			효과条件종류 = モン全般
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			選択カード = RESULT
			대상B_ID = RESULT:99
			IF 選択カード != 9999
				CALL CARD_SELECT(듀얼리스트,選択カード)
				대상B = RESULT
				CALL SET_FIELD_INFO(듀얼리스트,"마함",대상B,"装",대상A,1)
			ENDIF
		ENDIF
	ENDIF
ENDIF




