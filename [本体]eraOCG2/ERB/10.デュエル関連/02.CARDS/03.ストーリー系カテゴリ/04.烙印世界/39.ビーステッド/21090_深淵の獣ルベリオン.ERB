@CARDNAME_21090,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 더 비스테드 루벨리온
	CASE "略称"
		RESULTS = 심연의 루벨리온
	CASE "カテゴリ"
		RESULTS:0 = 비스테드
ENDSELECT


@CARD_21090(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 드래곤족
