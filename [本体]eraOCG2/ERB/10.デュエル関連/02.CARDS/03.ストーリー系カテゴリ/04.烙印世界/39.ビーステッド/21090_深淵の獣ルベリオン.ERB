		RETURN 8
	CASE "攻撃力"
		RETURN 2500
	CASE "守備力"
		RETURN 3000
	CASE "소환불가"
		RETURN 1
	CASE "특수불가"
		RETURN 1
	CASE "성별"
		RETURN 雄性
	CASE "レア度"
		RETURN ULR
ENDSELECT
RETURN 0

