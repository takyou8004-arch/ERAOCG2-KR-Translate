@CARDCAN_36030(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 存在カード名,100

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,36030)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_2(듀얼리스트,36030)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲손패 = 1
	素材範囲필드 = 1
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件スーパー名前 = 창옥신 네르바
	효과条件カテゴリ = 아르토메기아
	효과条件종류 = 융합
	효과条件소환可 = 1
	強制素材場所２ = 지정場所(場所,ゾーン)
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 손패→묘지 || 종류 == 필드→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_3(듀얼리스트,36030)
		RETURN 0
	FOR カウンタ,0,50
		SIF GETVAR(@"%듀얼리스트%_묘지:カウンタ") == -1
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_묘지:カウンタ")},"カテゴリ"
		SIF !MATCH(RESULTS,"아르토메기아")
			CONTINUE
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_묘지:カウンタ")},"종류"
		SIF !INRANGE(RESULT,20,39)
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_묘지:カウンタ")},"名前"
		選択カード名前 = %RESULTS%
		SIF MATCH(存在カード名,選択カード名前)
			CONTINUE
		存在カード名:カウンタB = %選択カード名前%
		カウンタB ++
		SIF カウンタB >= 50
			BREAK
	NEXT
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 아르토메기아
	효과条件종류 = 마함全般
	효과条件固名前:0 = 임시 배치
	FOR カウンタ,0,20
		효과条件固名前:カウンタ = %存在カード名:カウンタ%
	NEXT
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ENDIF


@CARDEFFECT_36030(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 存在カード名,100

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과
	CALL SET_TMP_EX_RST(듀얼리스트,"종류",융합)
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36030,2)
	IF RESULT == 0
		CALL RESETAREA_MAT
		素材範囲손패 = 1
		素材範囲필드 = 1
		CALL FULLRESET
		효과条件スーパー名前 = 창옥신 네르바
		효과条件カテゴリ = 아르토메기아
		효과条件종류 = 융합
		효과条件소환可 = 1
		強制素材場所２ = 지정場所(場所,ゾーン)
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
			CALL FUSSUMMON(듀얼리스트,選択カード)
		ENDIF
	ENDIF
ELSEIF 종류 == 손패→묘지 || 종류 == 필드→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36030,3)
	IF RESULT == 0
		FOR カウンタ,0,50
			SIF GETVAR(@"%듀얼리스트%_묘지:カウンタ") == -1
				CONTINUE
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_묘지:カウンタ")},"カテゴリ"
			SIF !MATCH(RESULTS,"아르토메기아")
				CONTINUE
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_묘지:カウンタ")},"종류"
			SIF !INRANGE(RESULT,20,39)
				CONTINUE
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_묘지:カウンタ")},"名前"
			選択カード名前 = %RESULTS%
			SIF MATCH(存在カード名,選択カード名前)
				CONTINUE
			存在カード名:カウンタB = %選択カード名前%
			カウンタB ++
			SIF カウンタB >= 50
				BREAK
		NEXT
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 아르토메기아
		효과条件종류 = 마함全般
		효과条件固名前:0 = 仮置き
		FOR カウンタ,0,20
			효과条件固名前:カウンタ = %存在カード名:カウンタ%
		NEXT
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

