@CARD_EXPLANATION_71920(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②의 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,마함起動,손패起動)
PRINTL ①：덱에서 레벨 8 이상의 「디아벨」 몬스터 1장을 손패에 추가한다.
PRINTL 상대 필드에만 몬스터가 존재할 경우, 손패에 추가하지 않고 특수 소환할 수도 있다.
CALLFORM CARD_ABLE(2,제외時)
PRINTL ②：이 카드가 제외되었을 경우에 발동할 수 있다.
PRINTL 자신 필드의 모든 「디아벨」 몬스터의 공격력은 500 올린다.



@CARDCAN_71920(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,71920)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,71920)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 디아벨
	CALLFORM 효과条件レベル_ADV(8,"以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 제외時
	SIF 발동済_2(듀얼리스트,71920)
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_71920(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71920,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

		IF モンスター数(듀얼리스트) == 0 && モンスター数(対面者) != 0
PRINTL 손패에 추가하는 대신 특수 소환하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == 0
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = 디아벨
				CALLFORM 효과条件レベル_ADV(8,"以上")
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				RETURN
			ELSE
			ENDIF
		ENDIF
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 디아벨
		CALLFORM 효과条件レベル_ADV(8,"以上")
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71920,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 디아벨
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"永攻",500)
	ENDIF
ENDIF

