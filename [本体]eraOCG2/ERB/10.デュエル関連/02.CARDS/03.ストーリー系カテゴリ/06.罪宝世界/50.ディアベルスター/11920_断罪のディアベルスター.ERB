@CARDNAME_11920,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 단죄의 디아벨스타
	CASE "略称"
		RESULTS = 단죄의 흑마녀
	CASE "カテゴリ"
		RESULTS:0 = 디아벨스타
		RESULTS:1 = 디아벨
		RESULTS:2 = 죄보
ENDSELECT


@CARD_11920(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
