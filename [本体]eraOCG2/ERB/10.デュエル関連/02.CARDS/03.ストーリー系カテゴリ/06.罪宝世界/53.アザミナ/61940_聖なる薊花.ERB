@CARDNAME_61940,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 성스러운 아자미나
	CASE "略称"
		RESULTS = 성스러운 계화
	CASE "カテゴリ"
		RESULTS:0 = 아자미나
ENDSELECT


@CARD_61940(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_61940(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드 이름의 ②의 효과는 1턴에 1번만 사용할 수 없다.
CALLFORM CARD_ABLE(1,마함起動,손패起動)
PRINTL ①: EX덱의 "아자미나" 융합 몬스터 1장을 상대에게 보여주고,
PRINTL 그 레벨 4당 1장, 자신 패 / 필드에서 "죄보" 카드를 묘지로 보낸다.
PRINTL 그 후, 보여준 몬스터를 융합 소환으로 취급하고 특수 소환한다.
CALLFORM CARD_ABLE(2,묘지起動)
PRINTL ②: 이 카드가 묘지에 존재할 경우에 발동할 수 있다.
PRINTL 자신 필드 / 묘지의 "아자미나" 몬스터 1장을 덱으로 되돌리고,
PRINTL 이 카드를 패에 더한다.


@CARDCAN_61940(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,61940)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 아자미나
	효과条件종류 = 융합
	효과条件소환可 = 1
	효과条件特不無視 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 죄보
	효과条件표시 = 0
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,61940)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	SIF 듀얼리스트 == "자신"
		효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 아자미나
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_61940(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61940,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件カテゴリ = 죄보
		효과条件CNT = 1
		효과条件표시 = 0
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		条件달성 = RESULT

		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ = 아자미나
		효과条件종류 = 융합
		IF 条件달성 == 1
			CALL 효과条件レベル_ADV(7,"以下")
		ELSEIF 条件달성 == 2
			CALL 효과条件レベル_ADV(11,"以下")
		ELSEIF 条件달성 >= 3
		ENDIF
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_SELECT(듀얼리스트,選択カード)
			選択カード = RESULT
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_EX덱:選択カード")},"レベル"
			IF RESULT < 8
				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲필드 = 1
				효과範囲마함 = 1
				효과条件カテゴリ = 죄보
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			ELSEIF RESULT >= 8 && RESULT < 12
				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲필드 = 1
				효과範囲마함 = 1
				효과条件カテゴリ = 죄보
				효과条件複数 = 2
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			ELSEIF RESULT >= 12
				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲필드 = 1
				효과範囲마함 = 1
				효과条件カテゴリ = 죄보
				효과条件複数 = 3
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_EX_SUMMON(듀얼리스트,"EX덱",選択カード)
				SIF 듀얼리스트 == "자신"
					リザルト：FUS소환 = 1
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61940,2)
	IF RESULT == 0
		CALL FULLRESET
		SIF 듀얼리스트 == "자신"
			효과範囲필드 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 아자미나
		효과条件종류 = モン全般
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL CARD_DISPOSE(듀얼리스트,"묘지",場所,손패行き)
		ENDIF
	ENDIF
ENDIF
