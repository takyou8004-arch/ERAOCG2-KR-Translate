@CARDSUMMON_58651(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要링크数 = 1

素材条件カテゴリ = 팔라디온
素材条件固名前 = マギアス 팔라디온

IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,58651) 
	RETURN RESULT
ENDIF


@CARDCAN_58651(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58651)
SIF RESULT == 1
	RETURN 0
IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,58651)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_最召場所") == 場所
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 효과全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 팔라디온
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_58651(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과先

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58651,1)
	IF RESULT == 0
		효과先 = FINAL_SUMMON_TARGET(듀얼리스트)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",효과先,"戦無",1)

		攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_攻:효과先")
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",攻撃力修正)

		CALL FULLRESET
		효과条件カテゴリ = 팔라디온
		효과条件종류 = モン全般
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ENDIF




