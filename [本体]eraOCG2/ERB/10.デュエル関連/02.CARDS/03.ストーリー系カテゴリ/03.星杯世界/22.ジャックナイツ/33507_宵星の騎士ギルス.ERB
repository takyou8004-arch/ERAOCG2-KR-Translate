@CARDCAN_33507(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,33507)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,33507)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ:0 = 성유물
	효과条件カテゴリ:1 = 오르페골
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_2(듀얼리스트,33507)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	IF GETVARS(@"%듀얼리스트%_フィールド名") != "오르페골 바벨"
		SIF 종류 == フリー誘発
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ENDIF
	SIF モンスター数(듀얼리스트) >= 2
		RETURN 0
	SIF モンスター数(対面者) >= 5
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_33507(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,33507,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ:0 = 성유물
		효과条件カテゴリ:1 = 오르페골
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一Ｔ",1)
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,33507,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_GENERATE(듀얼리스트,133507,"守備표시")
		CALL FULLRESET
		CALL CARD_GENERATE(対面者,133507,"守備표시")
	ENDIF
ENDIF



