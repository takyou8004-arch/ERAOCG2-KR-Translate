@CARDCAN_54004(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,54004)
SIF RESULT == 1
	RETURN 0
IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,54004)
		RETURN 0
	SIF 손패数(듀얼리스트) < 1
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = モン全般
	CALL 효과条件レベル_ADV(4, "以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_54004(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54004,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL 효과条件レベル_ADV(4, "以下")
			효과条件종류 = モン全般
			CALL CARD_CHOOSE_BASIC(듀얼리스트, "손패",ゾーン,場所)	
			選択カード = RESULT
			IF 選択カード != 9999
				CALL FULLRESET
				효과추가종류 = 効追無効
				CALL CARD_SUMMON_SHORI(듀얼리스트,選択カード,"攻撃표시",1)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"無効",1,1)

;				CALL CARD_SUMMON, 듀얼리스트, 選択カード
			ENDIF
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 트로이메어
			효과条件固名前  = 트로이메어 고블린
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				SIF 듀얼리스트 == "자신"
PRINTL 드로우하시겠습니까?
				CALL YN_CHOICE(듀얼리스트)
				SIF RESULT == はい
					CALL CARDDRAW_BASIC(듀얼리스트,1)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = 트로이메어
	효과条件他所 = 1
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
ENDIF

