@CARDSUMMON_11877(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC 条件달성
;素材条件


CALL RESETCONDITION_MAT
必要링크数 = 4

IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 오르페골
	素材条件종류 = 링크
ENDIF

IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,11877) 
	RETURN RESULT
ENDIF


@CARDCAN_11877(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,11877)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || (종류 == フリー誘発 && ゾーン == "필드")
	SIF 발동済_1(듀얼리스트,11877)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	IF GETVARS(@"%듀얼리스트%_フィールド名") != "오르페골 바벨"
		SIF 종류 == フリー誘発
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件カテゴリ:0 = 오르페골
	효과条件カテゴリ:1 = 성유물
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 戦破壊→묘지
	SIF !GROUPMATCH(묘지送り종류,"リリース","破壊","戦闘破壊")
		RETURN 0
	SIF 발동済_2(듀얼리스트,11877)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動 || (종류 == フリー誘発 && ゾーン == "묘지")
	SIF !발동済_2(듀얼리스트,11877)
		RETURN 0
	SIF 발동済_3(듀얼리스트,11877)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	IF GETVARS(@"%듀얼리스트%_フィールド名") != "오르페골 바벨"
		SIF 종류 == フリー誘発
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ENDIF
	IF 듀얼리스트 != "자신"
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_11877(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC ドロー数


IF 종류 == 필드起動 || (종류 == フリー誘発 && ゾーン == "필드")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,11877,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ:0 = 오르페골
		효과条件カテゴリ:1 = 성유물
		CALL CARD_ADD_BASIC(듀얼리스트,"제외",ゾーン,場所)
		IF RESULT == 1 && モンスター数(듀얼리스트) < 5
			CALL FULLRESET
			효과条件行先플래그 = 덱行き
			효과条件任意 = 1
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과条件표시 = 10
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,11877,2)
	IF RESULT == 0
	ENDIF
ELSEIF 종류 == 묘지起動 || (종류 == フリー誘発 && ゾーン == "묘지")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,11877,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場単体",場所,"リリース")
	ENDIF
ENDIF




