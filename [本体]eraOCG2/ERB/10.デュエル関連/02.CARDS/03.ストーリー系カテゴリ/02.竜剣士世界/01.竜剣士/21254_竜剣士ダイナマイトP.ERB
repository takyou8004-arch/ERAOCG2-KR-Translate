@CARDCAN_21254(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21254)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF 발동済_1(듀얼리스트,21254)
		RETURN 0

	CALL FULLRESET
	효과範囲마함 = 1
	효과条件分割 = 펜듈럼
	효과条件カテゴリ:0 = 룡검사
	효과条件カテゴリ:1 = 다이너미스트
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드→묘지
	SIF 발동済_2(듀얼리스트,21254)
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件分割 = 펜듈럼
	효과条件カテゴリ:0 = 룡검사
	효과条件カテゴリ:1 = 다이너미스트
	효과条件종류 = EX以外全般
	효과条件固名前 = 용검사 다이너마이트 파워 로드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF
@CARDEFFECT_21254(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 選択カード名前
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21254)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21254,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件分割 = 펜듈럼
		효과条件カテゴリ:0 = 룡검사
		효과条件カテゴリ:1 = 다이너미스트
		효과条件他所 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 필드→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21254,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件分割 = 펜듈럼
		효과条件カテゴリ:0 = 룡검사
		효과条件カテゴリ:1 = 다이너미스트
		효과条件종류 = EX以外全般
		효과条件固名前 = 용검사 다이너마이트 파워 로드
		CALL CARD_ADD_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
	ENDIF
ENDIF

