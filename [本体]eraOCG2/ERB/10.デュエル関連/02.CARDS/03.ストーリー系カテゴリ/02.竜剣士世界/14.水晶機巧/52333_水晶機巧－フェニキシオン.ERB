@CARDCAN_52333(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52333)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	CALL FULLRESET
	효과範囲상대묘지 = 1
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件종류 = 마함全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件他所 = 1
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = モン全般
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_52333(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52333)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 마함全般
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場全体",場所,"제외")
		FOR カウンタ,0,紙束最大値
			SIF GETVAR(@"%対面者%_묘지:カウンタ") == -1
				CONTINUE
			TRYCALLFORM CARD_{GETVAR(@"%対面者%_묘지:カウンタ")}, "종류"
			SIF RESULT < 10
				CONTINUE
			CALL CARD_DISPOSE(対面者,"묘지",カウンタ)
		NEXT
	ENDIF

ELSEIF 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52333)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件他所 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,場所)
	ENDIF
ENDIF