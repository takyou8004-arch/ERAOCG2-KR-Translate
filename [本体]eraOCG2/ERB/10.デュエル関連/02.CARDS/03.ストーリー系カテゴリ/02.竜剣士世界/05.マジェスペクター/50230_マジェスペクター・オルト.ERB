@CARDCAN_50230(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50230)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
    SIF 발동済_1(듀얼리스트,50230)  
		RETURN 0
    CALL FULLRESET
    효과範囲덱 = 1
효과条件カテゴリ = 마제스펙터
	효과条件分割 = 펜듈럼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
효과条件カテゴリ = 마제스펙터
	효과条件分割 = 펜듈럼
	효과条件종류 = EX以外全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ENDIF



@CARDEFFECT_50230(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
    CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50230,1)
	IF RESULT == 0
		CALL FULLRESET
효과条件カテゴリ = 마제스펙터
		효과条件分割 = 펜듈럼
		효과条件종류 = EX以外全般
		효과条件複数 = 98
		CALL CARD_ADD_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		IF RESULT == 1
		    CALL FULLRESET
효과条件カテゴリ = 마제스펙터
		    효과条件分割 = 펜듈럼
			효과条件複数 = 98
		    효과条件行先플래그 = EX덱行き
		    CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
	CALL CARD_EX_RESTRICTION(듀얼리스트,"마제스펙터")
	ENDIF
ENDIF
