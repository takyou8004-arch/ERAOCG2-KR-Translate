PRINTL 「진룡」 몬스터 1장을 앞면 표시로 어드밴스 소환한다.
CALLFORM CARD_ABLE(3,필드→묘지 ,破壊→묘지)
PRINTL ③: 이 카드가 마법 & 함정 존에서 묘지로 보내졌을 경우, 필드의 몬스터 1장을 대상으로 발동할 수 있다.
PRINTL 그 몬스터를 파괴한다.

@CARDCAN_92075(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC EX条件달성
#DIM DYNAMIC 효과使用불가,10

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,92075)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,92075)
		효과使用불가:1 = 1
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 진룡
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:1 = 1


	SIF 발동済_2(듀얼리스트,92075)
		효과使用불가:2 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 진룡
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1
	SIF メインフェイズ != 1
		효과使用불가:2 = 1
	SIF ターンプレイヤー == 듀얼리스트
		효과使用불가:2 = 1

	SIF 효과使用불가:1 == 1 && 효과使用불가:2 == 1
		RETURN 0


	RETURN 1
ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지
	SIF 발동済_3(듀얼리스트,92075)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_92075(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC EX参照
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 설정종족
#DIM DYNAMIC 選択효과
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 효과使用불가,10

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,92075)
		효과使用불가:1 = 1
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 진룡
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:1 = 1


	SIF 발동済_2(듀얼리스트,92075)
		효과使用불가:2 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 진룡
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1
	SIF メインフェイズ != 1
		효과使用불가:2 = 1
	SIF ターンプレイヤー == 듀얼리스트
		효과使用불가:2 = 1
	IF 효과使用불가:1 == 0 && 효과使用불가:2 == 0
PRINTL 진룡 몬스터를 손패에서 소환하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
	ELSEIF 효과使用불가:2 == 1
		RESULT = はい
	ELSEIF 효과使用불가:1 == 1
		RESULT = いいえ
	ENDIF
	IF RESULT == はい
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92075,1)
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 진룡
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL FULLRESET
				효과範囲필드 = 1
				효과範囲마함 = 1
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					CALL FULLRESET
					CALL CARD_SUMMON_SHORI(듀얼리스트,選択カード,"攻撃표시",1)
				ENDIF
			ENDIF
		ENDIF
	ELSEIF RESULT == いいえ
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92075,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 진룡
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
			CALL SET_PLAYER_INFO(듀얼리스트,"SS制限", 2)

		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92075)
	IF RESULT == 0
	ENDIF

ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92075,3)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
	ENDIF
ENDIF

