VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 진룡의 묵시록
	CASE "略称"
		RESULTS = 진룡의 묵시록
	CASE "カテゴリ"
		RESULTS:0 = 진룡
ENDSELECT


@CARD_92076(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"

		RETURN 지속함정
ENDSELECT

RETURN 0
@CARD_EXPLANATION_92076(종류)
#DIM DYNAMIC 종류

PRINTL "진룡의 묵시록"의 ①②③ 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,마함起動)
PRINTL ①: 이 카드 이외의 자신 필드의 "진룡" 카드 1장을 대상으로 발동할 수 있다.
PRINTL 그 카드를 파괴하고, 상대 필드의 모든 앞면 표시 몬스터의 공격력 / 수비력을 절반으로 한다.
CALLFORM CARD_ABLE(2,마함起動)
PRINTL ②: 상대 메인 페이즈에 발동할 수 있다.
PRINTL "진룡" 몬스터 1장을 앞면 표시로 어드밴스 소환한다.
CALLFORM CARD_ABLE(3,필드→묘지 ,破壊→묘지)
PRINTL ③: 이 카드가 마법 & 함정 존에서 묘지로 보내졌을 경우, 필드의 몬스터 1장을 대상으로 발동할 수 있다.
PRINTL 그 몬스터를 파괴한다.

@CARDCAN_92076(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC EX条件달성
#DIM DYNAMIC 효과使用불가,10

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,92076)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,92076)
		효과使用불가:1 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 진룡

	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:1 = 1


	SIF 발동済_2(듀얼리스트,92076)
		효과使用불가:2 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 진룡
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1
	SIF メインフェイズ != 1
		효과使用불가:2 = 1
	SIF ターンプレイヤー == 듀얼리스트
		효과使用불가:2 = 1

	SIF 효과使用불가:1 == 1 && 효과使用불가:2 == 1
		RETURN 0


	RETURN 1
ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지
	SIF 발동済_3(듀얼리스트,92076)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_92076(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC EX参照
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 설정종족
#DIM DYNAMIC 選択효과
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 효과使用불가,10

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,92076)
		효과使用불가:1 = 1
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 진룡
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:1 = 1


	SIF 발동済_2(듀얼리스트,92076)
		효과使用불가:2 = 1
		
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 진룡
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:2 = 1
	SIF メインフェイズ != 1
		효과使用불가:2 = 1
	SIF ターンプレイヤー == 듀얼리스트
		효과使用불가:2 = 1

	IF 효과使用불가:1 == 0 && 효과使用불가:2 == 0
PRINTL 진룡 몬스터를 패에서 소환하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
	ELSEIF 효과使用불가:2 == 1
		RESULT = はい
	ELSEIF 효과使用불가:1 == 1
		RESULT = いいえ
	ENDIF
	IF RESULT == はい
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92076,1)
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 진룡
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL FULLRESET
				효과範囲필드 = 1
				효과範囲마함 = 1
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					CALL FULLRESET
					CALL CARD_SUMMON_SHORI(듀얼리스트,選択カード,"攻撃표시",1)
				ENDIF
			ENDIF
		ENDIF
	ELSEIF RESULT == いいえ
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92076,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲마함 = 1
			효과条件行先플래그 = 破壊行き
			효과条件カテゴリ = 진룡
			효과条件他所 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과条件표시 = 表側표시
				효과추가종류 = 7
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"永攻DOWN")
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92076)
	IF RESULT == 0
	ENDIF

ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92076,3)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
	ENDIF
ENDIF

