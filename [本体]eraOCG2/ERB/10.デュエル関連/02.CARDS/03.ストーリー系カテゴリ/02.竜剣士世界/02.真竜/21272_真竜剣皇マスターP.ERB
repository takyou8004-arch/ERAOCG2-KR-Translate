@CARDSUMMON_AA_21272


@CARDCAN_21272(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21272)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과소환
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件종류:0 = モン全般
	효과条件종류:1 = 지속마법
	효과条件종류:2 = 지속함정
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대묘지 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류:0 = 지속마법
	효과条件종류:1 = 지속함정
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_21272(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 耐性セットビット
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과소환
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件종류:0 = モン全般
	효과条件종류:1 = 지속마법
	효과条件종류:2 = 지속함정
	CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	IF RESULT == 1
		TRYCALLFORM CARD_{RESULT:1}("종류")
		IF RESULT <= モン全般
			SETBIT 耐性セットビット, 1
		ELSEIF RESULT == 지속마법
			SETBIT 耐性セットビット, 2
		ELSEIF RESULT == 지속함정
			SETBIT 耐性セットビット, 3
		ENDIF

		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件종류:0 = モン全般
		효과条件종류:1 = 지속마법
		효과条件종류:2 = 지속함정
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			TRYCALLFORM CARD_{RESULT:1}("종류")
			IF RESULT <= モン全般
				SETBIT 耐性セットビット, 1
			ELSEIF RESULT == 지속마법
				SETBIT 耐性セットビット, 2
			ELSEIF RESULT == 지속함정
				SETBIT 耐性セットビット, 3
			ENDIF
		ENDIF
	ENDIF
	CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"汎数",耐性セットビット)
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21272,10)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류:0 = 지속마법
		효과条件종류:1 = 지속함정
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			効果範囲相手戦場 = 1
			効果範囲相手魔罠 = 1
			CALL CARD_REMOVAL_ADV(決闘者,"単体除去",場所,"墓地")
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	SIF GETBIT(GETVAR(@"%듀얼리스트%_魔_汎数:場所"),1) == 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"モ耐")
	SIF GETBIT(GETVAR(@"%듀얼리스트%_魔_汎数:場所"),2) == 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"魔耐")
	SIF GETBIT(GETVAR(@"%듀얼리스트%_魔_汎数:場所"),3) == 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")
ENDIF