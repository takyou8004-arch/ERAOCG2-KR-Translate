CALLFORM CARD_ABLE(0,마함起動)
PRINTL ②：패에서 마법 / 함정 카드 1장을 버리고 발동할 수 있다.
PRINTL 같은 이름의 몬스터가 자신의 패/필드에 존재하지 않는 "아르토메기아" 몬스터 1장을 덱에서 패에 추가한다.
PRINTL 이 턴, 자신은 "아르토메기아" 몬스터 및 "무구한 자 메디우스"밖에 특수 소환할 수 없다 (EX덱에서의 특수 소환은 제외).

 

@CARDCAN_71230(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 存在カード名,100


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,71230)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = 마함全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"カテゴリ"
		SIF !MATCH(RESULTS,"아르토메기아")
			CONTINUE
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"종류"
		SIF !INRANGE(RESULT,1,3)
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"名前"
		選択カード名前 = %RESULTS%
		SIF MATCH(存在カード名,選択カード名前)
			CONTINUE
		存在カード名:カウンタB = %選択カード名前%
		カウンタB ++
	NEXT
	FOR カウンタ,0,10
		SIF GETVAR(@"%듀얼리스트%_손패:カウンタ") == -1
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_손패:カウンタ")},"カテゴリ"
		SIF !MATCH(RESULTS,"아르토메기아")
			CONTINUE
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_손패:カウンタ")},"종류"
		SIF !INRANGE(RESULT,1,3)
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_손패:カウンタ")},"名前"
		選択カード名前 = %RESULTS%
		SIF MATCH(存在カード名,選択カード名前)
			CONTINUE
		存在カード名:カウンタB = %選択カード名前%
		カウンタB ++
	NEXT
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 아르토메기아
	효과条件종류 = モン全般
	효과条件固名前:0 = 임시 배치
	FOR カウンタ,0,30
		효과条件固名前:カウンタ = %存在カード名:カウンタ%
	NEXT
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_71230(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 存在カード名,100
#DIM DYNAMIC 同名セットビット
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71230,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종류 = 마함全般
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			FOR カウンタ,0,5
				SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
					CONTINUE
				SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
					CONTINUE
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"カテゴリ"
				SIF !MATCH(RESULTS,"아르토메기아")
					CONTINUE
				TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"종류"
				SIF !INRANGE(RESULT,1,3)
					CONTINUE
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"名前"
				選択カード名前 = %RESULTS%
				SIF MATCH(存在カード名,選択カード名前)
					CONTINUE
				存在カード名:カウンタB = %選択カード名前%
				カウンタB ++
			NEXT
			FOR カウンタ,0,10
				SIF GETVAR(@"%듀얼리스트%_손패:カウンタ") == -1
					CONTINUE
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_손패:カウンタ")},"カテゴリ"
				SIF !MATCH(RESULTS,"아르토메기아")
					CONTINUE
				TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_손패:カウンタ")},"종류"
				SIF !INRANGE(RESULT,1,3)
					CONTINUE
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_손패:カウンタ")},"名前"
				選択カード名前 = %RESULTS%
				SIF MATCH(存在カード名,選択カード名前)
					CONTINUE
				存在カード名:カウンタB = %選択カード名前%
				カウンタB ++
			NEXT
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 아르토메기아
			효과条件종류 = モン全般
			FOR カウンタ,0,30
				효과条件固名前:カウンタ = %存在カード名:カウンタ%
			NEXT
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			選択カード_ID = RESULT:1
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71230,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트,"신예학도")
	CALL FULLRESET
	효과条件名前 = 무구한 자 메디우스
	CALL STATCHANGE_HAND(듀얼리스트,"全体",場所,"召可")
ENDIF
