@CARD_EXPLANATION_81880(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드 명의 카드는 1턴에 1장밖에 발동할 수 없다.
CALLFORM CARD_ABLE(1,마함起動,フリー誘発)
PRINTL ①: 자신의 패/묘지에서 「드래그마」 몬스터 또는 「알버스의 낙윤」 1체를 특수 소환한다.
PRINTL 자신의 필드/묘지에 「에클레시아」 몬스터와 「알버스」 몬스터가 존재할 경우,
PRINTL 이 효과를 한 번 더 적용할 수 있다.


@CARDCAN_81880(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,81880)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,81880)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲손패 = 1
	효과条件カテゴリ:0 = 드래그마
	효과条件カテゴリ:1 = 알버스
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_81880(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ

IF 종류 == 마함起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,81880,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲손패 = 1
		효과条件カテゴリ:0 = 드래그마
		효과条件スーパー名前 = 알버스의 낙윤
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

		;에클레시아確認
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲필드 = 1
		효과条件カテゴリ:0 = 에클레시아
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT
			条件달성 ++

		;알버스君確認
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲필드 = 1
		효과条件名前 = 알버스의 낙윤
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT
			条件달성 ++

		IF 条件달성 == 2 && モンスター数(듀얼리스트) < 5
			CALL FULLRESET
			효과範囲묘지 = 1
			효과範囲손패 = 1
			효과条件カテゴリ:0 = 드래그마
			효과条件スーパー名前 = 알버스의 낙윤
			효과条件任意 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
