@CARDCAN_50151(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50151)
SIF RESULT == 1
	RETURN 0


IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX소환時
	SIF 발동済_2(듀얼리스트,50151)
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,50151)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과추가종류 = 効追無効
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50151(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%




IF 종류 == 지속효과
	CALL SET_TMP_EX_RST(듀얼리스트,"全般")

;	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"EX阻")
ELSEIF 종류 == EX소환時 || 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50151,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALLFORM CARD_{GETVAR(@"%듀얼리스트%_EX덱:選択カード")}, "攻撃力"
			攻撃力修正 += RESULT
			CALL CARD_DISPOSE(듀얼리스트,"EX덱",選択カード)
		ENDIF
		CALL FULLRESET
		CALL CARD_CHOOSE_BASIC(듀얼리스트, "상대EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALLFORM CARD_{GETVAR(@"%対面者%_EX덱:選択カード")}, "攻撃力"
			攻撃力修正 += RESULT
			CALL CARD_DISPOSE(対面者,"EX덱",選択カード)
		ENDIF
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",(攻撃力修正 / 2))
	ENDIF
ENDIF

