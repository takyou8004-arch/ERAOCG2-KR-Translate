@CARDCAN_11881(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,11881)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == フリー誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_1(듀얼리스트,11881)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,11881,"손패")
	SIF RESULT == 1
		RETURN 0
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_無効:カウンタ") == 0
			CONTINUE
		条件달성 = 1
	NEXT
	FOR カウンタ,0,5
		SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%対面者%_MZ_無効:カウンタ") == 0
			CONTINUE
		条件달성 = 1
	NEXT
	SIF 条件달성 != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,11881)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환",1)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_11881(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성,2
#DIM DYNAMIC 選択효과


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,11881,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,11881,2)
	IF RESULT == 0
		;チェック
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종류 = モン全般
		CALL 효과条件レベル_ADV(4, "以下")
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 = 1
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件召種 = 召種EX덱
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:1 = 1

		IF 듀얼리스트 == "자신"
PRINTL 효과를 선택해 주세요
			PRINTL 
			IF 条件달성:0 == 1
PRINTL [1] - 손패에서 레벨 4 이하의 몬스터 1장을 특수 소환한다.
			ELSE
				SETCOLOR C_GRAY
PRINTL ［X］- 손패에 레벨 4 이하의 몬스터가 없습니다.
				RESETCOLOR
			ENDIF
PRINTL [2] - 자신은 덱에서 1장 드로우한다.
			IF 条件달성:1 == 1
PRINTL [3] - EX 덱에서 특수 소환된 상대 몬스터 1장을 고르고 파괴한다.
			ELSE
				SETCOLOR C_GRAY
PRINTL ［X］- 상대 필드에 EX 덱에서 특수 소환된 몬스터가 없습니다.
				RESETCOLOR
			ENDIF
			BINPUT
			選択효과 = RESULT
		ELSE
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件召種 = 召種EX덱
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				選択효과 = 3
			ELSE
				選択효과 = 2
			ENDIF
		ENDIF
		IF 選択효과 == 1
			CALL FULLRESET
			효과範囲손패 = 1
			CALL 효과条件レベル_ADV(4, "以下")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ELSEIF 選択효과 == 2
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ELSEIF 選択효과 == 3
			CALL FULLRESET
			효과条件召種 = 召種EX덱
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
		ENDIF
	ENDIF
ENDIF
