@CARDCAN_24701(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件チェック,5

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24701)
SIF RESULT == 1
	RETURN 0

;各所からの起動して엑시즈 소재를 추가
;参考：LL-サファイア スパロ-
IF 종류 == 묘지起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,24701)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 스프리건즈
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
;소환 起動효과で自身をリリースして묘지의 스프리건즈を특수소환
;参考：ティオの충혹마
ELSEIF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 스프리건즈
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1 || 발동済_1(듀얼리스트,24701)
		条件チェック:0 = 1

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 스프리건즈
	효과条件固名前 = 스프리건즈 피트
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1 || 발동済_2(듀얼리스트,24701)
		条件チェック:1 = 1

	IF 条件チェック:0 == 1 && 条件チェック:1 == 1
		RETURN 0

	ELSEIF 条件チェック:0 != 1 && 条件チェック:1 == 1
		SIF 발동済_1(듀얼리스트,24701)
			RETURN 0
	
	ELSEIF 条件チェック:0 == 1 && 条件チェック:1 != 1
	
		SIF 발동済_2(듀얼리스트,24701)
			RETURN 0
	ENDIF

	RETURN 1
ENDIF



@CARDEFFECT_24701(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件チェック
#DIM DYNAMIC 条件달성,5


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

;各種起動효과
;参考：LL-サファイア スパロ-、ミラ-ソ-ド 나이트、極夜の기사 가이아
IF 종류 == 필드起動
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 스프리건즈
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		条件달성:0 = 1
	
	SIF 条件달성:0 == 1 || 발동済_1(듀얼리스트,24701)
		条件달성:2 = 1
	
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 스프리건즈
	효과条件固名前 = 스프리건즈 피트
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		条件달성:1 = 1
	
	SIF 条件달성:1 == 1 || 발동済_2(듀얼리스트,24701)
		条件달성:3 = 1
	
	IF 条件달성:2 != 1 && 条件달성:3 != 1
PRINTL 어느 쪽의 효과를 발동하시겠습니까?
		CALL YN_CHOICE(듀얼리스트,"엑시즈 소재를 増やす","「스프리건즈」몬스터를 특수 소환한다")
	ELSEIF 条件달성:2 != 1 && 条件달성:3 == 1
		RESULT = 0
	ELSE
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24701,1)
		IF RESULT == 0
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,2)
			IF RESULT != -1
				CALL FULLRESET
				효과条件カテゴリ = 스프리건즈 
				효과条件종류 = 엑시즈
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
				選択カード = RESULT
				IF 選択カード != 9999
					CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"Ｘ",1)
					PRINTFORMW タリホ－！ビ-ドがリロ-ドされた！
				ENDIF
			ENDIF
		ENDIF
	ELSE
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24701,2)
		IF RESULT == 0
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 스프리건즈
			효과条件固名前 = 스프리건즈 피트
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 묘지起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24701,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,2)
		IF RESULT != -1
			CALL FULLRESET
			효과条件カテゴリ = 스프리건즈 
			효과条件종류 = 엑시즈
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"Ｘ",1)
				PRINTFORMW タリホ－！ビ-ドがリロ-ドされた！
			ENDIF
		ENDIF
	ENDIF
ENDIF




