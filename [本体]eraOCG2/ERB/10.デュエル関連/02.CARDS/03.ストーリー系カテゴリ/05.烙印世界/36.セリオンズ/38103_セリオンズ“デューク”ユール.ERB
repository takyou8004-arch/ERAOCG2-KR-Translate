@CARDCAN_38103(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,4
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,38103)
SIF RESULT == 1
	RETURN 0


CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT


IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,38103)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,38103,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件スーパーカテゴリ = 세리온즈
	효과条件スーパー종류 = モン全般
	효과条件종족 = 사이킥족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 발동誘発
	SIF 발동済_2(듀얼리스트,38100)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0

	CALL FULLRESET
	효과条件名前 = 세리온즈“킹”레귤러스
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 세리온즈
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,38101)
		발동불가:0 = 1
	SIF 발동済_2(듀얼리스트,38102)
		발동불가:1 = 1
	SIF 발동済_2(듀얼리스트,38104)
		발동불가:2 = 1
	SIF 발동済_2(듀얼리스트,38105)
		발동불가:3 = 1
	
	;ボレア
	IF 발동불가:0 != 1
		SIF メインフェイズ != 1
			발동불가:0 = 1
		SIF ターンプレイヤー != 듀얼리스트
			발동불가:0 = 1
		CALL FULLRESET
		효과条件名前 = 세리온즈 "릴리" 보레아
		CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
		SIF RESULT != 1
			발동불가:0 = 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 세리온즈
		효과条件종류 = 마함全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:0 = 1

	ENDIF
	
	;アラシア
	IF 발동불가:1 != 1
		SIF メインフェイズ != 1
			발동불가:1 = 1
		SIF ターンプレイヤー != 듀얼리스트
			발동불가:1 = 1
		SIF 손패数(듀얼리스트) < 1
			발동불가:1 = 1
		CALL FULLRESET
		효과条件名前 = 세리온즈 “엠프리스” 아라시아
		효과条件소환可 = 1
		CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
		SIF RESULT != 1
			발동불가:1 = 1
	ENDIF

	;アイン
	IF 발동불가:2 != 1
		SIF メインフェイズ != 1
			발동불가:2 = 1
		SIF ターンプレイヤー != 듀얼리스트
			발동불가:2 = 1
		CALL FULLRESET
		효과条件名前 = 세리온즈 "불즈" 아인
		CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
		SIF RESULT != 1
			발동불가:2 = 1
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:2 = 1
	ENDIF

	;ファム
	IF 발동불가:3 != 1
		SIF ターンプレイヤー == 듀얼리스트
			발동불가:3 = 1
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:3 = 1
		CALL FULLRESET
		효과条件名前 = 세리온즈 "리퍼" 팜
		CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
		SIF RESULT != 1
			발동불가:3 = 1
	ENDIF

	SIF 발동불가:0 == 1 && 발동불가:1 == 1 && 발동불가:2 == 1 && 발동불가:3 == 1
		RETURN 0
	
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件スーパー종류 = 装備마법
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%装備者%_필드:装備先") == -1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_38103(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성,4
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%


;各種起動효과
IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38103,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件スーパーカテゴリ = 세리온즈
		효과条件スーパー종류 = モン全般
		효과条件종족 = 사이킥족
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
			CALL CARD_EQUIP_MONSTER(듀얼리스트,カード소환先,"묘지",選択カード)
		ENDIF
	ENDIF

ELSEIF 종류 == 발동誘発
	SETCOLOR C_YELLOW
PRINTL 레귤러스의 파츠가 빛나기 시작했다!
	RESETCOLOR
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38100,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件カテゴリ = 세리온즈
		효과条件종류 = モン全般
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			RETURN 1
		ENDIF
	ENDIF
	RETURN 0

ELSEIF 종류 == 필드起動
	条件달성:0 = 1
	条件달성:1 = 1
	条件달성:2 = 1
	条件달성:3 = 1

	SIF 발동済_2(듀얼리스트,38101)
		条件달성:0 = 0
	SIF 발동済_2(듀얼리스트,38102)
		条件달성:1 = 0
	SIF 발동済_2(듀얼리스트,38104)
		条件달성:2 = 0
	SIF 발동済_2(듀얼리스트,38105)
		条件달성:3 = 0
	
	;ボレア
	IF 条件달성:0 == 1
		SIF メインフェイズ != 1
			条件달성:0 = 0
		SIF ターンプレイヤー != 듀얼리스트
			条件달성:0 = 0
		CALL FULLRESET
		효과条件名前 = 세리온즈 "릴리" 보레아
		CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
		SIF RESULT != 1
			条件달성:0 = 0
	ENDIF

	;アラシア
	IF 条件달성:1 == 1
		SIF メインフェイズ != 1
			条件달성:1 = 0
		SIF ターンプレイヤー != 듀얼리스트
			条件달성:1 = 0
		SIF 손패数(듀얼리스트) < 1
			条件달성:1 = 0
		CALL FULLRESET
		효과条件名前 = 세리온즈 “엠프리스” 아라시아
		효과条件소환可 = 1
		CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
			条件달성:1 = 0
	ENDIF

	;ブルズ
	IF 条件달성:2 == 1
		SIF メインフェイズ != 1
			条件달성:2 = 0
		SIF ターンプレイヤー != 듀얼리스트
			条件달성:2 = 0
		CALL FULLRESET
		효과条件名前 = 세리온즈 "불즈" 아인
		CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
		SIF RESULT != 1
			条件달성:2 = 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			条件달성:2 = 0
	ENDIF

	;ファム
	IF 条件달성:3 == 1
		SIF ターンプレイヤー == 듀얼리스트
			条件달성:3 = 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			条件달성:3 = 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件カテゴリ = 세리온즈
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			条件달성:3 = 1
	ENDIF
		
	IF 듀얼리스트 == "자신"
PRINTL 기동시킬 파츠를 선택해 주세요
		PRINTL
		SIF 条件달성:0 == 1
PRINTL [0] - 보레아
		SIF 条件달성:1 == 1
PRINTL [1] - 아라시아
		SIF 条件달성:2 == 1
PRINTL [2] - 아인
		SIF 条件달성:3 == 1
PRINTL [3] - 팜
		BINPUT
		PRINTL
	ELSE
		IF 条件달성:0 == 1
			;ボレア
			RESULT = 0
		ELSEIF 条件달성:1 == 1
			;アラシア
			RESULT = 1
		ELSEIF 条件달성:2 == 1
			;アイン
			RESULT = 2
		ELSEIF 条件달성:3 == 1
			;ファム
			RESULT = 3
		ENDIF
	ENDIF

	IF RESULT == 0
		SETCOLOR C_YELLOW
PRINTL 보레아의 파츠가 빛나기 시작했다!
		RESETCOLOR
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38101,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲필드 = 1
			효과範囲마함 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = 세리온즈
				효과条件종류 = 마함全般
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ELSEIF RESULT == 1
		SETCOLOR C_YELLOW
PRINTL 아라시아의 파츠가 빛나기 시작했다!
		RESETCOLOR
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38102,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲마함 = 1
				효과条件カテゴリ = 세리온즈
				효과条件종류 = モン全般
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ELSEIF RESULT == 2
		SETCOLOR C_YELLOW
PRINTL 아인의 파츠가 빛나기 시작했다!
		RESETCOLOR
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38104,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲마함 = 1
			효과条件カテゴリ = 세리온즈
			효과条件行先플래그 = 破壊行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)

			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
		ENDIF
	ELSEIF RESULT == 3
		SETCOLOR C_YELLOW
PRINTL 팜의 파츠가 빛나기 시작했다!
		RESETCOLOR
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38105,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲마함 = 1
			효과条件カテゴリ = 세리온즈
			효과条件行先플래그 = 손패行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)

			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"손패")
		ENDIF
	ENDIF

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = 세리온즈
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")

ELSEIF 종류 == 攻守変動
	CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,700)
ENDIF



