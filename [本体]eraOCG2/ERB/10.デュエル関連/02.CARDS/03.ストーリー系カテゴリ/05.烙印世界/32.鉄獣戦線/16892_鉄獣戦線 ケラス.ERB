@CARDCAN_26522(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 最大링크
#DIM DYNAMIC 条件달성
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,26522)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,26522)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,26522,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종족:0 = 야수족
	효과条件종족:1 = 비행야수족
	효과条件종류 = モン全般
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,26522)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족:0 = 야수족
	효과条件종족:1 = 비행야수족
	효과条件종류 = モン全般

	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	最大링크 = RESULT
	SIF 最大링크 == 0
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종족:0 = 야수족
	효과条件종족:1 = 비행야수족
	CALL 효과条件レベル_ADV(最大링크, "以下")
	효과条件소환可 = 1
	효과条件特不無視 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_26522(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 最大링크
#DIM DYNAMIC 選択링크値
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード2

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26522,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종족:0 = 야수족
		효과条件종족:1 = 비행야수족
		효과条件종류 = モン全般
		효과条件他所 = 1
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)			
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26522,2)
	IF RESULT == 0
		;묘지に存在する야수족/鳥獣の合計数が最大링크数
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종족:0 = 야수족
		효과条件종족:1 = 비행야수족
		효과条件종류 = モン全般
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		最大링크 = RESULT
			
		CALL FULLRESET
		효과条件종족:0 = 야수족
		효과条件종족:1 = 비행야수족
		효과条件종류 = 링크
		CALL 효과条件レベル_ADV(最大링크, "以下")
		CALL CARD_CHOOSE_BASIC(듀얼리스트, "EX덱",ゾーン,場所)	
		選択カード = RESULT
		IF 選択カード != 9999
			CALLFORM CARD_{GETVAR(@"%듀얼리스트%_EX덱:選択カード")}, "レベル"
			選択링크値 = RESULT
			CALL FULLRESET
			효과条件종류 = モン全般
			효과条件종족:0 = 야수족
			효과条件종족:1 = 비행야수족
			효과条件複数 = 選択링크値
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲EX덱 = 1
				효과条件固定 = 選択カード
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF	
		ENDIF
		EX소환可能종족:0 = 야수족
		EX소환可能종족:1 = 비행야수족
		CALL CARD_EX_RESTRICTION(듀얼리스트)
	ENDIF
ENDIF

