@CARDSUMMON_50604(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件名前:0 = 알버스의 낙윤
	素材条件名前:1 = 데스피아의 도화 알베르
ELSEIF EX参照 >= 10
	素材条件속성 = 어둠속성
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,50604) 
	RETURN RESULT
ENDIF



@CARDCAN_50604(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50604)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,50604)
		RETURN 0
	SIF 손패数(듀얼리스트) == 0
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲묘지 = 1	
	素材範囲필드 = 1
	素材範囲제외 = 1
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 융합
	효과条件固名前 = 신염룡 루베리온
	CALL 효과条件レベル_ADV(8, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_50604(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード



IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50604,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦無",1)

		CALL RESETAREA_MAT
		素材範囲묘지 = 1
		素材範囲필드 = 1
		素材範囲제외 = 1
		CALL FULLRESET
		효과条件종류 = 융합
		효과条件固名前 = 신염룡 루베리온
		CALL 효과条件レベル_ADV(8, "以下")
		효과条件소환可 = 1	
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
			CALL FUSSUMMON(듀얼리스트,選択カード,덱行き)
			CALL FULLRESET

			EX소환可能종류 = 융합
			CALL CARD_EX_RESTRICTION(듀얼리스트)
		ENDIF
	ENDIF
ENDIF




