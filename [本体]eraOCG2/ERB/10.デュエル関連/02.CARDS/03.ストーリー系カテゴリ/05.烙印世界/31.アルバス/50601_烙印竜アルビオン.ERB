@CARDSUMMON_50601(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件名前 = 알버스의 낙윤
ELSEIF EX参照 >= 10
	素材条件속성 = 빛속성
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,50601) 
	RETURN RESULT
ENDIF


@CARD_EXPLANATION_50601(종류)
#DIM DYNAMIC 종류

