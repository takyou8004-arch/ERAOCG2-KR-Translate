@CARDNAME_71600,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 사세괴＝라이포비아
	CASE "略称"
		RESULTS = 라이포비아
	CASE "カテゴリ"
		RESULTS:0 = 비사스＝스타프로스트
ENDSELECT


@CARD_71600(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN フィールド
ENDSELECT

RETURN 0

