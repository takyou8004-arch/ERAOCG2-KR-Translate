@CARDNAME_50676,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 드래그니티 나이트-로물루스
	CASE "略称"
		RESULTS = 로물루스
	CASE "カテゴリ"
		RESULTS:0 = 드래그니티
ENDSELECT


@CARD_50676(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 링크
	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 2
	CASE "攻撃力"
		RETURN 2000
	CASE "守備力"
		RETURN 2000
ENDSELECT

RETURN 0

