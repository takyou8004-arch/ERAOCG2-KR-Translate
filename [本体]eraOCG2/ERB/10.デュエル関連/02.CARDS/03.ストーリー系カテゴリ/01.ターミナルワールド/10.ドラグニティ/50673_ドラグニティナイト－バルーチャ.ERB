@CARDSUMMON_50673(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 8
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
    素材条件종족 = 드래곤족
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
    素材条件종족 = 비행야수족
ENDIF
IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,50673) 
	RETURN RESULT
ENDIF


@CARDCAN_50673(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50673)
SIF RESULT == 1
	RETURN 0
IF 종류 == EX소환時
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 드래곤족
	효과条件カテゴリ = 드래그니티
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50673(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50673)
	IF RESULT == 0
		REPEAT 5
			IF 마함数(듀얼리스트) <= 4
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件종족 = 드래곤족
				효과条件カテゴリ = 드래그니티
				효과条件任意 = 1
				CALL CARD_EQUIP_MONSTER_ADV(듀얼리스트,ゾーン,場所,,50673)
				SIF RESULT == 0
					BREAK
			ENDIF
		REND
	ENDIF

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件カテゴリ = 드래그니티
	효과条件표시 = 表側표시
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 300
	CALL FULLRESET
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)
ENDIF

