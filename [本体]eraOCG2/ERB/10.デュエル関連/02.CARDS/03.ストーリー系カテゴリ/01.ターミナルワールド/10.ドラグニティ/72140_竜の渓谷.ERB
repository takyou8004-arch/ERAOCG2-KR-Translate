@CARD_EXPLANATION_72140(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 "용의 계곡"이 된다.
CALLFORM CARD_ABLE(10,마함起動)
PRINTL ①: 1턴에 1번, 손패를 1장 버리고, 다음의 효과에서 1개를 선택하여 발동할 수 있다.
PRINTL ● 덱에서 레벨 4 이하의 "드래그니티" 몬스터 1장을 패에 넣는다.
PRINTL ● 덱에서 드래곤족 몬스터 1장을 묘지로 보낸다.

@CARDCAN_72140(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72140)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 손패数(듀얼리스트) == 0
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 드래그니티
	CALL 효과条件レベル_ADV(4, "以下")
	효과条件スーパー종족 = 드래곤족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 0
		RETURN 1
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72140(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 효과使用불가,10

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72140,10)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 드래그니티
			CALL 효과条件レベル_ADV(4, "以下")
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				효과使用불가:0 = 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件종족 = 드래곤족
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				효과使用불가:1 = 1

			IF 효과使用불가:0 != 1 && 효과使用불가:1 != 1
PRINTL 어느 쪽을 하시겠습니까?
				CALL YN_CHOICE(듀얼리스트,「레벨４ 이하의 「드래그니티」몬스터를 패에 넣는다","드래곤족 몬스터 １장을 묘지へ送る")
			ELSEIF 효과使用불가:0 != 1 && 효과使用불가:1 == 1
				RESULT = 0
			ELSE
				RESULT = 1
			ENDIF

			IF RESULT == 0
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = 드래그니티
				CALL 효과条件レベル_ADV(4, "以下")
				효과条件종류 = モン全般
				CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
			ELSE
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件종족 = 드래곤족
				CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72140)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "용의 계곡")
ENDIF