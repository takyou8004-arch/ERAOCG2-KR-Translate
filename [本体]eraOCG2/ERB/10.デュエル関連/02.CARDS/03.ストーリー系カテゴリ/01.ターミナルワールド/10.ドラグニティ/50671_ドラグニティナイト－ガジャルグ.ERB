@CARDSUMMON_50671(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 6
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
    素材条件종족 = 드래곤족
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
    素材条件종족 = 비행야수족
ENDIF
IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,50671) 
	RETURN RESULT
ENDIF


@CARDCAN_50671(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50671)
SIF RESULT == 1
	RETURN 0
IF 종류 == EX소환時
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 드래곤족
	효과条件カテゴリ = 드래그니티
	효과条件종류 = 링크以外
	CALL 효과条件レベル_ADV(3, "以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종족:0 = 드래곤족
	효과条件종족:1 = 비행야수족
	CALL 효과条件レベル_ADV(4, "以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50671(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50671)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종족 = 드래곤족
		효과条件カテゴリ = 드래그니티
		효과条件종류 = 링크以外
		CALL 효과条件レベル_ADV(3, "以下")
		CALL CARD_EQUIP_MONSTER_ADV(듀얼리스트,ゾーン,場所,,50671)
	ENDIF

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50671,10)
	IF RESULT == 0
		CALL FULLRESET
    	효과範囲덱 = 1
	    효과条件종족:0 = 드래곤족
	    효과条件종족:1 = 비행야수족
		CALL 효과条件レベル_ADV(4, "以下")
		효과条件종류 = モン全般
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		IF RESULT == 1
            CALL FULLRESET
            효과範囲손패 = 1
    	    효과条件종족:0 = 드래곤족
	        효과条件종족:1 = 비행야수족
		    CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
