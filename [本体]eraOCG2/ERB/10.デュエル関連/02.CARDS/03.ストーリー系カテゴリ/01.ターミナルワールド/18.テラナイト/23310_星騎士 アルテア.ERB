@CARDNAME_23310,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 테라나이트 알테어
	CASE "略称"
		RESULTS = 테라나이트알테어
	CASE "カテゴリ"
		RESULTS:0 = 테라나이트
		RESULTS:1 = 세이크리드
ENDSELECT


@CARD_23310(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 전사족 
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1700
	CASE "守備力"
		RETURN 1300
	CASE "성별"
		RETURN 雄性
ENDSELECT

RETURN 0

