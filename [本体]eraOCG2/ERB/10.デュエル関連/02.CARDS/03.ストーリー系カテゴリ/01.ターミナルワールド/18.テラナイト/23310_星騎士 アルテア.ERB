PRINTL 이 카드를 묘지에서 특수 소환한다.
PRINTL 이 턴, 자신은 X 몬스터로밖에 공격 선언할 수 없다.


@CARDCAN_23310(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23310)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,23310)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 엑시즈
	효과条件속성:0 = 빛속성
	효과条件속성:1 = 어둠속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	IF 듀얼리스트 != "자신"
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,23310)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,23310,"묘지")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ:0 = 테라나이트
	효과条件カテゴリ:1 = 세이크리드
	효과条件固名前 = 테라나이트 알테어
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23310(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC リピート횟수
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23310,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류 = 엑시즈
		효과条件속성:0 = 빛속성
		효과条件속성:1 = 어둠속성
		효과条件CNT = 1
		효과条件限界値 = 10
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		リピート횟수 = RESULT
		IF リピート횟수 >= 1
			CALL FULLRESET
			효과条件任意 = 1
			효과条件複数 = 100 - リピート횟수
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場単体",場所,"묘지")
		ENDIF
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23310,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"묘지",場所)
		攻撃可能종류 = 엑시즈
		CALL CARD_ATK_RESTRICTION(듀얼리스트)
	ENDIF
ENDIF

