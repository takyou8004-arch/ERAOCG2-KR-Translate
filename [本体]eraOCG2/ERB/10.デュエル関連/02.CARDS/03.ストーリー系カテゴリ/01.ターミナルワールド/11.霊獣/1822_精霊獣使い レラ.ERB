CALLFORM CARD_ABLE(2,身代효과)
PRINTL ②: 자신 필드의 「령수」 카드가 전투 / 효과로 파괴될 경우,
PRINTL 대신 필드 / 묘지의 이 카드를 제외할 수 있다.
CALLFORM CARD_ABLE(3,제외時)
PRINTL ③: 이 카드가 제외되었을 경우에 발동할 수 있다.
PRINTL 덱에서 「정령수사 레라」 이외의 「령수」 몬스터 1장을 특수 소환한다.

@CARDCAN_11820(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,11820)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,11820)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 령수
	효과条件종류 = モン全般
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF 발동済_2(듀얼리스트,11820)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"필드","묘지")
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	TRYCALLFORM CARDNAME_{破壊대상ID}("カテゴリ")
	 SIF !MATCH(RESULTS,"령수")	
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과","戦闘")
		RETURN 0
	RETURN 1
ELSEIF 종류 == 제외時
	SIF 발동済_3(듀얼리스트,11820)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 령수
	효과条件固名前 = 정령수사 레라
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_11820(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード
#DIM DYNAMIC レベル合計

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,11820,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件カテゴリ = 령수
		효과条件종류 = モン全般
		CALL CARD_CHOOSE_BASIC(듀얼리스트, "손패",ゾーン,場所)	
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_SUMMON_SHORI(듀얼리스트,選択カード,"攻撃표시",1)
		ENDIF
	ENDIF
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,11820,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		RETURN 1
	ENDIF
	RETURN 0
ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,11820,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 령수
		효과条件固名前 = 정령수사 레라
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
