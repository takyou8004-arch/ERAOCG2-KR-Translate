@CARDNAME_41821,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 성령수기 페톨핀
	CASE "略称"
		RESULTS = 수기 페톨핀
	CASE "カテゴリ"
		RESULTS:0 = 령수
ENDSELECT


@CARD_41821(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 원소정령족
	CASE "レベル"
		RETURN 6
	CASE "攻撃力"
		RETURN 200
	CASE "守備力"
		RETURN 2800
ENDSELECT

RETURN 0

