@CARDCAN_28179(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 現在レベル
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28179)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,28179)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 인벨즈
	CALL 효과条件レベル_ADV(7,"以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件他所 = 1
	효과条件除去種 = 묘지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_2(듀얼리스트,28179)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 벨즈
	CALL 효과条件レベル_ADV(7,"以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_28179(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 現在レベル
#DIM DYNAMIC 条件달성,2
#DIM DYNAMIC 選択レベル
#DIM DYNAMIC 選択カード攻撃力

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28179,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,2)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 인벨즈
			CALL 효과条件レベル_ADV(7,"以下")
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
			IF RESULT == 1
				TRYCALLFORM CARD_{RESULT:1},"攻撃力"
				選択カード攻撃力 = RESULT
				CALL FULLRESET
				효과条件표시 = 表側표시
				효과条件攻撃力 = 選択カード攻撃力
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드全体",場所,"묘지")
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28179)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件他所 = 1
		효과条件除去種 = 묘지
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 = 1
		CALL FULLRESET
		효과範囲마함 = 1
		효과範囲상대마함 = 1
		효과条件除去種 = 묘지
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:1 = 1

		IF 条件달성:0 == 1 && 条件달성:1 == 1
			CALL YN_CHOICE(듀얼리스트,"●このカード以外のフィールドのモンスターを全て破壊する。","●フィールドの마법 함정カードを全て破壊する。")
		ELSEIF 条件달성:0 == 1
			RESULT = 0
		ELSEIF 条件달성:1 == 1
			RESULT = 1
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			효과条件他所 = 1
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드全体",場所,"묘지")
			
		ELSEIF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両마함全体",場所,"묘지")
		ENDIF
	ENDIF
ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28179,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 벨즈
		CALL 효과条件レベル_ADV(7, "以下")
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		IF RESULT == 1
			TRYCALLFORM CARD_{RESULT:1},"レベル"
			選択レベル = RESULT
			CALL LIFE_CHANGE(듀얼리스트,"増加","효과",(選択レベル * 200))
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件名前 = 인벨즈 가자스
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
