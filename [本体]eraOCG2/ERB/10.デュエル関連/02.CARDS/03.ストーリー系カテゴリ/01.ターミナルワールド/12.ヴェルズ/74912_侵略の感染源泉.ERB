	CASE "名前"
		RESULTS = 침략의 감염원천
	CASE "略称"
		RESULTS = 침략의 감염원천
	CASE "カテゴリ"
		RESULTS:0 =  침략의
ENDSELECT


@CARD_74912(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN フィールド
ENDSELECT

RETURN 0

@CARD_EXPLANATION_74912(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 "침략의 감염원천"이 된다.
PRINTL 이 카드명의 ②③의 효과는 각각 1턴에 1회밖에 사용할 수 없다.
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ①：자신 필드에 앞면 표시로 존재하는,
PRINTL 레벨 5 이상의 "인벨즈" 몬스터와 이 카드 이외의 "침략의" 마법 / 함정 카드는 파괴 내성을 얻는다.
CALLFORM CARD_ABLE(1,마함起動)
PRINTL ②：자신 메인 페이즈에 발동할 수 있다.
PRINTL 손패 제외 상태인 "벨즈" 몬스터 1장을 덱으로 되돌린다.
PRINTL 그 후, 그 몬스터보다 레벨이 낮은 "인벨즈" 몬스터 1장을 패에 추가해도 좋다.
CALLFORM CARD_ABLE(2,효과後誘発)
PRINTL ③："벨즈" 몬스터가 파괴되었을 경우에 발동할 수 있다.
PRINTL 상대의 묘지에서 몬스터 1장을 선택하고, 자신 필드에 특수 소환한다.
PRINTL 이 효과로 특수 소환한 몬스터는 레벨이 4가 되고, 필드 위에 존재하는 한 "벨즈" 몬스터로서도 취급한다.

@CARDCAN_74912(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,74912)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,74912)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲제외 = 1
	효과条件カテゴリ = 벨즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ELSEIF 종류 == 손패起動
		SIF 마함数(듀얼리스트) >= 5
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_2(듀얼리스트,74912)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2	
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 벨즈
	효과条件종류 = モン全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대묘지 = 1
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_74912(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カードレベル

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,74912,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲제외 = 1
		효과条件カテゴリ = 벨즈
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			TRYCALLFORM CARD_{RESULT:1},"レベル"
			選択カードレベル = RESULT - 1
			CALL FULLRESET
			효과条件カテゴリ = 인벨즈
			효과条件任意 = 1
			CALL 효과条件レベル_ADV(選択カードレベル,"以下")
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,74912)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,74912,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대묘지 = 1
		효과추가종류 = 140 + 4
		효과추가カテ = 벨즈
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "침략의 감염원천")

	CALL FULLRESET
	효과条件カテゴリ = 인벨즈
	CALL 효과条件レベル_ADV(5,"以上")
    CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")

	CALL FULLRESET
	효과条件カテゴリ = 침략의
	효과条件他所 = 1
    CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"破耐")
ENDIF
