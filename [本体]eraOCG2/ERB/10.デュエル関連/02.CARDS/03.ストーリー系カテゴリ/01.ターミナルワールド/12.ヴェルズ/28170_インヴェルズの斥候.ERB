@CARDNAME_28170,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 인벨즈의 척후
	CASE "略称"
		RESULTS = 침략자의 척후
	CASE "カテゴリ"
		RESULTS:0 = 인벨즈
		RESULTS:1 = 벨즈
ENDSELECT


@CARD_28170(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 1
	CASE "攻撃力"
		RETURN 200
	CASE "守備力"
		RETURN 0
ENDSELECT

RETURN 0

