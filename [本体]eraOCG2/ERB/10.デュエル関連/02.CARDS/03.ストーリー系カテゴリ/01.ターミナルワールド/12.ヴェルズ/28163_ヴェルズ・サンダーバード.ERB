@CARDCAN_28163(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28163)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,28163)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件任意 = 1
	효과条件カテゴリ = 벨즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_召種:場所") != 召種제외
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_28163(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC カード名

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28163,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,제외行き,1)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件任意 = 1
		효과条件カテゴリ = 벨즈
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)	
		IF RESULT == 1
			CALLFORM CARD_{RESULT:1}("종류")
			IF RESULT == 通常モン && モンスター数(듀얼리스트) < 5
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件任意 = 1
				효과条件カテゴリ = 벨즈
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)	
			ENDIF
			SS소환可能속성 = 어둠속성
			CALL CARD_SS_RESTRICTION(듀얼리스트)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,300)	
ENDIF
