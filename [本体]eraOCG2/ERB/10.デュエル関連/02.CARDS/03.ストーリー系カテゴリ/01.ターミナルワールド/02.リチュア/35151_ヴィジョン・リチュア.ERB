#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 비전 리추어
	CASE "略称"
		RESULTS = 비전
	CASE "カテゴリ"
		RESULTS:0 = 리추어
ENDSELECT


@CARD_35151(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
	
		RETURN 효과モン
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 바다생물족
	CASE "レベル"
		RETURN 2
	CASE "攻撃力"
		RETURN 700
	CASE "守備力"
		RETURN 500
	CASE "의식代用"
		RETURN 물속성

ENDSELECT

RETURN 0

