@CARDCAN_55600(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과使用불가,10
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,55600)
SIF RESULT == 1
	RETURN 0



IF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0

	;마스터 ダイヤ　【효과使用불가:0】
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前:0 = 더미０
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),1) != 1
		효과条件名前:1 = 젬나이트 레이디 라피스라줄리
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),2) != 1 
		효과条件名前:2 = 젬나이트 아쿠아마리나
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),3) != 1
		효과条件名前:3 = 젬나이트 파즈
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),4) != 1
		효과条件名前:4 = 젬나이트 프리즘아우라
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),5) != 1
		효과条件名前:5 = 젬나이트 루비즈
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),6) != 1
		효과条件名前:6 = 젬나이트 마디라
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),7) != 1
		효과条件名前:7 = 젬나이트 세라피
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:0 = 1

	;ラピスラズリ（GETBIT1）　【효과使用불가:1】
	IF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),1) == 1
		;ダイヤは발동済み使ってないので、こっち（コピー효과使用판정）で有効活用しましょう。
		SIF 발동済_1(듀얼리스트,55600)
			효과使用불가:1 = 1
	ELSE
		효과使用불가:1 = 1
	ENDIF

	;プリズムオ-ラ（GETBIT4）　【효과使用불가:2】
	IF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),4) == 1
		;효과使用불가を活用することでそのまんまプリズムオ-ラの条件引っ張れるよ！
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ = 젬나이트
		CALL CARD_CHECK_ADV(듀얼리스트,場所)
		SIF RESULT != 1
			효과使用불가:2 = 1
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件표시 = 表側표시 
		CALL CARD_CHECK_ADV(듀얼리스트,場所)
		SIF RESULT != 1
			효과使用불가:2 = 1
	ELSE
		효과使用불가:2 = 1
	ENDIF
	;젬나이트 루비즈(GETBIT5）　【효과使用불가:3】
	IF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),5) == 1
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 젬나이트
		효과条件他所 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			효과使用불가:3 = 1
	ELSE
		효과使用불가:3 = 1
	ENDIF
	;젬나이트 세라피(GETBIT7）　【효과使用불가:4】
	IF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),7) == 1
		;空いてるスペ-スの有効活用
		SIF 발동済_2(듀얼리스트,55600)
			효과使用불가:4 = 1
	ELSE
		효과使用불가:4 = 1
	ENDIF

	;효과全部使えないなら、FULLNG
	SIF 효과使用불가:0 == 1 && 효과使用불가:1 == 1 && 효과使用불가:2 == 1 && 효과使用불가:3 == 1 && 효과使用불가:4 == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン終了時強制
	;ゾーン판정は！必ず先頭！！
	SIF ゾーン != "필드"
		RETURN 0
	;アクアマリナ(GETBIT2）
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),2) == 0
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") != 1 
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == バトル開始時
	SIF 발동済_3(듀얼리스트,55600)
		RETURN 0
	;ゾーン판정は！必ず先頭！！
	SIF ゾーン != "필드"
		RETURN 0
	;アクアマリナ(GETBIT2）
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),2) == 0
		RETURN 0
	SIF 발동済_2(듀얼리스트,55605)
		RETURN 0

	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == バトル開始時強制
	;ゾーン판정は！必ず先頭！！
	SIF ゾーン != "필드"
		RETURN 0

	;パ-ズ(GETBIT3）
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),3) == 0
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_戦:場所") == 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃後誘発
	;ゾーン판정は！必ず先頭！！
	SIF ゾーン != "필드"
		RETURN 0
	;パ-ズ(GETBIT3）
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),3) == 0
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 直前戦闘破壊ID(듀얼리스트,1) == 0
		RETURN 0	
	RETURN 1

ELSEIF 종류 == 지속효과
	;ゾーン판정は！必ず先頭！！！！！！
	SIF ゾーン != "필드"
		RETURN 0
	;지속효과側にコメントあり
	;SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),5) == 0 && GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),6) == 0
	;	RETURN 0 
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

