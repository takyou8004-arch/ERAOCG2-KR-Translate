						CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"汎数",128)
				ENDSELECT
			ENDIF
		ENDIF
	ELSEIF RESULT == 2
		;ラピスラズリ（GETBIT1）
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55600,1)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲EX덱 = 1
			효과条件カテゴリ = 젬나이트
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)	
			IF RESULT == 1
				CALL FULLRESET
				효과範囲필드 = 1
				효과範囲상대필드 = 1
				효과条件종류 = モン全般
				효과条件召種 = 20
				효과条件CNT = 1
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				CALL LIFE_CHANGE(듀얼리스트,"減少","효과",(RESULT * 500),1)
			ENDIF
		ENDIF
	ELSEIF RESULT == 3
		;プリズムオ-ラ（GETBIT4）
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55600)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件カテゴリ = 젬나이트
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲상대필드 = 1
				효과範囲상대마함 = 1
				CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"묘지")
			ENDIF
		ENDIF
	ELSEIF RESULT == 4
		;젬나이트 루비즈(GETBIT5）
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55600)
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 젬나이트
			효과条件他所 = 1
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
			IF RESULT == 1
				CALLFORM CARD_{RESULT:1}("攻撃力")
				攻撃力상승 = RESULT
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",攻撃力상승)
			ENDIF
		ENDIF
	ELSEIF RESULT == 5
		;젬나이트 세라피(GETBIT7）
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55600,2)
		IF RESULT == 0
			PRINTW 소환権が一つ増えました。
			소환権 ++
		ENDIF
	ENDIF

ELSEIF 종류 == ターン終了時強制
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"表",2,1)

ELSEIF 종류 == バトル開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55600,3)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"손패")
	ENDIF

ELSEIF 종류 == バトル開始時強制
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦",2,1)

ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55600)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대묘지 = 1
		CALLFORM CARD_{直前戦闘破壊ID(듀얼리스트,1)}("攻撃力")
		ダメージ量 = RESULT
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ量,1)
	ENDIF

ELSEIF 종류 == 지속효과
	;こっちで条件づけてるから、CARD_CANに入らないよ
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),5) == 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"貫通")
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),6) == 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦阻")
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲제외 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 젬나이트
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 100
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)	
ENDIF
