@CARDNAME_92426,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 클리포트 다운
	CASE "略称"
		RESULTS = 기각의 동결
	CASE "カテゴリ"
		RESULTS:0 = 클리포트
ENDSELECT


@CARD_92426(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속함정
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1800
	CASE "守備力"
		RETURN 1000
	CASE "分割"
		RETURN 효과なし
ENDSELECT

RETURN 0

