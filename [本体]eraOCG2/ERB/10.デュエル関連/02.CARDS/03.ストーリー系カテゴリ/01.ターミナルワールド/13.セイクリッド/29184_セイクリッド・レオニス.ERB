@CARDNAME_29184,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 세이크리드 레오니스
	CASE "略称"
		RESULTS = 사 레오니스
	CASE "カテゴリ"
		RESULTS:0 = 세이크리드

ENDSELECT


@CARD_29184(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 야수족 
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 1000
	CASE "守備力"
		RETURN 1800
	CASE "성별"
		RETURN 雄性
ENDSELECT

RETURN 0

