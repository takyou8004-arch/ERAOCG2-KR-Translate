@CARDNAME_11818,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 영령수사－세피라 음피리카
	CASE "略称"
RESULTS = 세피라 음피리카
	CASE "カテゴリ"
RESULTS:0 = 령수
RESULTS:1 = 령수사
RESULTS:2 = 세피라
ENDSELECT


@CARD_11818(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 사이킥족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 1000
	CASE "守備力"
		RETURN 1500
	CASE "성별"
		RETURN 牝性
	CASE "分割"
		RETURN 펜듈럼
	CASE "특수制限"
		RETURN 1
ENDSELECT

