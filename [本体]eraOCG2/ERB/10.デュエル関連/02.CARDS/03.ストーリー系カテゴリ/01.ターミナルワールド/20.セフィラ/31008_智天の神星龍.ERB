@CARDNAME_31008,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 세피라 트라 그라마톤
	CASE "略称"
		RESULTS = 지천의 신성룡
	CASE "カテゴリ"
		RESULTS:0 = 세피라
ENDSELECT


@CARD_31008(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 원소정령족
	CASE "レベル"
		RETURN 11
	CASE "攻撃力"
		RETURN 3450
	CASE "守備力"
		RETURN 2950
	CASE "성별"
		RETURN 雄性
	CASE "分割"
		RETURN 펜듈럼
	CASE "소환불가"
		RETURN 1
	CASE "특수불가"
		RETURN 1
ENDSELECT

