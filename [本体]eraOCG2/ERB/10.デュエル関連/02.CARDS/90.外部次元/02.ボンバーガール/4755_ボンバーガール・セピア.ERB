@CARDCAN_4755(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4755)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,4755)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 봄바-걸
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,4759)
	SIF RESULT < 3
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 어태커
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,4759)
	SIF RESULT != 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == バトル開始時
	SIF 발동済_3(듀얼리스트,4755)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲마함 = 1
	효과範囲손패 = 1
	효과条件カテゴリ = 보머
	효과条件종류 = 마법全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4755(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과횟수



IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4755,1)
	IF RESULT == 0

		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)

		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과条件カテゴリ = 뱀파이어 
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,0,-1000)

	CALL FULLRESET
	CALL STATCHANGE_BASIC(듀얼리스트,"상대필드",場所,0,-1000,4755)
ELSEIF 종류 ==バトル開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4755,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과範囲묘지 = 1
		효과範囲손패 = 1
		효과条件カテゴリ = 보머
		효과条件複数 = 97
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			효과횟수 = RESULT:2 * 2
			FOR カウンタ,0,효과횟수
				CALL FULLRESET
				효과範囲상대필드 = 1
				효과추가종류 = 攻撃표시
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,4755)
				IF RESULT == 1
					CALL FULLRESET
					효과추가종류 = 攻撃표시
					효과추가종류 = 13
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"永守DOWN",1000)
				ELSE
					CALL LIFE_CHANGE(듀얼리스트,"減少","효과",500,1)
				ENDIF
			NEXT
		ENDIF
	ENDIF
ENDIF

