@CARDCAN_64750(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,64750)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,64750)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	IF 종류 == 마함起動
		SIF 손패数(듀얼리스트) == 0
			RETURN 0
	ELSEIF 종류 == 손패起動
		SIF 손패数(듀얼리스트) == 1
			RETURN 0
	ENDIF

	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 봄바-걸
	효과条件종류 = モン全般
	효과条件固名前起動 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_64750(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_ID,10
#DIMS DYNAMIC 選択カテゴリ,10
IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64750,1)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件カテゴリ = 봄바-걸
			효과条件종류 = モン全般
			효과条件複数 = 2
			효과条件固名前選択 = 1
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)

			選択カード_ID:0 = RESULT:1
			選択カード_ID:1 = RESULT:2
			;PRINTFORMW 選択カード_ID:0({選択カード_ID:0})/選択カード_ID:1({選択カード_ID:1})
			TRYCALLFORM CARDNAME_{選択カード_ID:0},"カテゴリ"
			選択カテゴリ:0 = %RESULTS:1%
			TRYCALLFORM CARDNAME_{選択カード_ID:1},"カテゴリ"
			選択カテゴリ:1 = %RESULTS:1%

			;PRINTFORMW 選択カテゴリ:0(%選択カテゴリ:0%)/選択カテゴリ:1(%選択カテゴリ:1%)

			IF 選択カテゴリ:0 != 選択カテゴリ:1
				CALL CARD_GENERATE_HAND(듀얼리스트,204750)
			ENDIF

		ENDIF
	ENDIF
ENDIF
