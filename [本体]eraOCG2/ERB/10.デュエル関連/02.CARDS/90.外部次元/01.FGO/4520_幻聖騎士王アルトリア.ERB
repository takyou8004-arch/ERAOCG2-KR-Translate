@CARDCAN_4520(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4520)
SIF RESULT == 1
	RETURN 0
IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,4520)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = 装備마법
	효과条件カテゴリ = 성검
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1	
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_2(듀얼리스트,4520)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件종류 = 装備마법
	효과条件カテゴリ = 성검
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4520(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 装備마법数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4520,1)
	IF RESULT == 0
		REPEAT 3
			CALL FULLRESET
			효과条件종류 = 装備마법
			효과条件カテゴリ = 성검
			효과条件任意 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)	
			選択カード = RESULT
			IF 選択カード != 9999
				選択カード_ID = GETVAR(@"%듀얼리스트%_묘지:選択カード")
				CALL FULLRESET
				효과条件固定 = 場所
				CALLFORM CARD_EQUIP_ADV(듀얼리스트,選択カード,"묘지")
			ELSE
				BREAK
			ENDIF
		REND
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4520,2,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件종류 = 装備마법
		효과条件CNT = 1		
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		装備마법数 = RESULT
		CALL FULLRESET
		효과条件複数 = 100 - 装備마법数
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
	ENDIF
ENDIF