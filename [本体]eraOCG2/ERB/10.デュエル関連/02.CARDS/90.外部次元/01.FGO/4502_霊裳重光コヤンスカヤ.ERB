CALLFORM CARD_ABLE(2,손패起動,フリー誘発)
PRINTL ③: 효과를 9회 이상 사용한 턴에 발동할 수 있다.
PRINTL 이 카드를 패에서 특수 소환한다.

@CARDCAN_4502(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 戦闘カード
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4502)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,4502)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종족 = 기계족	
	CALL 효과条件レベル_ADV(7, "以上")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	戦闘カード = GETVAR(@"%듀얼리스트%_MZ_種:%듀얼리스트%_戦闘カード")
	SIF !GROUPMATCH(戦闘カード,야수족,기계족)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 손패起動 || 종류 == フリー誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_2(듀얼리스트,4502)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4502,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_발동数") +  GETVAR(@"%対面者%_발동数") < 9
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_4502(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 戦闘カード
#DIM DYNAMIC 選択カード_ID

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4502,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종족 = 기계족	
		CALL 효과条件レベル_ADV(7, "以上")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARD_{選択カード_ID}, "攻撃力"
			CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",(RESULT * 2))
		ENDIF
	ENDIF
ELSEIF 종류 == 攻撃時強制誘発
	CALL SET_PLAYER_INFO(듀얼리스트,"ダメージ倍化", 3,1)
ELSEIF 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4502,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
	ENDIF
ENDIF
