@CARDCAN_44520(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタ２
#DIM DYNAMIC 条件レベル
#DIM DYNAMIC 素材候補レベル,5
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 条件달성
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,44520)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,44520)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 성기사
	효과条件성별 = 牝性
	효과条件종류 = モン全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT < 2
		RETURN 0
	ELSEIF RESULT:2 < 9
		RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == EX소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,44520)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF 발동済_2(듀얼리스트,44520)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
효과条件名前 = 찬란하여라, 나의 광휘의 홀이여
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 = 1
	CALL FULLRESET
	SIF 条件달성
		효과範囲제외 = 1
	효과範囲손패 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 성검
	효과条件종류 = 装備마법
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_44520(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件レベル
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,44520)
	IF RESULT == 0
		条件レベル = 9
		WHILE 条件レベル > 0
			CALL FULLRESET
			효과条件カテゴリ = 성기사
			효과条件성별 = 牝性
			효과条件종류 = モン全般
			IF 条件レベル == 9
				CALL 효과条件レベル_ADV(条件レベル - 1, "以下")
			ELSE
				CALL 효과条件レベル_ADV(条件レベル, "以下")
			ENDIF
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
			IF RESULT == 1
				CALLFORM CARD_{RESULT:1}, "レベル"
				条件レベル -= RESULT
			ENDIF
		WEND
		CALL FULLRESET
		효과条件特不無視 = 1
		CALL CARD_EX_SUMMON(듀얼리스트,"EX덱",場所)
	ENDIF
ELSEIF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,44520,1)
	IF RESULT == 0
		IF GETVARS(@"%듀얼리스트%_フィールド名") == "바다"
PRINTL 묘지 제외 상태에서 「성검」 장착 마법 카드 1장을 패에 더하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSE
			RESULT = いいえ
		ENDIF
		IF RESULT == はい
			CALL FULLRESET
			효과範囲묘지 = 1
			효과範囲제외 = 1
			효과条件カテゴリ = 성검
			효과条件종류 = 装備마법
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ELSEIF RESULT == いいえ
PRINTL <<<< 보구 >>>>
			CALL CARD_GENERATE_MAGIC(듀얼리스트,144520,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,44520,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
효과条件名前 = 찬란하여라, 나의 광휘의 홀이여
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성 = 1

		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲마함 = 1
		SIF 条件달성
			효과範囲제외 = 1
		효과条件カテゴリ = 성검
		효과条件종류 = 装備마법
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"묘지")
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",500)
		ENDIF
	ENDIF
ENDIF


