@CARD_EXPLANATION_164511(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,ターン終了時強制,攻撃後強制誘発)
PRINTL ①: 이 카드의 공격 후, 또는 상대의 엔드 페이즈에 발동한다.
PRINTL 상대에게 1200 데미지를 준다.
CALLFORM CARD_ABLE(0,身代효과)
PRINTL ②: 이 카드가 파괴될 경우, 대신에 이 몬스터의 공격력 / 수비력을 500 내릴 수 있다.

@CARDCAN_164511(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者



IF 종류 == 攻撃後強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF 破壊대상ゾーン != "마함"
		RETURN 0
	SIF 破壊대상場所 != 場所
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과","戦闘")
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_永攻:場所") < 500
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_永守:場所") < 500
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_164511(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

IF 종류 == 攻撃後強制誘発 || 종류 == ターン終了時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,164511)
	IF RESULT == 0
		CALL FULLRESET
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",1200)
	ENDIF
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,164511)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",-500)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永守",-500)
		RETURN 1
	ENDIF
	RETURN 0
ENDIF
