@CARDSUMMON_4802(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 10
素材条件종류 = 싱크로

;1体目の条件
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
	素材条件종족 = 천사족
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
	素材条件속성 = 빛속성
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,4802) 
	RETURN RESULT
ENDIF

@CARDCAN_4802(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4802)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4802,"묘지")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲상대묘지 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲상대묘지 = 1
	효과条件固名前 = 치유의 주아
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_4802(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4802,10)
	IF RESULT == 0
		SETCOLOR C_PINK
		PRINTW "この傷ついた魂に癒しの光を！" 
		RESETCOLOR
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲상대묘지 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 지속효과
	CALL SET_PLAYER_INFO(듀얼리스트,"SS소환禁止묘지",3,1)

ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4802)
	IF RESULT == 0
		SETCOLOR C_PINK
		PRINTW "ア、アンタのためにしてあげるんじゃないんだからっ。"  
		RESETCOLOR
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲상대묘지 = 1
		효과条件固名前 = 치유의 주아
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			選択カード = RESULT
			TRYCALLFORM CARD_{RESULT:99},"종류"
			SIF RESULT >= 3 && RESULT < 10
				条件달성 = 1
			CALL CARD_SELECT(듀얼리스트,選択カード)
			選択カード = RESULT
			PRINTFORMW {条件달성}
			IF 条件달성 == 1
				CALL FULLRESET
				CALL CARD_EX_SUMMON(대상者（CS）,"묘지",選択カード)
			ELSE
				CALL FULLRESET
				CALL CARD_SP_SUMMON(대상者（CS）,"묘지",選択カード)
			ENDIF
		ENDIF
	ENDIF
ENDIF
