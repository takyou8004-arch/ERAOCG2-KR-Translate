@CARDCAN_4807(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4807)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과소환
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 10
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン開始時強制
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 戦破壊→묘지
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	SIF 処理中_듀얼리스트 == 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4807(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC ダメージ修正
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과소환
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件複数 = 10
	CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン開始時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4807)
	IF RESULT == 0
		 
		CALL DICE_ROLL(듀얼리스트,1)
		攻撃力修正 += RESULT
		CALL DICE_ROLL(듀얼리스트,1)
		攻撃力修正 += RESULT
		攻撃力修正 = 攻撃力修正 * 1000
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"一攻",攻撃力修正)
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"一守",攻撃力修正)
		IF 攻撃力修正 >= 10000
			SETCOLOR C_YELLOW
			PRINTW "たらばがに！"
			RESETCOLOR
		ELSE
			SETCOLOR C_YELLOW
			PRINTW "うっみゅ-うみゅうみゅ。"
			RESETCOLOR
		ENDIF
	ENDIF

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4807,10)
	IF RESULT == 0
		SETCOLOR C_YELLOW
		PRINTW "うみみゃぁ！"
		RESETCOLOR
		CALL DICE_ROLL(듀얼리스트,1)
		ダメージ修正 = RESULT * 100
		CALL FULLRESET
		효과条件他所 = 1
		효과추가종류 = 11
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"묘지",91006,ダメージ修正)
	ENDIF

ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4807)
	IF RESULT == 0
		SETCOLOR C_YELLOW
		PRINTW "…ぅっぅぅ…っぅぅっぅううううみみゃぁ！！！"
		RESETCOLOR
		CALL FULLRESET
		CALL CARD_GENERATE(듀얼리스트,14807)
	ENDIF
ENDIF



