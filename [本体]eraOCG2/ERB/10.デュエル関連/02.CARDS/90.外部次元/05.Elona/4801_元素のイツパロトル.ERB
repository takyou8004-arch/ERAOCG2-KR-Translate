#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 원소의 이츠파로틀
	CASE "略称"
		RESULTS = 이츠파로틀
	CASE "カテゴリ"
		RESULTS:0 = 이르바의 신
		RESULTS:1 = 마력카운터
		RESULTS:2 = Elona
ENDSELECT


@CARD_4801(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 융합
	CASE "속성"
		RESULT:3 = 빛속성
		RESULT:2 = 물속성
		RESULT:1 = 화염속성
		RETURN 신속성
	CASE "종족"
		RETURN 환신야수족
	CASE "レベル"
		RETURN 10
	CASE "攻撃力"
		RETURN 2800
	CASE "守備力"
		RETURN 2500
	CASE "성별"
		RETURN 雄性
	CASE "특수불가"
		RETURN 1
	CASE "C불가"
		RETURN 1
ENDSELECT
RETURN 0

@CARDSUMMON_4801(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要素材数 = 5

IF EX参照 == 0 || EX参照 == 1
	素材条件종족 = 원소정령족
	素材条件속성 = 화염속성
ELSEIF EX参照 == 10
	素材条件종족 = 원소정령족
	素材条件속성 = 물속성
ELSEIF EX参照 == 11
	素材条件종족 = 원소정령족
	素材条件속성 = 빛속성
ELSE
	素材条件종족 = 마법사족
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,4801) 
	RETURN RESULT
ENDIF

