@CARDCAN_4801(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성,3

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4801)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時強制 || 종류 == 특수소환時強制
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 발동強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 마법全般
	CALL CARD_CHECK_START_DATA_2(듀얼리스트,2)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン開始時強制
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_魔Ｃ:場所") < 3
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성:0 ++
	CALL FULLRESET
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성:1 ++
	CALL FULLRESET
	효과範囲상대묘지 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성:2 ++
	SIF 条件달성:0 == 0 && 条件달성:1 == 0 && 条件달성:2 == 0
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_4801(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,3

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == EX소환時強制 || 종류 == 특수소환時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4801)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과範囲상대묘지 = 1
		효과範囲상대제외 = 1
		효과条件종류 = 마법全般
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 0
			RETURN 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"魔Ｃ",RESULT)
		SETCOLOR C_RED
		PRINTW 元素のイツパロトルは周囲の魔力を吸収した！
		RESETCOLOR
	ENDIF

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"魔耐")

ELSEIF 종류 == 발동強制誘発 || 종류 == ターン開始時強制
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"魔Ｃ",2)

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4801)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 ++
		CALL FULLRESET
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:1 ++
		CALL FULLRESET
		효과範囲상대묘지 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:2 ++
		
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"魔Ｃ",-3)
		IF 듀얼리스트 == "자신"
PRINTL 효과를 선택해 주세요
			PRINTL
			SIF 条件달성:0 != 0
PRINTL [0] - ● 상대 필드의 몬스터 1장을 파괴하고, 그 공격력만큼의 데미지를 준다.
			SIF 条件달성:1 != 0
PRINTL [1] - ● 상대 필드의 마법 / 함정 카드 1장을 제외한다. 그 후, 상대의 패를 1장 덱으로 되돌릴 수 있다.
			SIF 条件달성:2 != 0
PRINTL [2] - ● 상대의 묘지의 카드 1장을 덱으로 되돌리고, 다음 상대의 드로우 페이즈를 스킵한다.
			BINPUT
		ELSE
			IF 条件달성:0 != 0
				RESULT = 0
			ELSEIF 条件달성:1 != 0
				RESULT = 1
			ELSEIF 条件달성:2 != 0
				RESULT = 2
			ENDIF
		ENDIF
		IF RESULT == 0
			SETCOLOR C_RED
			PRINTW "汝に原初の화염を。"
			RESETCOLOR
			CALL FULLRESET
			효과추가종류 = 1
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
		ELSEIF RESULT == 1
			SETCOLOR C_RED
			PRINTW "汝に身を焦がす露を。"
			RESETCOLOR
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함単体",場所,"제외")
			IF RESULT == 1
				SIF 손패数(対面者) < 1
					RETURN 0
				SIF 듀얼리스트 == "자신"
PRINTL 상대의 패를 덱으로 되돌리겠습니까?
				CALL YN_CHOICE(듀얼리스트)
				SIF RESULT == 1
					RETURN 0
				CALL FULLRESET
				효과範囲상대손패 = 1
				효과条件行先플래그 = 덱行き
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ELSEIF RESULT == 2
			SETCOLOR C_RED
			PRINTW "汝に蝕みの雷を。"
			RESETCOLOR
			CALL FULLRESET
			효과範囲상대묘지 = 1
			효과条件行先플래그 = 덱行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT == 1
				CALL SET_PLAYER_INFO(듀얼리스트,"ドロースキップ",1,1)
		ENDIF
	ENDIF
ENDIF
