@CARDCAN_71075(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,71075)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF GETVAR(@"%듀얼리스트%_魔_T1汎数:場所") > 2
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_71075(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 選択カード名前
IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71075,2)
	IF RESULT == 0
		PRINTFORML %듀얼리스트%は우물물をすくって飲んだ。
		CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"T1汎数",1)
		SELECTCASE RAND:6
			CASE 0
				SELECTCASE RAND:3
					CASE 0
						PRINTL
						SETCOLOR C_YELLOW
PRINTL 엄청난 행운이 찾아온 것 같았지만 기분 탓이었다.
						WAIT
						RESETCOLOR
						PRINTL
					CASE 1
						PRINTL
PRINTL 이 물은 청량하다(효과 없음)
						WAIT
						PRINTL
					CASE 2
							PRINTL
							SETCOLOR C_YELLOW
PRINTL 무엇을 바라나?
							WAIT
							RESETCOLOR
PRINTL 「q！！」
							PRINTW 何もおきない…
				ENDSELECT
			CASE 1
				PRINTL
PRINTL 우물은 말랐다.
				WAIT
				PRINTL 
				CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,破壊行き)
			CASE 2
				PRINTL
				PRINTFORML %듀얼리스트%は毒を浴びた！
				WAIT
				PRINTL 
				CALL LIFE_CHANGE(듀얼리스트,"減少","효과",1000)
			CASE 3
				SELECTCASE RAND:3
					CASE 0
						PRINTL
						PRINTFORML %듀얼리스트%の関節はしなやかになった。
						WAIT
						PRINTL 
					CASE 1
						PRINTL
						PRINTFORML %듀얼리스트%は우물の中に金貨を見つけた。
						WAIT
						PRINTL
					CASE 2
						PRINTL
						PRINTFORML %듀얼리스트%の潜在能力が상승した。
						WAIT
						PRINTL 
				ENDSELECT
				CALL CARDDRAW_BASIC(듀얼리스트,1)
			CASE 4
				PRINTL
				PRINTFORML %듀얼리스트%は何かいけないものを飲み込んだ。
				WAIT
				PRINTL
				CALL FULLRESET
				CALL CARD_GENERATE(듀얼리스트,171075,"攻撃표시",1)
			CASE 5
				PRINTL
				SETCOLOR C_YELLOW
PRINTL 무엇을 바라나?
				WAIT
				RESETCOLOR
				CALL FULLRESET
				효과範囲덱 = 1
				효과範囲EX덱 = 1
				CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT != 9999
					選択カード = RESULT
					選択カード_ID = RESULT:99
					TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
					選択カード名前 = %RESULTS%
					TRYCALLFORM CARD_{選択カード_ID},"종류"
					IF RESULT >= 효과モン && RESULT <= 의식
						SETCOLOR C_YELLOW
						SIF 듀얼리스트 == "자신"
PRINTL 특수소환할까?
						RESETCOLOR
						CALL YN_CHOICE(듀얼리스트)
					ELSEIF RESULT >= 융합 && RESULT <= 초차원
						RESULT = はい
					ELSE
						RESULT = いいえ
					ENDIF
					IF RESULT == はい
						CALL CARD_SELECT(듀얼리스트,選択カード)
						CALL FULLRESET
						CALL CARD_SP_SUMMON(듀얼리스트,参照先（CS）,選択カード（CS）)
					ELSEIF RESULT == いいえ
						CALL CARD_SELECT(듀얼리스트,選択カード)
						PRINTFORML %듀얼리스트%の足元に%選択カード名前%が転がって来た。
						SETCOLOR 255,255,255
						CALL CARD_DISPOSE(듀얼리스트,参照先（CS）,選択カード（CS）,손패行き)
						RESETCOLOR
					ENDIF
				ENDIF
		ENDSELECT
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71075,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ENDIF

