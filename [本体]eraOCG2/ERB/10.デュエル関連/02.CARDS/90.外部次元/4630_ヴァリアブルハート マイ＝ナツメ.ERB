@CARDCAN_4630(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4630)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,4630)
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,4630)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件속성:0 = 땅속성
	효과条件속성:1 = 화염속성
	효과条件속성:2 = 바람속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時予約
	RETURN 1
ENDIF


@CARDEFFECT_4630(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 속성チェック,5
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4630,1)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)
		CALL FULLRESET
		효과範囲손패 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4630,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件속성 = 땅속성
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL YN_CHOICE(듀얼리스트, "貫通攻撃を得る", "발동しない")
			IF RESULT == 0
				CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"貫通",1)
			ENDIF
			속성チェック:0 = 1
		ENDIF

		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件속성 = 화염속성
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL YN_CHOICE(듀얼리스트, "８００ダメージを与える", "발동しない")
			IF RESULT == 0
				CALL LIFE_CHANGE(듀얼리스트,"減少","효과",800,1)
			ENDIF
			속성チェック:1 = 1
		ENDIF
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件속성 = 바람속성
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL YN_CHOICE(듀얼리스트, "消失する", "발동しない")
			IF RESULT == 0
				CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,제외行き,1)
			ENDIF
			IF 속성チェック:0 == 1 && 속성チェック:1 == 1
				CALL CARD_RESERV(듀얼리스트,4630)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과条件複数 = 98
	CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
ENDIF

