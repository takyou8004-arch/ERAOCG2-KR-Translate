@CARDNAME_4940,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 구축함 아야나미
	CASE "略称"
		RESULTS = 아야나미
	CASE "カテゴリ"
		RESULTS:0 = 벽람항로
		RESULTS:1 = 사쿠라 엠파이어 (AL)
ENDSELECT

@CARD_4940(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 800
	CASE "守備力"
		RETURN 600
	CASE "성별"
		RETURN 牝性
ENDSELECT
RETURN 0

