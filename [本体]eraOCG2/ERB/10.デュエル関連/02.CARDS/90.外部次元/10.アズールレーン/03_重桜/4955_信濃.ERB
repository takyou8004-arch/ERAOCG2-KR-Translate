@CARDSUMMON_4955(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC カウンタ

CALL RESETCONDITION_MAT
必要素材数 = 2
IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 중앵(AL)
	素材条件종류 = 융합
ELSEIF EX参照 >= 10
	素材条件カテゴリ = 아주르레인
	素材条件종류:0 = 의식
	素材条件종류:1 = 융합
	素材条件종류:2 = 싱크로
	素材条件종류:3 = 엑시즈
	素材条件종류:4 = 링크
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,4955) 
	RETURN RESULT
ENDIF

@CARDCAN_4955(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4955)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時 || 종류 == ターン開始時
	SIF 발동済_1(듀얼리스트,4955)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 발동誘発
	SIF 발동済_2(듀얼리스트,4955)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 身代효과
	SIF 발동済_3(듀얼리스트,4955)
		RETURN 0
	SIF 処理中_듀얼리스트 == 듀얼리스트
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF 破壊대상ゾーン != "필드"
		RETURN 0
	SIF 破壊대상場所 != 場所
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 중앵(AL)
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4955(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동カード_ID
#DIMS DYNAMIC 獲得耐性

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時 || 종류 == ターン開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4955,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
	ENDIF

ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4955,2)
	IF RESULT == 0
		발동カード_ID = 効後_設場所:(処理中番号 - 1)

		TRYCALLFORM CARD_{발동カード_ID},"종류"
		IF RESULT < 10
			獲得耐性 = モ耐
		ELSEIF INRANGE(RESULT,20,26)
			獲得耐性 = 魔耐
		ELSEIF INRANGE(RESULT,30,33)
			獲得耐性 = 함정耐
		ENDIF
		
		CALL FULLRESET
		효과条件カテゴリ = 아주르레인
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,獲得耐性,1)
	ENDIF
	RETURN 0

ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4955,3)
	IF RESULT == 0		
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 중앵(AL)
		효과条件複数 = 2
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
	ENDIF
	RETURN 0
ENDIF