CALL CARD_ABLE(0,攻守変動)
PRINTL ②: 이 카드가 묘지에 존재하는 한,
PRINTL 자신 필드의 레벨 10 이상의 "사쿠라 엠파이어(AL)" 몬스터의 공격력은 500 올린다.

@CARDCAN_4942(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4942)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,4942)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 사쿠라 엠파이어(AL)
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 사쿠라 엠파이어(AL)
	IF ゾーン == "손패"
		효과条件소환可 = 1
		효과条件他所 = 1
	ELSEIF ゾーン == "필드"
		효과条件소환可 = 2
	ENDIF
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 = 1
	
	SIF 条件달성 != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF ゾーン != "묘지"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_4942(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 || 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4942,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 사쿠라 엠파이어(AL)
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 = 1
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ = 사쿠라 엠파이어(AL)
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:1 = 1
		
		IF 条件달성:0 == 1 && 条件달성:1 == 1
			CALL YN_CHOICE(듀얼리스트,"●덱에서 「사쿠라 엠파이어(AL)」 몬스터 １장을 패에 넣는다。","●패에서 「사쿠라 엠파이어(AL)」 몬스터 １장을 특수 소환한다。")
		ELSEIF 条件달성:0 == 1
			RESULT = 0
		ELSEIF 条件달성:1 == 1
			RESULT = 1
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 사쿠라 엠파이어(AL)
			효과条件종류 = モン全般
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件カテゴリ = 사쿠라 엠파이어(AL)
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과条件カテゴリ = 사쿠라 엠파이어(AL)
	CALLFORM 효과条件レベル_ADV(10,"以上")
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,500)
ENDIF
