@CARDCAN_84845(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ数
#DIM DYNAMIC 条件Ａ
#DIM DYNAMIC 条件Ｂ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,84845)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,84845)
		RETURN 0	
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 메탈 블러드
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般")
	SIF RESULT != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,-1,"묘지")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,84845)
		RETURN 0	
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 메탈 블러드
	CALLFORM 효과条件レベル_ADV(10, "以上")
	효과条件종류 = 엑시즈
	효과条件Ｘ素所持 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_84845(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID

#DIM DYNAMIC 破壊カードID,100
#DIM DYNAMIC 破壊カウンタ
#DIM DYNAMIC 選択カードＢ
#DIM DYNAMIC 설정レベル

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,84845,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件カテゴリ = 메탈 블러드
		효과条件종류 = 엑시즈
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般",0,1)
		破壊カウンタ = RESULT
		FOR カウンタ,0,破壊カウンタ
			破壊カードID:カウンタ = RESULT:(カウンタ+1)
		NEXT

		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件ID = 999999
		FOR カウンタ,0,破壊カウンタ
			효과条件ID:カウンタ = 破壊カードID:カウンタ
		NEXT
		IF 효과条件ID != 999999
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			選択カード = カード소환先
			IF RESULT == 1
				설정レベル = GETVAR(@"%듀얼리스트%_MZ_星:選択カード")
				CALL YN_CHOICE(듀얼리스트,"특수 소환한 Ｘ몬스터와 同じランクの「메탈 블러드」Ｘ몬스터를 重ねてＸ소환する","특수 소환한 Ｘ몬스터보다 랭크가 ３つ高い「메탈 블러드」Ｘ몬스터를 重ねてＸ소환する")
				IF RESULT == いいえ
					설정レベル += 3
				ENDIF
				CALL FULLRESET
				효과条件レベル = 설정レベル
				효과条件종류 = 엑시즈
				효과条件カテゴリ = 메탈 블러드
				효과条件任意 = 1
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
				選択カードＢ = RESULT
				IF 選択カードＢ != 9999
					TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カードＢ}")}(듀얼리스트,選択カードＢ)
					CALL RESETCONDITION_MAT(1)
					代替素材数 = 1
					重ねてＸ = 1
					素材条件固定 = 選択カード
					TRYCALLFORM XYZSUMMON(듀얼리스트,選択カードＢ)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,84845,2)
	IF RESULT == 0
		PRINTFORML Ｘ소재를 １개 제거할Ｘ몬스터를 選択してください。
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 메탈 블러드
		CALLFORM 효과条件レベル_ADV(10, "以上")
		효과条件종류 = 엑시즈
		효과条件Ｘ素所持 = 1
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"Ｘ",-1)
			CALL FULLRESET
			효과範囲묘지 = 1
효과条件名前 = 쾌락을 욕망하는 멸렵의 추격
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"裏側표시")
		ENDIF
	ENDIF
ENDIF

