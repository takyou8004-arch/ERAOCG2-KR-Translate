@CARDCAN_4933(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

#DIM DYNAMIC 条件Ａ
#DIM DYNAMIC 条件Ｂ
#DIM DYNAMIC モン可能
#DIM DYNAMIC 마법可能
#DIM DYNAMIC 함정可能
#DIM DYNAMIC モ耐所持
#DIM DYNAMIC 魔耐所持
#DIM DYNAMIC 함정耐所持

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4933)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	IF GETVAR(@"%듀얼리스트%_MZ_モ耐:場所") < 1
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 메탈 블러드
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			モン可能 = 1
	ELSE
		モ耐所持 = 1
	ENDIF
	IF GETVAR(@"%듀얼리스트%_MZ_魔耐:場所") < 1
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 메탈 블러드
		효과条件종류 = 마법全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			마법可能 = 1
	ELSE
		魔耐所持 = 1
	ENDIF
	IF GETVAR(@"%듀얼리스트%_MZ_함정耐:場所") < 1
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 메탈 블러드
		효과条件종류 = 함정全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			함정可能 = 1
	ELSE
		함정耐所持 = 1
	ENDIF
	IF GROUPMATCH(1,モン可能,마법可能,함정可能) != 0 && GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") > -1
		条件Ａ = 1
	ENDIF
	IF GROUPMATCH(1,モ耐所持,魔耐所持,함정耐所持) != 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1 && !발동済_1(듀얼리스트,4933)
			条件Ｂ = 1
	ENDIF
	SIF 条件Ａ == 0 && 条件Ｂ == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,4933)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환",2)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
효과条件名前 = 결전계획 대형순양함 에기르
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般")
	IF RESULT == 1
		SIF カード소환先 == 場所
			RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == チェーン可否
	SIF !GROUPMATCH(チェーン可否종류, 효과後誘発)
		RETURN 0
	RETURN 1
ENDIF
@CARDEFFECT_4933(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 条件Ａ－１
#DIM DYNAMIC 条件Ａ－２
#DIM DYNAMIC 条件Ｂ－１
#DIM DYNAMIC 条件Ｂ－２
#DIM DYNAMIC 選択효과Ａ
#DIM DYNAMIC 選択효과Ｂ
#DIM DYNAMIC モン可能
#DIM DYNAMIC 마법可能
#DIM DYNAMIC 함정可能
#DIM DYNAMIC モ耐所持
#DIM DYNAMIC 魔耐所持
#DIM DYNAMIC 함정耐所持
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 選択カード종류
#DIMS DYNAMIC 耐性종류

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 필드起動
	IF GETVAR(@"%듀얼리스트%_MZ_モ耐:場所") < 1
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 메탈 블러드
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			モン可能 = 1
	ELSE
		モ耐所持 = 1
	ENDIF
	IF GETVAR(@"%듀얼리스트%_MZ_魔耐:場所") < 1
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 메탈 블러드
		효과条件종류 = 마법全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			마법可能 = 1
	ELSE
		魔耐所持 = 1
	ENDIF
	IF GETVAR(@"%듀얼리스트%_MZ_함정耐:場所") < 1
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 메탈 블러드
		효과条件종류 = 함정全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			함정可能 = 1
	ELSE
		함정耐所持 = 1
	ENDIF
	IF GROUPMATCH(1,モン可能,마법可能,함정可能) != 0 && GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") > -1
		条件Ａ－１ = 1
	ENDIF
	IF GROUPMATCH(1,モ耐所持,魔耐所持,함정耐所持) != 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1 && !발동済_1(듀얼리스트,4933)
			条件Ａ－２ = 1
	ENDIF
	IF 条件Ａ－１ == 1 && 条件Ａ－２ == 1
		CALL YN_CHOICE(듀얼리스트,"●Ｘ素材－１、「메탈 블러드」카드를 제외하고、その카드의 종류に対する내성을 得る。","●耐性１つを失い、상대モンスターゾーン 마법＆함정ゾーンいずれか全てのカード破壊")
		選択효과Ａ = RESULT
	ELSEIF 条件Ａ－２ == 1
		選択효과Ａ = いいえ
	ENDIF
	IF 選択효과Ａ == はい
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4933,0,1)
		IF RESULT == 0
			CALL FULLRESET
			IF モン可能 == 1 && 마법可能 == 1 && 함정可能 == 1
				;処理なし(효과条件なし)
			ELSE
				IF モン可能 == 1
					효과条件종류 = モン全般
					IF 마법可能 == 1
						FOR カウンタ, 0, 10
							효과条件종류:(カウンタ+1) = カウンタ+20
						NEXT
					ELSEIF 함정可能 == 1
						FOR カウンタ, 0, 10
							효과条件종류:(カウンタ+1) = カウンタ+30
						NEXT
					ENDIF
				ELSEIF 마법可能 == 1
					효과条件종류 = 마법全般
					IF 함정可能 == 1
						FOR カウンタ, 0, 10
							효과条件종류:(カウンタ+1) = カウンタ+30
						NEXT
					ENDIF
				ELSEIF 함정可能 == 1
					효과条件종류 = 함정全般
				ENDIF 
			ENDIF
			효과範囲묘지 = 1
			효과条件他所 = 1
			효과条件行先플래그 = 제외行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			選択カードID = RESULT:1
			IF RESULT == 1
				TRYCALLFORM CARD_{選択カードID}("종류")
				選択カード종류 = RESULT
				SELECTCASE 選択カード종류
					CASE IS < モン全般
						耐性종류 = モ耐
					CASE 20 TO 29
						耐性종류 = 魔耐
					CASE 30 TO 39
						耐性종류 = 함정耐
				ENDSELECT
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,耐性종류,2,1)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",500)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永守",500)
			ENDIF
		ENDIF
	ELSEIF 選択효과Ａ == いいえ
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4933,1)
		IF RESULT == 0
			IF GROUPMATCH(1,モ耐所持,魔耐所持,함정耐所持) > 1
				PRINTFORML 失う내성을 選択してください。
				IF モ耐所持 == 1
PRINTL [0] - 몬스터 내성
				ELSE
					SETCOLOR C_GRAY
PRINTL (0) - (몬스터 내성은 획득하지 않았습니다)
					RESETCOLOR
				ENDIF
				IF 魔耐所持 == 1
PRINTL [1] - 마법 내성
				ELSE
					SETCOLOR C_GRAY
PRINTL ① - (마법 내성은 획득하지 않았습니다)
					RESETCOLOR
				ENDIF
				IF 함정耐所持 == 1
PRINTL [2] - 함정 내성
				ELSE
					SETCOLOR C_GRAY
PRINTL ② - (함정 내성은 획득하지 않았습니다)
					RESETCOLOR
				ENDIF
				PRINTL
				BINPUT
				SELECTCASE RESULT
					CASE 0
						耐性종류 = モ耐
					CASE 1
						耐性종류 = 魔耐
					CASE 2
						耐性종류 = 함정耐
				ENDSELECT
			ELSEIF モ耐所持 == 1
				耐性종류 = モ耐
			ELSEIF 魔耐所持 == 1
				耐性종류 = 魔耐
			ELSEIF 함정耐所持 == 1
				耐性종류 = 함정耐
			ENDIF
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,耐性종류,0,1)
			CALL FULLRESET
			효과範囲상대필드 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				条件Ｂ－１ = 1
			CALL FULLRESET
			효과範囲상대마함 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				条件Ｂ－２ = 1
			IF 条件Ｂ－１ == 1 && 条件Ｂ－２ == 1
				CALL YN_CHOICE(듀얼리스트,"상대モンスターゾーンのカード全てを파괴한다。","상대의 마법＆함정ゾーンのカード全てを파괴한다。")
				選択효과Ｂ = RESULT
			ELSEIF 条件Ｂ－２ == 1
				選択효과Ｂ = いいえ
			ENDIF
			IF 選択효과Ｂ == はい
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"묘지")
			ELSE
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함全体",場所,"묘지")
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4933,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
		選択カード = RESULT:1
		IF RESULT == 1
			CALL SET_FIELD_INFO(対面者,"필드",選択カード,"永攻",-999999)
			CALL SET_FIELD_INFO(対面者,"필드",選択カード,"永守",-999999)
			CALL SET_FIELD_INFO(対面者,"필드",選択カード,"不材",2,上書きモード)
		ENDIF
	ENDIF
ENDIF