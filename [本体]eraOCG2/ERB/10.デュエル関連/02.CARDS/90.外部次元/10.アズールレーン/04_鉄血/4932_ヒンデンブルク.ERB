@CARDCAN_4932(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

#DIM DYNAMIC モン可能
#DIM DYNAMIC 마법可能
#DIM DYNAMIC 함정可能

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4932)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,4932)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") < 0
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 메탈 블러드
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件표시 = 表側표시
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			モン可能 = 1
	ENDIF
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 메탈 블러드
	효과条件종류 = 마법全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件표시 = 表側표시
		효과条件종류 = 마법全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			마법可能 = 1
	ENDIF
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 메탈 블러드
	효과条件종류 = 함정全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件표시 = 表側표시
		효과条件종류 = 함정全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			함정可能 = 1
	ENDIF
	SIF GROUPMATCH(1,モン可能,마법可能,함정可能) == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,4932)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환",2)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
효과条件名前 = 결전계획 중순양함 힌덴부르크
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般")
	IF RESULT == 1
		SIF カード소환先 == 場所
			RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲필드 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == チェーン可否
	SIF !GROUPMATCH(チェーン可否종류, 효과後誘発)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4932(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC モン可能
#DIM DYNAMIC 마법可能
#DIM DYNAMIC 함정可能
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 選択カード종류

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"破耐")
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4932,1,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 메탈 블러드
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			효과条件표시 = 表側표시
			효과条件종류 = モン全般
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				モン可能 = 1
		ENDIF
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 메탈 블러드
		효과条件종류 = 마법全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			효과条件표시 = 表側표시
			효과条件종류 = 마법全般
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				마법可能 = 1
		ENDIF
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 메탈 블러드
		효과条件종류 = 함정全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			효과条件표시 = 表側표시
			효과条件종류 = 함정全般
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				함정可能 = 1
		ENDIF
		CALL FULLRESET
		IF モン可能 == 1 && 마법可能 == 1 && 함정可能 == 1
			;処理なし(효과条件なし)
		ELSE
			IF モン可能 == 1
				효과条件종류 = モン全般
				IF 마법可能 == 1
					FOR カウンタ, 0, 10
						효과条件종류:(カウンタ+1) = カウンタ+20
					NEXT
				ELSEIF 함정可能 == 1
					FOR カウンタ, 0, 10
						효과条件종류:(カウンタ+1) = カウンタ+30
					NEXT
				ENDIF
			ELSEIF 마법可能 == 1
				효과条件종류 = 마법全般
				IF 함정可能 == 1
					FOR カウンタ, 0, 10
						효과条件종류:(カウンタ+1) = カウンタ+30
					NEXT
				ENDIF
			ELSEIF 함정可能 == 1
				효과条件종류 = 함정全般
			ENDIF 
		ENDIF
		효과範囲묘지 = 1
		효과条件他所 = 1
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		選択カードID = RESULT:1
		IF RESULT == 1
			TRYCALLFORM CARD_{選択カードID}("종류")
			選択カード종류 = RESULT
			CALL FULLRESET
			SELECTCASE 選択カード종류
				CASE IS < モン全般
					효과条件종류 = モン全般
				CASE 20 TO 29
					효과条件종류 = 마법全般
				CASE 30 TO 39
					효과条件종류 = 함정全般
			ENDSELECT
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			효과条件표시 = 表側표시
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4932,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 메탈 블러드
		효과範囲필드 = 1
		효과条件종류 = 엑시즈
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		選択カードID = RESULT:99
		IF 選択カード != 9999
			; 選択カードID = GETVAR(@"%듀얼리스트%_필드:選択カード")
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲필드 = 1
			효과範囲마함 = 1
			효과条件固ID = 選択カードID
			효과条件他所 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"Ｘ",1)
			ENDIF
		ENDIF
	ENDIF
ENDIF