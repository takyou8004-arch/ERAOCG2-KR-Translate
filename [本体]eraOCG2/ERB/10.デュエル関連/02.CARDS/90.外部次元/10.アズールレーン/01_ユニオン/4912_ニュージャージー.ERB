@CARDCAN_4912(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동可数
#DIM DYNAMIC 발동횟수

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4912)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,4912)
		RETURN 0
	CALL FULLRESET
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,4912)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 유니온(AL)
	효과条件종류 = 효과全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	발동可数 = RESULT
	발동횟수 =  GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所")
	SIF 발동횟수 >= 발동可数 || 발동횟수 >= 3
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 링크
	CALL 효과条件レベル_ADV(4, "以上")
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX특수소환")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
효과条件名前 = 전함 뉴저지
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX특수소환")
	IF RESULT == 1
		SIF カード소환先 == 場所
			RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF 발동済_2(듀얼리스트,4912)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

