@CARDCAN_4880(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,2
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4880)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,4880)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 2500
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件名前 = 위셔델
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン開始時強制 || 종류 == ターン終了時強制 || 종류 == バトル開始時強制 || 종류 == バトル終了時強制
	SIF !GROUPMATCH(ゾーン,"필드","마함")
		RETURN 0
	IF ゾーン == "필드"
		SIF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") >= 10
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") >= 10
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF !GROUPMATCH(ゾーン,"필드","마함")
		RETURN 0
	IF ゾーン == "필드"
		SIF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") < 10
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") < 10
			RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4880(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 발동불가,2
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4880,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",2500)
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)

		SIF 듀얼리스트 == "자신"
			PRINTL "레버넌트의 그림자"를 생성하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)

		CALL CARD_SS_CHECK(듀얼리스트,204880,"")
		IF RESULT != 1 && 마함数(듀얼리스트) < 5
			SIF 듀얼리스트 == "자신"
				PRINTL "레버넌트의 그림자"를 몬스터 존에 생성하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSEIF RESULT == 1
			RESULT = 0
		ELSEIF 마함数(듀얼리스트) < 5
			RESULT = 1
		ELSE
			SIF 듀얼리스트 == "자신"
				PRINTL 필드가 가득 찼기 때문에 처리를 종료합니다
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_GENERATE(듀얼리스트,204880)
		ELSEIF RESULT == 1
			CALL CARD_GENERATE_MAGIC(듀얼리스트,204880,1)
		ENDIF
	ENDIF

ELSEIF 종류 == ターン開始時強制 || 종류 == ターン終了時強制 || 종류 == バトル開始時強制 || 종류 == バトル終了時強制
	CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"個Ｃ",1)

	IF ゾーン == "필드"
		IF GROUPMATCH(GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所"),3,6,9)
			CALL FULLRESET
			CALL CARD_GENERATE(듀얼리스트,204880)
		ENDIF
	ELSEIF ゾーン == "마함"
		IF GROUPMATCH(GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所"),3,6,9)
			CALL FULLRESET
			CALL CARD_GENERATE(듀얼리스트,204880)
		ENDIF
	ENDIF
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4880)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"個Ｃ",-10)
		CALL FULLRESET
		효과条件표시 = 表側표시
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場全体",場所,"묘지")
	ENDIF
ENDIF

