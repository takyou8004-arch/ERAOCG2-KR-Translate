PRINTL 이 카드를 패에서 특수 소환하거나, 자신의 마법 & 함정 존에 앞면 표시로 놓는다.
CALLFORM CARD_ABLE(2,필드起動,フリー誘発)
PRINTL ②: 자신 / 상대 턴에, 자신 필드의 몬스터 1장과 상대 필드의 몬스터 1장을 대상으로 발동할 수 있다.
PRINTL 그 자신 몬스터의 공격력이 상대 몬스터의 수비력 이상일 경우, 그 상대 몬스터를 파괴한다.
PRINTL 그렇지 않았을 경우, 대상으로 한 상대 몬스터는 이 턴에 공격할 수 없다.
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ③: 이 카드가 필드에 존재하는 한,
PRINTL 자신 필드의 "어비설 헌터스"는 일시적 파괴 내성을 얻는다.


@CARDCAN_4872(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 발동불가,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4872)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,4872)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 1300
		RETURN 0

	CALL CARD_SS_CHECK(듀얼리스트,4872,"손패")
	SIF RESULT == 1
		발동불가:0 = 1
	
	SIF 마함数(듀얼리스트) >= 5
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
효과条件名前 = 그레이디아
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		발동불가:1 = 1

	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 오퍼레이터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 어비설 헌터스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	RETURN 0

ELSEIF 종류 == 필드起動 || 종류 == 마함起動 || 종류 == フリー誘発
	SIF !GROUPMATCH(ゾーン,"필드","마함")
		RETURN 0
	SIF 발동済_2(듀얼리스트,4872)
		RETURN 0
	SIF モンスター数(듀얼리스트) < 1 || モンスター数(対面者) < 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF !GROUPMATCH(ゾーン,"필드","마함")
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4872(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード,2
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 발동불가,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4872,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",1300)

		CALL CARD_SS_CHECK(듀얼리스트,4872,"손패")
		SIF RESULT == 1
			발동불가:0 = 1
		
		SIF 마함数(듀얼리스트) >= 5
			발동불가:1 = 1
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
효과条件名前 = 그레이디아
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			발동불가:1 = 1
		
		IF 발동불가:0 != 1 && 발동불가:1 != 1
			CALL YN_CHOICE(듀얼리스트,"●モンスター 존에 특수 소환한다","●마법＆함정 존에 配置する")
		ELSEIF 발동불가:0 != 1
			RESULT = 0
		ELSEIF 발동불가:1 != 1
			RESULT = 1
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
		ELSEIF RESULT == 1
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		ENDIF
	ENDIF

ELSEIF 종류 == 필드起動 || 종류 == 마함起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4872,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT != 9999
			選択カード:0 = RESULT

			CALL FULLRESET
			효과条件표시 = 表側표시
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
			IF RESULT == 1
				選択カード:1 = RESULT:1

				IF GETVAR(@"%듀얼리스트%_MZ_攻:(選択カード:0)") >= GETVAR(@"%対面者%_MZ_守:(選択カード:1)")
					CALL FULLRESET
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",(選択カード:1),"묘지")
				ELSE
					CALL SET_FIELD_INFO(対面者,"필드",選択カード:1,"戦無",1)
				ENDIF
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = 어비설 헌터스
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"一破")
	CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"一破")
ENDIF
