PRINTL ③: 이 카드가 상대에 의해 필드를 벗어났을 경우 발동할 수 있다.
PRINTL 덱 / 묘지에서 "아미야" 이외의 "오퍼레이터" 1장을 특수 소환하고, 이 카드는 "아미야"가 된다.


@CARDCAN_14860(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,14860)
SIF RESULT == 1
	RETURN 0

IF 종류 == 발동誘発
	SIF 발동済_1(듀얼리스트,14860)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 戦破壊→묘지
	SIF 処理中_듀얼리스트 == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 오퍼레이터
	효과条件固名前 = 아미야
	효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_14860(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,14860,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"無効")

		FOR カウンタ,0,5
			SIF GETVAR(@"%対面者%_필드:カウンタ") < 1
				CONTINUE
			SIF GETVAR(@"%対面者%_MZ_表:カウンタ") == 3
				CONTINUE
			SIF 攻撃力修正 >= GETVAR(@"%対面者%_MZ_攻:カウンタ")
				CONTINUE
			攻撃力修正 = GETVAR(@"%対面者%_MZ_攻:カウンタ")
		NEXT
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件以攻撃力 = 攻撃力修正
		CALL CARD_ADD_GY_ADV(対面者,ゾーン,場所)
		IF RESULT == 1
			TRYCALLFORM CARD_{RESULT:1},"レベル"
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",RESULT*200)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과条件カテゴリ = 오퍼레이터
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,500,500)

ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,14860)
	IF RESULT == 0
		CALL CARD_RECONSTRUCT(듀얼리스트,ゾーン,場所,4860)
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 오퍼레이터
		효과条件固名前 = 아미야
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

