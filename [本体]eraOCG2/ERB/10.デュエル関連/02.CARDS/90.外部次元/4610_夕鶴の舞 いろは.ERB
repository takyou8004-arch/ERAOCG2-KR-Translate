@CARDCAN_4610(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4610)
SIF RESULT == 1
	RETURN 0
IF 종류 == 효과後誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_1(듀얼리스트,20553)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,20553,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
효과条件名前 = 유즈루의 춤
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"손패취득")
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,4610)
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件속성 = 바람속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_4610(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4610,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4610,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件속성 = 바람속성
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件속성 = 어둠속성
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				条件달성 ++
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			효과条件표시 = 裏側표시
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				条件달성 ++

			IF 条件달성 >= 2
				CALL FULLRESET
				효과条件속성 = 어둠속성
				효과条件任意 = 1
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
				IF RESULT != 9999
					CALL CARDEFFECT_4610_2(듀얼리스트,종류,ゾーン,場所)
				ELSE
					CALL CARDEFFECT_4610_1(듀얼리스트,종류,ゾーン,場所)
				ENDIF
			ELSE
				CALL CARDEFFECT_4610_1(듀얼리스트,종류,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF


