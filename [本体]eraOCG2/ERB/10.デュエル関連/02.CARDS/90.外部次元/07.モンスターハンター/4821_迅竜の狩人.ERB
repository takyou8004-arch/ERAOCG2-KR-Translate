@CARDNAME_4821,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS
;ポッケ村出身（キリンと同じく）
SELECTCASE 参照先
	CASE "名前"
		RESULTS = 나르가 듀얼 헌터
	CASE "略称"
		RESULTS = 신룡의 쌍검헌터
	CASE "カテゴリ"
		RESULTS:0 = 헌터
		RESULTS:2 = 몬스터 헌터
ENDSELECT


