CALLFORM CARD_ABLE(3,효과後誘発)
PRINTL ③：이 카드가 필드에 존재하고, 자신 묘지에서 『렵수』 몬스터가 제외되었을 경우에 발동할 수 있다.
PRINTL 카드를 1장 드로우한다.

@CARDCAN_4821(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4821)
SIF RESULT == 1
	RETURN 0
IF 종류 == 효과後誘発
	IF ゾーン == "손패"
		SIF 발동済_1(듀얼리스트,4821)
			RETURN 0
		CALL CARD_SS_CHECK(듀얼리스트,4821,"손패")
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
효과条件名前 = 나르가 듀얼 헌터
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"손패취득")
		SIF RESULT != 1
			RETURN 0
	ELSEIF ゾーン == "필드"
		SIF 발동済_3(듀얼리스트,4821)
			RETURN 0
		CALL FULLRESET
		CALL SET_MONSTER_HUNTER
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과除送")
		SIF RESULT != 1
			RETURN 0
	ELSE
		RETURN 0

	ENDIF
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,4821)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL SET_MONSTER_HUNTER
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_4821(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
IF 종류 == 효과後誘発
	IF ゾーン == "손패"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4821,1)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, ゾーン, 場所)
		ENDIF
	ELSEIF ゾーン == "필드"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4821,3)
		IF RESULT == 0
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4821,2)
	IF RESULT == 0

		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 헌터
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		攻撃力修正 = RESULT * 600
		CALL FULLRESET
		CALL SET_MONSTER_HUNTER
		효과추가종류 = 11
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"永攻DOWN",攻撃力修正)
	ENDIF
ENDIF
