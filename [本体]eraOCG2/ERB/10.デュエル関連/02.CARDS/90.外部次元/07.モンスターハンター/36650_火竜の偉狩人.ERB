@CARDCAN_36650(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,36650)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || (종류 == フリー誘発 && ゾーン == "손패")
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_1(듀얼리스트,36650)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,36650,"손패",1)
	SIF RESULT == 1
		RETURN 
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 헌터
	효과条件固名前 = 레우스 그레이트 헌터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,36650)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件除去種 = 묘지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	CALLFORM CARDNAME_{戦闘カードID(듀얼리스트,1)}("종족")
	SIF GROUPMATCH(RESULT,드래곤족,야수족,비행야수족,비늘야수족,악마족,곤충족,바다생물족,미확인족,원소정령족)
		RETURN 0
	CALLFORM CARDNAME_{戦闘カードID(듀얼리스트,1)}("종족")
	SIF !GROUPMATCH(RESULT,드래곤족,야수족,비행야수족,비늘야수족,악마족,곤충족,바다생물족,미확인족,원소정령족)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_36650(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 손패起動 || (종류 == フリー誘発 && ゾーン == "손패")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36650,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 헌터
		효과条件固名前 = 레우스 그레이트 헌터
		효과条件行先플래그 = 손패行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과추가종류 = 34
			CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36650,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL SET_MONSTER_HUNTER
		효과条件スーパー종류 = 마함全般
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
	ENDIF
ELSEIF 종류 == 攻撃時強制誘発
	CALL SET_PLAYER_INFO(듀얼리스트,"ダメージ倍化", 3 ,1)
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",戦闘カードID(듀얼리스트),"貫通")
ENDIF
