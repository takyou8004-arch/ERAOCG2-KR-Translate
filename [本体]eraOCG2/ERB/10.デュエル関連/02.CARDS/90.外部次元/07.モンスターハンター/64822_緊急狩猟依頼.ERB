@CARDCAN_64822(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,64822)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0		
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,64822)
		RETURN 0


	CALL FULLRESET
	효과範囲EX덱 = 1
	CALL SET_MONSTER_HUNTER
	CALL 효과条件レベル_ADV(6, "以上")
	효과条件固名前起動 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT <= 2
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 헌터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_64822(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード,10
#DIM DYNAMIC ランダム

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,64822,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲상대EX덱 = 1
		효과条件複数 = 3
		CALL SET_MONSTER_HUNTER
		CALL 효과条件レベル_ADV(6, "以上")
		효과条件固名前選択 = 1
		효과条件RND = 1
		CALL CARD_SP_SUMMON_ADV(対面者,ゾーン,場所,"攻撃표시")
		IF RESULT
			CALL FULLRESET
			효과範囲제외 = 1
			CALL SET_MONSTER_HUNTER
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"攻撃표시",1)
			IF RESULT == 1
				CALL FULLRESET
				효과条件종족:0 = 마법사족
				효과条件종족:1 = 언데드족
				효과条件종족:2 = 전사족
				효과条件종족:3 = 기계족
				효과条件종족:4 = 악마족
				효과条件종족:5 = 천사족
				효과条件종족:6 = 식물족
				효과条件종족:7 = 사이킥족
				효과条件종족:8 = 사이버스족
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"손패")
			ENDIF
		ENDIF	
	ENDIF
ENDIF
