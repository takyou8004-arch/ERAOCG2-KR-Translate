@CARDCAN_52707(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52707)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF 발동済_1(듀얼리스트,52707)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件レベル = 8
효과条件カテゴリ = 래빗 걸
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件レベル = 2
	효과条件종류 = モン全般
효과条件カテゴリ = 래빗 걸
	효과条件分割 = 펜듈럼
	효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX소환時
	SIF 발동済_2(듀얼리스트,52707)
		RETURN 0
	SIF 마함数(対面者) >= 5
		RETURN
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲상대마함 = 1
	효과条件표시 = 裏側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_3(듀얼리스트,52707)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲상대마함 = 1
	효과条件종류 = モン全般
효과条件カテゴリ = 래빗 걸
	효과条件分割 = 펜듈럼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") > -1
		条件달성++
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件표시 = 裏側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1 && GETVAR(@"%듀얼리스트%_제외NG置換") < 1
		条件달성++
	SIF 条件달성 < 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_52707(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 条件Ａ
#DIM DYNAMIC 条件Ｂ
#DIM DYNAMIC 選択효과
#DIM DYNAMIC コスト消費

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52707,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류 = モン全般
		효과条件レベル = 8
효과条件カテゴリ = 래빗 걸
		효과条件分割 = 펜듈럼
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		IF RESULT == 1
			選択カード = 現필드(듀얼리스트)
			CALL FULLRESET
			효과範囲마함 = 1
			효과条件종류 = モン全般
			효과条件レベル = 2
효과条件カテゴリ = 래빗 걸
			효과条件分割 = 펜듈럼
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL RESETCONDITION_MAT
				必要素材数 = 1
				素材条件固定 = 選択カード
				重ねてＸ = 1
				TRYCALLFORM XYZSUMMON(듀얼리스트,場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52707,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 裏側표시
		CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"無効",1)
		CALL STATCHANGE_EFFECT(듀얼리스트,"상대마함",場所,"無効",1)
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52707,3)
	IF RESULT == 0
		SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") > -1
			条件Ａ = 1
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件표시 = 裏側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1 && GETVAR(@"%듀얼리스트%_제외NG置換") < 1
			条件Ｂ = 1
		IF 条件Ａ == 1 && 条件Ｂ == 1
PRINTL 코스트를 선택해 주세요
			CALL YN_CHOICE(듀얼리스트,"이 카드의 Ｘ소재를 １개 제거한다","자신 필드의 뒷면 표시인 카드１장을 제외한다")
			選択효과 = RESULT
		ELSEIF 条件Ａ == 1 && 条件Ｂ == 0
			選択효과 = はい
		ELSEIF 条件Ａ == 0 && 条件Ｂ == 1
			選択효과 = いいえ
		ENDIF
		IF 選択효과 == はい
			SETVAR @"%듀얼리스트%_MZ_Ｘ:場所", GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") - 1
			コスト消費 = 1
		ELSEIF 選択효과 == いいえ
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲마함 = 1
			효과条件표시 = 裏側표시
			효과条件行先플래그 = 제외行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT == 1
				コスト消費 = 1
		ELSE
			RETURN
		ENDIF
		IF コスト消費 == 1
			CALL FULLRESET
			효과条件カテゴリ:0 = 래빗 걸
			효과条件カテゴリ:1 = 바니 폴리스
			CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐",1)
			CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"対耐",1)
			CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"対耐",1)
			CALL STATCHANGE_EFFECT(듀얼리스트,"상대마함",場所,"対耐",1)
		ENDIF
	ENDIF
ENDIF
