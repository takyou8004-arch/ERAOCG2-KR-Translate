@CARDCAN_98710(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,98710)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,98710)
		RETURN 0
	IF ゾーン == "손패"
		CALL FULLRESET
		효과範囲상대마함 = 1
		효과条件종류 = モン全般
효과条件カテゴリ = 래빗 걸
		효과条件分割 = 펜듈럼
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환",1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲상대마함 = 1
	효과条件종류 = モン全般
효과条件カテゴリ = 래빗 걸
	효과条件分割 = 펜듈럼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_98710(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード듀얼리스트
#DIM DYNAMIC 選択カードＢ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,98710,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲마함 = 1
		효과範囲상대마함 = 1
		효과条件종류 = モン全般
효과条件カテゴリ = 래빗 걸
		효과条件分割 = 펜듈럼
		CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"選択")
		CALL CARD_SELECT(듀얼리스트,RESULT)
		選択カード = 選択カード（CS）
		選択カード듀얼리스트 = %대상者（CS）%
		IF RESULT
			選択カードＢ = 現필드(듀얼리스트)
			CALL FULLRESET
			효과範囲상대필드 = 1
			CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"強奪")
			IF RESULT == 1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カードＢ,"表",3,1)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カードＢ,"表固",2)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カードＢ,"攻避",2)
				CALL CARD_DISPOSE(選択カード듀얼리스트,"마함",選択カード,破壊行き)
			ENDIF
		ENDIF
	ENDIF
ENDIF

