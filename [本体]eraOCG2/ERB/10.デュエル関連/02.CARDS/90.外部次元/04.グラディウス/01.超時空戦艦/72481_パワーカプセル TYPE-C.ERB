@CARDCAN_72481(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72481)
SIF RESULT == 1
	RETURN 0

;汎用処理
IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	;どっちかはいないとダメ
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前:0 = 초시공 전투기 빅 바이퍼
	효과条件名前:1 = 초시공 전투기 빅토리 바이퍼
	효과条件名前:2 = 초차원전투기 레전드 빅토리 바이퍼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前:0 = 초시공 전투기 빅토리 바이퍼
	효과条件名前:1 = 초차원전투기 레전드 빅토리 바이퍼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 ++
	IF 条件달성 > 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ENDIF


@CARDEFFECT_72481(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード


IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72481)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件名前:0 = 초시공 전투기 빅토리 바이퍼
		효과条件名前:1 = 초차원전투기 레전드 빅토리 바이퍼
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件名前 = 초시공 전투기 빅 바이퍼
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			選択カード = RESULT
			IF 選択カード == 1
				PRINTW COMMAND CHECK……
				SETCOLOR C_YELLOW
				PRINTW ↑↑↓↓←→←→BA
				RESETCOLOR
				PRINTW CHECK OK!
				PRINTL 
				SETCOLOR C_YELLOW
				PRINTW TRANSFORM START！
				RESETCOLOR
				IF 듀얼리스트 == "자신"
					PRINTL 
					PRINTD 　＞＞＞
					PRINTBUTTON @"【GO！】",1
					PRINTDL ＜＜＜
					BINPUT
				ENDIF
				PRINTL
				PRINTD LIMITTER   　 ……　OFF
				PRINTW MACHINEPOWER　……　FULL
				PRINTW CHANGE　      ……　COMPLETE！
				PRINTL
				PRINTW Are you ready？
				PRINTL
				SETCOLOR C_YELLOW
				PRINTW 《Gradius VICTORY VIPER》！
				RESETCOLOR
				CALL FULLRESET
				CALL CARD_GENERATE(듀얼리스트,18001)
			ENDIF
		ELSE
			PRINTL VICTORY VYPER CHECK …… OK
			PRINTL TARGETTING ……
			IF 듀얼리스트 == "자신"
				PRINTL 
				PRINT 　＞＞＞
				PRINTBUTTON @"【FIRE！】",1
				PRINTL ＜＜＜
				BINPUT
			ENDIF
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"묘지")
		ENDIF
	ENDIF
ENDIF
