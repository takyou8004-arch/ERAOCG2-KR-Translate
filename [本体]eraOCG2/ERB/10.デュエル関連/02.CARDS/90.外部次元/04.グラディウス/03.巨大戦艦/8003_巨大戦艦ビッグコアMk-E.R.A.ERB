@CARDSUMMON_AA_8004
#DIMS DYNAMIC 듀얼리스트



@CARDCAN_8004(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,8004)
SIF RESULT == 1
	RETURN 0


IF 종류 == EX덱起動
	SIF 발동済_D1(듀얼리스트,8004)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲상대덱 = 1
	효과範囲상대손패 = 1
	효과範囲상대필드 = 1
	효과範囲상대묘지 = 1
	효과範囲상대제외 = 1
	효과範囲상대EX덱 = 1
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 10
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時 || 종류 == 특수소환時 || 종류 == EX소환時
	SIF ゾーン != "필드"
		RETURN 0
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"個Ｃ",6)

ELSEIF 종류 == 攻撃後強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_戦闘カード") != 場所
		RETURN 0
	SIF GETVAR(@"%対面者%_戦闘カード") == 5
		RETURN 0
	RETURN 1

ELSEIF 종류 == 발동誘発
	SIF 발동済_1(듀얼리스트,8004) && 발동済_2(듀얼리스트,8004) && 발동済_3(듀얼리스트,8004)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_8004(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC ダメージ修正
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 条件달성

IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,8004,20)
	IF RESULT == 0
		REPEAT 10
			条件달성 = 0
			CALLFORM CARD_{GETVAR(@"%듀얼리스트%_덱:0")},"종류"
			SIF RESULT < 10
				条件달성 ++
			CALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:0")},"カテゴリ"
			SIF RESULTS != "박테리안" && 条件달성 != 0
				ダメージ修正 ++
			CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",0)
		REND
		CALL FULLRESET
		CALL CARD_EX_SUMMON(듀얼리스트,"EX덱",場所)
		CALL CARD_EROTICS(8004)
		조교대상 = RESULT
		IF ダメージ修正 == 0
			PRINTFORMW %CALLNAME:조교대상%는少し寂しそうだ…
		ELSE
			IF 듀얼리스트 == "자신"
				PRINTFORMW %CALLNAME:조교대상%는失ったエネルギ-を補給するために、あなたに襲いかかった！
				PRINTL
				REPEAT ダメージ修正
					SELECTCASE RAND:4
						CASE 0
							CALL EROTIC_MOVE("前穴凌辱",조교대상,MASTER,100)
						CASE 1
							CALL EROTIC_MOVE("フェラチオ",조교대상,MASTER,100)
						CASE 2
							CALL EROTIC_MOVE("파이즈리",조교대상,MASTER,100)
						CASE 3
							CALL EROTIC_MOVE("騎乗位",조교대상,MASTER,100)
					ENDSELECT
				REND
				CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",(ダメージ修正 * 2000))
				PRINTL
				IF GETVAR(@"ライフ_%듀얼리스트%") <= 0
					PRINTFORMW %CALLNAME:조교대상%는罰の悪そうな顔をしている…
				ELSE
					PRINTFORMW %CALLNAME:조교대상%는ほくほく顔でフィールドに戻って行った。
				ENDIF
			ELSE
				PRINTFORMW %CALLNAME:조교대상%는失った分のエネルギ-を자신의 プレイヤーから搾り取った。
				CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",(ダメージ修正 * 2000))
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 攻撃後強制誘発
	IF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") < 1
		CALL FLASH(1)
		INPUTMOUSEKEY 30
		CALL FLASH(2)
		SETCOLOR C_YELLOW
		PRINTW 《거대전함　ビッグ コアＭｋ-Ｅ.Ｒ.Ａ》　轟沈！
		RESETCOLOR
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
	ELSE
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"個Ｃ",-1)
		PRINTFORMW ビッグコアのシ-ルドが１つ剥がれた！（残り{GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所")}枚）
	ENDIF

ELSEIF 종류 == 발동誘発
	IF 발동済_2(듀얼리스트,8004)
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,8004,3)
	ELSEIF 발동済_1(듀얼리스트,8004)
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,8004,2)
	ELSE
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,8004,1)
	ENDIF
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = モン全般
		효과条件複数 = 2
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"제외")
		ENDIF
		RETURN 1
	ENDIF
	RETURN 0

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,8004,10)
	IF RESULT == 0
		IF 듀얼리스트 == "자신"
			CALL CARD_EROTICS(8004)
			조교대상 = RESULT
			PRINTFORMW %CALLNAME:조교대상%는エネルギ-を補給するためにあなたに近付いてきた…
			SELECTCASE RAND:4
				CASE 0
					CALL EROTIC_MOVE("前穴凌辱",조교대상,MASTER,100)
				CASE 1
					CALL EROTIC_MOVE("フェラチオ",조교대상,MASTER,100)
				CASE 2
					CALL EROTIC_MOVE("파이즈리",조교대상,MASTER,100)
				CASE 3
					CALL EROTIC_MOVE("騎乗位",조교대상,MASTER,100)
			ENDSELECT
			SETCOLOR C_YELLOW
			PRINTFORMW %CALLNAME:조교대상%는元気いっぱいになった！
			RESETCOLOR
			IF GETVAR(@"ライフ_%듀얼리스트%") <= 0
				PRINTFORMW %CALLNAME:조교대상%는動かなくなったあなたをぼ-っと見ている…
			ENDIF
		ENDIF
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",1000)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",1000)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"個Ｃ",1)
	ENDIF

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"モ耐")
ENDIF
