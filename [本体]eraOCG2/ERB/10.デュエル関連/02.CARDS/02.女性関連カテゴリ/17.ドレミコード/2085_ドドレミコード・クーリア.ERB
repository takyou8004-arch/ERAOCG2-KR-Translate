@CARDCAN_2085(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과使用불가,10
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2085)
SIF RESULT == 1
	RETURN 0
IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		효과使用불가:0 = 1
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = 도도레미코드 쿨리아
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		효과使用불가:0 = 1

	SIF 발동済_2(듀얼리스트,2085)
		효과使用불가:1 = 1
	CALL CARD_SS_CHECK(듀얼리스트,2085,"손패",1)
	SIF RESULT == 1
		효과使用불가:1 = 1
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲필드 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 도레미코드
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT <= 1
		효과使用불가:1 = 1

	SIF 효과使用불가:0 == 1 && 효과使用불가:1 == 1
		RETURN 0

	RETURN 1
ELSEIF 종류 == 마함起動
	SIF 발동済_1(듀얼리스트,2085)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲EX덱 = 1
	효과条件カテゴリ = 도레미코드
	효과条件종류 = EX以外全般
	효과条件レベル:0 = 1
	효과条件レベル:1 = 3
	효과条件レベル:2 = 5
	효과条件レベル:3 = 7
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1


ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 도레미코드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF 발동済_3(듀얼리스트,2085)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲필드 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 도레미코드
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT <= 4
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_2085(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC リピート数
#DIM DYNAMIC 효과使用불가,10

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	SIF 마함数(듀얼리스트) >= 5
		효과使用불가:1 = 1
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = 도도레미코드 쿨리아
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		효과使用불가:1 = 1

	SIF 발동済_2(듀얼리스트,2085)
		효과使用불가:2 = 1
	CALL CARD_SS_CHECK(듀얼리스트,2085,"손패",1)
	SIF RESULT == 1
		효과使用불가:2 = 1

	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲필드 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 도레미코드
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT <= 1
		효과使用불가:2 = 1

	IF 효과使用불가:1 == 0 && 효과使用불가:2 == 0
PRINTL 지속 마법으로 도도레미코드 쿨리아를 발동하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
	ELSEIF 효과使用불가:2 == 1
		RESULT = はい
	ELSEIF 효과使用불가:1 == 1
		RESULT = いいえ
	ENDIF

	IF RESULT == はい
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2085)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		ENDIF
	ELSEIF RESULT == いいえ
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2085,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲마함 = 1
			효과条件カテゴリ = 도레미코드
			효과条件종류 = モン全般
			효과条件複数 = 2			
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2085,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲EX덱 = 1
		효과条件カテゴリ = 도레미코드
		효과条件종류 = EX以外全般
		효과条件レベル:0 = 1
		효과条件レベル:1 = 3
		효과条件レベル:2 = 5
		효과条件レベル:3 = 7
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_CAT_SOGAI_INFO(듀얼리스트,"도레미코드")
;モンスター효과-------------------------
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2085,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件カテゴリ = 도레미코드
		효과条件종류 = モン全般
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		リピート数 = RESULT
		CALL FULLRESET
		효과条件표시 = 表側표시
		효과条件複数 = 100 - リピート数
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"無効")
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2085,3)
	IF RESULT == 0
		CALL FULLRESET	
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"묘지")
	ENDIF
	RETURN 0
ENDIF


