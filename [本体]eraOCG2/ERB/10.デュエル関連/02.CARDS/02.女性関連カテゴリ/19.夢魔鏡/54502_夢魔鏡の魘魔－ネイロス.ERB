@CARDNAME_54502,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 몽마경의 엽마－네이로스
	CASE "略称"
RESULTS = 엽마 네이로스
	CASE "カテゴリ"
RESULTS:0 = 몽마경
ENDSELECT


@CARD_54502(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RESULT:1 = 빛속성
		RETURN 어둠속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 10
	CASE "攻撃力"
		RETURN 3000
	CASE "守備力"
		RETURN 3000
	CASE "성별"
		RETURN 雄性
ENDSELECT

RETURN 0

