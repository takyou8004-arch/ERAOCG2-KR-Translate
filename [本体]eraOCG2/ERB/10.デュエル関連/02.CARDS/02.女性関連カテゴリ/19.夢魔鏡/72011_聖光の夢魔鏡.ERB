;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 성광의 몽마경
	CASE "略称"
RESULTS = 성광의 몽마경
	CASE "カテゴリ"
RESULTS:0 = 몽마경
ENDSELECT


@CARD_72011(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN フィールド
ENDSELECT

RETURN 0

@CARD_EXPLANATION_72011(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 "성광의 몽마경"이 된다.
PRINTL 이 카드명의 ②의 효과는 1턴에 1번만 사용할 수 있다.
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ①: 필드에 빛 속성 "몽마경" 몬스터가 존재하는 한, 각각의 필드의 "몽마경" 몬스터 중,
PRINTL 레벨이 가장 높은 몬스터 이외의 "몽마경" 몬스터는, 공격 회피와 대상 내성을 얻는다.
CALLFORM CARD_ABLE(2,ターン終了時)
PRINTL ②: 자신 또는 상대의 엔드 페이즈에, 자신의 필드 / 묘지의 이 카드를 제외하고 발동할 수 있다.
PRINTL 패 / 덱 / 묘지 / 제외 상태에 있는 "암흑의 몽마경" 1장을 발동한다.

@CARDCAN_72011(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72011)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン終了時
	SIF 발동済_2(듀얼리스트,72011)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"마함","묘지")
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件名前 = 암흑의 몽마경
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_72011(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC サイコロ結果
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC レベル기록
#DIM DYNAMIC 설정レベル

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72011)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72011,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,제외行き)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件名前 = 암흑의 몽마경
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
	ENDIF

ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "聖光の몽마경")

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件カテゴリ = 몽마경
	효과条件속성 = 빛속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		FOR カウンタ,0,5
			SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%対面者%_MZ_表:カウンタ") == 3
				CONTINUE
			TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:{カウンタ}")}, "カテゴリ"
			SIF !MATCH(RESULTS, "몽마경")
				CONTINUE
			IF レベル기록 < GETVAR(@"%対面者%_MZ_星:カウンタ")
				レベル기록 = GETVAR(@"%対面者%_MZ_星:カウンタ")
			ENDIF
		NEXT
		IF レベル기록 > 0
			설정レベル = レベル기록 - 1
			CALL FULLRESET
			효과条件カテゴリ = 몽마경
			CALL 효과条件レベル_ADV(설정レベル, "以下")
			CALL STATCHANGE_EFFECT(対面者,"필드",場所,"対耐")
			CALL STATCHANGE_EFFECT(対面者,"필드",場所,"攻避")
		ENDIF

		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
				CONTINUE
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:{カウンタ}")}, "カテゴリ"
			SIF !MATCH(RESULTS, "몽마경")
				CONTINUE
			IF レベル기록 < GETVAR(@"%듀얼리스트%_MZ_星:カウンタ")
				レベル기록 = GETVAR(@"%듀얼리스트%_MZ_星:カウンタ")
			ENDIF
		NEXT
		IF レベル기록 > 0
			설정レベル = レベル기록 - 1
			CALL FULLRESET
			효과条件カテゴリ = 몽마경
			CALL 효과条件レベル_ADV(설정レベル, "以下")
			CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
			CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"攻避")
		ENDIF

	ENDIF
ENDIF
