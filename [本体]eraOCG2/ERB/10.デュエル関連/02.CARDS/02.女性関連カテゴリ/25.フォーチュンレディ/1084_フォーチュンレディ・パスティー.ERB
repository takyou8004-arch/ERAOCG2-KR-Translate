@CARDCAN_1084(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1084)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,1084)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件종족 = 마법사족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1084(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード,5
#DIM DYNAMIC レベル修正

IF 종류 == 攻守変動
	CALL FULLRESET
	攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_星:場所") * 200
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正,攻撃力修正)
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1084,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 포츈 레이디
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)	
		選択カード:1 = RESULT
		IF 選択カード:1 != 9999
			$INPUTLOOP
			SIF 듀얼리스트 == "상대" && GETVAR(@"%듀얼리스트%_MZ_星:選択カード") >= 6
				GOTO INPUTSKIP
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과条件종족 = 마법사족
			효과条件行先플래그 = 제외行き
			효과条件任意 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)	
			IF RESULT == 1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード:1,"永星",1)
				GOTO INPUTLOOP
			ENDIF
		ENDIF
		$INPUTSKIP
	ENDIF
ENDIF
