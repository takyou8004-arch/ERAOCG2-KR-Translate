@CARDCAN_1371(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1371)
SIF RESULT == 1
	RETURN 0

IF 종류 == 발동誘発
	SIF 발동済_1(듀얼리스트,1371)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0


	CALL FULLRESET
	효과範囲덱 = 1
	효과条件名前:0 = 무덤 홀
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,1371)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0

	CALL FULLRESET
	효과範囲덱 = 1
	효과条件名前:0 = 홀티아의 충혹마
	효과条件名前:1 = 교활한 함정 속으로
	효과条件名前:2 = 트랩트릭 네스트홀
	효과条件名前:3 = 허니팟－홀티아
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,1371)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件名前:0 = 나락의 함정 속으로
	효과条件名前:1 = 절망의 함정 속으로
	효과条件名前:2 = 이차원의 함정 속으로
	효과条件名前:3 = 감각차단의 함정 속으로
	효과条件名前:4 = 슬라임 무리의 함정 속으로
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF FINAL_SUMMON_TARGET(듀얼리스트,1) == 5 
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF 발동済_1(듀얼리스트,1371)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件名前:0 = 헌터즈 피트홀
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1371(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 발동함정속으로
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 설정속성
#DIM DYNAMIC 설정종족
#DIM DYNAMIC 설정レベル
#DIM DYNAMIC 설정攻撃
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 효과先
#DIM DYNAMIC 조교대상
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1371,1,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件名前 = 무덤 홀
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_DISPOSE(듀얼리스트,"덱",選択カード)
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"無効",1371)
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",2000,1)
			RETURN 1
		ENDIF
	ENDIF
	RETURN 0
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1371,1,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件名前:0 = 홀티아의 충혹마
		효과条件名前:1 = 교활한 함정 속으로
		효과条件名前:2 = 트랩트릭 네스트홀
		효과条件名前:3 = 허니팟 홀티아
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:{選択カード}")}, "名前"
			발동함정속으로 = %RESULTS%		
			CALL CARD_DISPOSE(듀얼리스트,"덱",選択カード)		
			SELECTCASE 발동함정속으로
				CASE "홀티아의 충혹마", "허니팟－홀티아"
					;PRINTFORMW 홀티아의 충혹마を発……ああっ！？
					PRINTFORMW %발동함정속으로%를 발……아앗！？
					PRINTFORMW 플레시아"아와와와와와……가가가가가가가가가가가가삐-！！！"
					PRINTFORMW 무슨일인가！！
					PRINTFORMW 홀티아를 발동했다고 생각했더니 플레시아가 이상한 소리를 내며 버그가 나버렸다！
					설정속성 = RAND:5 + 1
					CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永属",설정속성,1)

					설정종족 = RAND:15 + 1
					CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永種",설정종족,1)

					설정レベル = RAND:11 + 1
					CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永星",설정レベル,1)

					설정攻撃 = RAND:50
					CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",((설정攻撃 * 100) - 2000), 1)
				CASE "교활한 함정 속으로"
					PRINTFORMW 교활한 함정 속으로를 발동！
					CALL FULLRESET
					효과条件複数 = 98
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
				CASE "트랩트릭 네스트홀"
					IF 마함数(듀얼리스트) < 5
						CALL FULLRESET
						효과範囲덱 = 1
						효과条件종류 = モン全般
						효과条件カテゴリ = 함정 속으로
						CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
					ENDIF
					IF 마함数(듀얼리스트) < 5
						CALL FULLRESET
						효과範囲덱 = 1
						효과条件종류 = モン全般
						효과条件カテゴリ = 함정 속으로
						CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
					ENDIF
			ENDSELECT
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1371,1,X消費1)
	IF RESULT == 0
		효과先 = FINAL_SUMMON_TARGET(듀얼리스트,1)
		SIF 효과先 == 5
			RETURN 0

		CALL FULLRESET
		효과条件名前:0 = 나락의 함정 속으로
		효과条件名前:1 = 절망의 함정 속으로
		효과条件名前:2 = 이차원의 함정 속으로
		효과条件名前:3 = 감각차단의 함정 속으로
		효과条件名前:4 = 슬라임 무리의 함정 속으로
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:選択カード")}, "名前"
			발동함정속으로 = %RESULTS%
			CALL CARD_DISPOSE(듀얼리스트,"덱",選択カード)		
			PRINTFORMW %발동함정속으로%를 발동！
			SELECTCASE 발동함정속으로
				CASE "나락의 함정 속으로"
					CALL FULLRESET
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",효과先,"제외",1371)
				CASE "절망의 함정 속으로"
					CALL FULLRESET
					효과추가종류 = 効追無効
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",효과先,"표시변경",1371)
				CASE "이차원의 함정 속으로"
					CALL FULLRESET
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",효과先,"제외",1371)
				CASE "감각차단의 함정 속으로"
					IF GETVAR(@"%対面者%_MZ_함정耐:효과先") == 0
						TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:효과先")}, "名前"
						PRINTFORMW %RESULTS%는 가슴부근까지 구멍에 빠져버려、꼴사납게 빠져나오려고 몸부림친다。
						CALL SET_FIELD_INFO(対面者,"필드",효과先,"無効",2)
						CALL SET_FIELD_INFO(対面者,"필드",효과先,"表固",2)
						CALL SET_FIELD_INFO(対面者,"필드",효과先,"不材",2)
						CALL SET_FIELD_INFO(対面者,"필드",효과先,"表",2)
						CALL CARD_GRANT_SPECIAL(対面者,효과先,99650)
					ELSE
						TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:효과先")}, "名前"
						PRINTFORMW %RESULTS%는 가슴부근까지 구멍에 빠져버렸지만、함정내성이 있다고 거만해져있습니다。
						CALL CARD_GRANT_SPECIAL(対面者,효과先,99650)
					ENDIF
				CASE "슬라임 무리의 함정 속으로"
					TRYCALLFORM CARD_{GETVAR(@"%対面者%_필드:효과先")},"성별"
					IF RESULT == 牝性
						조교대상 = GETVAR(@"%対面者%_필드:효과先")
						CALL FULLRESET
						효과추가カテ = 묘상
						CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",효과先,1)
						IF RESULT != -1
							조교대상 = RESULT
							SETCOLOR C_PINK
							PRINTFORML
							PRINTFORMW %CALLNAME:조교대상%는 슬라임 무리의 함정 속으로에 떨어져、전신 슬라임절임의 묘상이 되었다…！
							PRINTFORML
							RESETCOLOR
							CALL EROTIC_MOVE("묘상捕縛",조교대상, -1, 300)
						ENDIF
						CALL CARD_ADD(対面者,"필드","마함",효과先,"表側표시")
					ELSE
						CALL FULLRESET
						CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",효과先,"묘지",99751)
					ENDIF
					CALL FULLRESET
					효과範囲덱 = 1
					효과条件カテゴリ = 슬라임
					효과条件任意 = 1
					CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDSELECT
		ENDIF
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1371,1,X消費1)
	IF RESULT == 0
		효과先 = 戦闘カードID(듀얼리스트,1)

		CALL FULLRESET
		효과条件名前:0 = 헌터즈 피트홀
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:選択カード")}, "名前"
			발동함정속으로 = %RESULTS%
			CALL CARD_DISPOSE(듀얼리스트,"덱",選択カード)		
			PRINTFORMW %발동함정속으로%를 발동！
			SELECTCASE 발동함정속으로
			CASE "헌터즈 피트홀"
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",효과先,"덱")
				CALL FULLRESET
				효과範囲필드 = 1
				효과条件カテゴリ = 헌터
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				IF RESULT == 1	
					バトル強制終了 = 1
					CALL CARDDRAW_BASIC(듀얼리스트,1)
				ELSE
					PRINTFORMW "딱히 충혹마도 헌터 취급해도 괜찮은게 아닐까？"
					PRINTFORMW 플레시아에게 불평을 들었다。
				ENDIF
			ENDSELECT
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") >= -1
		CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"함정耐")
	CALL FULLRESET
	효과条件カテゴリ = 충혹마
	효과条件他所 = 1
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"戦耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
ENDIF
