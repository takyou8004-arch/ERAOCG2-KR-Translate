PRINTL ●덱에서 "센츄리온" 마법 / 함정 카드 1장을 자신 필드에 세트한다。

@CARDCAN_62133(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,62133)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
    SIF 발동済_1(듀얼리스트,62133)
    	RETURN 0

	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ENDIF

@CARDEFFECT_62133(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択,10

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62133,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		PRINTL 어떤 효과를 사용합니까？
		選択:1 = ●덱에서 "센츄리온" 몬스터 1장을 자신의 마법 / 함정 존에 앞면 표시로 둔다。
		選択:2 = ●덱에서 "센츄리온" 마법 / 함정 카드 1장을 자신 필드에 세트한다。
		CALL YN_CHOICE(듀얼리스트,選択:1,選択:2)
		IF RESULT == 0
			효과範囲덱 = 1
			효과条件종류 = モン全般
			효과条件カテゴリ = 센츄리온
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		ELSE
			효과範囲덱 = 1
			효과条件종류 = 마함全般
			효과条件カテゴリ = 센츄리온
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"裏側표시")
			
		ENDIF
	ENDIF
ENDIF

