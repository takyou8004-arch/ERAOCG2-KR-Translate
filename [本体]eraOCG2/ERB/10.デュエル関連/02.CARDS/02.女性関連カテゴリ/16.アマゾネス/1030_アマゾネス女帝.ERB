@CARDNAME_1030,参照先
;ココで지정카드의 名前、略称を返す予定
;#FUNCTIONS
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 아마조네스 임프레스
	CASE "略称"
RESULTS = 아마조네스 여제
	CASE "カテゴリ"
RESULTS:0 = 아마조네스
ENDSELECT


@CARD_1030(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 전사족
	CASE "レベル"
		RETURN 8
	CASE "攻撃力"
		RETURN 2800
	CASE "守備力"
		RETURN 2400
	CASE "성별"
		RETURN 牝性
ENDSELECT

RETURN 0

