@CARDCAN_52181(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52181)
SIF RESULT == 1
	RETURN 0

IF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,52181)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前:0 = ダミー
	SIF 마함数(対面者) > 0
		효과条件名前:1 = 킬러튠 레코
	SIF モンスター数(対面者) > 0
		효과条件名前:2 = 킬러튠 믹스
	SIF 現EX山札数(対面者) > 0
		효과条件名前:3 = 킬러튠 클립
	SIF モンスター数(対面者) > 0 || 마함数(対面者) > 0
		효과条件名前:4 = 킬러튠 트랙메이커
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_52181(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52181,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件名前:0 = ダミー
		SIF 마함数(対面者) > 0
			효과条件名前:1 = 킬러튠 레코
		SIF モンスター数(対面者) > 0
			효과条件名前:2 = 킬러튠 믹스
		SIF 現EX山札数(対面者) > 0
			효과条件名前:3 = 킬러튠 클립
		SIF モンスター数(対面者) > 0 || 마함数(対面者) > 0
			효과条件名前:4 = 킬러튠 트랙메이커
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALLFORM CARDEFFECT_{RESULT:1}(듀얼리스트,S素材時효과,"효과処理")
		ENDIF
	ENDIF

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件튜너 = 1
	효과条件他所 = 1
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
ENDIF
