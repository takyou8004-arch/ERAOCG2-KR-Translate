@CARD_EXPLANATION_61341(종류)
#DIM DYNAMIC 종류


PRINTL 이 카드명의 ①의 효과는 1턴에 1번만 사용할 수 있다.
CALLFORM CARD_ABLE(1,효과後誘発)
PRINTL ①: 이 카드 이외의 자신의 「마돌체」 카드가 자신의 패 덱으로 되돌아갔을 경우에 발동할 수 있다.
PRINTL 덱에서 「마돌체」 몬스터 1장을 패에 추가한다.
PRINTL 자신 필드에 천사족의 「마돌체」 몬스터가 존재할 경우, 공격 표시로 특수 소환할 수도 있다.


@CARDCAN_61341(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,61341)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,61341)
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 마돌체
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"손패덱")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 마돌체
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_61341(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード


IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61341)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61341,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종족 = 천사족
		효과条件カテゴリ = 마돌체
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1 && モンスター数(듀얼리스트) != 5
PRINTL 패에 추가하는 대신 공격 표시로 특수 소환하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == 0
				CALL FULLRESET
				효과条件カテゴリ = 마돌체
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"攻撃표시")
			ELSE
				CALL FULLRESET
				효과条件カテゴリ = 마돌체
				효과条件종류 = モン全般
				CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)	
			ENDIF
		ELSE
			CALL FULLRESET
			효과条件カテゴリ = 마돌체
			효과条件종류 = モン全般
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)	
		ENDIF
	ENDIF
ENDIF
