@CARDCAN_62140(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,62140)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,62140)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ENDIF



@CARDEFFECT_62140(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62140,1)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		;自마함の바르모니카Pをチェック
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件종류 = モン全般
		효과条件カテゴリ = 바르모니카
		효과条件표시 = 表側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		;なし／상대가 발동은 ランダムで
		IF 듀얼리스트 == "상대" || RESULT != 1
			SELECTCASE RAND:2
				CASE 0
					PRINTFORML 選ばれた효과 
					PRINTFORMW ●５００ＬＰ回復する。그 후、패를 １장 덱으로 되돌리고 ２장ドロー할 수 있다。
					CALL CARDEFFECT_62140_1(듀얼리스트,종류,ゾーン,場所)
				CASE 1
					PRINTFORML 選ばれた효과 
					PRINTFORMW ●５００데미지를 受ける。그 후、덱에서 「바르모니카」 마법 / 함정 카드 １장을 패에 넣을 수 있다。
					CALL CARDEFFECT_62140_2(듀얼리스트,종류,ゾーン,場所)
			ENDSELECT
		ELSEIF 듀얼리스트 == "자신"
			;ある場合
			;上の条件でない場合を定義しているので、자신側でランダム分岐は必要なし
			PRINTL
			PRINTL 어떤 느낌의
			PRINTL 　음을 선택해?
			PRINTL
			PRINTL （속닥속닥…！）
			PRINTL （회복하면서 패를 1장 덱으로 되돌리고 2장을 드로우하자…！）[0]
			PRINTL
			PRINTL （소근소근…♪）
			PRINTL （데미지는 신경쓰지 말고 덱에서"바르모니카"마법 / 함정 카드를 1장 손에 가져오자…♪）[1]
			BINPUT
			IF RESULT == 0
				CALL CARDEFFECT_62140_1(듀얼리스트,종류,ゾーン,場所)
			ELSEIF RESULT == 1
				CALL CARDEFFECT_62140_2(듀얼리스트,종류,ゾーン,場所)
			ENDIF	
		ENDIF
	ENDIF
ENDIF


@CARDEFFECT_62140_1(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL FULLRESET
CALL LIFE_CHANGE(듀얼리스트,"増加","효과",500)
;손패無いとダメ
IF 손패数(듀얼리스트) > 0
	CALL FULLRESET
	효과条件任意 = 1
	효과条件行先플래그 = 덱行き
	CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
	IF RESULT == 1
		CALL CARDDRAW_BASIC(듀얼리스트,2)
	ENDIF
ENDIF

RETURN


