@CARDCAN_62143(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,62143)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,62143)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前:0 = 안젤로 바르모니카
	효과条件名前:1 = 데모네 바르모니카
	효과条件名前:2 = 서큐베 바르모니카
	효과条件名前:3 = 바르모니카의 음란신－러시비어
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_62143(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62143,1)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CUSTOMDRAWLINE —
PRINTL 공명 카운터를 올릴 카드를 선택
		CUSTOMDRAWLINE —
		CALL FULLRESET
		효과条件名前:0 = 안젤로 바르모니카
		효과条件名前:1 = 데모네 바르모니카
		효과条件名前:2 = 서큐베 바르모니카
		효과条件名前:3 = 바르모니카의 음란신－러시비어
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"마함",ゾーン,場所,62143)
		IF RESULT != 9999
			選択カード = RESULT
			CALL SET_FIELD_INFO(듀얼리스트,"마함",選択カード,"個Ｃ",1)
		ENDIF
		IF 듀얼리스트 == "자신"
			PRINTL
			PRINTL 어떤 느낌의
			PRINTL 　음을 선택해?
			PRINTL
			PRINTL （속닥속닥…！）
			PRINTL （회복하면서 제외 존의"바르모니카"카드 1장을 패로 가져오자…！）[0]
			PRINTL
			PRINTL （소근소근…♪）
			PRINTL （데미지는 신경쓰지 말고"바르모니카"카드 1장을 패로 들고오자…♪）[1]
			BINPUT
			IF RESULT == 0
				CALL CARDEFFECT_62143_1(듀얼리스트,종류,ゾーン,場所)
			ELSEIF RESULT == 1
				CALL CARDEFFECT_62143_2(듀얼리스트,종류,ゾーン,場所)
			ENDIF
		;상대가 발동
		ELSEIF 듀얼리스트 == "상대"
			SELECTCASE RAND:2
				CASE 0
					PRINTFORML 選ばれた효과 
					PRINTFORMW ●５００ＬＰ회복する。그 후、제외 상태인 "바르모니카"카드 １장을 패에 넣을 수 있다。
					CALL CARDEFFECT_62143_1(듀얼리스트,종류,ゾーン,場所)
				CASE 1
					PRINTFORML 選ばれた효과 
					PRINTFORMW ●５００데미지를 受ける。그 후、묘지의 「바르모니카」카드 １장을 패에 넣을 수 있다。
					CALL CARDEFFECT_62143_2(듀얼리스트,종류,ゾーン,場所)
			ENDSELECT
		ENDIF
	ENDIF
ENDIF


@CARDEFFECT_62143_1(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
