	CASE "略称"
		RESULTS = 지고바이트
	CASE "カテゴリ"
		RESULTS:0 = 없음
		RESULTS:1 = 사역마
ENDSELECT


@CARD_20410(参照先)
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

