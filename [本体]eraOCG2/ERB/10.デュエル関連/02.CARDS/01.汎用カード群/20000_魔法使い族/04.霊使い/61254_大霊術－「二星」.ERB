@CARDCAN_61254(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

#DIM DYNAMIC 条達속성, 8

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,61254)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_2(듀얼리스트,61254)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL 条件달성속성検出_대령술二星(듀얼리스트,종류,ゾーン,場所,条達속성)
	SIF !MATCH(条達속성, 1)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF 발동済_1(듀얼리스트,61254)
		RETURN 0
	SIF ゾーン != "마함" 
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성:0 = 빛속성
	효과条件속성:1 = 어둠속성
효과条件カテゴリ = 령사
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 마함全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함" 
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_61254(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 検出속성, 8
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 '= RESULTS

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61254,2)
	IF RESULT == 0
		CALL 条件달성속성検出_대령술二星(듀얼리스트,종류,ゾーン,場所,検出속성)

		CALL FULLRESET
		효과範囲손패 = 1
		CALL 효과条件속성_複数(検出속성)
		효과条件종족 = 마법사족
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		選択カード_ID = RESULT:99
		IF 選択カード != 9999
			VARSET RESULT
			CALLFORM CARD_{選択カード_ID}, "속성"
			IF MATCH(RESULT, 어둠속성)
				CALL URARA_CHANCE(듀얼리스트,処理中_효과ID,"雑多")
				IF RESULT == 0
					CALL FULLRESET
					효과条件行先플래그 = 제외行き
					CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)

					CALL FULLRESET
					효과条件속성 = 빛속성
효과条件カテゴリ = 령사
					효과条件종류 = モン全般
					CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)

					CALL FULLRESET
효과条件カテゴリ = 령사
					효과条件종류 = 마함全般
					CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
				ENDIF
			ELSEIF MATCH(RESULT, 빛속성)
				CALL FULLRESET
				효과範囲묘지 = 1
				효과範囲제외 = 1
				효과条件속성 = 어둠속성
효과条件カテゴリ = 령사
				효과条件종류 = モン全般
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					CALL CARD_SELECT(듀얼리스트,選択カード)
					CALL CARD_SP_SUMMON(듀얼리스트,本参照先（CS）,選択カード（CS）)
				ENDIF
			ELSE
				CALL FULLRESET
				효과条件속성:0 = 빛속성
				효과条件속성:1 = 어둠속성
효과条件カテゴリ = 령사
				효과条件종류 = モン全般
				CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61254)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61254,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"無効")
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "대령술－「이성」")
ENDIF
