@CARD_EXPLANATION_20413(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①② 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①: 자신 필드에 마법사족 몬스터가 존재할 경우에 발동할 수 있다.
PRINTL 이 카드를 패에서 특수 소환한다.
CALLFORM CARD_ABLE(2,ターン終了時)
PRINTL ②: 상대 엔드 페이즈에 이 카드가 묘지에 존재할 경우, 자신 필드의 앞면 표시 몬스터 1장을 대상으로 하고 발동할 수 있다.
PRINTL 그 몬스터를 파괴하고, 이 카드를 묘지에서 특수 소환한다.
CALLFORM CARD_ABLE(3,필드起動)
PRINTL ③：자신필드에서 、이 카드와 마법사족 몬스터 １장을 묘지に送って발동할 수 있다。
PRINTL 자신 필드에 「憑依覚醒－데몬・リーパー」を특수 소환한다。
PRINTL 그 후、자신의 묘지에서 레벨４이하의 몬스터 １장을 효과를 무효로 하고서 특수 소환한다事ができる。


@CARDCAN_20413(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,20413)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,20413)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,20413,"손패")
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 마법사족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF 발동済_2(듀얼리스트,20413)
		RETURN 0
	SIF モンスター数(듀얼리스트) == 0
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,20413,"묘지",1)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_3(듀얼리스트,20413)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,120413,"",1)
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件他所 = 1
	효과条件종족 = 마법사족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF わらしチェック == 1
		わらしチェックパス = 1
	RETURN 1
ENDIF


@CARDEFFECT_20413(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

IF 종류 == 손패起動 
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20413,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
	ENDIF
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20413,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "묘지", 場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20413,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종족 = 마법사족
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_GENERATE(듀얼리스트,120413)

			CALL FULLRESET
			효과範囲묘지 = 1
			CALL 효과条件レベル_ADV(4, "以下")
			효과条件종류 = レベル持ち
			효과条件소환可 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				PRINTL 자신의 묘지에서 레벨４이하의 몬스터 １장을 효과를 무효로 하고서 특수소환しますか？
				CALL YN_CHOICE(듀얼리스트)
				IF RESULT == はい
					CALL WARASHI_CHANCE(듀얼리스트,処理中_효과ID,"雑多")
					IF RESULT == 0
						CALL FULLRESET
						효과範囲묘지 = 1
						CALL 효과条件レベル_ADV(4, "以下")
						효과条件종류 = レベル持ち
						효과추가종류 = 効追無効
						CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF


