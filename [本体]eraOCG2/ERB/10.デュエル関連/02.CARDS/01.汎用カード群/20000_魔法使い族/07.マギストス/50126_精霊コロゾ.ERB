#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 마기스토스 코로조
	CASE "略称"
RESULTS = 정령 코로조
	CASE "カテゴリ"
RESULTS:0 = 마기스토스
ENDSELECT


@CARD_50126(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 마법사족 
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1000
	CASE "守備力"
		RETURN 2800
	CASE "튜너"
		RETURN 1
ENDSELECT

RETURN 0

