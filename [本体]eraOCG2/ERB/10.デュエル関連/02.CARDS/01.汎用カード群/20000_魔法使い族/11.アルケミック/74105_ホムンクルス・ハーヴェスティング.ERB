@CARDCAN_74105(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,74105)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲덱 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_74105(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID 
#DIM DYNAMIC リピート횟수


IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,74105)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			選択カード_ID = GETVAR(@"%듀얼리스트%_덱:選択カード")		
		ELSE
PRINTL 적당한 이름을 선언했습니다.
			選択カード_ID = 99999
		ENDIF	
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ:0 = 알케믹
		효과条件カテゴリ:1 = 샤이니트
		효과条件カテゴリ:2 = 아카식
;AA지정とモンスターゾーン지정の方がいいだろうか？
;		효과条件カテゴリ = 알케믹 아틀리에
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		リピート횟수 = RESULT + 1
		REPEAT リピート횟수
			IF GETVAR(@"%듀얼리스트%_덱:0") != 選択カード_ID
				CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",0)
			ELSEIF GETVAR(@"%듀얼리스트%_덱:0") == 選択カード_ID
				CALL CARDDRAW_BASIC(듀얼리스트,1)
				選択カード_ID = 0
			ENDIF
		REND
	ENDIF
ENDIF
