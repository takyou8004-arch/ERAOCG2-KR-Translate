@CARDNAME_61619,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 얼루어 댄스
	CASE "略称"
RESULTS = 매혹의 춤
	CASE "カテゴリ"
RESULTS:0 = 얼루어 퀸
RESULTS:1 = Lv
ENDSELECT


@CARD_61619(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_61619(종류)
#DIM DYNAMIC 종류
#DIMS DYNAMIC 듀얼리스트

PRINTL 이 카드명의 카드는 1턴에 1장밖에 발동할 수 없으며,
PRINTL 이 카드명의 ③의 효과는 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,마함起動,손패起動)
PRINTL ①: 이 카드의 발동 시의 효과 처리로서,
PRINTL 덱에서 "얼루어 퀸" 몬스터 1장 또는 "매혹의 궁전" 1장을 패에 넣을 수 있다.
CALLFORM CARD_ABLE(0,攻守変動)
PRINTL ②: 자신 필드의 "얼루어 퀸" 몬스터의 공격력은,
PRINTL 자신의 효과로 장착하고 있는 몬스터의 공격력만큼 상승한다.
CALLFORM CARD_ABLE(2,마함起動,손패起動)
PRINTL ③: 자신의 마법 / 함정 존의 다른 카드 1장을 묘지로 보내 발동할 수 있다.
PRINTL 자신의 패 / 묘지에서 "얼루어 퀸" 몬스터 1장을 특수 소환한다.
PRINTL 그 후, 자신 필드에 다음 카드가 존재할 경우, 각각의 효과를 적용한다.
PRINTL ● 레벨 5 이상의 "얼루어 퀸" 몬스터: "얼루어 퀸"을 덱 외부에서 특수 소환한다.
PRINTL ● 레벨 7 이상의 "얼루어 퀸" 몬스터: "얼루어 퀸 LV5"를 덱 외부에서 특수 소환한다.


@CARDCAN_61619(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,61619)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_2(듀얼리스트,61619)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 매혹의여왕
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,61619)
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_61619(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 装備先


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61619,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件他所 = 1
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"마함",ゾーン,場所)
		
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲손패 = 1
		효과条件カテゴリ = 매혹의여왕
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 매혹의여왕
		CALLFORM 효과条件レベル_ADV(7, "以上")
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_GENERATE(듀얼리스트,11619)
		ENDIF

		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 매혹의여왕
		CALLFORM 효과条件レベル_ADV(5, "以上")
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_GENERATE(듀얼리스트,1619)
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	FOR カウンタ,0,5
		装備先 = GETVAR(@"%듀얼리스트%_魔_装:カウンタ")
		CALL SET_FIELD_INFO(듀얼리스트,"마함",装備先,"武種",1,1)
	NEXT
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61619,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과条件名前:0 = 매혹의 궁전
		효과条件名前:1 = 얼루어 퀸
		효과条件任意 = 1
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ENDIF
