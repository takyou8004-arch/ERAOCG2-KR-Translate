@CARDSUMMON_50180(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 7

;1体目の条件
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
	素材条件속성 = 바람속성
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,50180) 
	RETURN RESULT
ENDIF

@CARDCAN_50180(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50180)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	IF メインフェイズ == 1
		SIF 종류 == フリー誘発
			RETURN 0
		SIF 발동済_1(듀얼리스트,50180)
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件속성 = 바람속성
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ENDIF
	IF バトルフェイズ == 1
		SIF 발동済_2(듀얼리스트,50180)
			RETURN 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 윈드 위치
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ENDIF
	RETURN 0
ENDIF


@CARDEFFECT_50180(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードレベル
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 필드起動 && メインフェイズ == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50180,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件속성 = 바람속성
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		
		CALL CARD_SELECT(듀얼리스트,RESULT)
		選択カード = RESULT
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_묘지:選択カード")},"レベル"
		選択カードレベル = RESULT
		IF 選択カードレベル > 0
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",選択カードレベル*200,1)
		ENDIF


	ENDIF
ELSEIF (종류 == 필드起動 || 종류 == フリー誘発) && バトルフェイズ == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50180,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 윈드 위치
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_묘지:選択カード")},"レベル"
		選択カードレベル = RESULT
		IF 選択カードレベル > 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과추가종류 = 効追戦無
			CALL 효과条件レベル_ADV(選択カードレベル, "以下")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
