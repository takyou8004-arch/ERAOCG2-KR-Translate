CALLFORM CARD_ABLE(2,묘지起動,フリー誘発)
PRINTL ②: 묘지의 이 카드를 제외하고, 제외되어 있는 자신의 "위치크래프트" 마법 카드를 임의의 수만큼 대상으로 하고 발동할 수 있다.
PRINTL 그 카드를 패에 넣는다.

@CARDCAN_82040(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,82040)
SIF RESULT == 1
	RETURN 0

;起動효과
IF 종류 == 마함起動 || (종류 == フリー誘発 && ゾーン == "마함")
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,82040)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0

	;戻すべき마법사족がいるかチェック
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件종족 = 마법사족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	;更に덱に위치크래프트마법카드가 あることをチェック
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = 마법全般
	효과条件カテゴリ = 위치크래프트
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 묘지起動 || (종류 == フリー誘発 && ゾーン == "묘지")
	;自明だが判別用
	SIF ゾーン != "묘지"
		RETURN 0
	;既に使用してるなら
	SIF 발동済_2(듀얼리스트,82040)
		RETURN 0
	;제외が行えない상황なら当然ダメ
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	;제외されている위치크래프트카드가 ないとダメ
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件종류 = 마법全般
	효과条件カテゴリ = 위치크래프트
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_82040(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID


;①의 효과
IF 종류 == 마함起動 || (종류 == フリー誘発 && ゾーン == "마함")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,82040,1)
	IF RESULT == 0
		;몬스터를 덱に戻す処理
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件종족 = 마법사족
		PRINTL 덱으로 되돌릴 몬스터를 선택해 주세요
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1

			CALL FULLRESET
			효과条件종류 = 마법全般
			효과条件カテゴリ = 위치크래프트
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",場所)
		ENDIF
	ENDIF

;②의 효과
ELSEIF 종류 == 묘지起動 || (종류 == フリー誘発 && ゾーン == "묘지")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,82040,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		효과条件종류 = 마법全般
		효과条件カテゴリ = 위치크래프트
		効果条件複数 = 任意の数
		CALL CARD_ADD_BASIC(듀얼리스트,"제외",場所)
	ENDIF
ENDIF



