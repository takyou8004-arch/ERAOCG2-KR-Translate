@CARDCAN_92072(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC EX条件달성


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,92072)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || (종류 == フリー誘発 && ゾーン == "마함")
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,50990,"EX덱")
	IF RESULT == 1
		CALL CARD_SS_CHECK(듀얼리스트,50991,"EX덱")
		SIF RESULT == 1
			RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲EX덱 = 1
효과条件名前 = 패왕룡 자크
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF 발동済_1(듀얼리스트,92072)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
효과条件名前 = 패왕룡 자크
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 마법全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲필드 = 1
	효과範囲EX덱 = 1
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 펜듈럼 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲필드 = 1
	효과範囲EX덱 = 1
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 엑시즈 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲필드 = 1
	효과範囲EX덱 = 1
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 싱크로 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲필드 = 1
	효과範囲EX덱 = 1
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 융합 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0


	RETURN 1
ENDIF

@CARDEFFECT_92072(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC EX参照
#DIM DYNAMIC 묘지送カード,10
#DIM DYNAMIC 손패묘지送カード,10
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択済カード
#DIM DYNAMIC EX条件달성


IF 종류 == 마함起動 || (종류 == フリー誘発 && ゾーン == "마함")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92072)
	IF RESULT == 0	
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",(GETVAR(@"ライフ_%듀얼리스트%")  / 2))
		CALL FULLRESET
		효과条件종류 = 융합
효과条件名前 = 패왕룡 자크
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL FULLRESET
			효과条件特不無視 = 1
			효과추가종류 = 効追無効
			CALL CARD_EX_SUMMON(듀얼리스트, "EX덱", 選択カード)
		ENDIF
	ENDIF
ELSEIF 종류 == 발동誘発
CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92072,1)
	IF RESULT == 0	
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
효과条件名前 = 패왕룡 자크
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲EX덱 = 1
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件任意 = 1
			효과条件カテゴリ = 펜듈럼 드래곤
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲EX덱 = 1
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件任意 = 1
			효과条件カテゴリ = 엑시즈 드래곤
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲EX덱 = 1
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件任意 = 1
			효과条件カテゴリ = 싱크로 드래곤
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲EX덱 = 1
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件任意 = 1
			효과条件カテゴリ = 융합 드래곤
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
