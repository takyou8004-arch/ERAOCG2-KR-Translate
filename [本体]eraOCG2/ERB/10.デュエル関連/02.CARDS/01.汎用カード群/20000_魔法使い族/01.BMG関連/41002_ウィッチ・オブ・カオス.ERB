@CARDNAME_41002,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 위치 오브 카오스
	CASE "略称"
		RESULTS = ＷＯＣ
	CASE "カテゴリ"
		RESULTS:0 = 블랙 매지션 걸
		RESULTS:1 = 매지션 걸
		RESULTS:2 = 카오스
		RESULTS:3 = 게임 오리지널
ENDSELECT


@CARD_41002(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 의식
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 마법사족
	CASE "レベル"
		RETURN 6
	CASE "攻撃力"
		RETURN 2100
	CASE "守備力"
		RETURN 2500
	CASE "성별"
		RETURN 牝性
	CASE "連動ID"
		RETURN 1000
ENDSELECT

RETURN 0

