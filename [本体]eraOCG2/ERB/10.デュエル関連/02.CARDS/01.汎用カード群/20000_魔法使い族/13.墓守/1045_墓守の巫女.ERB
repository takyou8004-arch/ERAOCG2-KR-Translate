PRINTL 묘지의 이 카드와 "묘지기의 무녀" 이외의 묘지의 "묘지기" 몬스터 중, 1장을 수비 표시로 특수 소환하고, 다른 1장을 제외한다.
PRINTL 

;"묘지기"テ-マの中核となるフィールド마법"王家の眠る谷－네크로벨리"を持ってくる重要な役割を持ったモンスター。
;덱 묘지에서 앞면 표시로 置く효과は強く、先に네크로벨리を貼っていれば他の네크로벨리마법함정サーチにも出来て小回りが利くが、
;효과後はＥＸ덱に制約がかかり汎用ＥＸ몬스터를 使った展開はほぼ出来なくなる。
;특수소환やリバースでも誘発するので、상대ターンに誘発させて필드에 네크로벨리설치という芸当も理論上は可能。
;もう一つ의 효과は네크로벨리の制約がかかっている状態では발동できない묘지효과で一見アンシナジ-であるが、
;上級の묘지기を出せていたり、네크로벨리を剥がされて묘지にある状態でも발동できて、묘지リソ-スで再展開できるようにしている。
;"묘지기"テ-マの中心になる女の子モンスターなので、효과は（当社比で）メチャクチャ強くしている。だいたい0.8ロ-ちゃん程度の想定。

@CARDCAN_1045(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件플래그


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1045)
SIF RESULT == 1
	RETURN 0


IF 종류 == 소환時 || 종류 == 특수소환時 || 종류 == リバース誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,1045)
		RETURN 0
	;SIF 발동済_2(듀얼리스트,1045)
	;	RETURN 0
	;자신의 필드에 既にフィールド마법があるかチェック
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件종류 = フィールド
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		SIF 마함数(듀얼리스트) >= 5
			RETURN 0
		;フィールド마법が존재하지 않는 경우=덱 묘지에서 네크로벨리を置く효과
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
효과条件名前 = 왕가의 골짜기-네크로밸리
		효과条件うらら解除 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSE
		;フィールド마법が存在する場合=덱에서 네크로벨리마법함정を패에 넣는다효과
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = 마함全般
		효과条件カテゴリ = 네크로벨리
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == 묘지起動
	;SIF 발동済_1(듀얼리스트,1045)
	;	RETURN 0
	SIF 발동済_2(듀얼리스트,1045)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,1045,"묘지")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲묘지 = 1
효과条件名前 = 왕가의 골짜기-네크로밸리
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 묘지기
	효과条件固名前 = 묘지기의 무녀
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1045(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択結果


IF 종류 == 소환時 || 종류 == 특수소환時 || 종류 == リバース誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1045,1)
	IF RESULT == 0
		;자신의 필드에 既にフィールド마법があるかチェック
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件종류 = フィールド
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1
			;フィールド마법が존재하지 않는 경우=덱 묘지에서 네크로벨리を置く효과
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
효과条件名前 = 왕가의 골짜기-네크로밸리
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		ELSE
			;フィールド마법が存在する場合=덱에서 네크로벨리마법함정を패에 넣는다효과
			CALL FULLRESET
			효과条件종류 = 마함全般
			효과条件カテゴリ = 네크로벨리
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
		;마법사족モンスターしかＥＸ덱에서 특수 소환할 수 없다。縛り
		EX소환可能종족 = 마법사족
		CALL CARD_EX_RESTRICTION(듀얼리스트)
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1045,2)
	IF RESULT == 0
		IF 듀얼리스트 == "자신"
			;자신의 場合は무녀를 蘇生するか選択、상대(CPUの場合は손패と마함に네크로벨리なかったら巫女蘇生、それ以外は巫女제외)
PRINTL "묘지기의 무녀"를 묘지에서 특수 소환하시겠습니까?
			CALL YN_CHOICE(듀얼리스트,"●묘지기의 무녀를 특수 소환하고 묘지의 「묘지기」몬스터를 제외한다。","●묘지기의 무녀를 제외하고 묘지의 「묘지기」몬스터를 특수 소환한다。")
			選択結果 = RESULT
		ELSE
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲마함 = 1
효과条件名前 = 왕가의 골짜기-네크로밸리
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT != 1
				;네크로벨리がない時は무녀를 蘇生
				選択結果 = はい
			ELSE
				;네크로벨리がある時は무녀를 제외
				選択結果 = いいえ
			ENDIF
		ENDIF
		
		IF 選択結果 == はい
			;묘지에서 "묘지기"モンスター1体제외하고 、무녀를 蘇生
			CALL FULLRESET
			효과条件종류 = モン全般
			효과条件カテゴリ = 묘지기
			효과条件固名前 = 묘지기의 무녀
			CALL CARD_ADD_GY_BASIC(듀얼리스트, "묘지", ゾーン, 場所)
			IF RESULT == 1
				;제외できたら蘇生
				CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所,"守備표시")
			ENDIF
		ELSE
			;묘지에서 무녀를 제외하고 、"묘지기"モンスター1体を蘇生
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				;제외できたら蘇生
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件종류 = モン全般
				효과条件カテゴリ = 묘지기
				효과条件固名前 = 묘지기의 무녀
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
			ENDIF
		ENDIF
	ENDIF
ENDIF
