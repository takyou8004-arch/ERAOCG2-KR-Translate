;テ-マ設計の大方針として、ＥＸ使ってソリティアしてアドを稼ぐ類いの動作がやりにくいようにしている。


@CARDSUMMON_50211(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要素材数 = 3

IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 묘지기
	素材条件종류 = モン全般
ELSEIF EX参照 >= 10
	素材条件종류 = 효과全般
ENDIF

IF EX参照 == 1
	;PRINTL サモンまでは言ってるよ
	CALL FUSCAN(듀얼리스트,소환カード,50211) 
	RETURN RESULT
ENDIF


@CARDCAN_50211(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50211)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF 발동済_1(듀얼리스트,50211)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 묘지기
	효과条件종류 = 융합以外
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 특수소환時強制
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,50211)
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_50211(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ラー条件플래그
#DIM DYNAMIC オベリスク条件플래그
#DIM DYNAMIC オシリス条件플래그
#DIM DYNAMIC ホルアクティ条件플래그 = 0
#DIM DYNAMIC 選択結果
#DIM DYNAMIC 攻撃修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == EX덱起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50211,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 묘지기
		효과条件종류 = 융합以外
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			;효과추가종류 = 190
			CALL CARD_SP_SUMMON(듀얼리스트,"EX덱",場所)
			SIF RESULT == 1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"永攻",-2000)
		ENDIF
	ENDIF
ELSEIF 종류 == 특수소환時強制
	;자신의 モンスターゾーンの"묘지기"カテゴリを持つモンスター 이외의 몬스터를 全て묘지へ送る処理
	;参考：幻の소환신엑조디아
	FOR カウンタ,0,5
		VARSET RESULT
		VARSET RESULTS
		SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:{カウンタ}")}, "カテゴリ"
		SIF MATCH(RESULTS,"묘지기")
			CONTINUE
		CALL CARD_DISPOSE(듀얼리스트,"필드",カウンタ)
	NEXT
	;"묘지기"以外특수 소환할 수 없다。縛り
	;SS소환可能カテゴリ = 묘지기
	CALL CARD_SS_RESTRICTION(듀얼리스트,"묘지기")
	;EX소환可能カテゴリ = 묘지기
	;CALL CARD_EX_RESTRICTION(듀얼리스트)
	
ELSEIF 종류 == EX소환時 || 종류 == 특수소환時
	;こ의 효과の無効はできない（参考：소환 마술）
	효과無効不能 = 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50211,2)
	IF RESULT == 0
		;３つ의 효과から１つを選択する。
		;こ의 효과は、삼환신それぞれをモチ-フにしているので出来れば選択肢は常に３つとも並べたい
		;条件を満たしてなくて空撃ちになる処理はグレ-にしてBINPUTで選択できないようにする
		;ラ-の条件は必ず満たしている（자신의 공격력을 上げることはできるので）
		;オベリスクは상대 몬스터 １장 이상と、필드에 自身を含めて"묘지기"モンスターが２장必要
		;オシリスは상대의 表側표시モンスターが１장 이상必要
		
		;ラ-の条件確認の処理
		;SETCOLOR C_YELLOW_2
		ラー条件플래그 = 1
		
		;オベリスクの条件確認の処理
		;SETCOLOR C_ROYAL_BLUE
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT >= 1
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件종류 = モン全般
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT >= 2
				オベリスク条件플래그 = 1
		ENDIF
		
		;オシリスの条件確認の処理
		;SETCOLOR C_RED
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件표시 = 表側표시
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT >= 1
			オシリス条件플래그 = 1
		
		
		IF 듀얼리스트 == "상대"
