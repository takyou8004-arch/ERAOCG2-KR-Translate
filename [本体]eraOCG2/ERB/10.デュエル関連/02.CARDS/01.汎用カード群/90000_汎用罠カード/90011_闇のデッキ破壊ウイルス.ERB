@CARDCAN_90011(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,90011)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0

	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성 = 어둠속성
	효과条件以攻撃力 = 2500
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_90011(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択肢
IF 종류 == 마함起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,90011)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件속성 = 어둠속성
		효과条件以攻撃力 = 2500
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
PRINTL 마법 카드를 파괴하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			選択肢 = RESULT
			CALL FULLRESET
			IF 選択肢 == 0
				효과条件종류 = 마법全般
			ELSE
				효과条件종류 = 함정全般
			ENDIF
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함全体",場所,"묘지")
			IF 選択肢 == 0
				CALL SET_PLAYER_INFO(듀얼리스트,"魔ウイルス",3,1)
			ELSE
				CALL SET_PLAYER_INFO(듀얼리스트,"함정ウイルス",3,1)
			ENDIF
		ENDIF
	ENDIF
ENDIF
