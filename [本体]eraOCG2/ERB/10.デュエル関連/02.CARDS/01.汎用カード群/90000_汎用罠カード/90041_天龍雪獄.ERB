CALLFORM CARD_ABLE(1,마함起動 ,フリー誘発)
PRINTL ①: 상대의 묘지의 몬스터 1체를 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터를 효과를 무효로 하여 자신 필드에 특수 소환한다.
PRINTL 그 후, 자신 및 상대 필드에서, 종족이 같은 몬스터를 1체씩 제외할 수 있다.

@CARDCAN_90041(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,90041)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,90041)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0

	CALL FULLRESET
	효과範囲상대묘지 = 1
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_90041(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択カード_종족
#DIM DYNAMIC 소환先보존

IF 종류 == 마함起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,90041,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲상대묘지 = 1
		효과추가종류 = 効追無効
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			소환先보존 = カード소환先
			選択カード_ID = RESULT:1
			CALLFORM CARD_{選択カード_ID}("종족")
			選択カード_종족 = RESULT

			;いなかったら終了
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件종족 = 選択カード_종족
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				RETURN 1

PRINTL 몬스터를 제외하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == はい
				CALL FULLRESET
				효과条件종류 = 選択カード_종족
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"제외")
				IF RESULT == 1
					CALL FULLRESET
					CALL CARD_DISPOSE(듀얼리스트,"필드",소환先보존)		
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
