@CARDCAN_26301(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,26301)
SIF RESULT == 1
	RETURN 0
IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,26301)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"손패","묘지")
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,26301,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件속성 = 화염속성
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,26301)
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과条件속성 = 화염속성
	효과条件固名前 = 성염왕 가루도닉스
	효과条件종족:0 = 야수족
	효과条件종족:1 = 비행야수족
	효과条件속성 = 화염속성
	효과条件표시 = 表側표시

	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_26301(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26301,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26301,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과条件固名前 = 성염왕 가루도닉스
		효과条件종족:0 = 야수족
		효과条件종족:1 = 비행야수족
		효과条件속성 = 화염속성
		효과条件표시 = 表側표시
		효과条件行先플래그 = 破壊行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			TRYCALLFORM CARD_{RESULT:1}("攻撃力")
			攻撃力修正 = RESULT / 2
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",攻撃力修正)
		ENDIF
	ENDIF
ENDIF