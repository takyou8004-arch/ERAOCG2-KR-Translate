@CARDEFFECT_72630(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL FULLRESET
	효과範囲필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		RESULT = はい
	ELSE
		CALL YN_CHOICE(듀얼리스트,"카드를 破壊してサーチ","패에서 야수족 비행야수족을 특수소환")
	ENDIF
	IF RESULT == はい
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72630,1)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲손패 = 1
			효과条件行先플래그 = 破壊行き
			효과条件他所 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과条件カテゴリ = 염왕
				CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
			ENDIF
		ENDIF
	ELSEIF RESULT == いいえ
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72630,1)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件종족:0 = 야수족
			효과条件종족:1 = 비행야수족
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72630)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지 || 종류 == 제외時
	CALL FULLRESET
	CALL CARD_REMOVAL_BASIC(対面者,"필드全体",場所,"묘지")
ENDIF
