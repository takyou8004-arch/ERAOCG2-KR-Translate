	RESETCOLOR


@CARDCAN_26001(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,26001)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	;효과①발동済みなら침묵
	SIF 발동済_1(듀얼리스트,26001)
		RETURN 0
	;コントロ-ラ-のターンじゃないなら침묵
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	;メインフェイズじゃないなら침묵
	SIF メインフェイズ != 1
		RETURN 0
	;특수소환できないなら침묵
	CALL CARD_SS_CHECK(듀얼리스트,26001,ゾーン)
	SIF RESULT == 1
		RETURN 0
	;モンスターゾーンが一杯なら침묵
	SIF モンスター数(듀얼리스트) >= 4
		RETURN 0
	;손패に대상がいないなら침묵
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종족 = 비행야수족
	효과条件속성 = 물속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	;묘지に대상がいないなら침묵
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 비행야수족
	효과条件속성 = 물속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	;それ以外ならOK
	RETURN 1
ENDIF

@CARDEFFECT_26001(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26001,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		;묘지から소환
		효과範囲묘지 = 1
		효과条件종족 = 비행야수족
		효과条件속성 = 물속성
		효과条件固名前 = 블리자드 썬더 버드
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			;손패から소환
			효과範囲손패 = 1
			효과条件종족 = 비행야수족
			효과条件속성 = 물속성
		    효과条件固名前 = 블리자드 썬더 버드
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	    CALL CARD_DISPOSE(듀얼리스트,"필드",場所,손패行き)
	ENDIF
ENDIF

