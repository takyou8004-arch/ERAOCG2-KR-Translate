@CARDCAN_1177(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1177)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF 戦闘場所(듀얼리스트) == 場所
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1177(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 戦闘カード
#DIM DYNAMIC 攻撃力修正



CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 攻守変動
	CALL FULLRESET
	攻撃力修正 = (GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") + 1) * 500
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1177,10,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함単体",場所,"덱")
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1177)
	IF RESULT == 0
		戦闘カード = 戦闘場所(듀얼리스트)
		WHILE GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") > -1
			CALL FULLRESET
			CALL SET_FIELD_INFO(듀얼리스트,"필드",戦闘カード,"一時",300)
			CALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:戦闘カード}")}
			PRINTFORML %RESULTS%の攻撃力アップ！！
			SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
				BREAK
			PRINTL 한 번 더 사용하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == 1
				BREAK
			ELSE
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-1)
			ENDIF
		WEND
	ENDIF
ENDIF