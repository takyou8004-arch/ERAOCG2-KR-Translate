@CARDCAN_51508	(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIM DYNAMIC 효과使用불가,5
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51508)
SIF RESULT == 1
	RETURN 0

IF 종류 == ターン開始時
	SIF 발동済_1(듀얼리스트,51508)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF ターン数 < 2
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 의식마법
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX소환時強制
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件종류 = 通常モン
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	IF ターンプレイヤー != 듀얼리스트 || バトルフェイズ != 1
		SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),2) != 1
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") == 0
		RETURN 0

	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 直前戦闘破壊ID(듀얼리스트,1) == 0
		RETURN 0
	RETURN 1


ELSEIF 종류 == バトル開始時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),1) != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF ゾーン != "필드"
		RETURN 0

	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),1) != 1
		효과使用불가:0 = 1
	SIF 발동済_1(듀얼리스트,51508)
		효과使用불가:0 = 1
	SIF モンスター数(対面者) == 0
		효과使用불가:0 = 1

	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),2) != 1
		효과使用불가:1 = 1
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		효과使用불가:1 = 1
	SIF 손패数(対面者) == 0
		효과使用불가:1 = 1

	SIF 효과使用불가:0 == 1 && 효과使用불가:1 == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),2) != 1
		RETURN 0
	SIF 발동済_2(듀얼리스트,51508)
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF モンスター数(対面者) == 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_51508	(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류　
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM 손패選択
#DIM 選択カード
#DIM 選択カード_ID
#DIM 소환カード
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC ダメージ量
#DIM DYNAMIC 효과使用불가,5

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == ターン開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50103,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件他所 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_DISPOSE(듀얼리스트,"손패",選択カード,덱行き)
			CALL FULLRESET
			효과条件カテゴリ = 의식마법
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == EX소환時強制
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"条達",2,1)
ELSEIF 종류 == 지속효과
	IF ターンプレイヤー == 듀얼리스트 && バトルフェイズ == 1
		CALL SET_PLAYER_INFO(対面者,"モン효과無効",3)
		CALL SET_PLAYER_INFO(対面者,"마함無効",3)
	ENDIF
	IF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),2) == 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"対耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")
	ENDIF
ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50103)
	IF RESULT == 0
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場全体",場所,"덱")
	ENDIF


ELSEIF 종류 == バトル開始時強制
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦",2,1)

ELSEIF 종류 == 필드起動
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),1) != 1
		효과使用불가:0 = 1
	SIF 발동済_1(듀얼리스트,51508)
		효과使用불가:0 = 1
	SIF モンスター数(対面者) == 0
		효과使用불가:0 = 1

	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),2) != 1
		효과使用불가:1 = 1
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		효과使用불가:1 = 1
	SIF 손패数(対面者) == 0
		효과使用불가:1 = 1

	IF 효과使用불가:0 != 1 && 효과使用불가:1 != 1
PRINTL 어느 쪽의 효과를 사용하시겠습니까?
		CALL YN_CHOICE(듀얼리스트,"개벽의 힘","소암의 힘")
	ELSEIF 효과使用불가:0 != 1 && 효과使用불가:1 == 1
		RESULT = 0
	ELSE
		RESULT = 1
	ENDIF
	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51508,1)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"제외")
		ENDIF
	ELSEIF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51508,11)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"상대손패",ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51508,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"제외")
	ENDIF
ENDIF