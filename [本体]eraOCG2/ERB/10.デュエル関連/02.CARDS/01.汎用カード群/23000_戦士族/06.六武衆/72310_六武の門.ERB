@CARD_EXPLANATION_72310(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,소환強制誘発)
PRINTL ①: "여섯 무사" 몬스터가 소환 / 특수 소환될 때마다 발동한다.
PRINTL 이 카드에 개별 카운터를 2개 놓는다.
CALLFORM CARD_ABLE(0,마함起動)
PRINTL ②: 이 카드의 개별 카운터를 이하의 수만큼 제거하고, 그 효과를 발동할 수 있다.
PRINTL ● 2개: 자신 필드의 "여섯 무사" 또는 "자염" 몬스터 1장을 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터의 공격력은 턴 종료시까지 500 올린다.
PRINTL ● 4개: 자신의 덱/묘지에서 "여섯 무사" 몬스터 1장을 고르고 패에 넣는다.
PRINTL ● 6개: 자신의 묘지의 "자염" 효과 몬스터 1장을 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터를 특수 소환한다.


@CARDCAN_72310(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72310)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") < 2
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	RETURN 1
ELSEIF 종류 == 소환強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	SIF 最終소환決者 != 듀얼리스트
		RETURN 0
	SIF 最終소환타입 == ""
		RETURN 0
	CALLFORM CARDNAME_{最終소환ID}("カテゴリ") 
	 SIF !MATCH(RESULTS,"여섯 무사")
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_72310(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択肢
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72310)
	IF RESULT == 0
		PRINTFORML 카운터を何枚取り除きますか？
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 여섯 무사
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1 && GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") >= 2
			SIF 듀얼리스트 == "자신"
				PRINTFORML [2] - 攻撃力５００アップ。
		ENDIF

		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 여섯 무사
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1 && GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") >= 4
			IF 듀얼리스트 == "자신"
				PRINTFORML [4] - 덱 묘지에서 "여섯 무사"サーチ。
			ELSEIF 듀얼리스트 == "상대"
				選択肢 = 4
			ENDIF
		ENDIF

		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 자염
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1 && GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") >= 6 
			IF 듀얼리스트 == "자신"
				PRINTFORML [6] - 묘지에서 "자염"を특수소환。
			ENDIF
		ENDIF
		IF 듀얼리스트 == "자신"
			BINPUT
			選択肢 = RESULT
		ENDIF

		IF 選択肢 == 2
			CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",-2)
			CALL FULLRESET
			효과条件カテゴリ = 여섯 무사
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一攻",500)
			ENDIF
		ELSEIF 選択肢 == 4
			CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",-4)
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = 여섯 무사
			효과条件종류 = モン全般			
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ELSEIF 選択肢 == 6
			CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",-6)
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 자염
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72310)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 소환強制誘発
	PRINTFORML 六部の門『{場所}』に카운터が２つ乗りました。
	CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",2)
ENDIF