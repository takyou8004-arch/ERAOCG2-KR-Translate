@CARDEFFECT_23150(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 攻守変動
	FOR カウンタ,0,5
		VARSET 条件달성
		SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
			CONTINUE
		TRYCALLFORM CARD_{GETVAR(@"%対面者%_필드:カウンタ")}, "종족"
		SIF RESULT == 드래곤족
			条件달성 = 1
		TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:カウンタ")}, "名前"
		SIF STRFIND(RESULTS, "드래곤")  != -1
			条件달성 = 1
		SIF STRFIND(RESULTS, "룡")  != -1
			条件달성 = 1
		SIF STRFIND(RESULTS, "龍")  != -1
			条件달성 = 1
		SIF 条件달성 == 1
			攻撃力修正 ++
	NEXT
	FOR カウンタ,0,紙束最大値
		VARSET 条件달성
		SIF GETVAR(@"%対面者%_묘지:カウンタ") == -1
			CONTINUE
		TRYCALLFORM CARD_{GETVAR(@"%対面者%_묘지:カウンタ")}, "종족"
		SIF RESULT == 드래곤족
			条件달성 = 1
		TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_묘지:カウンタ")}, "名前"
		SIF STRFIND(RESULTS, "드래곤")  != -1
			条件달성 = 1
		SIF GETVAR(@"%対面者%_MZ_種:カウンタ") == 드래곤족
			条件달성 = 1

		SIF STRFIND(RESULTS, "룡")  != -1
			条件달성 = 1
		SIF STRFIND(RESULTS, "龍")  != -1
			条件달성 = 1
		SIF 条件달성 == 1
			攻撃力修正 ++
	NEXT
	攻撃力修正 = 攻撃力修正 * 500
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)
ENDIF


