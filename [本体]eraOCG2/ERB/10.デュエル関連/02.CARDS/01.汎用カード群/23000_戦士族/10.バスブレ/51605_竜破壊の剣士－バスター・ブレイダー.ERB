@CARDSUMMON_51605(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
素材条件名前 = 버스터 블레이더
ELSEIF EX参照 >= 10
	素材条件종족 = 드래곤족
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,51605) 
	RETURN RESULT
ENDIF



@CARDCAN_51605(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51605)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻守変動 || 종류 == 지속효과 || 종류 == 常在無効
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_51605(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 大条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻守変動
	FOR カウンタ,0,5
		VARSET 条件달성
		SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
			CONTINUE
		TRYCALLFORM CARD_{GETVAR(@"%対面者%_필드:カウンタ")}, "종족"
		SIF RESULT == 드래곤족
			条件달성 = 1
		TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:カウンタ")}, "名前"
		SIF STRFIND(RESULTS, "드래곤")  != -1
			条件달성 = 1
		SIF GETVAR(@"%対面者%_MZ_種:カウンタ") == 드래곤족
			条件달성 = 1

		SIF STRFIND(RESULTS, "룡")  != -1
			条件달성 = 1
		SIF STRFIND(RESULTS, "龍")  != -1
			条件달성 = 1
		SIF 条件달성 == 1
			攻撃力修正 ++
	NEXT
	FOR カウンタ,0,紙束最大値
		VARSET 条件달성
		SIF GETVAR(@"%対面者%_묘지:カウンタ") == -1
			CONTINUE
		TRYCALLFORM CARD_{GETVAR(@"%対面者%_묘지:カウンタ")}, "종족"
		SIF RESULT == 드래곤족
			条件달성 = 1
		TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_묘지:カウンタ")}, "名前"
		SIF STRFIND(RESULTS, "드래곤")  != -1
			条件달성 = 1
		SIF STRFIND(RESULTS, "룡")  != -1
			条件달성 = 1
		SIF STRFIND(RESULTS, "龍")  != -1
			条件달성 = 1
		SIF 条件달성 == 1
			攻撃力修正 ++
	NEXT
	FOR カウンタ,0,紙束最大値
		VARSET 条件달성
		SIF GETVAR(@"%対面者%_제외:カウンタ") == -1
			CONTINUE
		TRYCALLFORM CARD_{GETVAR(@"%対面者%_제외:カウンタ")}, "종족"
		SIF RESULT == 드래곤족
			条件달성 = 1
		TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_제외:カウンタ")}, "名前"
		SIF STRFIND(RESULTS, "드래곤")  != -1
			条件달성 = 1
		SIF STRFIND(RESULTS, "룡")  != -1
			条件달성 = 1
		SIF STRFIND(RESULTS, "龍")  != -1
			条件달성 = 1
		SIF 条件달성 == 1
			攻撃力修正 ++
	NEXT
	攻撃力修正 = 攻撃力修正 * 1000
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)

ELSEIF 종류 == 지속효과
	FOR カウンタ,0,5
		VARSET 条件달성
		SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
			CONTINUE
		;攻撃표시じゃなかったらおわり
		SIF GETVAR(@"%対面者%_MZ_表:カウンタ") >= 2
			CONTINUE
		;モンスター耐性持ってたらおわり
		SIF GETVAR(@"%対面者%_MZ_モ耐:カウンタ") >= 1
			CONTINUE
		;無差耐耐性持ってたらおわり
		SIF GETVAR(@"%対面者%_MZ_無差耐:カウンタ") >= 1
			CONTINUE

		SIF GETVAR(@"%対面者%_MZ_種:カウンタ") == 드래곤족
			条件달성 = 1
		TRYCALLFORM CARD_{GETVAR(@"%対面者%_필드:カウンタ")}, "종족"
		SIF RESULT == 드래곤족
			条件달성 = 1

		TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:カウンタ")}, "名前"
		SIF STRFIND(RESULTS, "드래곤")  != -1
			条件달성 = 1
		SIF STRFIND(RESULTS, "룡")  != -1
			条件달성 = 1
		SIF STRFIND(RESULTS, "龍")  != -1
			条件달성 = 1
		IF 条件달성 == 1
			CALL SET_FIELD_INFO(対面者,"필드",カウンタ,"表",2,1)
		ENDIF
	NEXT
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"直無")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"貫通")
ELSEIF 종류 == 常在無効
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 파괴권룡－버스터 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		大条件달성 = 1
	FOR カウンタ,0,5
		VARSET 条件달성
		SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
			CONTINUE
		;攻撃표시じゃなかったらおわり
		SIF GETVAR(@"%対面者%_MZ_表:カウンタ") >= 2
			CONTINUE
		;モンスター耐性持ってたらおわり
		SIF GETVAR(@"%対面者%_MZ_モ耐:カウンタ") >= 1
			CONTINUE
		;無差耐耐性持ってたらおわり
		SIF GETVAR(@"%対面者%_MZ_無差耐:カウンタ") >= 1
			CONTINUE

		SIF GETVAR(@"%対面者%_MZ_種:カウンタ") == 드래곤족
			条件달성 = 1
		TRYCALLFORM CARD_{GETVAR(@"%対面者%_필드:カウンタ")}, "종족"
		SIF RESULT == 드래곤족
			条件달성 = 1

		TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:カウンタ")}, "名前"
		SIF STRFIND(RESULTS, "드래곤")  != -1
			条件달성 = 1
		SIF STRFIND(RESULTS, "룡")  != -1
			条件달성 = 1
		SIF STRFIND(RESULTS, "龍")  != -1
			条件달성 = 1

		IF 条件달성 == 1 || 大条件달성 == 1
			CALL SET_FIELD_INFO(対面者,"필드",カウンタ,"発無",3,1)
		ENDIF
	NEXT
ENDIF




