PRINTL ●수비 표시: 1턴에 1번, 자신 메인 페이즈에 발동할 수 있다.
PRINTL 주사위를 1회 굴려, 나온 눈의 수 이하의 레벨을 가진 제외 상태인 "디포머" 몬스터 1장을 골라 특수 소환한다.



@CARDCAN_24603(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24603)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 && GETVAR(@"%듀얼리스트%_MZ_表:場所") == 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 디포머
	효과条件소환可 = 1
	CALL 효과条件レベル_ADV(4, "以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
	
ELSEIF 종류 == 필드起動 && GETVAR(@"%듀얼리스트%_MZ_表:場所") == 2
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件カテゴリ = 디포머
	효과条件소환可 = 1
	CALL 효과条件レベル_ADV(6, "以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24603(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC サイコロ結果

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24603,10)
	IF RESULT == 0
		PRINTFORMW ダイヤル～～～オン！
		CALL DICE_ROLL(듀얼리스트,1)
		サイコロ結果 = RESULT
		PRINTFORMW 出た目は……{サイコロ結果}だ！
		;攻撃
		IF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 1
			;参考：아다마시아
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 디포머
			CALL 효과条件レベル_ADV(4, "以下")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"",サイコロ結果)
		;守備
		ELSEIF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 2
			CALL FULLRESET
			효과範囲제외 = 1
			효과条件カテゴリ = 디포머
			CALL 효과条件レベル_ADV(サイコロ結果, "以下")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF



