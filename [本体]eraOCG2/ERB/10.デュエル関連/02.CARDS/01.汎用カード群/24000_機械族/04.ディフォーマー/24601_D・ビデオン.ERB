@CARDCAN_24601(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24601)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	;装備確認、FA어둠기사から
	CALL FULLRESET
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24601(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 装備枚数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 攻守変動
	IF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 1
		;装備確認、リボルバ-から
		CALL FULLRESET
		효과条件CNT = 1
		CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
		;攻撃力상승、ア-マリ-から
		装備枚数 = RESULT * 800
		CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,装備枚数,0)

	ELSEIF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 2
		;装備確認、リボルバ-から
		CALL FULLRESET
		효과条件CNT = 1
		CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
		;守備力상승、バスブレから
		装備枚数 = RESULT * 800
		CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,0,装備枚数)
	ENDIF
ENDIF



