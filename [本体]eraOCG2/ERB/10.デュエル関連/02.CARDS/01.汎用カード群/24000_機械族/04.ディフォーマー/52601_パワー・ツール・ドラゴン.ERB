	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52601,10)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 装備마법
		효과範囲덱 = 1
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ELSEIF 종류 == 身代효과
	;参考先：真シエン
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52601)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
PRINTL 몬스터를 묘지로 보내겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSE
			RESULT = いいえ
		ENDIF

		IF RESULT == はい
			CALL FULLRESET
			효과条件종류 = モン全般
		ELSEIF RESULT == いいえ
			CALL FULLRESET
			효과条件종류 = 装備마법
		ENDIF
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"마함",ゾーン,場所)
		IF RESULT == 1
			RETURN 1
		ENDIF
	ENDIF
	RETURN 0
ENDIF