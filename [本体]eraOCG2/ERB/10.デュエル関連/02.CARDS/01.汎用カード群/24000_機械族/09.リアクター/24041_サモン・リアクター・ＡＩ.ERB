PRINTL ③: 자신 몬스터 존에서 이 카드와 「트랩 리액터 RR」,
PRINTL 「매직 리액터 AID」를 각각 1체씩 묘지로 보내고 발동할 수 있다.
PRINTL 자신의 패 / 덱 / 묘지에서 「자이언트 보머 에어레이드」 1장을 골라 특수 소환한다.


@CARDCAN_24041(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24041)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 最終소환決者 == 듀얼리스트
		RETURN 0
	SIF 最終소환타입 == ""
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	CALL FULLRESET
	효과範囲필드 = 1
효과条件名前 = 매직 리액터 에이드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
효과条件名前 = 트랩 리액터 알알
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲묘지 = 1
효과条件名前 = 자이언트 폭탄 에어레이드
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃時誘発
	SIF 발동済_2(듀얼리스트,24041)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24041(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환強制誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24041,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",800,1)
	ENDIF

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24041)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
효과条件名前 = 트랩 리액터 알알
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲필드 = 1
효과条件名前 = 매직 리액터 에이드
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲덱 = 1
				효과範囲묘지 = 1
효과条件名前 = 자이언트 폭탄 에어레이드
				CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT != 9999
					CALL CARD_SELECT(듀얼리스트,RESULT)
					CALL FULLRESET
					CALL CARD_SP_SUMMON(듀얼리스트,参照先（CS）,選択カード（CS）)
				ENDIF
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24041,2)
	IF RESULT == 0
		CALL EVADE_ATTACK(듀얼리스트)
	ENDIF
ENDIF
