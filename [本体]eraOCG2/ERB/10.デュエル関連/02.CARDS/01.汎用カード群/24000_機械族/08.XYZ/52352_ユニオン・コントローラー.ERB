ENDSELECT


@CARD_52352(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 6
	CASE "攻撃力"
		RETURN 2200
	CASE "守備力"
		RETURN 1900
ENDSELECT

RETURN 0

