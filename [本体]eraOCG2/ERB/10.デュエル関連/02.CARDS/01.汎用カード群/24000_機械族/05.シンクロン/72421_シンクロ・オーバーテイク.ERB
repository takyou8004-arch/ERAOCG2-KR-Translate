PRINTL 이 카드를 발동하는 턴, 자신은 싱크로 몬스터밖에 엑스트라 덱에서 특수 소환할 수 없다.
PRINTL ● 그 몬스터에 카드명이 기재되어 있는 싱크로 소재 몬스터
PRINTL ● 그 몬스터와 속성이 같은 "싱크론" 튜너
PRINTL ● 그 몬스터와 종족 / 속성이 같은 튜너

@CARDCAN_72421(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72421)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,72421)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0	
	CALL FULLRESET
	효과条件종류 = 싱크로以外
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX이력")
	SIF RESULT != 0
		RETURN 0

	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72421(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 素材名,2
#DIM DYNAMIC 条件속성
#DIM DYNAMIC 選択肢
#DIMS DYNAMIC 最終挙動

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72421,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件종류 = 싱크로
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			選択カード_ID = RESULT:99
			TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード,0)
			素材名:0 = %素材条件名前%
			TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード,10)
			素材名:1 = %素材条件名前%
			TRYCALLFORM CARD_{選択カード_ID},"속성"
			条件속성 = RESULT
			IF 素材名:0 != "" || 素材名:1 != ""
PRINTL 싱크로 소재에 카드명이 기재된 몬스터를 선택했습니다.
PRINTL 소재 몬스터를 패에 넣거나 특수 소환하시겠습니까?
				CALL YN_CHOICE(듀얼리스트)
				IF RESULT == はい
					選択肢 = 0
				ELSE
PRINTL 패에 넣거나 특수 소환할 몬스터를 선택해 주세요.
					CALL YN_CHOICE(듀얼리스트,「속성が同じ「싱크론」튜너","종족 속성が同じ튜너")
					IF RESULT == 0
						選択肢 = 1
					ELSE
						選択肢 = 2
					ENDIF
				ENDIF
			ELSE
PRINTL 패에 넣거나 특수 소환할 몬스터를 선택해 주세요.
				CALL YN_CHOICE(듀얼리스트,「속성が同じ「싱크론」튜너","종족 속성が同じ튜너")
				IF RESULT == 0
					選択肢 = 1
				ELSE
					選択肢 = 2
				ENDIF
			ENDIF
			CALL YN_CHOICE(듀얼리스트,"패에 넣는다","특수 소환한다")
			IF RESULT == 0
				最終挙動 = "손패"
			ELSE
				最終挙動 = "특수소환"
			ENDIF
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
			IF 選択肢 == 0
				효과条件名前:0 = 素材名:0
				효과条件名前:1 = 素材名:1
			ELSE
				효과条件속성 = 条件속성
				SIF 選択肢 == 1
					효과条件カテゴリ = 싱크론
				IF 選択肢 == 2
					TRYCALLFORM CARD_{選択カード_ID},"종족"
					효과条件종족 = RESULT
				ENDIF
			ENDIF
			IF 最終挙動 == "손패"
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			ELSE
				효과추가종류 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
			EX소환可能종류 = 싱크로
			CALL CARD_EX_RESTRICTION(듀얼리스트)
		ENDIF
	ENDIF
ENDIF