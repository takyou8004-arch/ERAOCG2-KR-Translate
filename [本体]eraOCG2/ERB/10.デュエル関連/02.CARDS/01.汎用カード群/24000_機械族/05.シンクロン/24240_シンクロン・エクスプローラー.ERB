@CARDCAN_24240(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24240)
SIF RESULT == 1
	RETURN 0
	
IF 종류 == 소환時
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 싱크론
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_D1(듀얼리스트,24240)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 싱크론
	효과条件튜너 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24240(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード


IF 종류 == 소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24240)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 싱크론
		효과추가종류 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24240,20)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 싱크론
		효과条件튜너 = 1
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
		IF RESULT == 1
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,손패行き)
PRINTL 일반 소환권을 1회 늘릴 수 있습니다. 늘리시겠습니까?
PRINTL ※이 턴, EX덱에서 싱크론 몬스터밖에 특수 소환할 수 없게 됩니다.
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == はい
				소환権 ++
				EX소환可能종류 = 싱크로
				CALL CARD_EX_RESTRICTION(듀얼리스트)
			ENDIF
		ENDIF
	ENDIF
ENDIF
