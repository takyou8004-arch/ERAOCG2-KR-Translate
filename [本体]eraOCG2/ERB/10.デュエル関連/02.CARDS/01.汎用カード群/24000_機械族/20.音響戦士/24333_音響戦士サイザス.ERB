PRINTL 그 몬스터를 특수 소환한다。


@CARDCAN_24333(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24333)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 사운드 워리어
	효과条件종류 = モン全般
	효과条件固名前 = 사운드 워리어 사이저스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == リバース誘発
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 사운드 워리어
	효과条件종류 = モン全般
	효과条件固名前 = 사운드 워리어 사이저스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 묘지起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件カテゴリ = 사운드 워리어
	효과条件固名前 = 사운드 워리어 사이저스
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24333(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_ID

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24333,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 사운드 워리어
		효과条件종류 = モン全般
		효과条件固名前 = 사운드 워리어 사이저스
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			選択カード_ID = RESULT:99
			CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"変化元ID",選択カード_ID,上書きモード)
			TRYCALLFORM CARDNAME_{選択カード_ID},"略称"
			PRINTFORMW 사이저스は%RESULTS%と同じ音を鳴らし始めた！
			PRINTL
			TRYCALLFORM CARDCAN_{選択カード_ID}(듀얼리스트,필드起動)
			IF RESULT == 1
				PRINTFORML %RESULTS%の『필드起動효과』を使用しますか？
				CALL YN_CHOICE(듀얼리스트)
				SIF RESULT == いいえ
					RETURN 0
				CALLFORM CARDEFFECT_{選択カード_ID}(듀얼리스트,필드起動,"효과処理")
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == リバース誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24333)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 사운드 워리어
		효과条件종류 = モン全般
		효과条件固名前 = 사운드 워리어 사이저스
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24333)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲제외 = 1
		효과条件カテゴリ = 사운드 워리어
		효과条件固名前 = 사운드 워리어 사이저스
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

