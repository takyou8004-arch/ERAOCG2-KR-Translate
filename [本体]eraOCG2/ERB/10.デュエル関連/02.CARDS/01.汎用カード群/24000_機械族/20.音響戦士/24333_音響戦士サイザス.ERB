	CASE "名前"
		RESULTS = 사운드 워리어 사이저스
	CASE "略称"
		RESULTS = 사이저스
	CASE "カテゴリ"
		RESULTS:0 = 사운드 워리어
		RESULTS:1 = 리버스
ENDSELECT


