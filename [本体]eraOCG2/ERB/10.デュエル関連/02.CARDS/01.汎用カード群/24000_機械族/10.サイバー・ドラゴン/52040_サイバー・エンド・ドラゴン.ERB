@CARDSUMMON_52040(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 3

IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 사이버 드래곤
ELSEIF EX参照 >= 10
	素材条件종족 = 기계족
	素材条件속성 = 빛속성
ENDIF
IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,52040) 
	RETURN RESULT
ENDIF



@CARDCAN_52040(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52040)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 3
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드→묘지  || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_2(듀얼리스트,52040)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ = 사이버 드래곤
	효과条件固名前 = 사이버 엔드 드래곤
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_3(듀얼리스트,52040)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 短紋章起動
	RETURN 1
ENDIF




@CARDEFFECT_52040(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 조교대상


IF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"貫通")
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 기계족
	효과条件종류 = 융합
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"対耐")
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"破耐")
	ENDIF

ELSEIF 종류 == 필드→묘지  || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지

	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52040,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件カテゴリ = 사이버 드래곤
		효과条件固名前 = 사이버 엔드 드래곤
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52040,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL CARD_RESERV(듀얼리스트,52040,短紋章予約)
	ENDIF
ELSEIF 종류 == 短紋章起動
	CALL FULLRESET
	효과条件종족 = 기계족
	효과条件종류 = 융합
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐",1)
	CALL FULLRESET
	효과条件종족 = 기계족
	효과条件종류 = 융합
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐",1)
ENDIF