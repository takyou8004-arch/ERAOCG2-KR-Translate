@CARDCAN_52370(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52370)
SIF RESULT == 1
	RETURN 0
IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所") >= 2
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 戦破壊→묘지

	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과条件종류 = 의식
	효과条件固攻撃力 = 4000
	효과条件特不無視 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_52370(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 설정枚数
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 대상효과ID
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
IF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = 드라이트론
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")

ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52370,30)
	IF RESULT == 0
		대상효과ID = 効後_효과ID:(効後_カウンタ - 1)
		TRYCALLFORM CARD_{대상효과ID}("攻撃力")
		IF RESULT >= 4001
			설정枚数 = 3
		ELSEIF RESULT >= 2001
			설정枚数 = 2
		ELSE
			설정枚数 = 1
		ENDIF
		CALL FULLRESET
		효과条件カテゴリ = 드라이트론
		효과条件종류 = モン全般
		효과条件複数 = 설정枚数
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"묘지")
		ENDIF
	ENDIF
ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52370)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과条件종류 = 의식
		효과条件固攻撃力 = 4000
		효과条件特不無視 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン, 場所)
	ENDIF
ENDIF