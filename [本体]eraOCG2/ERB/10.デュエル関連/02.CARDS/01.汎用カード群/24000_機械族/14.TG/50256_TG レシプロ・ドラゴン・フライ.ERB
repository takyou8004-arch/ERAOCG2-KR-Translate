@CARDSUMMON_50256(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 2
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
ENDIF


IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,50256) 
	RETURN RESULT
ENDIF


@CARDCAN_50256(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 싱크로レベル
#DIM DYNAMIC 選択カード
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50256)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 싱크로
	효과条件カテゴリ = 테크지너스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50256(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 싱크로レベル

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50256,10)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 싱크로
		효과条件カテゴリ = 테크지너스
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT == 1
			TRYCALLFORM CARD_{RESULT:1}, "レベル"
			싱크로レベル = RESULT
			PRINTFORMW レベル：{싱크로レベル}			
			WHILE 싱크로レベル > 0
				CALL FULLRESET
				효과条件종류 = モン全般
				CALL 효과条件レベル_ADV(싱크로レベル,"以下")
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",場所)
				SIF RESULT == 9999
					BREAK
				選択カード = RESULT
				TRYCALLFORM CARD_{RESULT:99},"レベル"
				싱크로レベル -= RESULT
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트,"묘지",選択カード)
				SIF モンスター数(듀얼리스트) >= 5
					RETURN 0
			WEND
		ENDIF
	ENDIF
ENDIF

