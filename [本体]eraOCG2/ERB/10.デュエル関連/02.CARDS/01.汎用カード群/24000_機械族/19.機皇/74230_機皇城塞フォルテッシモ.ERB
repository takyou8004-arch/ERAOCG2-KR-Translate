@CARD_EXPLANATION_74230(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 "기황성채"가 된다.
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ①: 이 카드가 필드에 존재하는 한, "기황병" 몬스터는 전투 내성을 얻고,
PRINTL "기황제" 몬스터는 대상 내성을 얻는다.
CALLFORM CARD_ABLE(10,마함起動)
PRINTL ②: 1턴에 1번, 자신 메인 페이즈에 발동할 수 있다.
PRINTL 자신의 패 / 묘지에서 "기황병" 몬스터 1장을 특수 소환한다.
CALLFORM CARD_ABLE(0,破壊→묘지)
PRINTL ③: 이 카드가 효과로 파괴되었을 경우에 발동할 수 있다.
PRINTL 덱에서 "기황" 몬스터 1장을 패에 넣는다.

@CARDCAN_74230(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,74230)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 기황병
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 破壊→묘지
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 기황
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함" 
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_74230(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 설정속성



IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,74230,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
효과条件カテゴリ = 기황병
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,74230)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,74230)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 기황
		효과条件종류 = モン全般
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF

ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "기황성채")

	CALL FULLRESET
	효과条件カテゴリ = 기황병
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"戦耐")

	CALL FULLRESET
	효과条件カテゴリ = 기황제
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
ENDIF
