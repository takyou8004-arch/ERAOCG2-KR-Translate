#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 앤틱 기어 포트리스
	CASE "略称"
RESULTS = 고대의 기계 요새
	CASE "カテゴリ"
RESULTS:0 = 앤틱 기어
ENDSELECT


@CARD_72394(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_72394(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,지속효과)
PRINTL ①: 이 턴에 소환/특수 소환된 자신 필드의 "앤틱 기어" 몬스터는,
PRINTL 상대의 효과로는 파괴되지 않으며, 상대는 그것들을 효과의 대상으로 할 수 없다.
CALL CARD_ABLE(0,지속효과)
PRINTL ②: 자신의 "앤틱 기어" 카드의 효과 발동에 대해,
PRINTL 상대는 마법 함정 몬스터의 효과를 발동할 수 없다.
CALL CARD_ABLE(0,破壊→묘지)
PRINTL ③: 이 카드가 파괴되었을 경우에 발동할 수 있다.
PRINTL 자신의 패/묘지에서 "앤틱 기어" 몬스터 1장을 특수 소환한다.
;PRINTL この효과の발동後、ターン終了時まで자신は「앤틱 기어」モンスターしか특수소환できない。



@CARDCAN_72394(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72394)
SIF RESULT == 1
	RETURN 0


IF 종류 == 효과後強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 앤틱 기어
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 破壊→묘지
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 앤틱 기어
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72394(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과先


IF 종류 == 효과後強制誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72394)
	IF RESULT == 0
		효과先 = FINAL_SUMMON_TARGET(듀얼리스트)
		CALL FULLRESET
		CALL SET_FIELD_INFO(듀얼리스트,"필드",효과先,"破耐",1,1)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",효과先,"対耐",1,1)
	ENDIF
ELSEIF 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72392)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 앤틱 기어
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_CAT_SOGAI_INFO(듀얼리스트,"앤틱 기어")
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72394,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ENDIF

