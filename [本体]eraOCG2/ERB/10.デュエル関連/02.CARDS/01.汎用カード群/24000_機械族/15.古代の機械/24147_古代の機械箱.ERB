@CARDCAN_24147(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24147)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,24147)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	CALL FULLRESET
효과条件名前 = 앤틱 기어 박스
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"손패취득")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件スーパー攻撃力 = 500
	효과条件守備力 = 500
	효과条件スーパー종족 = 기계족
	효과条件スーパー속성 = 땅속성
	효과条件종족 = 기계족
	효과条件속성 = 땅속성
	효과条件固名前 = 앤틱 기어 박스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

