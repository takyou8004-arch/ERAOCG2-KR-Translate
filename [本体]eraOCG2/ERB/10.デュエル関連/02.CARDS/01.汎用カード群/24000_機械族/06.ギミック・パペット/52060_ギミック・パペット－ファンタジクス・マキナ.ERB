@CARDCAN_52060(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52060)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,52060)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = RUM
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,52060)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,52060,"묘지")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 엑시즈
	효과条件カテゴリ = 기믹 퍼핏
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 短紋章起動
	RETURN 1
ENDIF

@CARDEFFECT_52060(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52060,1,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = RUM
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		CALL CARD_RESERV(듀얼리스트,52060,短紋章予約)
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52060,2)
	IF RESULT == 0
		PRINTFORML 소환する場所を選択してください。
		CALL YN_CHOICE(듀얼리스트,"자신 필드","상대 필드")
		IF RESULT == 0
			CALL FULLRESET
			효과範囲묘지 = 1
효과条件名前 = 기믹 퍼핏－판타직스 마키나
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
효과条件名前 = 기믹 퍼핏－판타직스 마키나
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시",,1)
		ENDIF
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = RUM
		효과条件任意 = 1
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 短紋章起動
	CALL FULLRESET
	효과条件종족 = 기계족
	CALL STATCHANGE_HAND(듀얼리스트,"全体",場所,"召可")
ENDIF