@CARDCAN_1123(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1123)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,1123)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,1123,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 4
		RETURN 0

	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 기믹 퍼핏
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 기믹 퍼핏
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과条件固カテゴリ = 기믹 퍼핏
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX이력")
	SIF RESULT != 0
		RETURN 0

	RETURN 1
ELSEIF 종류 == 필드→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_2(듀얼리스트,1123)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
효과条件名前 = 기믹 퍼핏－블러디 돌
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과条件固カテゴリ = 기믹 퍼핏
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX이력")
	SIF RESULT != 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1123(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択レベル
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1123,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 기믹 퍼핏
		효과条件종류 = 엑시즈
		CALL CARD_CHOOSE_BASIC(듀얼리스트, "EX덱",ゾーン,場所)	
		IF RESULT != 9999
			CALLFORM CARD_{RESULT:99}("レベル")
			選択レベル = RESULT
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 기믹 퍼핏
			효과条件종류 = モン全般
			효과条件レベル = 選択レベル
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
				CALL CARD_EX_RESTRICTION(듀얼리스트,"기믹 퍼핏")
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 필드→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,"묘지",場所,1123,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
효과条件名前 = 기믹 퍼핏－블러디 돌
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
;		SIF RESULT
		CALL CARD_EX_RESTRICTION(듀얼리스트,"기믹 퍼핏")
	ENDIF
ENDIF

