@CARDCAN_2350(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2350)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,2350)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_攻:場所") < 3000
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"ダイス目",4)
	SIF RESULT == 1
		条件달성 = 1
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"ダイス目",5)
	SIF RESULT == 1
		条件달성 = 1
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"ダイス目",6)
	SIF RESULT == 1
		条件달성 = 1
	SIF 条件달성 != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_2350(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC サイコロ結果
#DIM DYNAMIC 攻撃力修正,5
#DIM DYNAMIC 選択カード
#DIM DYNAMIC サイコロ횟수
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2350,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 다이스
		효과条件종족 = 천사족
		효과条件종류 = モン全般
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		サイコロ횟수 = RESULT
		SIF サイコロ횟수 >= 6
			サイコロ횟수 = 6
		PRINTFORMW {サイコロ횟수}회 연속으로 다이스 롤！！
		REPEAT サイコロ횟수
			CALL DICE_ROLL(듀얼리스트,1)
			サイコロ結果 = RESULT
			PRINTFORMW 나온 눈은……{サイコロ結果}다！
			攻撃力修正:0 = サイコロ結果 * 200
			PRINTFORMW 치로리의 공격력은 {攻撃力修正:0}업！
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",攻撃力修正:0)
		REND
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"対耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"攻誘")
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2350)
	IF RESULT == 0
		PRINTFORMW ４５６히트！！　공격력을 내릴 몬스터를 고르자。
		CALL FULLRESET
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"상대필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			PRINTFORMW Bomb！！
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",選択カード,"一攻DOWN",1000)
		ENDIF
	ENDIF
ENDIF




