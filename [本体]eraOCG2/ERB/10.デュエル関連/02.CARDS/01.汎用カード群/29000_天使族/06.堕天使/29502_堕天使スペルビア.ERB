VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 타락천사 스페르비아
	CASE "略称"
RESULTS = 스페르비아
	CASE "カテゴリ"
RESULTS:0 = 타락천사
ENDSELECT


@CARD_29502(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 천사족
	CASE "レベル"
		RETURN 8
	CASE "攻撃力"
		RETURN 2900
	CASE "守備力"
		RETURN 2400
ENDSELECT

RETURN 0

