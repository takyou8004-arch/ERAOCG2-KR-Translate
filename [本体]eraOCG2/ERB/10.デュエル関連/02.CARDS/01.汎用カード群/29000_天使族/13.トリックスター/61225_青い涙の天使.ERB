@CARDCAN_61225(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,61225)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,61225)
		RETURN 0
	SIF 발동済_2(듀얼리스트,61225)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件표시 = 10
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,61225)
		RETURN 0
	SIF 발동済_2(듀얼리스트,61225)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"被弾種",3,2)
	SIF RESULT != 1
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과条件종류 = 通常함정
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_61225(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード
#DIM DYNAMIC ダメージ量

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61225,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件표시 = 10
		효과条件除去種 = 選択
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			CALL CARD_SELECT(듀얼리스트,RESULT)
			選択カード = RESULT
			IF 대상者（CS） == "자신"
				CALL FULLRESET
				효과範囲상대손패 = 1
				효과条件CNT = 1
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				ダメージ量 = 200 * RESULT
				CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ量,1)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"無効",1,1)
			ELSEIF 대상者（CS） == "상대"
				CALL FULLRESET
				효과範囲손패 = 1
				효과条件CNT = 1
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				ダメージ量 = 200 * RESULT
				CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ量)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"無効",1,1,1)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61225)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		; CALL FULLRESET
		; 효과範囲묘지 = 1
		; 효과条件名前 = 푸른눈물の天使
		; CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		; IF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲덱 = 1
			효과条件종류 = 通常함정
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT != 9999
				CALL CARD_SELECT(듀얼리스트,RESULT)
				選択カード = RESULT
				IF 参照先（CS） == "손패"
					CALL FULLRESET
					CALL CARD_ADD(듀얼리스트,参照先（CS）,"마함",選択カード,"使化裏側표시")
				ELSEIF 参照先（CS） == "덱"
					CALL FULLRESET
					CALL CARD_ADD(듀얼리스트,参照先（CS）,"마함",選択カード,"裏側표시")
				ENDIF
			ENDIF
		;ENDIF
	ENDIF
ENDIF
