@CARDCAN_29022(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과使用불가,3

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,29022)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,29022) && 발동済_2(듀얼리스트,29022)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 500
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
효과条件名前 = 승리의 인도자 프레이야
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_29022(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과使用불가,3

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29022,15)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",500)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
효과条件名前 = 승리의 인도자 프레이야
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		EX소환可能종류 = 엑시즈
		CALL CARD_EX_RESTRICTION(듀얼리스트)
		IF 발동済_2(듀얼리스트,29022) == 1
			FOR カウンタ,0,5
				SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
					CONTINUE
				SIF GETVAR(@"%듀얼리스트%_MZ_星:カウンタ") >= 4
					CONTINUE
				CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"一星",1)
			NEXT
		ENDIF
	ENDIF
ENDIF

