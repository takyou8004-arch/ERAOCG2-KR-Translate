#DIM DYNAMIC リリース数
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻守変動
	CALL FULLRESET
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,-500,-500,29300)
	CALL STATCHANGE_BASIC(듀얼리스트,"상대필드",場所,-500,-500,29300)
	CALL FULLRESET
	효과条件종족 = 천사족
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,500,500,29300)
	CALL STATCHANGE_BASIC(듀얼리스트,"상대필드",場所,500,500,29300)
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"無効",-1)
ENDIF