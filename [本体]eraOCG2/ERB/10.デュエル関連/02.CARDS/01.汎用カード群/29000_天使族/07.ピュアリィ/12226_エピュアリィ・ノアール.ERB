@CARDCAN_12226(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,12226)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,12226)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 손패数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所") >= 3
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 速攻마법
	효과条件カテゴリ = 퓨어리
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동")
	SIF RESULT != 1
		RETURN 0
	RETURN 1

;●퓨어리 행복메모리：묘지의 "퓨어리 행복메모리」の수＋１回まで１번のバトルフェイズ中に몬스터에 攻撃할 수 있다。
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 퓨어리 행복메모리
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃後強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 퓨어리 행복메모리
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
;●퓨어리 딜리셔스메모리：이 카드의 공격력 / 수비력은 、이 카드의 X소재의 수×３００ 올린다。
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 퓨어리 딜리셔스메모리
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
;●퓨어리 슬리피메모리：상대 스탠바이 페이즈에 발동할 수 있다。は덱에서 １장 드로우한다。
ELSEIF 종류 == ターン開始時
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 퓨어리 슬리피메모리
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

;●퓨어리 프리티메모리：エンドフェイズ時に발동할 수 있다。상대 필드의 카드 １장을 選び패로 되돌린다。
ELSEIF 종류 == ターン終了時
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 퓨어리 프리티메모리
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_12226(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードB
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 攻撃횟수
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,12226,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件名前 = 퓨어리 슬리피메모리
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"손패")
			ENDIF
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"손패")
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,12226,30)
	IF RESULT == 0
		CALL FULLRESET
		CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"Ｘ",1)
		CALL FULLRESET
		효과条件종류 = 함정全般
		효과条件カテゴリ = 퓨어리
		효과条件任意 = 1
		CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"裏側표시")
	ENDIF
;●퓨어리 행복메모리：묘지의 "퓨어리 행복메모리」の수＋１回まで１번のバトルフェイズ中に몬스터에 攻撃할 수 있다。
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 퓨어리 행복메모리
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃횟수 = RESULT
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"追戦",攻撃횟수)
ELSEIF 종류 == 攻撃後強制誘発
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦",-99,1)
;●퓨어리 딜리셔스메모리：이 카드의 공격력 / 수비력은 、이 카드의 X소재의 수×３００ 올린다。
ELSEIF 종류 == 攻守変動
	攻撃力修正 = (GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") + 1) * 300
	CALL STATCHANGE_BASIC(듀얼리스트,"자신",場所,攻撃力修正,攻撃力修正)
;●퓨어리 슬리피메모리：상대 스탠바이 페이즈에 발동할 수 있다。は덱에서 １장 드로우한다。
ELSEIF 종류 == ターン開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,12226)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)
	ENDIF
;●퓨어리 프리티메모리：エンドフェイズ時に발동할 수 있다。상대 필드의 카드 １장을 選び패로 되돌린다。
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,12226)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"덱")
	ENDIF
ENDIF
