@CARDCAN_29265(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 選択カード名前
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,29265)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,29265)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時強制 || 종류 == 특수소환時強制
	RETURN 1
ENDIF


@CARDEFFECT_29265(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前
#DIMS DYNAMIC 条件カード名前,8

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29265,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL SET_PLAYER_INFO(듀얼리스트,"특수阻害中止",1)
	ENDIF

ELSEIF 종류 == 소환時強制 || 종류 == 특수소환時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,29265)
	IF RESULT == 0
		CALL ARCANA_SET(듀얼리스트,ゾーン,場所,29265)

		;正위치
		IF GETVAR(@"%듀얼리스트%_MZ_汎数:場所") == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 아르카나 포스
			효과条件종류 = モン全般
			CALL 효과条件レベル_ADV(4, "以下")
			CALL SET_EXIST_CARDS(듀얼리스트,필드묘지지정)

			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		;逆위치
		ELSEIF GETVAR(@"%듀얼리스트%_MZ_汎数:場所") == 2
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 아르카나 포스
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"",,1)
		ENDIF
	ENDIF
ENDIF



