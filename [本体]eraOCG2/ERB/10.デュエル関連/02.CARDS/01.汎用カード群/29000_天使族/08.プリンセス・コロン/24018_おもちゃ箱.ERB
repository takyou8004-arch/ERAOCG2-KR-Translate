@CARDCAN_24018(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24018)
SIF RESULT == 1
	RETURN 0


IF 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	SIF 발동済_1(듀얼리스트,24018)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = 通常モン
	효과条件スーパー종류 = 通常モン
	효과条件スーパー攻撃力 = 1
	효과条件守備力 = 1
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_24018(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24018,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = 通常モン
		효과条件スーパー종류 = 通常モン
		효과条件スーパー攻撃力 = 1
		효과条件守備力 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:選択カード")},"名前"
			選択カード名前 = %RESULTS%
			;PRINTFORMW %選択カード名%
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"덱",選択カード,"守備표시")

			SIF モンスター数(듀얼리스트) >= 5
				RETURN 0
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件종류 = 通常モン
			효과条件スーパー종류 = 通常モン
			효과条件スーパー攻撃力 = 1
			효과条件守備力 = 1
			;효과条件固名前 = %選択カード名%
			효과条件任意 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
		ENDIF
	ENDIF
ENDIF



