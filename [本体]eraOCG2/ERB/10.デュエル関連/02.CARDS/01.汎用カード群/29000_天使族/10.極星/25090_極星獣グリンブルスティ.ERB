;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 극성수 굴린부르스티
	CASE "略称"
RESULTS = 굴린부르스티
	CASE "カテゴリ"
RESULTS:0 = 극성
ENDSELECT


@CARD_25090(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 야수족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 300
	CASE "守備力"
		RETURN 100
	CASE "성별"
		RETURN 雄性
	CASE "튜너"
		RETURN 2

ENDSELECT

RETURN 0

