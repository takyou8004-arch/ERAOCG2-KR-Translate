@CARDNAME_31020,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 전자석의 전사 마그넷 벨세리온
	CASE "略称"
		RESULTS = M 벨세리온
	CASE "カテゴリ"
		RESULTS:0 = 마그넷 워리어
ENDSELECT


@CARD_31020(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 원소정령족
	CASE "レベル"
		RETURN 8
	CASE "攻撃力"
		RETURN 3000
	CASE "守備力"
		RETURN 2800
	CASE "소환불가"
		RETURN 1
ENDSELECT

RETURN 0

