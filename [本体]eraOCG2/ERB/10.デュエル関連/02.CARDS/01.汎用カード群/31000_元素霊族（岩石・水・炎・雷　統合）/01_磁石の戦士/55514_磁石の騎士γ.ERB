	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55514,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종족 = 원소정령족
		CALL 효과条件レベル_ADV(4, "以下")
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件속성 = 땅속성
			효과条件종족 = 원소정령족
			CALL 효과条件レベル_ADV(7, "以上")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

PRINTL 필드의 카드를 파괴하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == はい
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場単体",場所,"묘지")
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55514)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件カテゴリ = 마그넷 워리어γ	
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件속성 = 땅속성
		CALL 효과条件レベル_ADV(4, "以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
