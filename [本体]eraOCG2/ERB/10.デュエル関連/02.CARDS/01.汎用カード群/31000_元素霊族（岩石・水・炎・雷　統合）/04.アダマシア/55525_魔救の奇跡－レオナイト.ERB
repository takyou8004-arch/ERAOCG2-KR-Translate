@CARDSUMMON_55525(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 6
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,55525) 
	RETURN RESULT
ENDIF


@CARDCAN_55525(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,55525)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0

	IF ターンプレイヤー == 듀얼리스트
		SIF 종류 == フリー誘発
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF 발동済_1(듀얼리스트,55525)
			RETURN 0
		RETURN 1

	ELSEIF ターンプレイヤー != 듀얼리스트
		SIF 발동済_2(듀얼리스트,55525)
			RETURN 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件속성 = 화염속성
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종족 = 원소정령족
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종족 = 원소정령족
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ENDIF
	RETURN 0
ENDIF

@CARDEFFECT_55525(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	IF ターンプレイヤー == 듀얼리스트
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55525,1)
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 아다마시아
			효과条件任意 = 1
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所,5)
		ENDIF

	ELSEIF ターンプレイヤー != 듀얼리스트
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55525,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종족 = 원소정령족
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF



