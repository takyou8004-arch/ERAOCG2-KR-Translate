@CARDCAN_26209(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,26209)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,26209)
		RETURN 0
	RETURN 1
ELSEIF 종류 == バトル開始時
	SIF 발동済_2(듀얼리스트,26209)
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,26209,"묘지")
	SIF RESULT == 1
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_26209(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26209,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL EVADE_ATTACK(듀얼리스트)
		
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件속성 = 물속성
        CALL 효과条件レベル_ADV(4, "以下")
		효과条件固名前 = 극빙수 블리자드 울프
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == バトル開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26209,2)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류 = 2
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所, "攻撃표시")
		
	ENDIF
ENDIF

