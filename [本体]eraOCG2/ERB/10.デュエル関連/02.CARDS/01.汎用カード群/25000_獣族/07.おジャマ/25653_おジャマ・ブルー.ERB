PRINTL ①: 이 카드가 파괴되어 묘지로 보내졌을 경우, 또는 "방해꾼" 몬스터의 융합 L 소재가 되었을 경우에 발동할 수 있다.
PRINTL 덱에서 "방해꾼" 카드 2장을 패에 추가한다.

@CARDCAN_25653(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 대상あり

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25653)
SIF RESULT == 1
	RETURN 0

IF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지 || 종류 == F素材時효과 || 종류 == L素材時효과
	IF 종류 == F素材時효과 || 종류 == L素材時효과
		CALL FULLRESET
		효과条件カテゴリ = 방해꾼
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX특수소환")
		SIF RESULT != 1
			RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 방해꾼
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_25653(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지 || 종류 == F素材時효과 || 종류 == L素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25653)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 방해꾼
		효과条件複数 = 2
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
