@CARD_EXPLANATION_72573(종류)
#DIM DYNAMIC 종류


CALLFORM CARD_ABLE(0,마함起動 ,손패起動 ,フリー誘発)
PRINTL ①: 자신의 패/필드에서 "방해꾼" 카드 1장을 묘지로 보내고 발동할 수 있다.
PRINTL 그 카드와 카드명이 다른 "방해꾼" 몬스터 1체와,
PRINTL "아마드 드래곤" 몬스터 1체를 자신의 덱/묘지에서 고르고 패에 넣는다.
PRINTL 그 후, 이 효과로 패에 넣은 몬스터 1체를 소환할 수 있다.
CALLFORM CARD_ABLE(0,묘지起動)
PRINTL ②: 자신의 메인 페이즈에 묘지의 이 카드를 제외하고, 자신의 제외 상태의 "방해꾼" 몬스터 3체를 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터를 덱으로 되돌리고 셔플하고, 자신은 1장 드로우한다.

@CARDCAN_72573(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72573)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 방해꾼
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 방해꾼
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 무장룡
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 묘지起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件カテゴリ = 방해꾼
	효과条件종류 = モン全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF


@CARDEFFECT_72573(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード_ID,3
#DIM DYNAMIC 選択カード

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72573)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件カテゴリ = 방해꾼
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			選択カード_ID:0 = RESULT:1

			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = 방해꾼
			효과条件종류 = モン全般
			효과条件固ID = 選択カード_ID:0
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT == 1
				選択カード_ID:1 = RESULT:1
			
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = 무장룡
			효과条件종류 = モン全般
			효과条件固ID = 選択カード_ID:0
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT == 1
				選択カード_ID:2 = RESULT:1
			
			CALL FULLRESET
			효과条件ID:0 = 選択カード_ID:1
			효과条件ID:1 = 選択カード_ID:2
			효과条件소환可 = 1
			효과条件任意 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				追소환権 ++
				CALL CARD_SUMMON_SHORI(듀얼리스트,選択カード,"攻撃표시",3)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72573)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲제외 = 1
		효과条件カテゴリ = 방해꾼
		효과条件종류 = モン全般
		효과条件行先플래그 = 제외行き
		효과条件複数 = 3
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL SHUFFLE(듀얼리스트)
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF
	ENDIF
ENDIF
