@CARDNAME_25503,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 무사신－히루메
	CASE "略称"
RESULTS = 무사신 히루메
	CASE "カテゴリ"
RESULTS:0 = 무사신
ENDSELECT


@CARD_25503(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 야수족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 2000
	CASE "守備力"
		RETURN 1000
	CASE "単一存在"
		RETURN 1
	CASE "성별"
		RETURN 牝性
	CASE "소환불가"
		RETURN 1
ENDSELECT
RETURN 0

