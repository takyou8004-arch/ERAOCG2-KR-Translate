PRINTL 이 카드는 일반 소환할 수 없다.
PRINTL ①："무사신－히루메"는 자신 필드에 1장밖에 앞면 표시로 존재할 수 없다.
CALLFORM CARD_ABLE(0,손패起動)
PRINTL ②："무사신－히루메" 이외의 자신 묘지의 "무사신" 또는 "무사신기" 몬스터 1장을 대상으로 하여 발동할 수 있다.
PRINTL 대상의 카드를 제외하고, 이 카드를 패에서 특수 소환한다.
CALLFORM CARD_ABLE(0,戦闘→묘지,破壊→묘지)
PRINTL ③：이 카드가 파괴되어 묘지로 보내졌을 경우에 발동할 수 있다.
PRINTL 서로의 플레이어는 손패를 1장 버리거나, 패의 "무사신" 또는 "무사신기" 몬스터 1장을 상대에게 보여준다.


@CARDCAN_25503(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25503)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ:0 = 무사신
	효과条件カテゴリ:1 = 무사신기
	효과条件종류 = モン全般
	효과条件固名前 = 무사신－히루메
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
효과条件名前 = 무사신－히루메
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	SIF 손패数(듀얼리스트) < 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대손패 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_25503(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25503)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ:0 = 무사신
		효과条件カテゴリ:1 = 무사신기
		효과条件종류 = モン全般
		효과条件固名前 = 무사신－히루메
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
효과条件名前 = 무사신－히루메
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25503)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ:0 = 무사신
		효과条件カテゴリ:1 = 무사신기
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 = 1

		IF 条件달성:0 == 1
			SIF 듀얼리스트 == "자신"
PRINTL 패의 몬스터를 상대에게 보여주시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSE
			RESULT = 1
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件カテゴリ:0 = 무사신
			효과条件カテゴリ:1 = 무사신기
			효과条件종류 = モン全般
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF


		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ:0 = 무사신
		효과条件カテゴリ:1 = 무사신기
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(対面者,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:1 = 1

		IF 条件달성:1 == 1
			SIF 対面者 == "자신"
PRINTL 패의 몬스터를 상대에게 보여주시겠습니까?
			CALL YN_CHOICE(対面者)
		ELSE
			RESULT = 1
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件カテゴリ:0 = 무사신
			효과条件カテゴリ:1 = 무사신기
			효과条件종류 = モン全般
			CALL CARD_CHOOSE_ADV(対面者,ゾーン,場所)
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			CALL CARD_ADD_GY_ADV(対面者,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF

