@CARDCAN_25505(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25505)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,25505)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,25505,ゾーン)
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ:0 = 무신
	효과条件カテゴリ:1 = 무신기
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,25505)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ:0 = 무신
	효과条件カテゴリ:1 = 무신기
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_25505(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25505,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ:0 = 무신
		효과条件カテゴリ:1 = 무신기
		효과条件他所 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
효과条件名前 = 무신－마히토츠
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25505,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ:0 = 무신
		효과条件カテゴリ:1 = 무신기
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성 = 1
		
		IF 듀얼리스트 == "자신"
			IF 条件달성 == 1
				CALL YN_CHOICE(듀얼리스트,"●패에서 「무신」を묘지へ送り、묘지에서 「무신」を패에 넣는다","●묘지에서 「무신」を제외し、덱에서 「무신」を묘지に送る")
			ELSE
				RESULT = 1
			ENDIF
		ELSE
			IF 条件달성 == 1
				RESULT = RAND:2
			ELSE
				RESULT = 1
			ENDIF
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件カテゴリ:0 = 무신
			효과条件カテゴリ:1 = 무신기
			효과条件종류 = モン全般
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				TRYCALLFORM CARDNAME_{RESULT:1},"名前"
				選択カード名前 = %RESULTS%

				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件カテゴリ:0 = 무신
				효과条件カテゴリ:1 = 무신기
				효과条件종류 = モン全般
				효과条件固名前 = %選択カード名前%
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			ENDIF

		ELSEIF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ:0 = 무신
			효과条件カテゴリ:1 = 무신기
			효과条件종류 = モン全般
			효과条件行先플래그 = 제외行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				TRYCALLFORM CARDNAME_{RESULT:1},"名前"
				選択カード名前 = %RESULTS%

				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ:0 = 무신
				효과条件カテゴリ:1 = 무신기
				효과条件종류 = モン全般
				효과条件固名前 = %選択カード名前%
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF

