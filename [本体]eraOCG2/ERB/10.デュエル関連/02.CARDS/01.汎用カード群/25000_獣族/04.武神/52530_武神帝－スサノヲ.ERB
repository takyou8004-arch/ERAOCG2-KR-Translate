	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"連戦")

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52530,0,X消費1)
	IF RESULT == 0
		SIF 듀얼리스트 == "자신"
PRINTL 몬스터를 패에 가합니까?
		CALL YN_CHOICE(듀얼리스트)

		IF RESULT == 0
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件종류 = モン全般
			효과条件カテゴリ:0 = 무사신
			효과条件カテゴリ:1 = 무사신기
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)

		ELSEIF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件종류 = モン全般
			효과条件カテゴリ:0 = 무사신
			효과条件カテゴリ:1 = 무사신기
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF