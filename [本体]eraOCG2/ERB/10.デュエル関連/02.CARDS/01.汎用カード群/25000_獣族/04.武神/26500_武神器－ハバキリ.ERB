@CARDCAN_26500(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,26500)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) == 5
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	TRYCALLFORM CARDNAME_{戦闘カードID(듀얼리스트)},"カテゴリ"
	SIF RESULTS != "무사신"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 제외時
	SIF 발동済_1(듀얼리스트,26500)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ:0 = 무사신
	효과条件カテゴリ:1 = 무사신기
	효과条件固名前 = 무사신기－하바키리
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン終了時予約
	RETURN 1
ENDIF


@CARDEFFECT_26500(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26500)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,효과묘지行き)
		;参考：ライトニング、링크リボ-
		TRYCALLFORM CARD_{戦闘カードID(듀얼리스트)},"攻撃力"
		攻撃力修正 = RESULT * 2
		選択カード = 戦闘場所(듀얼리스트)
		攻撃力修正 = 攻撃力修正 - GETVAR(@"%듀얼리스트%_MZ_攻:選択カード")
		CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一時",攻撃力修正)
	ENDIF

ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26500,1)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,26500)
	ENDIF

ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ:0 = 무사신
	효과条件カテゴリ:1 = 무사신기
	효과条件固名前 = 무사신기－하바키리
	CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)

	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ:0 = 무사신
	효과条件カテゴリ:1 = 무사신기
	효과条件行先플래그 = 덱行き
	CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
ENDIF
