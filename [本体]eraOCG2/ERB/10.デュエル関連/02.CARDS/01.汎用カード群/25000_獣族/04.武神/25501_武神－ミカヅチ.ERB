@CARDNAME_25501,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 무신-미카즈치
	CASE "略称"
RESULTS = 무신 미카즈치
	CASE "カテゴリ"
RESULTS:0 = 무신
ENDSELECT


@CARD_25501(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 야수족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1900
	CASE "守備力"
		RETURN 1500
	CASE "単一存在"
		RETURN 1
	CASE "성별"
		RETURN 雄性
ENDSELECT
RETURN 0

