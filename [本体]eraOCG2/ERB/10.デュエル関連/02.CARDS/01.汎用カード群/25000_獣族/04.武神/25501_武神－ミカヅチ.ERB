@CARDCAN_25501(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,2

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25501)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	IF ゾーン == "손패"
		CALL CARD_SS_CHECK(듀얼리스트,25501,"손패")
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		효과条件カテゴリ = 무신
		효과条件종류 = モン全般
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般")
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
효과条件名前 = 무신－미카즈치
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 0
		RETURN 1

	ELSEIF ゾーン == "필드"
		SIF 발동済_1(듀얼리스트,25501)
			RETURN 0
		CALL FULLRESET
		효과条件カテゴリ:0 = 무신
		효과条件カテゴリ:1 = 무신기
		효과条件종류 = モン全般
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"손패墓送")
		SIF RESULT != 1
			RETURN 0

		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = 마함全般
		효과条件カテゴリ = 무신
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0

		RETURN 1
	ENDIF
	RETURN 0
ENDIF

@CARDEFFECT_25501(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード종류
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	IF ゾーン == "손패"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25501)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
		ENDIF

	ELSEIF ゾーン == "필드"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25501,1)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件종류 = 마함全般
			효과条件カテゴリ = 무신
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				選択カード_ID = RESULT:1
				TRYCALLFORM CARD_{選択カード_ID},"종류"
				選択カード종류 = RESULT
				TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
				選択カード名前 = %RESULTS%

				IF 選択カード종류 == 通常함정 || 選択カード종류 == 지속마법 || 選択カード종류 == 지속함정
					SIF 듀얼리스트 == "자신"
						PRINTW 자신 필드에 セットしますか？
					CALL YN_CHOICE(듀얼리스트)
					SIF RESULT == 1
						RETURN 1
					
					IF 選択カード종류 == 通常함정
						CALL FULLRESET
						효과範囲손패 = 1
효과条件名前 = %選択カード名前%
						CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"裏側표시")

					ELSEIF 選択カード종류 == 지속마법 || 選択カード종류 == 지속함정
						CALL FULLRESET
						효과範囲손패 = 1
효과条件名前 = %選択カード名前%
						CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF

