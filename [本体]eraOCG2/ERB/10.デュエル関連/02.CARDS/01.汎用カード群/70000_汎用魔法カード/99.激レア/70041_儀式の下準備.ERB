@CARDCAN_70041(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,70041)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,70041)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 의식마법
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_70041(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,70041,1)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 의식마법
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		CALL URARA_CHANCE(듀얼리스트,処理中_효과ID,"雑多")
		IF RESULT == 0
			IF INRANGE (選択カード , 300, 399)
				選択カード -= 300
				選択カード_ID = GETVAR(@"%듀얼리스트%_덱:選択カード")
				CALL CARD_ADD(듀얼리스트, "덱", "손패", 選択カード)

				CALL FULLRESET
				CALLFORM CARDNAME_{選択カード_ID}, "名前"
				SELECTCASE RESULTS
					CASE "엔드 오브 더 월드"
						효과条件名前:0 = 종언의 왕 데미스
						효과条件名前:1 = 파멸의 여신 루인
					CASE "구세의 의식"
						효과条件名前:0 = 구세의 미의 신 노스웸코
					CASE "성점술의 의식"
						효과条件名前:0 = 성점술공주 타로레이
					CASE "네프티스의 윤회"
						효과条件名前:0 = 네프티스의 모시는 손
						효과条件名前:1 = 네프티스의 창황신
					CASE "드래그마카브르"
						효과条件名前:0 = 드래그마 알버스 나이트
						효과条件名前:1 = 드래그마 알버스 세인트
					CASE "광자룡강림"
						효과条件名前:0 = 나이트 오브 포톤 드래곤
					CASE "햄버거 요리법"
						효과条件名前:0 = 헝그리 버거
					CASE "디클레어러 프로퍼시"
						효과条件名前:0 = 퍼펙트 디클레어러
						효과条件名前:1 = 얼티미트 디클레어러
					CASE "디클레어러 오라클"
						효과条件名前 = 얼티미트 디클레어러
					CASE "환술의 의식"
						효과条件名前 = 새크리파이스
					CASE "일식의 잉카구라"
						효과条件名前 = 오오히메의 미캉코
					CASE "드리야드의 기도"
						효과条件名前 = 엘레멘틀 마스터 드리야드
					CASEELSE
						CALL SHUFFLE(듀얼리스트)
						RETURN 0
				ENDSELECT				
				CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
				CALL SHUFFLE(듀얼리스트)
			ENDIF
		ENDIF
	ENDIF
ENDIF
