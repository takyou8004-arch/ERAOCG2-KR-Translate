@CARDNAME_71046,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 파워 오브 듀얼리스트
	CASE "略称"
		RESULTS = 듀얼리스트의 힘
	CASE "カテゴリ"
		RESULTS:0 = 듀얼리스트
		RESULTS:1 = 게임 오리지널
ENDSELECT


@CARD_71046(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 速攻마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_71046(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의  ②의 효과는 1턴에 1번밖에 사용할 수 없다。
CALLFORM CARD_ABLE(0,마함起動,손패起動,フリー誘発)
PRINTL ①：자신 필드의 "듀얼리스트" 일반 몬스터 1장을 대상으로 하고 발동할 수 있다。
PRINTL 그 몬스터의 공격력을 2000 올리고 전투로는 파괴되지 않는다。
CALLFORM CARD_ABLE(1,묘지起動)
PRINTL ②：이 카드가 묘지에 존재할 경우에 발동할 수 있다。
PRINTL 자신의 묘지에서 "듀얼리스트" 일반 몬스터 1장을 특수 소환하고, 이 카드를 패에 넣는다。


@CARDCAN_71046(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,71046)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 通常モン
	효과条件カテゴリ = 듀얼리스트
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 묘지起動
	SIF 발동済_1(듀얼리스트,71046)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = 通常モン
	효과条件カテゴリ = 듀얼리스트
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_71046(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71046)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류 = 通常モン
		효과条件カテゴリ = 듀얼리스트
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永攻",2000)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"戦耐",2)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"破耐",2)
		ENDIF
	ENDIF

ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71046,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 듀얼리스트
		효과条件종류 = 通常モン
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,손패行き)
	ENDIF
ENDIF