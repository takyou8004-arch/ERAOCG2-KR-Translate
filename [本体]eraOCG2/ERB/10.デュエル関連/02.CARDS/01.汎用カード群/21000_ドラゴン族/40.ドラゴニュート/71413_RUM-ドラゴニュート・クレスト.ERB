PRINTL 그렇지 않은 경우, 선택한 몬스터의 레벨과 같은 랭크의 "드라고뉴트" 엑시즈 몬스터를,
PRINTL 선택한 자신의 몬스터 위에 겹쳐 엑시즈 소환으로 취급하여 EX 덱에서 특수 소환한다.

@CARDCAN_71413(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,71413)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,71413)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,0)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 드라고뉴트
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_71413(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 설정レベル

#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードB
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71413,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		;通常마법汎用処理
		CALL FULLRESET
		효과条件カテゴリ = 드라고뉴트
		효과条件レベル = 4
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:選択カード")}, "종류"
			IF RESULT == 엑시즈
	
				설정レベル = GETVAR(@"%듀얼리스트%_MZ_星:選択カード") + 1

				CALL FULLRESET
				효과条件レベル = 설정レベル
				효과条件カテゴリ = 드라고뉴트
				효과条件종류 = 엑시즈
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)

				選択カードB = RESULT
				;戻る
				IF 選択カードB != 9999
					TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カードB}")}(듀얼리스트,選択カードB)
					代替素材数 = 1
					重ねてＸ = 1
					素材条件固定 = 選択カード
					TRYCALLFORM XYZSUMMON(듀얼리스트,選択カードB)
				ENDIF

			ELSE
				설정レベル = GETVAR(@"%듀얼리스트%_MZ_星:選択カード")
				CALL FULLRESET
				효과条件レベル = 설정レベル
				효과条件カテゴリ = 드라고뉴트
				효과条件종류 = 엑시즈
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)

				選択カードB = RESULT
				;戻る
				IF 選択カードB != 9999
					TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カードB}")}(듀얼리스트,選択カードB)
					代替素材数 = 1
					重ねてＸ = 1
					素材条件固定 = 選択カード
					TRYCALLFORM XYZSUMMON(듀얼리스트,選択カードB)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
