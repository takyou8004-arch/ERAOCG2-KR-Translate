@CARDCAN_1021(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1021)
SIF RESULT == 1
	RETURN 0


IF 종류 == 손패起動 || 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,1021)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件名前 = 진정한 빛
	효과条件うらら解除 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	IF ゾーン == "묘지"
		SIF 발동済_2(듀얼리스트,1021)
			RETURN 0
		CALL CARD_SS_CHECK(듀얼리스트,1021,"묘지")
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		효과条件カテゴリ = 푸른 눈의 백룡
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ELSEIF ゾーン == "필드"
		SIF 발동済_3(듀얼리스트,1021)
			RETURN 0
		CALL FULLRESET
		효과条件종류 = モン全般
		효과条件固名前 = 하얀 소녀
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동")
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件スーパーカテゴリ = 푸른 눈의 백룡
		효과条件속성 = 빛속성
		효과条件レベル = 1
		효과条件튜너 = 1
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ENDIF
	RETURN 0
ELSEIF 종류 == 攻撃時誘発
	SIF 발동済_3(듀얼리스트,1021)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件スーパーカテゴリ = 푸른 눈의 백룡
	효과条件スーパー종류 = モン全般
	효과条件속성 = 빛속성
	효과条件レベル = 1
	효과条件튜너 = 1
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1021(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC ダメージ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 || 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1021,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件名前 = 진정한 빛
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1021)
	IF RESULT == 0
		IF ゾーン == "묘지"
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件名前 = 하얀 소녀
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT
				CALL CARD_EFFECT_USE(듀얼리스트,1021,2)
		ELSEIF ゾーン == "필드"
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件スーパーカテゴリ = 푸른 눈의 백룡
			효과条件スーパー종류 = モン全般
			효과条件속성 = 빛속성
			효과条件レベル = 1
			효과条件튜너 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT
				CALL CARD_EFFECT_USE(듀얼리스트,1021,3)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1021,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件スーパーカテゴリ = 푸른 눈의 백룡
		효과条件スーパー종류 = モン全般
		효과条件속성 = 빛속성
		효과条件レベル = 1
		효과条件튜너 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF


