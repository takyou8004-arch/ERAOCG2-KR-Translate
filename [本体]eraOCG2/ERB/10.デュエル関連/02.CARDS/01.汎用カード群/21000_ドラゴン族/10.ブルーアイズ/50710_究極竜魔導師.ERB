@CARDSUMMON_50710(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
素材条件名前 = 푸른 눈
	素材条件종류 = 융합
ELSEIF EX参照 >= 10
	素材条件カテゴリ = 카오스
	素材条件종류 = 의식 
ENDIF
IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,50710) 
	RETURN RESULT
ENDIF



@CARDCAN_50710(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50710)
SIF RESULT == 1
	RETURN 0

IF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0

	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	IF RESULT == 1
		SIF 발동済_1(듀얼리스트,50710)
			RETURN 0
		RETURN 1
	ENDIF

	CALL FULLRESET
	효과条件종류 = 마법全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	IF RESULT == 1
		SIF 발동済_2(듀얼리스트,50710)
			RETURN 0
		RETURN 1
	ENDIF

	CALL FULLRESET
	효과条件종류 = 함정全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	IF RESULT == 1
		SIF 발동済_3(듀얼리스트,50710)
			RETURN 0
		RETURN 1
	ENDIF

	RETURN 0
ELSEIF 종류 == 戦破壊→묘지
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 카오스
	효과条件종류 = 의식
	효과条件スーパーカテゴリ = 푸른 눈
	효과条件特不無視 = 1
	효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_50710(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正



IF 종류 == 발동誘発
	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1,2)
	IF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50710,1)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"묘지")
			RETURN 1
		ENDIF
		RETURN 0
	ENDIF

	CALL FULLRESET
	효과条件종류 = 마법全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1,2)
	IF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50710,2)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"묘지")
			RETURN 1
		ENDIF
		RETURN 0
	ENDIF

	CALL FULLRESET
	효과条件종류 = 함정全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1,2)
	IF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50710,3)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"묘지")
			RETURN 1
		ENDIF
		RETURN 0
	ENDIF



ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50710)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 카오스
		효과条件종류 = 의식
		효과条件スーパーカテゴリ = 푸른 눈
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF


