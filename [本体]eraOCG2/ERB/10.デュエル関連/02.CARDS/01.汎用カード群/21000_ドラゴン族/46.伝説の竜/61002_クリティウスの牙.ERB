@CARDCAN_61002(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 素材함정名前
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,61002)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,61002)
		RETURN 0
	FOR カウンタ,0,紙束最大値
		SIF GETVAR(@"%듀얼리스트%_EX덱:カウンタ") == -1
			CONTINUE
		選択カード_ID = GETVAR(@"%듀얼리스트%_EX덱:カウンタ")
		TRYCALLFORM CARDNAME_{選択カード_ID},"カテゴリ"
		SIF !MATCH(RESULTS,"크리티우스의 이빨")
			CONTINUE
		TRYCALLFORM CARD_{選択カード_ID},"종류"
		SIF RESULT != 융합
			CONTINUE
		TRYCALLFORM CARDSUMMON_{選択カード_ID},"素材条件名前"
		素材함정名前 = %RESULTS%
		CALL FULLRESET
		효과範囲마함 = 1
		효과範囲손패 = 1
		효과範囲묘지 = 1
효과条件名前 = %素材함정名前%
		효과条件종류 = 함정全般
		효과条件표시 = 0
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성++
	NEXT
	SIF 条件달성 == 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_61002(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61002,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		;EX덱確認
		CALL FULLRESET
		효과条件종류 = 융합
		효과条件カテゴリ = 크리티우스의 이빨
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲마함 = 1
			효과範囲묘지 = 1
			효과条件표시 = 0
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード,0)
			효과条件名前:0 = %素材条件名前:0%
			효과条件名前:1 = %素材条件名前:1%
			효과条件名前:2 = %素材条件名前:2%
			IF 효과条件名前 != ""
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					CALL FULLRESET
					효과条件特不無視 = 1
					CALL CARD_EX_SUMMON(듀얼리스트, "EX덱", 選択カード)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
