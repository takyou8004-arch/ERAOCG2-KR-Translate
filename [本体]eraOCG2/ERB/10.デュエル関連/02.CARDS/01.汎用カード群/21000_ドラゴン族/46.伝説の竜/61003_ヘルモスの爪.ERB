@CARDCAN_61003(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,61003)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,61003)
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,0)
	SIF RESULT == 1
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲손패 = 1
	素材範囲필드 = 1
	素材範囲묘지 = 1
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件소환可 = 1
	효과条件カテゴリ = 헤르모스의 발톱
	효과条件어둠융합 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_61003(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 装備대상
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 素材종족

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,61003,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL RESETAREA_MAT
		素材範囲손패 = 1
		素材範囲필드 = 1
		素材範囲묘지 = 1
		CALL FULLRESET
		효과条件소환可 = 1
		효과条件カテゴリ = 헤르모스의 발톱
		효과条件어둠융합 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			選択カード_ID = RESULT:99
			TRYCALLFORM CARD_{選択カード_ID},"종족"
			素材종족 = RESULT
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲필드 = 1
			효과範囲묘지 = 1
			효과条件종족 = 素材종족
			효과条件종류 = モン全般
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲필드 = 1
				효과条件표시 = 10
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				IF RESULT == 1
PRINTL 장착 가능한 몬스터가 존재합니다. 이 카드를 장착하시겠습니까?
					CALL YN_CHOICE(듀얼리스트,"몬스터에 장착한다","특수 소환한다")
					IF RESULT == 0
						CALL FULLRESET
						효과条件표시 = 10
						CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
						IF RESULT != 9999
							CALL CARD_EQUIP_MONSTER(듀얼리스트,RESULT,"EX덱",選択カード)
						ELSEIF RESULT == 9999
							CALL FULLRESET
							CALL CARD_EX_SUMMON(듀얼리스트,"EX덱",選択カード)
						ENDIF
					ELSEIF RESULT == 1
						CALL FULLRESET
						CALL CARD_EX_SUMMON(듀얼리스트,"EX덱",選択カード)
					ENDIF
				ELSE
					CALL FULLRESET
					CALL CARD_EX_SUMMON(듀얼리스트,"EX덱",選択カード)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF

