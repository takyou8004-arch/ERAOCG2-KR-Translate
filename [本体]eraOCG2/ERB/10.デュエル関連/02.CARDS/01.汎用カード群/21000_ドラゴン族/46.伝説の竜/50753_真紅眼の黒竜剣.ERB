@CARDCAN_50753(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50753)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	SIF 装備先 == 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,50753)
		RETURN 0
	CALL FULLRESET
	CALL CARD_SS_CHECK(듀얼리스트,50753,"묘지")
	SIF RESULT == 1
		条件달성 ++
	SIF 마함数(듀얼리스트) >= 5
		条件달성 ++
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 드래곤족
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50753(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ダメージ量
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 攻守変動
	CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,1000)
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과範囲상대필드 = 1
	효과範囲상대묘지 = 1
	효과条件종족 = 드래곤족
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 500
	CALL STATCHANGE_BASIC(듀얼리스트,"装備",場所,攻撃力修正,攻撃力修正)
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50753,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종족 = 드래곤족
		효과条件複数 = 2
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件표시 = 10
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
PRINTL 장착 가능한 몬스터가 존재합니다. 이 카드를 장착하시겠습니까?
				CALL YN_CHOICE(듀얼리스트,"モンスターに装備する","특수소환する")
				IF RESULT == 0
					CALL FULLRESET
					효과条件표시 = 表側표시
					CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
					IF RESULT != 9999
						CALL CARD_EQUIP_MONSTER(듀얼리스트,RESULT,"묘지",場所)
					ELSEIF RESULT == 9999
						CALL FULLRESET
						CALL CARD_SP_SUMMON(듀얼리스트,"묘지",場所)
					ENDIF
				ELSEIF RESULT == 1
					CALL FULLRESET
					CALL CARD_SP_SUMMON(듀얼리스트,"묘지",場所)
				ENDIF
			ELSE
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트,"묘지",場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF
