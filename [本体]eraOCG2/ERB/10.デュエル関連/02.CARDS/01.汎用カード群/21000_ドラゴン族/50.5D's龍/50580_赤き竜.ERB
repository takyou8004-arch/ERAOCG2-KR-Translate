PRINTL 이 카드를 EX덱으로 돌리고、대상 몬스터와 같은 레벨의 드래곤족 S몬스터 1장을 S소환취급하여 EX덱에서 특수소환한다。



@CARDCAN_50580(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIM DYNAMIC 설정レベル,20
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50580)
SIF RESULT == 1
	RETURN 0
IF 종류 == 특수소환時 || 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,50580)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 赤き룡
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,50580)
		RETURN 0
	FOR カウンタ,0,15
		SIF GETVAR(@"%듀얼리스트%_EX덱:カウンタ") == -1
			CONTINUE
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_EX덱:カウンタ")}, "종류"
		SIF RESULT != 싱크로
			CONTINUE
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_EX덱:カウンタ")}, "종족"
		SIF RESULT != 드래곤족
			CONTINUE
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_EX덱:カウンタ")}, "レベル"
		SIF RESULT == 7
			설정レベル:7 = 1
		SIF RESULT == 8
			설정レベル:8 = 1
		SIF RESULT == 9
			설정レベル:9 = 1
		SIF RESULT == 10
			설정レベル:10 = 1
		SIF RESULT == 11
			설정レベル:11 = 1
		SIF RESULT == 12
			설정レベル:12 = 1
	NEXT

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件固名前 = 붉은 용
	효과条件종류 = 싱크로
	효과条件レベル:0 = 9999
	SIF 설정レベル:7 == 1
		효과条件レベル:1 = 7
	SIF 설정レベル:8 == 1
		효과条件レベル:2 = 8
	SIF 설정レベル:9 == 1
		효과条件レベル:3 = 9
	SIF 설정レベル:10 == 1
		효과条件レベル:4 = 10
	SIF 설정レベル:11 == 1
		효과条件レベル:5 = 11
	SIF 설정レベル:12 == 1
		효과条件レベル:6 = 12
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50580(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 소환カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択レベル
#DIM DYNAMIC 설정レベル,20

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 특수소환時 || 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50580,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 赤き룡
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50580,2)
	IF RESULT == 0
		FOR カウンタ,0,15
			SIF GETVAR(@"%듀얼리스트%_EX덱:カウンタ") == -1
				CONTINUE
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_EX덱:カウンタ")}, "종류"
			SIF RESULT != 싱크로
				CONTINUE
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_EX덱:カウンタ")}, "종족"
			SIF RESULT != 드래곤족
				CONTINUE
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_EX덱:カウンタ")}, "レベル"
			SIF RESULT == 7
				설정レベル:7 = 1
			SIF RESULT == 8
				설정レベル:8 = 1
			SIF RESULT == 9
				설정レベル:9 = 1
			SIF RESULT == 10
				설정レベル:10 = 1
			SIF RESULT == 11
				설정レベル:11 = 1
			SIF RESULT == 12
				설정レベル:12 = 1
		NEXT

		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류 = 싱크로
		효과条件固名前 = 붉은 용
		효과条件レベル:0 = 9999
		SIF 설정レベル:7 == 1
			효과条件レベル:1 = 7
		SIF 설정レベル:8 == 1
			효과条件レベル:2 = 8
		SIF 설정レベル:9 == 1
			효과条件レベル:3 = 9
		SIF 설정レベル:10 == 1
			효과条件レベル:4 = 10
		SIF 설정レベル:11 == 1
			효과条件レベル:5 = 11
		SIF 설정レベル:12 == 1
			효과条件レベル:6 = 12
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_DISPOSE(듀얼리스트,"필드",場所,덱行き)
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:選択カード")}, "レベル"
			選択レベル = RESULT
			CALL FULLRESET
			효과条件固名前 = 붉은 용
			효과条件レベル = 選択レベル
			효과条件종족 = 드래곤족
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			소환カード = RESULT
			IF 소환カード != 9999
				CALL CARD_EX_SUMMON(듀얼리스트, "EX덱", 소환カード)
			ENDIF
		ENDIF
	ENDIF
ENDIF