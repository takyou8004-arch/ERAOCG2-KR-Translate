@CARDCAN_50851(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50851)
SIF RESULT == 1
	RETURN 0

IF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0

	CALL FULLRESET
	효과条件종류 = モン全般
	효과条件固名前 = 크리스탈윙 싱크로 드래곤
	CALL CARD_CHECK_START_DATA(듀얼리스트,2)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	SIF GETVAR(@"%対面者%_MZ_星:%対面者%_戦闘カード") <= 4
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50851(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 戦闘カード
#DIM DYNAMIC 対戦カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50851,10)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"묘지")
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",2000)
		RETURN 1
	ENDIF
	RETURN 0
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50851)
	IF RESULT == 0
		;一時的な攻撃力強化を발동
		PRINTFORML 턴 종료시까지 クリスタルウィングの攻撃力は攻撃대상分UP！！
		戦闘カード = 戦闘場所(듀얼리스트)
		対戦カード = 戦闘場所(듀얼리스트,1)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",戦闘カード,"一時",GETVAR(@"%対面者%_MZ_攻:対戦カード"))
	ENDIF
ENDIF