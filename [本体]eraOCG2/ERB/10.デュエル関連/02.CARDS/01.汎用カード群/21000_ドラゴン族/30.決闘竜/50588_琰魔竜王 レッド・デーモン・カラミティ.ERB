@CARDCAN_50588(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50588)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	RETURN 1
ELSEIF 종류 == 短紋章起動
	RETURN 1
ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 直前戦闘破壊ID(듀얼리스트,1) == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ:0 = 레드 데몬
	효과条件종류 = 싱크로
	CALLFORM 효과条件レベル_ADV(8, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50588(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM ダメージ量

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50588)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,50588,短紋章予約)
	ENDIF
ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50588)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대묘지 = 1
		CALLFORM CARD_{直前戦闘破壊ID(듀얼리스트,1)}("攻撃力")
		ダメージ量 = RESULT
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ量,1)
	ENDIF
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50588)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場全体",場所,"無効")
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ:0 = 레드 데몬
		효과条件종류 = 싱크로
		CALLFORM 효과条件レベル_ADV(8, "以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 短紋章起動
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"発無",3)
ENDIF