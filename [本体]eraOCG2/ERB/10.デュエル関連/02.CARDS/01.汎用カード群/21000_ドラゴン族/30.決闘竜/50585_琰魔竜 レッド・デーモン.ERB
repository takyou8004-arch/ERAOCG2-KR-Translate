@CARDCAN_50585(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50585)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF メインフェイズ２ == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과範囲묘지 = 1
	효과範囲상대묘지 = 1
	효과条件종류 = モン全般
	효과条件표시 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50585(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50585,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件표시 = 1
		효과条件他所 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과範囲상대묘지 = 1
			효과条件종류 = モン全般
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				CALL YN_CHOICE(듀얼리스트,"필드의 다른 공격 표시 몬스터를 전부 파괴한다","서로의 묘지의 몬스터를 전부 제외한다")
			ELSE
				RESULT = 0
			ENDIF
		ELSE
			RESULT = 1
		ENDIF
		IF RESULT == 0
			CALL FULLRESET
			효과条件他所 = 1
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드全体",場所,"묘지")
		ELSE
			FOR カウンタ,0,紙束最大値
				SIF GETVAR(@"%듀얼리스트%_묘지:カウンタ") == -1
					CONTINUE
				TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_묘지:カウンタ")}, "종류"
				SIF RESULT > 10
					CONTINUE
				CALL CARD_DISPOSE(듀얼리스트,"묘지",カウンタ)
			NEXT
			FOR カウンタ,0,紙束最大値
				SIF GETVAR(@"%対面者%_묘지:カウンタ") == -1
					CONTINUE
				TRYCALLFORM CARD_{GETVAR(@"%対面者%_묘지:カウンタ")}, "종류"
				SIF RESULT > 10
					CONTINUE
				CALL CARD_DISPOSE(対面者,"묘지",カウンタ)
			NEXT
		ENDIF
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"単攻",1)
	ENDIF
ENDIF