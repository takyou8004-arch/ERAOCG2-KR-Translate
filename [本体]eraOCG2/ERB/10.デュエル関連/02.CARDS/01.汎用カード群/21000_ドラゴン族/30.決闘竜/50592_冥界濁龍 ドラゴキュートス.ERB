@CARDSUMMON_50592(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC カウンタ

CALL RESETCONDITION_MAT
必要レベル数 = 10
IF EX参照 == 0 || EX参照 == 1
	素材条件속성 = 어둠속성
	素材条件튜너 = 1
ELSEIF EX参照 >= 10
	素材条件종족:0 = 드래곤족
	素材条件종족:1 = 언데드족
	素材条件튜너 = -1
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,50592) 
	RETURN RESULT
ENDIF


