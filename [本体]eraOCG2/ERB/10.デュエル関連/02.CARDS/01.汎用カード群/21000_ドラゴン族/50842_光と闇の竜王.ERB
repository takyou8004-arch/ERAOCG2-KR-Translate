@CARD_50842(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RESULT:1 = 어둠속성
		RETURN 빛속성
	CASE "종족"
		RETURN 드래곤족 
	CASE "レベル"
		RETURN 10
	CASE "攻撃力"
		RETURN 3400
	CASE "守備力"
		RETURN 3000
	CASE "특수불가"
		RETURN 1
ENDSELECT
RETURN 0

