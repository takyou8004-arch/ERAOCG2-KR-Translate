@CARDSUMMON_50842(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2
素材条件종족 = 드래곤족
素材条件レベル = 8

IF EX参照 == 0 || EX参照 == 1
	素材条件속성 = 빛속성
ELSEIF EX参照 >= 10
	素材条件속성 = 어둠속성
ENDIF
IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,50842) 
	RETURN RESULT
ENDIF

@CARDCAN_50842(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50842)
SIF RESULT == 1
	RETURN 0
	
IF 종류 == 발동強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_攻:場所") < 1000
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_守:場所") < 1000
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA_2(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 드래곤족
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50842(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 발동強制誘発
	CALL FULLRESET
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",-1000)
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永守",-1000)
	CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効2",場所,"無効")
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50842)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종족 = 드래곤족
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
