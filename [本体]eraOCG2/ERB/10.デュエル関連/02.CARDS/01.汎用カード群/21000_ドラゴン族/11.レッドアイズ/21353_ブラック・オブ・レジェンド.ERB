		효과条件行先플래그 = 덱行き
		CALL 효과条件レベル_ADV(7, "以下")
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
효과条件名前 = 블랙의 레전드
			CALL CARD_ADD_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		ENDIF
	ENDIF
ENDIF



