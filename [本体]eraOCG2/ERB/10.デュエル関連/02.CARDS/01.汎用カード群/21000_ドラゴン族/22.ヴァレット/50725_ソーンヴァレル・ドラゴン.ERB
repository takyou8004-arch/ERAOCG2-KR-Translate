@CARDCAN_50725(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50725)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,50725)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 손패数(듀얼리스트) < 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件표시 = 10
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_50725(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択カードレベル
#DIMS DYNAMIC 選択カード名,4
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50725,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件표시 = 10
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드単体",場所,"묘지")
			IF RESULT == 1
				PRINTFORMW {他参照選択カードID}
				選択カード_ID = RESULT:1
				TRYCALLFORM CARD_{他参照選択カードID},"종류"
				SIF RESULT != 링크
					RETURN 0
				TRYCALLFORM CARD_{他参照選択カードID},"レベル"
				選択カードレベル = RESULT
				カウンタ = 0
				REPEAT 選択カードレベル
					CALL FULLRESET
					효과範囲손패 = 1
					효과範囲묘지 = 1
					효과条件カテゴリ = 바렛
					효과条件종류 = モン全般
					SIF カウンタ >= 1
						효과条件固名前:0 = %選択カード名:0%
					SIF カウンタ >= 2
						효과条件固名前:1 = %選択カード名:1%
					SIF カウンタ >= 3
						효과条件固名前:2 = %選択カード名:2%
					SIF カウンタ >= 4
						효과条件固名前:3 = %選択カード名:3%
					효과条件任意 = 1
					CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
					IF RESULT != 9999
						選択カード_ID = RESULT:99
						CALL CARD_SELECT(듀얼리스트,RESULT)
						選択カード = RESULT
						CALL CARD_SP_SUMMON(듀얼리스트,参照先（CS）,選択カード)

						TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
						SIF カウンタ == 0
							選択カード名:0 = %RESULTS%
						SIF カウンタ == 1
							選択カード名:1 = %RESULTS%
						SIF カウンタ == 2
							選択カード名:2 = %RESULTS%
						SIF カウンタ == 3
							選択カード名:3 = %RESULTS%
						カウンタ ++
					ELSEIF RESULT == 9999
						BREAK
					ENDIF
				REND
			ENDIF
		ENDIF
	ENDIF
ENDIF

