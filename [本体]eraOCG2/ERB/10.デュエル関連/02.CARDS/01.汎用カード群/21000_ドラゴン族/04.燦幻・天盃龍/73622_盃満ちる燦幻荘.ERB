;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 배만의 찬환장
	CASE "略称"
RESULTS = 찬환장
	CASE "カテゴリ"
RESULTS:0 = 찬환
ENDSELECT


@CARD_73622(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN フィールド
ENDSELECT
RETURN 0

@CARD_EXPLANATION_73622(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 「찬환장」이 된다.
PRINTL 이 카드명의 ②의 효과는 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ①: 자신 메인 페이즈 1 동안, 자신 필드의 드래곤족 화염 속성 몬스터는 완전 내성을 얻는다.
CALLFORM CARD_ABLE(2,마함起動)
PRINTL ②: 자신 메인 페이즈에 발동할 수 있다. 덱에서 「천배룡」 몬스터 1장을 패에 추가한다. 그 후, 자신 패에서 카드 1장을 고르고 버린다.
CALLFORM CARD_ABLE(0,破壊→묘지)
PRINTL ③: 배틀 페이즈 중에 이 카드가 파괴되었을 경우,
PRINTL 자신 필드의 드래곤족 싱크로 몬스터 1장을 대상으로 하여 발동할 수 있다. 그 몬스터의 공격력을 2배로 한다.


@CARDCAN_73622(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73622)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_2(듀얼리스트,73622)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 천배룡
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 破壊→묘지
	SIF バトルフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 드래곤족
	효과条件종류 = 싱크로
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF メインフェイズ２ == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73622(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73622,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 천배룡
		효과条件종류 = モン全般
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73622)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "찬환장")
	IF メインフェイズ == 1 && ターンプレイヤー == 듀얼리스트
		CALL FULLRESET
		효과条件종족 = 드래곤족
		효과条件속성 = 화염속성
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"モ耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"魔耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"함정耐")
	ENDIF
ELSEIF 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73622)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종족 = 드래곤족
		효과条件종류 = 싱크로
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一攻",GETVAR(@"%듀얼리스트%_MZ_攻:選択カード"))
		ENDIF
	ENDIF
ENDIF
