@CARDNAME_73621,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 찬환후로
	CASE "略称"
		RESULTS = 찬환후로
	CASE "カテゴリ"
		RESULTS:0 = 찬환
ENDSELECT


@CARD_73621(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속마법
ENDSELECT
RETURN 0

@CARD_EXPLANATION_73621(종류)
#DIM DYNAMIC 종류

