@CARDCAN_72107(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72107)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,72107)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 암드 드래곤
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 身代효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	TRYCALLFORM CARDNAME_{破壊대상ID},"カテゴリ"
	SIF !GROUPMATCH(RESULTS,"암드 드래곤")
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"필드","묘지")
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_72107(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードレベル
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72107,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 암드 드래곤
		효과条件표시 = 表側표시
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT != 9999
			選択カード = RESULT
			選択カードレベル = GETVAR(@"%듀얼리스트%_MZ_星:選択カード")

			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 암드 드래곤
			CALLFORM 효과条件レベル_ADV(選択カードレベル,"以下")
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				CALL YN_CHOICE(듀얼리스트,"●：대상 몬스터의 공격력을 올린다","●：묘지에서 「암드 드래곤」몬스터를 패에 넣는다")
			ELSE
				RESULT = 0
			ENDIF

			IF RESULT == 0
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"永攻",選択カードレベル*100)
			ELSEIF RESULT == 1
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件カテゴリ = 암드 드래곤
				CALLFORM 효과条件レベル_ADV(選択カードレベル,"以下")
				효과条件複数 = 98
				효과条件固名前選択 = 1
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72107)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72107)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		RETURN 1
	ENDIF
	RETURN 0
ENDIF
