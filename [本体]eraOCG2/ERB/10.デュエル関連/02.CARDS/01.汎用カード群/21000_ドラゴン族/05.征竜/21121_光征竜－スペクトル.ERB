@CARDNAME_21121,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 광정룡－스펙트르
	CASE "略称"
RESULTS = 광정룡 스펙트르
	CASE "カテゴリ"
RESULTS:0 = 정룡
ENDSELECT


@CARD_21121(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 2
	CASE "攻撃力"
		RETURN 600
	CASE "守備力"
		RETURN 1000
	CASE "성별"
		RETURN 雄性
	CASE "レア度"
		RETURN SPR
ENDSELECT

RETURN 0

