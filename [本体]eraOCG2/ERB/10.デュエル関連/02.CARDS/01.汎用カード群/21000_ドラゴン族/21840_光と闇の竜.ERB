@CARDNAME_21840,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 빛과 어둠의 용
	CASE "略称"
RESULTS = 빛과 어둠의 룡
	CASE "カテゴリ"
RESULTS:0 = 없음
ENDSELECT


@CARD_21840(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RESULT:1 = 어둠속성
		RETURN 빛속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 8
	CASE "攻撃力"
		RETURN 2800
	CASE "守備力"
		RETURN 2400
	CASE "특수불가"
		RETURN 1
ENDSELECT

RETURN 0

