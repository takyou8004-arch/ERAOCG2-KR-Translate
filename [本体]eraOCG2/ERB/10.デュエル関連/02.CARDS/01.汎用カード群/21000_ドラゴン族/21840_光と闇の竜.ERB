@CARDCAN_21840(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21840)
SIF RESULT == 1
	RETURN 0

IF 종류 == 발동強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_攻:場所") < 500
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_守:場所") < 500
		RETURN 0
	CALL FULLRESET
	효과条件固名前 = 빛과 어둠의 용
	CALL CARD_CHECK_START_DATA_2(듀얼리스트,2)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	RETURN 1
ENDIF

@CARDEFFECT_21840(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 발동強制誘発
	CALL FULLRESET
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",-500)
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永守",-500)
	CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効2",場所,"無効")
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21840)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
				CONTINUE
			CALL CARD_DISPOSE(듀얼리스트,"필드",カウンタ,破壊行き)
		NEXT
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_마함:{カウンタ}") == -1
				CONTINUE
			CALL CARD_DISPOSE(듀얼리스트,"마함",カウンタ,破壊行き)
		NEXT
		CALL FULLRESET
		효과範囲묘지 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
