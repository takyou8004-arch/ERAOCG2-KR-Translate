@CARDCAN_12210(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 효과使用불가,3

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,12210)
SIF RESULT == 1
	RETURN 0


IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,12210)
		효과使用불가:0 = 1
	SIF 발동済_2(듀얼리스트,12210)
		효과使用불가:1 = 1
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = P.U.N.K.
	CALL 효과条件レベル_ADV(8, "以外")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:1 = 1


	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = P.U.N.K.
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:0 = 1

	SIF 손패数(듀얼리스트) <= 1
		효과使用불가:1 = 1


	SIF 효과使用불가:0 == 1 && 효과使用불가:1 == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,12210)
		RETURN 0
	SIF 손패数(듀얼리스트) == 0
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = P.U.N.K.
	CALL 효과条件レベル_ADV(8, "以外")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 直前戦闘破壊ID(듀얼리스트,1) == 0
		RETURN 0	
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_12210(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 효과使用불가,3

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,12210)
		효과使用불가:0 = 1
	SIF 발동済_2(듀얼리스트,12210)
		효과使用불가:1 = 1

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = P.U.N.K.
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:0 = 1

	SIF 손패数(듀얼리스트) <= 1
		효과使用불가:1 = 1



	IF 효과使用불가:0 != 1 && 효과使用불가:1 != 1
PRINTL 이 카드를 특수 소환하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
	ELSEIF 효과使用불가:1 == 1
		RESULT = はい
	ELSEIF 효과使用불가:0 == 1
		RESULT = いいえ
	ENDIF

	IF RESULT == はい
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,12210,1)
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = P.U.N.K.
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
			ENDIF
		ENDIF
	ELSEIF RESULT == いいえ
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,12210,2)
		IF RESULT == 0
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			CALL FULLRESET
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = P.U.N.K.
				CALL 효과条件レベル_ADV(8, "以外")
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,12210,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = P.U.N.K.
			CALL 효과条件レベル_ADV(8, "以外")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,12210,10)
	IF RESULT == 0
		CALLFORM CARD_{直前戦闘破壊ID(듀얼리스트,1)}("攻撃力")
		CALL LIFE_CHANGE(듀얼리스트,"増加","효과",RESULT)
	ENDIF
	RETURN 0
ENDIF
