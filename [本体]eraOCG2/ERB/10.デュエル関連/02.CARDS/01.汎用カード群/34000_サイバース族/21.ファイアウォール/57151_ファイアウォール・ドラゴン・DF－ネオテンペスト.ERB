@CARDCAN_57151(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57151)
SIF RESULT == 1
	RETURN 0


IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,57151)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲EX덱 = 1
	효과条件종족 = 사이버스족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_57151(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択レベル
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 攻撃횟수
#DIM DYNAMIC 속성セット
#DIM DYNAMIC 속성セットビット

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57151,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲EX덱 = 1
		효과条件종족 = 사이버스족
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)	
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARD_{選択カード_ID}, "속성"
			속성セット = RESULT - 1
			SETBIT 속성セットビット, 속성セット
			CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"永攻",2500)
			CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"汎数",속성セットビット)
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),0) == 1
		攻撃횟수 ++
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),1) == 1
		攻撃횟수 ++
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),2) == 1
		攻撃횟수 ++
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),3) == 1
		攻撃횟수 ++
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),4) == 1
		攻撃횟수 ++
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),5) == 1
		攻撃횟수 ++
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"追戦",攻撃횟수)
	CALL SET_PLAYER_INFO(듀얼리스트,"モン효과無効",3,1)
ENDIF



