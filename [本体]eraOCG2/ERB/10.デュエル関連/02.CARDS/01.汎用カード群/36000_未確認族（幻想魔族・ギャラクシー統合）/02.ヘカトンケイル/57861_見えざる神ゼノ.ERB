@CARDCAN_57861(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57861)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,57861)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	SIF 現EX山札数(対面者) == 0
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1

ELSEIF 종류 == 破壊→묘지
	SIF 발동済_3(듀얼리스트,57861)
		RETURN 0
	SIF 処理中_듀얼리스트 == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件除去種 = 強奪
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_57861(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 戦闘カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 実行횟수

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57861,1)
	IF RESULT == 0
		CALL SHUFFLE_EX(対面者)
		CALL FULLRESET
		효과範囲상대EX덱 = 1
		효과条件特不無視 = 1
		효과추가종류 = 効追접촉 ;隠し仕様
		효과条件任意 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,,2)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(対面者,"自身",戦闘場所(듀얼리스트,1),"戦耐")
ELSEIF 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57861,3)
	IF RESULT == 0
		実行횟수 = モンスター数(듀얼리스트) - モンスター数(対面者)
		CALL FULLRESET
		효과추가종류 = 効追접촉 ;隠し仕様
		효과条件複数 = 100 - 実行횟수
		CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"強奪")
	ENDIF
ENDIF


@SHUFFLE_EX(듀얼리스트)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC CHANGE
;LCOUNTは덱枚数の値から1づつ下げていく

PRINTFORML %듀얼리스트%の덱をシャッフルします。

SELECTCASE 듀얼리스트
	CASE "자신"
		FOR LCOUNT, 現EX山札数("자신"), 0, -1
			;0以上LCOUNT未満の数からランダムでシャッフル대상を選ぶ
			CHANGE = RAND:LCOUNT
			SWAP 자신_EX덱:(LCOUNT-1), 자신_EX덱:CHANGE
		NEXT

	CASE "상대"
		FOR LCOUNT, 現EX山札数("상대"), 0, -1
			CHANGE = RAND:LCOUNT
			SWAP 상대_EX덱:(LCOUNT-1), 상대_EX덱:CHANGE
		NEXT
ENDSELECT
