PRINTL 상대フィールドの全ての攻撃표시モンスターは次の자신スタンバイフェイズまで、
PRINTL 표시形式を변경できず、융합・Ｓ・Ｘ・Ｌ소환の素材にできず、효과は無効化される。

@CARDCAN_36003(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,36003)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	SIF 발동済_1(듀얼리스트,36003)
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,36003,ゾーン)
	SIF RESULT == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == バトル終了時
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 攻撃표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_36003(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 戦闘カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36003,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		SIF RESULT == 1 && 戦闘場所(듀얼리스트) == 5
			CALL COVER_ATTACK(듀얼리스트,カード소환先)
	ENDIF

ELSEIF 종류 == バトル終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36003)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 攻撃표시
		CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"無効",4,36003)
		CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"表固",4,36003)
		CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"不材",4,36003)
	ENDIF

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(対面者,"自身",戦闘場所(듀얼리스트,1),"戦耐")
ENDIF
