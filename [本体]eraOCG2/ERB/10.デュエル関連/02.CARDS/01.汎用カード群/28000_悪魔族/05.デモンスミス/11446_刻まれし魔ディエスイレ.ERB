@CARDSUMMON_11446(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 3

IF EX参照 == 0 || EX参照 == 1
素材条件名前 = 마를 새기는 데먼스미스
ELSEIF EX参照 >= 10
	素材条件속성 = 빛속성
	素材条件종족 = 악마족
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,11446) 
	RETURN RESULT
ENDIF

@CARDCAN_11446(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,11446)
SIF RESULT == 1
	RETURN 0


IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,11446)
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 링크
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件표시 = 10
	효과条件除去種 = 無効
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
;審議中
ELSEIF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,11446)
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 링크
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과条件종류:0 = 通常마법
	효과条件종류:1 = 速攻마법
	효과条件종류:2 = 通常함정
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_2(듀얼리스트,11446)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件固名前 = 각인된 마 디에스 이레
	효과条件속성 = 빛속성
	효과条件종족 = 악마족
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_11446(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 装備カード_링크数
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,11446,1)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_마함:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_魔_装:カウンタ") != 場所
				CONTINUE
			選択カード_ID = GETVAR(@"%듀얼리스트%_마함:カウンタ")
			TRYCALLFORM CARD_{選択カード_ID},"종류"
			SIF !MATCH(RESULT,링크)
				CONTINUE
			TRYCALLFORM CARD_{選択カード_ID},"レベル"
			装備カード_링크数 += RESULT
		NEXT
		REPEAT 装備カード_링크数
			CALL FULLRESET
			효과条件표시 = 10
			효과条件除去種 = 無効
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"無効")
			SIF RESULT != 1
				BREAK
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			효과条件표시 = 10
			효과条件除去種 = 無効
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,11446)
			SIF RESULT != 1
				BREAK
		REND
	ENDIF
;審議中
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,11446,1)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_마함:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_魔_装:カウンタ") != 場所
				CONTINUE
			選択カード_ID = GETVAR(@"%듀얼리스트%_마함:カウンタ")
			TRYCALLFORM CARD_{選択カード_ID},"종류"
			SIF !MATCH(RESULT,링크)
				CONTINUE
			TRYCALLFORM CARD_{選択カード_ID},"レベル"
			装備カード_링크数 += RESULT - 1
		NEXT
		REPEAT 装備カード_링크数
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			효과条件표시 = 10
			효과条件除去種 = 無効
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,11446)
			SIF RESULT != 1
				BREAK
			CALL FULLRESET
			효과条件표시 = 10
			효과条件除去種 = 無効
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"無効")
			SIF RESULT != 1
				BREAK
		REND
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",0,"묘지")
	ENDIF
ELSEIF 종류 == 필드→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,11446,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件固名前 = 각인된 마 디에스 이레
		효과条件속성 = 빛속성
		효과条件종족 = 악마족
		효과条件종류 = モン全般
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"リリース")
		ENDIF
	ENDIF
ENDIF

