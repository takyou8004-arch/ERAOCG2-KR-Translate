@CARDCAN_54203(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,54203)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	IF 듀얼리스트 != "자신"
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과破壊",2)
	IF RESULT == 1
		SIF 발동済_1(듀얼리스트,54203)
			RETURN 0
		RETURN 1
	ENDIF

	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"戦闘破壊",2)
	IF RESULT == 1
		SIF 발동済_2(듀얼리스트,54203)
			RETURN 0
		RETURN 1
	ENDIF

	RETURN 0
ELSEIF 종류 == ターン終了時
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_3(듀얼리스트,54203)
		RETURN 0
	IF 듀얼리스트 != "자신"
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_54203(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과破壊",2)
	IF RESULT == 1 && 발동済_1(듀얼리스트,54203) == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54203,1)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場単体",場所,"묘지")
		ENDIF
	ENDIF
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"戦闘破壊",2)
	IF RESULT == 1 && 발동済_2(듀얼리스트,54203) == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54203,2)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場単体",場所,"묘지")
		ENDIF
	ENDIF
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54203,3)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場単体",場所,"묘지")
	ENDIF
ENDIF