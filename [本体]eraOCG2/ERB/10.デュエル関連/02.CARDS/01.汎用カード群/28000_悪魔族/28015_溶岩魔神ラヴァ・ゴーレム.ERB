@CARDCAN_28015(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28015)
SIF RESULT == 1
	RETURN 0



IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,28015,"손패",1)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	SIF 소환権 == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン開始時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_28015(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM サーチカード 

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28015)
	IF RESULT == 0
		CALL FULLRESET
		효과条件複数 = 2
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"상대필드",ゾーン,場所)	
		IF RESULT == 1
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所, "攻撃표시",1)
			소환権 --
		ENDIF
	ENDIF
ELSEIF 종류 == ターン開始時強制
	CALL LIFE_CHANGE(듀얼리스트,"減少","효과",1000)
ENDIF

