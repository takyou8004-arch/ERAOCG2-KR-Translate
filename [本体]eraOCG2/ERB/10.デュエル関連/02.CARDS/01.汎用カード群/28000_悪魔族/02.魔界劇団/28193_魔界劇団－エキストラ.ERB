@CARDSUMMON_AA_28193


@CARDCAN_28193(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28193)
SIF RESULT == 1
	RETURN 0

;P
IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	IF 듀얼리스트 != "자신"
		CALL FULLRESET
		효과範囲마함 = 1
효과条件名前 = 마계극단－엑스트라
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 마함起動
	발동불가:0 = 0
	발동불가:1 = 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0

	;(1)
	SIF 발동済_1(듀얼리스트,28193)
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件分割 = 펜듈럼
	효과条件固名前 = 마계극단－엑스트라
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲EX덱 = 1
	효과条件カテゴリ = 마계극단
	효과条件分割 = 펜듈럼
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1
	
	;(2)
	SIF 발동済_2(듀얼리스트,28193)
		발동불가:1 = 1
	CALL CARD_SS_CHECK(듀얼리스트,28193,"마함")
	SIF RESULT == 1
		발동불가:1 = 1
	SIF モンスター数(対面者) < 1
		발동불가:1 = 1
	
	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	RETURN 1

;M
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,28193)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 마계극단
	효과条件分割 = 펜듈럼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_28193(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 발동불가,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

;P
IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28193)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 마함起動
	발동불가:0 = 0
	발동불가:1 = 0

	;(1)
	SIF 발동済_1(듀얼리스트,28193)
		발동불가:0 = 1

	CALL FULLRESET
	효과範囲마함 = 1
	효과条件分割 = 펜듈럼
	효과条件固名前 = 마계극단－엑스트라
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲EX덱 = 1
	효과条件カテゴリ = 마계극단
	효과条件分割 = 펜듈럼
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1

	;(2)
	SIF 발동済_2(듀얼리스트,28193)
		발동불가:1 = 1
	CALL CARD_SS_CHECK(듀얼리스트,28193,"마함")
	SIF RESULT == 1
		발동불가:1 = 1
	SIF モンスター数(対面者) < 1
		발동불가:1 = 1
	
	IF 발동불가:0 == 0 && 발동불가:1 == 0
		SIF 듀얼리스트 == "자신"
PRINTL 효과를 선택해 주세요
		CALL YN_CHOICE(듀얼리스트,"●몬스터를 특수소환する","●이 카드를 특수소환する")
	ELSEIF 발동불가:0 == 1
		RESULT = 1
	ELSEIF 발동불가:1 == 1
		RESULT = 0
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28193,1)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲EX덱 = 1
			효과条件カテゴリ = 마계극단
			효과条件分割 = 펜듈럼
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ELSEIF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28193,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲마함 = 1
효과条件名前 = 마계극단－엑스트라
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
	

;モンスター효과-------------------------
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28193,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件カテゴリ = 마계극단
		효과条件分割 = 펜듈럼
		CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"表側표시")
		CALL CARD_SS_RESTRICTION(듀얼리스트,"마계극단")
	ENDIF
ENDIF


