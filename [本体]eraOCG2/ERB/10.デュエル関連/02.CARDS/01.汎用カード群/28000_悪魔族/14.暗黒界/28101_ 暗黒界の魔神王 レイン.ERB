@CARD_EXPLANATION_28101(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,묘지起動)
PRINTL ①: 이 카드가 묘지에 존재할 경우, 레벨 7 이하의 자신 필드의 "암흑계" 몬스터 1장을 대상으로 하여 발동할 수 있다.
PRINTL 그 카드를 손패로 되돌리고, 이 카드를 묘지에서 특수 소환한다.
CALLFORM CARD_ABLE(0,손패→묘지)
PRINTL ②: 이 카드가 효과로 손패에서 묘지로 버려졌을 경우에 발동할 수 있다.
PRINTL 덱에서 "암흑계의 마신왕 레인" 이외의 레벨 5 이상의 "암흑계" 몬스터 1장을 손패에 추가한다.


@CARDCAN_28101(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28101)
SIF RESULT == 1
	RETURN 0

IF 종류 == 묘지起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,28101,"묘지")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 암흑계
	CALL 효과条件レベル_ADV(7, "以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1

ELSEIF 종류 == 손패→묘지
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 암흑계
	효과条件固名前 = 암흑계의 마신왕 레인
	CALL 효과条件レベル_ADV(5, "以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_28101(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード


IF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28101)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 암흑계
		CALL 효과条件レベル_ADV(7, "以下")
		효과条件行先플래그 = 손패行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)	
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 손패→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28101)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 암흑계
		효과条件固名前 = 암흑계의 마신왕 레인
		CALL 효과条件レベル_ADV(5, "以上")
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ENDIF

