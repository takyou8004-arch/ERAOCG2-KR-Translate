@CARDNAME_28472,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 인페르니티 리벤저
	CASE "略称"
RESULTS = 만족 리벤저
	CASE "カテゴリ"
RESULTS:0 = 인페르니티
ENDSELECT


@CARD_28472(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 1
	CASE "攻撃力"
		RETURN 0
	CASE "守備力"
		RETURN 0
	CASE "튜너"
		RETURN 1
ENDSELECT

RETURN 0

@CARD_EXPLANATION_28472(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,효과後誘発)
PRINTL ①: 자신의 패가 0장일 경우에, 이 카드명 이외의 자신의 "인페르니티" 몬스터가 전투로 파괴되었을 경우에 발동할 수 있다.
PRINTL 이 카드를 묘지에서 특수 소환한다.
PRINTL 이 효과로 특수 소환한 이 카드의 레벨은, 그 전투로 파괴된 자신의 몬스터의 원래 레벨과 같아진다.
CALLFORM CARD_ABLE(0,S素材時효과)
PRINTL ②: 자신의 패가 0장일 경우에, 이 카드가 악마족 몬스터의 싱크로 소재가 되어 묘지로 보내졌을 경우에 발동할 수 있다.
PRINTL 필드의 몬스터 1장을 고르고 파괴한다.

@CARDCAN_28472(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28472)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF ゾーン != "묘지"
		RETURN 0
	SIF 손패数(듀얼리스트) != 0
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,28472,"묘지")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 인페르니티
	효과条件固名前 = 인페르니티 리벤저
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"戦闘破壊")
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == S素材時효과
	SIF ゾーン != "묘지"
		RETURN 0
	SIF 손패数(듀얼리스트) != 0
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 싱크로
	효과条件종족 = 악마족
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX특수소환")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	IF 듀얼리스트 == "자신"
		효과範囲필드 = 1
		효과範囲마함 = 1
	ENDIF
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_28472(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 회복ライフ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28472)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		TRYCALLFORM CARD_{戦闘カードID(듀얼리스트)},"レベル"
		효과추가종류 = 効追永星 + RESULT
효과条件名前 = 인페르니티 리벤저
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == S素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28472)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드単体",場所,"묘지")
	ENDIF
ENDIF
