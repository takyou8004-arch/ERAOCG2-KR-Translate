PRINTL 자신 엑스트라 덱 / 묘지에서 「DD」 몬스터 1장을 수비 표시로 특수 소환한다.


@CARDCAN_54119(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,54119)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,54119)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 4
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = DD
	효과条件分割 = 펜듈럼
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	SIF 발동済_2(듀얼리스트,54119)
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = DD
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_54119(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID


IF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54119,1)
	IF RESULT == 0

		CALL FULLRESET
		효과条件カテゴリ = DD
		효과条件分割 = 펜듈럼
		CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"表側표시")
		選択カード_ID = RESULT:1

		CALL FULLRESET
		효과条件カテゴリ = DD
		효과条件分割 = 펜듈럼
		효과条件固ID = 選択カード_ID
		CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"表側표시")
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",1000)

		CALL CARD_SS_RESTRICTION(듀얼리스트,"DD")
	ENDIF

ELSEIF 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54119,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = DD
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
	ENDIF
ENDIF


