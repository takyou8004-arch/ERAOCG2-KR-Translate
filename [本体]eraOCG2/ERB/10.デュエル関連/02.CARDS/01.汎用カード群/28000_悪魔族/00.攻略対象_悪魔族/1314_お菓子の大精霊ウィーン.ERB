CALL CARD_ABLE(2,破壊→묘지 ,戦闘→묘지)
PRINTL ②: 이 카드가 전투 / 효과로 파괴되었을 경우에 발동할 수 있다.
PRINTL 상대의 묘지에서 몬스터 1장을 자신 필드에 특수 소환한다.

@CARDCAN_1314(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1314)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,1314)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_2(듀얼리스트,1314)
		RETURN 0
	CALL FULLRESET
	효과範囲상대묘지 = 1
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1314(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과修正

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1314,1)
	IF RESULT == 0
		IF RAND:2 == 0
			PRINTW 「●이 카드의 攻撃力は、자신의 묘지의 언데드족 몬스터의 数×８００오른다。」が適用されます。
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종족 = 언데드족
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			효과修正 = RESULT * 800
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",효과修正)
		ELSE
			PRINTW 「●자신의 묘지의 언데드족 몬스터의 数×５００ダメージを상대に与える。」が適用されます。
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종족 = 언데드족
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			효과修正 = RESULT * 500
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",효과修正,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1314,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대묘지 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

