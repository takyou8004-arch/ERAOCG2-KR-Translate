@CARDCAN_28402(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28402)
SIF RESULT == 1
	RETURN 0
IF 종류 == 손패起動
	SIF ゾーン != "손패"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,28402,"손패",1)
	SIF RESULT == 1
		RETURN 0
	SIF モンスター数(対面者) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 유벨
	CALLFORM 효과条件レベル_ADV(10,"以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	TRYCALLFORM CARDNAME_{戦闘カードID(듀얼리스트,1)}("カテゴリ")
	SIF RESULTS != "유벨"
		RETURN 0
	CALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("レベル")
	SIF RESULT < 10
		RETURN 0
	RETURN 1	
ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "묘지"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,28402,"묘지")
	SIF RESULT != 1
		RETURN 0
	SIF モンスター数(対面者) >= 5
		RETURN 0
	CALL FULLRESET
효과条件名前 = 유벨
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_28402(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28402)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 유벨
		CALLFORM 효과条件レベル_ADV(10,"以上")
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所,"攻撃표시",1)
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"손패",選択カード,"攻撃표시")
			; 효과条件カテゴリ = 유벨
			; CALLFORM 효과条件レベル_ADV(10,"以上")
			; 효과条件任意 = 1
			; CALL CARD_SP_SUMMON(듀얼리스트,"손패",選択カード)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻撃時強制誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28402,10)
	IF RESULT == 0
		PRINTFORML
		PRINTFORML 【ガイスト-チ ゴ-レムの효과】
		PRINTFORML
		CALL LIFE_CHANGE(対面者,"増加","효과",3000)
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28402)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所,,1)
	ENDIF
ENDIF
