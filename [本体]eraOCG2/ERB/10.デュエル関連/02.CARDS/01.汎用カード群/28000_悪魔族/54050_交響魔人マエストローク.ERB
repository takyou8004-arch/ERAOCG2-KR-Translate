	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54050,10,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"표시변경")
	ENDIF
ELSEIF 종류 == 身代효과
