VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 지박계례 지오그렘리나
	CASE "略称"
RESULTS = 지오그렘리나
	CASE "カテゴリ"
RESULTS:0 = 지박
ENDSELECT


@CARD_54082(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 6
	CASE "攻撃力"
		RETURN 2000
	CASE "守備力"
		RETURN 1000
	CASE "성별"
		RETURN 牝性
ENDSELECT

RETURN 0

@CARDSUMMON_54082(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC カウンタ

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 지박
ELSEIF EX参照 >= 10
	素材条件속성 = 어둠속성
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,54082) 
	RETURN RESULT
ENDIF

