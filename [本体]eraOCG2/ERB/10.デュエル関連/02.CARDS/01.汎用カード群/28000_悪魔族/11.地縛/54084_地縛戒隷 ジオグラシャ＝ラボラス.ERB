@CARDSUMMON_54084(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC カウンタ

CALL RESETCONDITION_MAT
必要素材数 = 2
素材条件カテゴリ = 지박

IF EX参照 == 0 || EX参照 == 1
	素材条件종류 = 융합
ELSEIF EX参照 >= 10
	素材条件종류 = 싱크로
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,54084) 
	RETURN RESULT
ENDIF

