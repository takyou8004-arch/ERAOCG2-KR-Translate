PRINTL 이 카드를 패에서 특수 소환한다.
CALLFORM CARD_ABLE(2,손패起動)
PRINTL ②: 이 카드를 패에서 버리고 발동할 수 있다.
PRINTL 덱에서 레벨 3 이하의 악마족 튜너 1장을 패에 추가한다.
PRINTL 이 효과의 발동 후, 턴 종료시까지 자신은 융합 S 몬스터밖에 EX덱에서 특수 소환할 수 없다.

@CARDCAN_28483(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성,2
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28483)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,28483)
		条件달성:0 = 1
	CALL CARD_SS_CHECK(듀얼리스트,28483,"손패")
	SIF RESULT == 1
		条件달성:0 = 1
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲상대마함 = 1
	효과条件종류 = フィールド
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		条件달성:0 = 1
	

	SIF 발동済_2(듀얼리스트,28483)
		条件달성:1 = 1
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종족 = 악마족
	효과条件튜너 = 1
	효과条件종류 = モン全般
	CALLFORM 효과条件レベル_ADV(3,"以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		条件달성:1 = 1

	SIF 条件달성:0 == 1 && 条件달성:1 == 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_28483(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,28483)
		条件달성:0 = 1
	CALL CARD_SS_CHECK(듀얼리스트,28483,"손패")
	SIF RESULT == 1
		条件달성:0 = 1
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲상대마함 = 1
	효과条件종류 = フィールド
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		条件달성:0 = 1

	
	SIF 발동済_2(듀얼리스트,28483)
		条件달성:1 = 1
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종족 = 악마족
	효과条件튜너 = 1
	효과条件종류 = モン全般
	CALLFORM 효과条件レベル_ADV(3,"以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		条件달성:1 = 1

	IF 条件달성:0 == 0 && 条件달성:1 == 0
		CALL YN_CHOICE(듀얼리스트,"①：이 카드를 특수 소환한다。","②：レベル３이하의 악마족튜너を패에 넣는다。")

	ELSEIF 条件달성:0 == 0
		RESULT = 0
	ELSEIF 条件달성:1 == 0
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28483,1)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
		ENDIF
	
	ELSEIF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28483,2)
		IF RESULT == 0
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件종족 = 악마족
			효과条件튜너 = 1
			효과条件종류 = モン全般
			CALLFORM 효과条件レベル_ADV(3,"以下")
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			EX소환可能종류:0 = 융합
			EX소환可能종류:1 = 싱크로
			CALL CARD_EX_RESTRICTION(듀얼리스트)
		ENDIF
	ENDIF
ENDIF
