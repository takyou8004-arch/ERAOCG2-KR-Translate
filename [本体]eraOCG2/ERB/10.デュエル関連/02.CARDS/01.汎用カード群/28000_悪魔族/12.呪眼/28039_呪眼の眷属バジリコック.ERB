@CARDCAN_28039(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28039)

SIF RESULT == 1
	RETURN 0
IF 종류 == 손패起動 || 종류 == 묘지起動 || (종류 == フリー誘発 && ゾーン == "손패") || (종류 == フリー誘発 && ゾーン == "묘지")
	SIF 발동済_1(듀얼리스트,28039)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"손패","묘지")
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,28039,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件표시 = 表側표시
	효과条件カテゴリ = 주안
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || (종류 == フリー誘発 && ゾーン == "필드")
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,28039)
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件표시 = 表側표시
	효과条件カテゴリ = 주안
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 링크
	효과条件カテゴリ = 주안
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_28039(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID 
#DIM DYNAMIC カード数

IF 종류 == 손패起動 || 종류 == 묘지起動 || (종류 == フリー誘発 && ゾーン == "손패") || (종류 == フリー誘発 && ゾーン == "묘지")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28039,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
효과条件名前 = 주안의 권속 바실리스크
		효과条件소환可 = 1
		효과추가종류 = 2
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 필드起動 || (종류 == フリー誘発 && ゾーン == "필드")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28039,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件カテゴリ = 주안
		효과条件종류 = 装備마법
		효과条件표시 = 表側표시
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		カード数 = RESULT

		REPEAT カード数
			SIF モンスター数(듀얼리스트) >= 5
				BREAK
PRINTL 토큰을 특수 소환합니까?
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == はい
				CALL FULLRESET
				CALL CARD_GENERATE(듀얼리스트,128039,"守備표시")
			ELSEIF RESULT == いいえ
				BREAK
			ENDIF
		REND

		SETCOLOR C_LINK_BLUE
		PRINTFORMW 주안の力が強引に魂を接続する……！
		PRINTL
		PRINTL

		SETCOLOR C_LINK_BLUE
		CUSTOMDRAWLINE =
		PRINTFORML 「EX덱確認画面」
		CUSTOMDRAWLINE =
		PRINTL

		;EX덱確認
		CALL FULLRESET
		효과条件종류 = 링크
		효과条件소환可 = 1
		효과条件カテゴリ = 주안
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード= RESULT
		RESETCOLOR
		;戻る
		IF 選択カード!= 9999
			CALLFORM RESETCONDITION
			;カードIDを설정する
			選択カード_ID = GETVAR(@"%듀얼리스트%_EX덱:選択カード")
			TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード)
			TRYCALLFORM LINSUMMON(듀얼리스트,選択カード)
		ENDIF
	ENDIF
ENDIF

