@CARDCAN_28036(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,28036)
SIF RESULT == 1
	RETURN 0
IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,28036)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 주안
	효과条件固名前 = 주안의 사도 사리엘
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == ターン終了時強制
	SIF 효과발동済(듀얼리스트,場所,ゾーン) == 0
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 주안
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	SIF RESULT < 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件召種 = 召種全특수
	효과条件除去種 = 묘지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_28036(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM サーチカード 

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28036)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 주안
		효과条件固名前 = 주안의 사도 사리엘
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF

ELSEIF 종류 == ターン終了時強制
	CUSTOMDRAWLINE —
	PRINTFORML 【주안の力が代償を求める……！】
	CUSTOMDRAWLINE —
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件他所 = 1
	효과条件行先플래그 = 破壊行き
	CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,28036,10)
	IF RESULT == 0
		CALL FULLRESET
		효과条件召種 = 召種全특수
		효과条件除去種 = 묘지
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"상대필드",ゾーン,場所)
	ENDIF
ENDIF
