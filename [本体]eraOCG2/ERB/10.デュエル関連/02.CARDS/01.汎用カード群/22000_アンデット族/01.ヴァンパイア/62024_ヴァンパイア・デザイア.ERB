@CARDCAN_62024(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,62024)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 뱀파이어
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件표시 = 10
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
	ENDIF
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 뱀파이어
	효과条件종류 = モン全般
	효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲필드 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
	ENDIF
	RETURN 0
ENDIF



@CARDEFFECT_62024(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 설정レベル
#DIMS DYNAMIC 対面者


IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62024)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 뱀파이어
		효과条件종류 = モン全般
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			選択カード_ID = RESULT:99
			選択カード = RESULT
			CALL CARD_SELECT(듀얼리스트,選択カード)
			選択カード = RESULT
			IF 参照先（CS） == "덱"
				CALL CARD_DISPOSE(듀얼리스트,"덱",選択カード,묘지行き)
				IF RESULT == 1
					CALL FULLRESET
					효과範囲필드 = 1
					효과条件표시 = 10
					CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
					IF RESULT != 9999
						選択カード = RESULT
						TRYCALLFORM CARD_{選択カード_ID},"レベル"
						설정レベル = RESULT
						CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"一星",설정レベル,1)
					ENDIF
				ENDIF
			ELSEIF 参照先（CS） == "묘지"
				CALL FULLRESET
				효과範囲필드 = 1
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					CALL FULLRESET
					CALL CARD_SP_SUMMON(듀얼리스트,"묘지",選択カード)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
