@CARDCAN_51001(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51001)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃後誘発
	SIF 발동済_1(듀얼리스트,51001)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0

	CALL FULLRESET
	효과範囲상대묘지 = 1
	효과範囲묘지 = 1
	SIF GETVARS(@"%듀얼리스트%_フィールド名") != "언데드世界" && GETVARS(@"%対面者%_フィールド名") != "언데드世界"
		효과条件종족 = 언데드족
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	SIF 直前戦闘破壊ID(듀얼리스트) == 0 && 直前戦闘破壊ID(듀얼리스트,1) == 0
		RETURN 0
	IF GETVARS(@"%듀얼리스트%_フィールド名") != "언데드世界" && GETVARS(@"%対面者%_フィールド名") != "언데드世界"
		TRYCALLFORM CARD_{直前戦闘破壊ID(듀얼리스트)}, "종족"
		SIF RESULT != 언데드족
			条件달성 ++
		TRYCALLFORM CARD_{直前戦闘破壊ID(듀얼리스트,1)}, "종족"
		SIF RESULT != 언데드족
			条件달성 ++
		SIF 条件달성 == 0
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_51001(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51001,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲상대묘지 = 1
		SIF GETVARS(@"%듀얼리스트%_フィールド名") != "언데드世界" && GETVARS(@"%対面者%_フィールド名") != "언데드世界"
			효과条件종족 = 언데드족
		효과추가종류 = (언데드족 + 100)
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과範囲상대필드 = 1
	효과範囲상대묘지 = 1
	효과条件종족 = 언데드족
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 200
	CALL FULLRESET
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正,攻撃力修正)
ENDIF

