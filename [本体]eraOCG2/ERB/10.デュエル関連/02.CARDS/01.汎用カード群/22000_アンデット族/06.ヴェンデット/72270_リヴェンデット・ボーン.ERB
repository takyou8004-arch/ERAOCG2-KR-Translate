	CASE "名前"
		RESULTS = 리벤데드 본
	CASE "略称"
		RESULTS = RVD.Origin
	CASE "カテゴリ"
		RESULTS:0 = 벤데드
		RESULTS:1 = 의식 마법
ENDSELECT


