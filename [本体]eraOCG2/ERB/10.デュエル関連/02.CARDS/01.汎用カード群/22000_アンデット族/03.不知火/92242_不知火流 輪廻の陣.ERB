@CARD_EXPLANATION_92242(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 "시라누이류 전생지진"이 된다.
CALLFORM CARD_ABLE(10,마함起動)
PRINTL ①: 1턴에 1번, 이하의 효과에서 1개를 선택하여 발동할 수 있다.
PRINTL ●자신 필드의 언데드족 몬스터 1장을 제외하고 발동할 수 있다.
PRINTL 이 턴, 자신이 받는 모든 데미지는 0이 된다.
PRINTL ●제외되어 있는 자신의 수비력 0의 언데드족 몬스터 2장을 대상으로 하여 발동할 수 있다.
PRINTL 그 몬스터 2장을 덱으로 되돌리고 셔플한다.
PRINTL 그 후, 자신은 덱에서 1장 드로우한다.

@CARDCAN_92242(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,2
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,92242)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 언데드족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件종족 = 언데드족
	효과条件守備力 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,92242)
	SIF RESULT < 2
		발동불가:1 = 1

	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_92242(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92242,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종족 = 언데드족
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 = 1
		CALL FULLRESET
		효과範囲제외 = 1
		효과条件종족 = 언데드족
		효과条件守備力 = 1
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,92242)
		SIF RESULT >= 2
			条件달성:1 = 1

		IF 듀얼리스트 == "자신"
			IF 条件달성:0 == 1 && 条件달성:1 == 1
				CALL YN_CHOICE(듀얼리스트,"●受けるダメージを０にする","●덱에서 １장ドローする")
			ELSEIF 条件달성:0 == 1
				RESULT = 0
			ELSEIF 条件달성:1 == 1
				RESULT = 1
			ENDIF
		ELSE
			IF 条件달성:0 == 1 && 条件달성:1 == 1
				IF ターンプレイヤー == 듀얼리스트
					RESULT = 1
				ELSEIF ターンプレイヤー != 듀얼리스트
					RESULT = 0
				ENDIF
			ELSEIF 条件달성:0 == 1
				RESULT = 0
			ELSEIF 条件달성:1 == 1
				RESULT = 1
			ENDIF
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件종족 = 언데드족
			효과条件行先플래그 = 제외行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL SET_PLAYER_INFO(듀얼리스트,"ダメージ無効",1)
			ENDIF
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과範囲제외 = 1
			효과条件종족 = 언데드족
			효과条件守備力 = 1
			효과条件複数 = 2
			효과条件行先플래그 = 덱行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL CARDDRAW_BASIC(듀얼리스트,1)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92242)
	IF RESULT == 0
	ENDIF

ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "시라누이류전생의진")
ENDIF
