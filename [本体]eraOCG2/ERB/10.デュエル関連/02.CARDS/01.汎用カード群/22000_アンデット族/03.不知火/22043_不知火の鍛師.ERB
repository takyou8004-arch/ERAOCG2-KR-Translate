ENDSELECT


@CARD_22043(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 화염속성
	CASE "종족"
		RETURN 언데드족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1000
	CASE "守備力"
		RETURN 0
	CASE "성별"
		RETURN 雄性
ENDSELECT
RETURN 0

@CARD_EXPLANATION_22043(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②③의 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,손패起動 ,묘지起動)
PRINTL ①: 자신 필드에 「요도─시라누이」 몬스터가 존재할 경우에 발동할 수 있다.
PRINTL 패 / 묘지의 이 카드를 특수 소환한다.
CALLFORM CARD_ABLE(2,S素材時효과)
PRINTL ②: 이 카드가 싱크로 소재로서 묘지로 보내졌을 경우에 발동할 수 있다.
PRINTL 덱에서 「시라누이의 대장장이」 이외의 「시라누이」 카드 1장을 패에 넣는다.
CALLFORM CARD_ABLE(3,제외時)
PRINTL ③: 이 카드가 제외되었을 경우에 발동할 수 있다.
PRINTL 이 턴, 자신의 언데드족 몬스터는 전투로는 파괴되지 않는다.


@CARDCAN_22043(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,22043)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == 묘지起動
	SIF 발동済_1(듀얼리스트,22043)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,22043,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 요도─시라누이
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == S素材時효과
	SIF 발동済_2(듀얼리스트,22043)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 시라누이
	효과条件固名前 = 시라누이의 단사
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 제외時
	SIF 발동済_3(듀얼리스트,22043)
		RETURN 0
	RETURN 1

ELSEIF 종류 == 短紋章起動
	RETURN 1
ENDIF


@CARDEFFECT_22043(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 제외カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 손패起動 || 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,22043,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == S素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,22043,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 시라누이
		효과条件固名前 = 시라누이의 단사
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,22043,3)
	IF RESULT == 0
		;T1紋章（短紋章발동）
		CALL CARD_RESERV(듀얼리스트,22043,短紋章予約)
	ENDIF

ELSEIF 종류 == 短紋章起動
	CALL FULLRESET
	효과条件종족 = 언데드족
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"戦耐")
ENDIF
