@CARDCAN_38214(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,38214)
SIF RESULT == 1
	RETURN 0


IF 종류 == 손패起動
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動
	SIF 발동済_1(듀얼리스트,38214)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,38214,ゾーン)
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,38213)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_召種:場所") == 召種通常
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0

	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 밸리언츠
	효과条件分割 = 펜듈럼
	효과条件종류 = EX以外全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1

ELSEIF 종류 == 他효과起動
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 밸리언츠
	효과条件分割 = 펜듈럼
	효과条件종류 = EX以外全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_38214(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38214)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38214,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		CALL SET_PLAYER_INFO(듀얼리스트,"SS소환禁止묘지",1)
		CALL SET_PLAYER_INFO(듀얼리스트,"SS소환禁止손패",1)
		CALL SET_PLAYER_INFO(듀얼리스트,"SS소환禁止덱",1)
	ENDIF


ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38213,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ = 밸리언츠
		효과条件分割 = 펜듈럼
		효과条件종류 = EX以外全般
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
	ENDIF

ELSEIF 종류 == 他효과起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38214,3)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 밸리언츠
		효과条件分割 = 펜듈럼
		효과条件종류 = EX以外全般
		CALL CARD_ADD_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
	ENDIF
ELSEIF 종류 == 지속효과
	IF 발동済_3(듀얼리스트,38214)
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"個Ｃ",1)
	ELSE
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"個Ｃ",-1)
	ENDIF
ENDIF