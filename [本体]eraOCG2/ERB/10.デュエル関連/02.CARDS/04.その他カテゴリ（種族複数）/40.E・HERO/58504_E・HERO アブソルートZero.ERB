#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 엘리멘틀 히어로 앱솔루트 Zero
	CASE "略称"
		RESULTS = Absolute 0
	CASE "カテゴリ"
		RESULTS:0 = HERO
		RESULTS:1 = E•HERO
ENDSELECT


@CARD_58504(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
