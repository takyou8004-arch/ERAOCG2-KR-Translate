@CARDNAME_78001,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = H－히트 하트
	CASE "略称"
		RESULTS = H－히트 하트
	CASE "カテゴリ"
		RESULTS:0 = HERO
		RESULTS:1 = E•HERO
ENDSELECT


@CARD_78001(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_78001(종류)
#DIM DYNAMIC 종류

CALL CARD_ABLE(0,마함起動 ,손패起動)
PRINTL ①：이 턴, 자신 필드의 "E•HERO" 몬스터의 공격력은 500 올리고, 관통 능력을 얻는다.
PRINTL 이 카드의 발동 후, 덱 밖에서 "히어로 플래시!!" 1장을 패에 추가한다.
PRINTL 

@CARDCAN_78001(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,78001)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻紋章起動 || 종류 == 短紋章起動
	RETURN 1
ENDIF



@CARDEFFECT_78001(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,78001)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL CARD_RESERV(듀얼리스트,78001,攻紋章予約)
		CALL CARD_RESERV(듀얼리스트,78001,短紋章予約)
		CALL CARD_GENERATE_HAND(듀얼리스트,178001)
	ENDIF
ELSEIF 종류 == 攻紋章起動
	CALL FULLRESET
	효과条件カテゴリ = E•HERO
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,500)
ELSEIF 종류 == 短紋章起動
	CALL FULLRESET
	효과条件カテゴリ = E•HERO
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"貫通")
ENDIF





