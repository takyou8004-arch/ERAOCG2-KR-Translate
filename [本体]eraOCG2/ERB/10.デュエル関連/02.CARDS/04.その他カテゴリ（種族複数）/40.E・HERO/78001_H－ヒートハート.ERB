	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,178001)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件名前 = H－히트 하트
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT != 1
			RETURN
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件名前 = E─이멀전시 콜
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT != 1
			RETURN
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件名前 = R－라이트 저스티스
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT != 1
			RETURN
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件名前 = O－오버 소울
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT != 1
			RETURN
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = 通常モン
		효과条件カテゴリ = E•HERO
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT == 1
			CALL CARD_RESERV(듀얼리스트,178001,短紋章予約)
	ENDIF
ELSEIF 종류 == 短紋章起動
	CALL FULLRESET
	효과条件종류 = 通常モン
	효과条件カテゴリ = E•HERO
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"直攻")
ENDIF
