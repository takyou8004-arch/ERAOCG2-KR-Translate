			ELSE
				PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
				PRINTL
				PRINTFORML 「気にするな、相棒。タダでは倒れないさ」
				PRINTL 
				CUSTOMDRAWLINE ―
				PRINTW
				RETURN 0
			ENDIF
		ELSE
			PRINTFORMW 상대の덱がありません。
			RETURN 0
		ENDIF
		PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
		PRINTL
		PRINTFORML 「ジャックポット！　行くぜボルテックス！」
		PRINTL 
		CUSTOMDRAWLINE ―
		PRINTW
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 스파이랄
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
PRINTL 특수 소환하시겠습니까?
			CALL YN_CHOICE(듀얼리스트)
		ELSE
			RESULT = 1
		ENDIF
		IF RESULT == 0
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = 스파이랄
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ELSE
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = 스파이랄
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF

