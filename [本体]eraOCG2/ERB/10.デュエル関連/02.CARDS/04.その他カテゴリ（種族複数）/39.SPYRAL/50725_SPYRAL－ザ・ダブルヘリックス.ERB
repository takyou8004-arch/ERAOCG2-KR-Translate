	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58635,1)
	IF RESULT == 0
		IF GETVAR(@"%対面者%_덱:0") != -1
			PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
			PRINTL
			PRINTFORML 「大詰めだな、決めてくれよ！」
			PRINTL 
			CUSTOMDRAWLINE ―
			IF 듀얼리스트 == "자신"
				PRINTFORML [1] - モンスターカード
				PRINTFORML [2] - 마법カード
				PRINTFORML [3] - 함정カード
				BINPUT
			ELSE
				RESULT = RAND:3 + 1
			ENDIF
			選択효과 = RESULT
			TRYCALLFORM CARD_UI(GETVAR(@"%対面者%_덱:0"))
			PRINTW
			CALLFORM CARD_{GETVAR(@"%対面者%_덱:0")}, "종류"
			IF RESULT < 10 && 選択효과 == 1
			ELSEIF RESULT > 30 && 選択효과 == 3
