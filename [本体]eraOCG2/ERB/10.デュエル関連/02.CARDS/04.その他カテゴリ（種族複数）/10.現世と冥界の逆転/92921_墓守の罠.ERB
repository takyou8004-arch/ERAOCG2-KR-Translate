	CASE "名前"
		RESULTS = 묘지기의 함정
	CASE "略称"
		RESULTS = 묘지기의 함정
	CASE "カテゴリ"
		RESULTS:0 = 현세와 명계
		RESULTS:1 = 묘지기
ENDSELECT


@CARD_92921(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"

		RETURN 지속함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_92921(종류)
#DIM DYNAMIC 종류
PRINTL 이 카드명의 ②③의 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ①: 자신의 묘지에 "현세와 명계의 역전"이 존재하는 한, 상대는 묘지의 카드의 효과를 발동할 수 없으며,
PRINTL 묘지의 몬스터를 특수 소환할 수 없다.
CALLFORM CARD_ABLE(2,마함起動 ,フリー誘発)
PRINTL ②: 자신 또는 상대의 메인 페이즈에, 패를 1장 버리고 발동할 수 있다.
PRINTL 덱에서 천사족 땅 속성 몬스터 1장을 패에 넣는다.
CALLFORM CARD_ABLE(3,ターン終了時強制)
PRINTL ③: 이 카드가 앞면 표시로 존재하는 경우, 자신 엔드 페이즈에 발동한다.
PRINTL 상대의 덱의 맨 위의 카드를 본다.
;PRINTL 通常のドローをした카드를 確認し、宣言した카드의 場合、묘지로 보낸다。


@CARDCAN_92921(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,92921)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
효과条件名前 = 현세와 명계의 역전
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	IF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	ELSEIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 2
		RETURN 1
	ELSEIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		SIF ゾーン != "마함"
			RETURN 0
		SIF 발동済_2(듀얼리스트,92921)
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF 손패数(듀얼리스트) == 0
			RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件속성 = 땅속성
	효과条件종족 = 천사족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1	
ELSEIF 종류 == ターン終了時強制
	SIF 발동済_3(듀얼리스트,92921)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_92921(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 속성数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과
	CALL SET_PLAYER_INFO(듀얼리스트,"SS소환禁止묘지",3,1)
	CALL SET_PLAYER_INFO(듀얼리스트,"묘지_無効",3,1)
ELSEIF 종류 == 마함起動 || 종류 == フリー誘発
	IF GETVAR(@"%듀얼리스트%_魔_表:場所") == 2
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92921)
		IF RESULT == 0
		ENDIF
	ELSEIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92921,2)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과条件속성 = 땅속성
				효과条件종족 = 천사족
				CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)		
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == ターン終了時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92921,3)
	IF RESULT == 0
		TRYCALLFORM CARD_UI(GETVAR(@"%対面者%_덱:0"))
		PRINTW
	ENDIF
ENDIF

