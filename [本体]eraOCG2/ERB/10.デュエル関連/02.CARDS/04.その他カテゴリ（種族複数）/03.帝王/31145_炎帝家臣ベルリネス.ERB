@CARDCAN_31145(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,31145)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,31145)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,31145,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF 손패数(対面者) < 2
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == 필드→묘지
	SIF 발동済_2(듀얼리스트,31145)
		RETURN 0
	CALL FULLRESET
	CALLFORM 효과条件レベル_ADV(5,"以上")
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"通常소환")
	SIF RESULT != 1
		RETURN 0
	SIF 손패数(対面者) < 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン終了時予約
	RETURN 1
ENDIF

@CARDEFFECT_31145(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31145,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과範囲덱 = 1
		효과条件속성 = 화염속성
		효과条件カテゴリ = 제
		효과条件任意 = 1
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		CALL SET_PLAYER_INFO(듀얼리스트,"EX制限",2)
	ENDIF

ELSEIF 종류 == 필드→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31145,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대손패 = 1
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT == 1
			CALL CARD_RESERV(듀얼리스트,31145)
	ENDIF

ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件任意 = 1
	CALL CARD_ADD_ADV(対面者,ゾーン,場所)
ENDIF
