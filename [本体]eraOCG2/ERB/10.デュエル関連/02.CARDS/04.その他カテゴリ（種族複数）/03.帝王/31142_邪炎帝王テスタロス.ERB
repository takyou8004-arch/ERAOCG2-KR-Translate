@CARDCAN_31142(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,31142)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과소환
	SIF モンスター数(対面者) < 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件召種 = 召種通常
	CALLFORM 효과条件レベル_ADV(5,"以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時
	SIF 손패数(対面者) < 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_31142(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과소환
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件召種 = 召種通常
	CALLFORM 효과条件レベル_ADV(5,"以上")
	CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31142)
	IF RESULT == 0
		CALL FULLRESET
		CALLFORM 효과条件レベル_ADV(8,"以上")
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"リリース",2)
		SIF RESULT == 1
			条件달성 = 1
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"손패破壊",場所,"제외")
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",1000,1)
		SIF 条件달성 != 1
			RETURN 0
		
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場単体",場所,"제외")
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARD_{選択カード_ID},"종류"
			SIF RESULT > モン全般
				RETURN 0
			TRYCALLFORM CARD_{選択カード_ID},"속성"
			SIF !GROUPMATCH(RESULT,화염속성,어둠속성)
				RETURN 0
			TRYCALLFORM CARD_{選択カード_ID},"レベル"
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",RESULT*200,1)
		ENDIF
	ENDIF
ENDIF


@MIKADO_ADVANCE_RELEASE_LV10(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード,2
#DIM DYNAMIC 条件달성

CALL FULLRESET
CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
IF RESULT != 9999
	選択カード:0 = RESULT
	SIF GETVAR(@"%듀얼리스트%_MZ_星:選択カード:0") >= 5
		条件달성 ++
	SIF GETVAR(@"%듀얼리스트%_MZ_召種:選択カード:0") == 召種通常
		条件달성 ++

	IF 条件달성 == 2
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件他所 = 1
		CALL CARD_CHOOSE_ADV(듀얼리스트,"필드",選択カード:0)
	ELSE
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件他所 = 1
		CALL CARD_CHOOSE_ADV(듀얼리스트,"필드",選択カード:0)
	ENDIF
	IF RESULT != 9999
		CALL CARD_SELECT(듀얼리스트,RESULT)
		選択カード:1 = RESULT
	ELSE
		RETURN 0
	ENDIF

	CALL CARD_DISPOSE(듀얼리스트,"필드",選択カード:0)
	CALL CARD_DISPOSE(대상者（CS）,参照先（CS）,選択カード:1)
	RETURN 1
ELSE
	RETURN 0
ENDIF
