VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 소환수 칼리굴라
	CASE "略称"
		RESULTS = 칼리굴라
	CASE "カテゴリ"
		RESULTS:0 = 소환수
ENDSELECT


@CARD_42050(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 야수족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1000
	CASE "守備力"
		RETURN 1800
ENDSELECT

RETURN 0

