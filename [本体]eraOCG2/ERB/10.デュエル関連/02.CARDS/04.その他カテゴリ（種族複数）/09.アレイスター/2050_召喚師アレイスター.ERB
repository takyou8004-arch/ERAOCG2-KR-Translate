@CARDCAN_2050(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2050)
SIF RESULT == 1
	RETURN 0
IF 종류 == 소환時
	CALL FULLRESET
	효과範囲덱 = 1
효과条件名前 = 소환마술
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	IF ゾーン != "손패"
		RETURN 0
	ENDIF
	TRYCALLFORM CARD_{戦闘カードID(듀얼리스트)}, "종류"
	SIF RESULT != 융합
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_2050(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 戦闘カード


IF 종류 == 소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2050)
	IF RESULT == 0
		CALL FULLRESET
효과条件名前 = 소환마술
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2050)
	IF RESULT == 0
		戦闘カード = 戦闘場所(듀얼리스트)
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		;CALL SET_FIELD_INFO(듀얼리스트,"필드",戦闘カード,"一時",1000)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",戦闘カード,"一攻",1000)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",戦闘カード,"一守",1000)
	ENDIF
ENDIF

