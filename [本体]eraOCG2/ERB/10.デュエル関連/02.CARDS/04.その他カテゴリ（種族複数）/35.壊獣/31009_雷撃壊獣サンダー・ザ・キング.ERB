@CARDNAME_31009,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 뇌격파괴수 썬더 더 킹
	CASE "略称"
RESULTS = 썬더 킹
	CASE "カテゴリ"
RESULTS:0 = 파괴수
ENDSELECT

@CARD_31009(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 원소정령족
	CASE "レベル"
		RETURN 9
	CASE "攻撃力"
		RETURN 3300
	CASE "守備力"
		RETURN 2100
	CASE "レア度"
		RETURN RARE
ENDSELECT

RETURN 0

@CARD_EXPLANATION_31009(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,손패起動)
PRINTL ①: 상대 필드에 "파괴수" 몬스터가 존재하지 않을 때, 상대 필드의 몬스터 1장을 릴리스하고 발동할 수 있다.
PRINTL 이 카드를 패에서 상대 필드에 공격 표시로 특수 소환할 수 있다.
CALLFORM CARD_ABLE(0,손패起動)
PRINTL ②: 자신 필드에 "파괴수" 몬스터가 존재하지 않고, 상대 필드에 "파괴수" 몬스터가 존재할 경우,
PRINTL 이 카드는 패에서 공격 표시로 특수 소환할 수 있다.
CALLFORM CARD_ABLE(2,필드起動)
PRINTL ③: 1턴에 1번, 자신 / 상대 필드의 파괴수 카운터를 3개 제거하고 발동할 수 있다.
PRINTL 이 턴에, 상대는 마법 / 함정, 몬스터의 효과를 발동할 수 없으며, 이 카드는 1번의 배틀 페이즈 중에 3번까지 몬스터에게 공격할 수 있다.


@CARDCAN_31009(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,31009)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,31009,"손패",1)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 =1
	효과条件カテゴリ = 파괴수
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 파괴수
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			RETURN 0
		ENDIF
	ENDIF	
	RETURN 1
;ここまで共通효과

ELSEIF 종류 == 필드起動
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,31009)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件カテゴリ = 파괴수
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT:9 < 3
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃後強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF モンスター数(対面者) != 0
		RETURN 0
	RETURN 1

ELSEIF 종류 == 短紋章起動
	RETURN 1
ENDIF

@CARDEFFECT_31009(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31009)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件カテゴリ = 파괴수
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 파괴수
			효과条件종류 = モン全般
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 0
				CALL FULLRESET
				효과範囲필드 = 1
				CALL CARD_SP_SUMMON(듀얼리스트, ゾーン, 場所, "攻撃표시")
			ENDIF
		ELSE
			CALL FULLRESET
			효과範囲필드 = 1
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"상대필드",ゾーン,場所)	
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트, ゾーン, 場所, "攻撃표시",1)
			ENDIF
		ENDIF
	ENDIF
;ここまで共通효과

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31009,2)
	IF RESULT == 0
		REPEAT 3
PRINTL 파괴수 카운터를 제거할 카드 선택
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲마함 = 1
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			효과条件カテゴリ = 파괴수
			효과条件個Ｃ所持 = 999
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT != 9999
				CALL CARD_SELECT(듀얼리스트,RESULT)
				CALL SET_FIELD_INFO(대상者（CS）,参照先（CS）,選択カード（CS）,"個Ｃ",-1)
				条件달성 ++
			ENDIF
		REND
		IF 条件달성 == 3
			PRINTFORMW 王者の포효が상대を威圧する！
			CALL FULLRESET
			CALL CARD_RESERV(듀얼리스트,31009,短紋章予約)
			CALL SET_PLAYER_INFO(듀얼리스트,"묘지_無効",1,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦",3,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 短紋章起動
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"発無")
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대마함",場所,"発無")
ELSEIF 종류 == 攻撃後強制誘発
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦",-99,1)
ENDIF
