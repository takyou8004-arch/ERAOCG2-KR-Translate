	素材条件カテゴリ = 드래곤테일
ELSEIF EX参照 >= 10
	;CARD_FILTER_EXSSに専用処理あり
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,42235) 
	RETURN RESULT
ENDIF


@CARDCAN_42235(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,42235)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,42235)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 드래곤테일
	효과条件固ID = 42235
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,42235)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,42235,"묘지")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	효과条件CNT = 1
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"묘지送り全般+HD",2)
	SIF RESULT < 2
		RETURN 0


	;要検証。モンスターが２장 이상묘지へ送られた場合
	;IF GETVAR(@"%듀얼리스트%_特例処理보존:42235") < 2
	;	SETVAR @"%듀얼리스트%_特例処理보존:42235",0
	;	RETURN 0
	;ELSE
	;	SETVAR @"%듀얼리스트%_特例処理보존:42235",0
	;	RETURN 1
	;ENDIF
	RETURN 1
ENDIF


@CARDEFFECT_42235(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択カード


IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42235,1)
	IF RESULT == 0
		素材数 = GETVAR(@"%듀얼리스트%_MZ_汎数:場所") - 1
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲묘지 = 1
		효과範囲상대필드 = 1
		효과範囲상대묘지 = 1
		효과条件종류 = モン全般
		효과条件行先플래그 = 손패行き
		효과条件除去種 = 손패
		효과条件任意 = 1
		효과条件複数 = 100 - 素材数
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42235,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件ID = 42235
		효과추가종류 = 効追除処
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

