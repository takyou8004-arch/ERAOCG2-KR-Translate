@CARDCAN_73179(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73179)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,73179)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	SIF モンスター数(듀얼리스트) >= 4
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 2000
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 포톤
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 갤럭시
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
	CALLFORM 효과条件속성_ADV(빛속성, "以外")
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"SS이력")
	SIF RESULT != 0
		RETURN 0
ENDIF

@CARDEFFECT_73179(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM 選択カード
#DIM 選択レベル

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73179,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",2000)
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件カテゴリ = 포톤
		효과条件종류 = モン全般
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード  != 9999
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_묘지:選択カード")}, "レベル"
			選択レベル = RESULT
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 갤럭시
			효과条件レベル = 選択レベル
			효과추가종류:0 = 1
			효과추가종류:1 = 100000 + 2000
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
			CALL FULLRESET
			효과範囲묘지 = 1
			효과추가종류:0 = 1
			효과추가종류:1 = 100000 + 2000
			CALL CARD_SP_SUMMON(듀얼리스트,"묘지",選択カード,"守備표시")
			NS소환可能속성 = 빛속성
			CALL CARD_NS_RESTRICTION(듀얼리스트)
			SS소환可能속성 = 빛속성
			CALL CARD_SS_RESTRICTION(듀얼리스트)
		ENDIF
	ENDIF
ENDIF
