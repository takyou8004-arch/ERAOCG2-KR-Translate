@CARDCAN_50539(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50539)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == 묘지起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,50539)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"필드","묘지")
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 넘버즈
	효과条件종류 = モン全般 
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF 발동済_2(듀얼리스트,50539)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ENDIF


@CARDEFFECT_50539(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択元々종족
#DIM DYNAMIC 選択元々속성
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC カウンタ

IF 종류 == 필드起動 || 종류 == 묘지起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50539,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,제외行き)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 넘버즈
		효과条件종류 = モン全般 
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:選択カード")}, "종족"
		選択元々종족 = RESULT
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:選択カード")}, "속성"
		選択元々속성 = RESULT
		IF 選択カード != 9999 && GETVAR(@"%듀얼리스트%_MZ_種:選択カード") == 選択元々종족 && GETVAR(@"%듀얼리스트%_MZ_属:選択カード") == 選択元々속성
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:選択カード")},"名前"
			SELECTCASE RESULTS
			CASE "No.38 희망괴룡 타이타닉 갤럭시"
				攻撃力修正 = 3800
			CASE "SNo.38 타이타닉 갤럭시"
				攻撃力修正 = 3800
			CASE "No.46 신영룡 드래글루온"
				攻撃力修正 = 4600
			CASE "No.62 갤럭시아이즈 프라임 포톤 드래곤" 
				攻撃力修正 = 6200
			CASE "CNo.62 네오 갤럭시아이즈 프라임 포톤 드래곤"
				攻撃力修正 = 6200
			CASE "No.91 썬더 스파크 드래곤"
				攻撃力修正 = 9100
			CASE "No.99 희망황룡 호프드라군"
				攻撃力修正 = 9900
;			CASE "No.100 누메론 드래곤"
;				攻撃力修正 = 10000
			CASE "No.107 갤럭시아이즈 타키온 드래곤"
				攻撃力修正 = 10700
			CASE "CNo.107 네오 갤럭시아이즈 타키온 드래곤"
				攻撃力修正 = 10700
			ENDSELECT
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"攻固",攻撃力修正,上書きモード,1)
			CALL SET_PLAYER_INFO(듀얼리스트,"ダメージ半化",1,1)
		ENDIF
	ENDIF
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50539,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_ADD_DECK_SPC(듀얼리스트,"덱",選択カード)
		ENDIF
	ENDIF
ENDIF