@CARDCAN_50537(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50537)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,50537)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ:0 = 포톤
	효과条件カテゴリ:1 = 갤럭시
	효과条件종류 = モン全般 
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_2(듀얼리스트,50537)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件召種 = 召種全특수
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 포톤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 ++
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 갤럭시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 ++
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ:0 = 포톤
	효과条件カテゴリ:1 = 갤럭시
	효과条件CNT = 1 
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT <= 1
		条件달성 = 0
	CALL FULLRESET
	효과範囲손패 = 1
효과条件名前 = 갤럭시 아이즈 포톤 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 = 2
	SIF 条件달성 < 2
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_50537(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50537,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ:0 = 포톤
		효과条件カテゴリ:1 = 갤럭시
		효과条件종류 = モン全般 
		CALL CARD_ADD_BASIC(듀얼리스트,"묘지",ゾーン,場所)
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50537,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
효과条件名前 = 갤럭시 아이즈 포톤 드래곤
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件カテゴリ:0 = 포톤
			효과条件カテゴリ:1 = 갤럭시
			효과条件CNT = 1 
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT > 1
PRINTL 「은하안의 광자룡」 1장을 버리겠습니까?
				CALL YN_CHOICE(듀얼리스트)
			ELSE
				RESULT = はい
			ENDIF
		ELSE
			RESULT = いいえ
		ENDIF
		IF RESULT == はい
			CALL FULLRESET
효과条件名前 = 갤럭시 아이즈 포톤 드래곤
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		ELSEIF RESULT == いいえ
			CALL FULLRESET
			효과条件カテゴリ = 포톤
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
			CALL FULLRESET
			효과条件カテゴリ = 갤럭시
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		ENDIF
		IF RESULT == 1
			CALL FULLRESET
			효과条件召種 = 召種全특수
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
		ENDIF
	ENDIF
ENDIF
