@CARDCAN_23199(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23199)
SIF RESULT == 1
	RETURN 0



IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,23199)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,23199,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 갤럭시아이즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動 || 종류 == フリー誘発
	SIF ゾーン != "묘지"
		RETURN 0
	SIF 발동済_2(듀얼리스트,23199)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
효과条件名前 = 갤럭시아이즈 포톤 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23199(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23199,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所,"守備표시")
	ENDIF
ELSEIF 종류 == 묘지起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23199,2)
	IF RESULT == 0
		CALL YN_CHOICE(듀얼리스트,"특수 소환한다","묘지へ送る")
		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲덱 = 1
효과条件名前 = 갤럭시아이즈 포톤 드래곤
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,選択カード)
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲덱 = 1
효과条件名前 = 갤럭시아이즈 포톤 드래곤
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,選択カード)
			IF RESULT == 1
				CALL FULLRESET
				효과条件종류 = 엑시즈
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
				選択カード = RESULT
				IF 選択カード != 9999
					CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"Ｘ",1)
					TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:選択カード")},"名前"
					選択カード名前 = %RESULTS%
					SIF 選択カード名前 == "No.62 갤럭시아이즈 프라임 포톤 드래곤" || 選択カード名前 == "CNo.62 네오 갤럭시아이즈 프라임 포톤 드래곤"
						CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"条達",2,1)
				ENDIF
			ENDIF
		ENDIF
		IF バトルフェイズ == 1
			FOR カウンタ,0,5
				SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
					CONTINUE
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:選択カード")},"カテゴリ"
				SIF RESULTS != "넘버즈"
					CONTINUE
				CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"永攻",GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ"))
			NEXT
		ENDIF
	ENDIF
ENDIF

