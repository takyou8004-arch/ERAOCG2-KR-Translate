			SIF 依頼_完了횟수:30 >= 1
				PRINTL [2] - 함정 파괴의 기사
			SIF 依頼_完了횟수:44 >= 1
				PRINTL [3] - 음속의 섬도병희
			SIF GETVAR(@"ライフ_%듀얼리스트%") <= 1000
				PRINTL [99] - a-vida SERVER ACCESS
			BINPUT
			IF RESULT == 0
				CALL FULLRESET
				CALL CARD_GENERATE(듀얼리스트,2240)
			ELSEIF RESULT == 1
				CALL FULLRESET
				CALL CARD_GENERATE(듀얼리스트,99999)
			ELSEIF RESULT == 2
				CALL FULLRESET
				CALL CARD_GENERATE(듀얼리스트,2115)
			ELSEIF RESULT == 3
				CALL FULLRESET
				CALL CARD_GENERATE(듀얼리스트,202000)
			ELSEIF RESULT == 99
				CALL FULLRESET
				CALL CARD_GENERATE(듀얼리스트,111876)
			ENDIF
		ELSE

			CALL FULLRESET
			CALL CARD_GENERATE(듀얼리스트,2240)
		ENDIF
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件名前 = 운명의 여로
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1 && 마함数(듀얼리스트) < 5
			CALL FULLRESET
			효과条件名前 = 운명의 여로
			효과条件任意 = 1
			CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"表側표시")
		ENDIF
	ENDIF
