	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62240,1)
	IF RESULT == 0
		CALL SET_PLAYER_INFO(듀얼리스트,"용사縛り",1)
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		IF 듀얼리스트 == "자신" && FLAG:게임모드 == 1
