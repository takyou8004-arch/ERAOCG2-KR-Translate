@CARDCAN_38143(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,38143)
SIF RESULT == 1
	RETURN 0
IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,38143)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	CALL FULLRESET
	CALL CARD_SS_CHECK(듀얼리스트,38143,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 뱅키시 소울
	효과条件종류 = モン全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동")
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,38143)
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件속성 = 화염속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_38143(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38143,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
	ENDIF

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38143,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件속성 = 화염속성
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_손패:RESULT")},"名前"
			選択カード名前 = %RESULTS%

			CALL FULLRESET
			효과範囲손패 = 1
			효과条件속성 = 화염속성
			효과条件固名前 = %選択カード名前%
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과条件속성 = 화염속성
				효과条件固名前 = %選択カード名前%
				효과条件任意 = 1
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
				IF RESULT != 9999
					CALL CARDEFFECT_38143_2(듀얼리스트,종류,ゾーン,場所)
				ELSE
					CALL CARDEFFECT_38143_1(듀얼리스트,종류,ゾーン,場所)
				ENDIF
			ELSE
				CALL CARDEFFECT_38143_1(듀얼리스트,종류,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ENDIF


@CARDEFFECT_38143_1(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL FULLRESET
효과範囲필드 = 1
효과範囲상대필드 = 1
CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
IF RESULT != 9999
	CALL CARD_SELECT(듀얼리스트,RESULT)
	選択カード = RESULT
	IF GETVAR(@"%대상者（CS）%_MZ_表:選択カード") == 1
		CALL SET_FIELD_INFO(대상者（CS）,参照先（CS）,選択カード,"表",2,上書きモード)
	ELSEIF GETVAR(@"%대상者（CS）%_MZ_表:選択カード") == 2 || GETVAR(@"%대상者（CS）%_MZ_表:選択カード") == 3
		CALL SET_FIELD_INFO(대상者（CS）,参照先（CS）,選択カード,"表",1,上書きモード)
	ENDIF
ENDIF
RETURN


