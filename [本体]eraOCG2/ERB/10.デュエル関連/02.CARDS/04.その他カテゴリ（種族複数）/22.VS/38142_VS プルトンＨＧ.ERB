@CARDCAN_38142(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,38142)
SIF RESULT == 1
	RETURN 0
IF 종류 == 손패起動 || (종류 == フリー誘発 && ゾーン == "손패")
	SIF 발동済_1(듀얼리스트,38142)
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	CALL CARD_SS_CHECK(듀얼리스트,38142,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件固カテゴリ = 뱅키시 소울
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || (종류 == フリー誘発 && ゾーン == "필드")
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,38142)
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件속성 = 화염속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件속성 = 어둠속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 ++
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件속성 = 땅속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 ++
	
	SIF 条件달성 < 2
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_38142(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 || (종류 == フリー誘発 && ゾーン == "손패")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38142,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
	ENDIF

ELSEIF 종류 == 필드起動 || (종류 == フリー誘発 && ゾーン == "필드")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38142,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件속성 = 화염속성
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 = 1
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件속성 = 어둠속성
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:1 ++
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件속성 = 땅속성
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:1 ++
		
		IF 条件달성:0 == 1 && 条件달성:1 >= 2
			IF 듀얼리스트 == "자신"
				CALL YN_CHOICE(듀얼리스트,"●화염","●어둠 땅")
			ELSE
				RESULT = 1
			ENDIF
		ELSEIF 条件달성:0 == 1
			RESULT = 0
		ELSEIF 条件달성:1 >= 2
			RESULT = 1 
		ENDIF
		
		IF RESULT == 0
			CALL FULLRESET
			효과条件속성 = 화염속성
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
			IF RESULT != 9999
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一守",3000)
			ENDIF
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과条件속성 = 어둠속성
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
			IF RESULT != 9999
				CALL FULLRESET
				효과条件속성 = 땅속성
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
				IF RESULT != 9999
					CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",3000)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
