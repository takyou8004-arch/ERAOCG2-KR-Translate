@CARDCAN_54025(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,54025)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == フリー誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_1(듀얼리스트,54025)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 데빌리추얼
	효과条件종류 = 의식以外
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과 || 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_54025(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 残りレベル
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,54025,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			残りレベル = 10
			REPEAT 2
				PRINTFORML 残りレベル：{残りレベル}
				CALL FULLRESET
				효과条件カテゴリ = 데빌리추얼
				효과条件종류 = 의식以外
				CALLFORM 효과条件レベル_ADV(残りレベル,"以下")
				효과条件소환可 = 1
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)
				IF RESULT != 9999
					選択カード = RESULT
					TRYCALLFORM CARD_{RESULT,99},"レベル"
					残りレベル -= RESULT

					CALL FULLRESET
					효과추가종류 = 効追終山
					CALL CARD_SP_SUMMON(듀얼리스트,"묘지",選択カード)
				ENDIF
			REND
		ENDIF
	ENDIF

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과条件종류 = 의식以外
	효과条件カテゴリ = 데빌리추얼
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,2000)

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件종류 = 의식以外
	효과条件カテゴリ = 데빌리추얼
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"無効")
ENDIF