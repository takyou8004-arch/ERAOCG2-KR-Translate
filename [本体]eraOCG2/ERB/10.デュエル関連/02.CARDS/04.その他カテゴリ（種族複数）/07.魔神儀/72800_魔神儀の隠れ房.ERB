@CARD_EXPLANATION_72800(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 「마신 의식의 숨은 방」이 된다.
PRINTL 이 카드 명의 ①의 효과는 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,손패起動,마함起動)
PRINTL ①: 패의 「마신 의식」 몬스터 1장을 상대에게 보여주고 발동할 수 있다.
PRINTL 보여준 몬스터와 카드명이 다른 「마신 의식」 몬스터를 2장까지 특수 소환한다(동명은 1장까지).
PRINTL 그 후, 보여준 몬스터를 덱으로 되돌린다.
CALLFORM CARD_ABLE(10,효과後誘発)
PRINTL ②: 1턴에 1번, 자신 필드에 의식 몬스터가 특수 소환되었을 경우에 발동할 수 있다.
PRINTL 필드의 카드 1장을 파괴한다.

@CARDCAN_72800(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72800)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,72800)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 데빌리추얼
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 데빌리추얼
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 의식
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
	SIF RESULT != 1
		RETURN 0
	IF 듀얼리스트 != "자신"
		SIF モンスター数(対面者) < 1 && 마함数(対面者) < 1
			RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_72800(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前,2


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72800,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ = 데빌리추얼
		효과条件종류 = モン全般
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			選択カード = RESULT
			TRYCALLFORM CARDNAME_{RESULT:99},"名前"
			選択カード名前:0 = %RESULTS%

			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 데빌리추얼
			효과条件固名前 = %選択カード名前:0%
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				TRYCALLFORM CARDNAME_{RESULT:1},"名前"
				選択カード名前:1 = %RESULTS%

				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = 데빌리추얼
				효과条件固名前 = %選択カード名前:0%
				효과条件固名前 = %選択カード名前:1%
				효과条件任意 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

				CALL CARD_DISPOSE(듀얼리스트,"손패",選択カード)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72800)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트,"魔신儀の숨은 방")

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72800,10)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場単体",場所,"묘지")
	ENDIF
ENDIF
