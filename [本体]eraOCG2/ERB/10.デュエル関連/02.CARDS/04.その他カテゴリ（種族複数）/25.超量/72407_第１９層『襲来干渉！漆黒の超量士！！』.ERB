	NEXT
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 초량
	효과条件속성:0 = 0
	FOR カウンタ,1,7
		SIF 속성불가:カウンタ != 1
			효과条件속성:カウンタ = カウンタ
	NEXT
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	
