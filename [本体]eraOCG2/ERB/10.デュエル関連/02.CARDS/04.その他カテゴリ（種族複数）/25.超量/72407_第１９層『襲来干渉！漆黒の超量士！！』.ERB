@CARDCAN_72407(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동불가,3
#DIM DYNAMIC 속성불가,7

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72407)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,72407)
		발동불가:0 = 1
	CALL FULLRESET
	SIF 듀얼리스트 == "자신"
		효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件표시 = 攻撃표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1
	
	SIF 발동済_2(듀얼리스트,72407)
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 초량
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드") == -1
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드")},"カテゴリ"
		SIF !MATCH(RESULTS,"초량")
			CONTINUE
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드")},"속성"
		SELECTCASE RESULT
			CASE 빛속성
				속성불가:1 = 1
			CASE 어둠속성
				속성불가:2 = 1
			CASE 땅속성
				속성불가:3 = 1
			CASE 물속성
				속성불가:4 = 1
			CASE 화염속성
				속성불가:5 = 1
			CASE 바람속성
				속성불가:6 = 1
		ENDSELECT
	NEXT
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 초량
	효과条件속성:0 = 0
	FOR カウンタ,1,7
		SIF 속성불가:カウンタ != 1
			효과条件속성:カウンタ = カウンタ
	NEXT
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	
	SIF 발동済_3(듀얼리스트,72407)
		발동불가:2 = 1
	IF ゾーン != "마함"
		SIF 마함数(듀얼리스트) >= 5
			발동불가:2 = 1
	ENDIF
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 초량
	효과条件종류 = 함정全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:2 = 1

	SIF 발동불가:0 == 1 && 발동불가:1 == 1 && 발동불가:2 == 1
		RETURN 0
	RETURN 1
ENDIF


