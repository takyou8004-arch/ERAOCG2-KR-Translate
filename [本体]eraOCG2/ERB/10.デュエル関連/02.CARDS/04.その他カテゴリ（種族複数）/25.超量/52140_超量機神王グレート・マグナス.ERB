	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,152140)
	IF RESULT == 0
		REPEAT 4
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 초량
			효과条件종류 = 엑시즈
			CALLFORM 효과条件レベル_ADV(7,"以下")
			IF 選択カード名前:0 != ""
				효과条件固名前:0 = %選択カード名前:0%
				효과条件任意 = 1
			ENDIF
			SIF 選択カード名前:1 != ""
				효과条件固名前:1 = %選択カード名前:1%
			SIF 選択カード名前:1 != ""
				효과条件固名前:2 = %選択カード名前:2%
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT != 1
				BREAK
			TRYCALLFORM CARDNAME_{RESULT:1},"名前"
			IF 選択カード名前:0 == ""
				選択カード名前:0 = %RESULTS%
				CONTINUE
			ELSEIF 選択カード名前:1 == ""
				選択カード名前:1 = %RESULTS%
				CONTINUE
			ELSEIF 選択カード名前:2 == ""
				選択カード名前:2 = %RESULTS%
				CONTINUE
			ENDIF
		REND
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,152140)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"손패破壊",場所,"덱")
	ENDIF

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"モ耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"魔耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")
ENDIF

