PRINTL 이 카드의 발동 후, 「빛의 황금궤」의 카드명이 명시된 자신 필드의 몬스터는 턴 종료 시까지 일시 파괴 내성을 얻는다.


@CARDCAN_91080(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,91080)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発 || 종류 == 발동誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件カテゴリ = 빛의 황금궤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	IF 종류 == 攻撃時誘発
		SIF バトルフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー == 듀얼리스트
			RETURN 0
	ELSEIF 종류 == 발동誘発
		CALL FULLRESET
		효과条件종류 = モン全般
		CALL CARD_CHECK_START_DATA(듀얼리스트,1)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ENDIF



@CARDEFFECT_91080(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 묘지送カード,5
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

IF 종류 == 攻撃時誘発 || 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,91080)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件名前 = 블랙 매지션
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성 = 1
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件표시 = 1
		SIF 条件달성 == 1
			효과추가종류:0 = 3
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"묘지",500)

		CALL FULLRESET
		효과条件カテゴリ = 빛의 황금궤
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"一破",1)
	ENDIF
	RETURN 0
ENDIF
