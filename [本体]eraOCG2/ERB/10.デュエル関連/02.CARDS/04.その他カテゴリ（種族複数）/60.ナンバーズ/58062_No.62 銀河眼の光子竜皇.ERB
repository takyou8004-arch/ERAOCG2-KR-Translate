@CARDCAN_58062(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58062)
SIF RESULT == 1
	RETURN 0
IF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") != 0
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_戦闘カード") != 場所
		RETURN 0
	RETURN 1
ELSEIF 종류 == 破壊→묘지
	SIF 발동済_3(듀얼리스트,58062)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 갤럭시 아이즈 포톤 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン開始時予約
	IF ターンプレイヤー == 듀얼리스트
		CALL CARD_SS_CHECK(듀얼리스트,58062,ゾーン)
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件名前 = No.62 갤럭시아이즈 프라임 포톤 드래곤
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == ターン終了時予約
	CALL CARD_SS_CHECK(듀얼리스트,58062,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件名前 = No.62 갤럭시아이즈 프라임 포톤 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_58062(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58062,0,X消費1)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
				CONTINUE
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:カウンタ")}, "종류"
			SIF RESULT != 엑시즈
				CONTINUE
			攻撃力修正 += GETVAR(@"%듀얼리스트%_MZ_星:カウンタ")
		NEXT
		FOR カウンタ,0,5
			SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%対面者%_MZ_表:カウンタ") == 3
				CONTINUE
			TRYCALLFORM CARD_{GETVAR(@"%対面者%_필드:カウンタ")}, "종류"
			SIF RESULT != 엑시즈
				CONTINUE
			攻撃力修正 += GETVAR(@"%対面者%_MZ_星:カウンタ")
		NEXT
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一時",攻撃力修正 * 200)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_PLAYER_INFO(듀얼리스트,"ダメージ半化",3,1)
ELSEIF 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58062,3)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,58062,スタン予約)
	ENDIF
ELSEIF 종류 == ターン開始時予約
	IF ターンプレイヤー == 듀얼리스트
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件名前 = No.62 갤럭시아이즈 프라임 포톤 드래곤
		효과추가종류 = 3
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ELSE
		CALL CARD_RESERV(듀얼리스트,58062)
	ENDIF
ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件名前 = No.62 갤럭시아이즈 프라임 포톤 드래곤
	효과추가종류 = 3
	CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
ENDIF
