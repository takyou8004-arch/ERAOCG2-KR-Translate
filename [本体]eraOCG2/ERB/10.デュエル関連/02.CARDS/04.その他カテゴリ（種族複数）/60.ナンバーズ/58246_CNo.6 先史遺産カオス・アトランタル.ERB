@CARDCAN_58246(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 발동不可,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58246)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		발동不可:0 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件除去種 = 強奪
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동不可:0 = 1
	SIF 마함数(듀얼리스트) >= 5
		발동不可:0 = 1
	
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") == 0
		발동不可:1 = 1
	CALL FULLRESET
효과条件カテゴリ = 넘버즈
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	SIF RESULT != 1
		발동不可:1 = 1
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		발동不可:1 = 1
	SIF GETVAR(@"ライフ_%対面者%") <= 1
		발동不可:1 = 1
	
	SIF 발동不可:0 == 1 && 발동不可:1 == 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_58246(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 발동不可,2
#DIM DYNAMIC ライフ修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		발동不可:0 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件除去種 = 強奪
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동不可:0 = 1
	SIF 마함数(듀얼리스트) >= 5
		발동不可:0 = 1
	
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") == 0
		발동不可:1 = 1
	CALL FULLRESET
효과条件カテゴリ = 넘버즈
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	SIF RESULT != 1
		발동不可:1 = 1
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		발동不可:1 = 1
	SIF GETVAR(@"ライフ_%対面者%") <= 1
		발동不可:1 = 1
	
	IF 발동不可:0 != 1 && 발동不可:1 != 1
		CALL YN_CHOICE(듀얼리스트,"①：상대몬스터를 장착한다。","②：상대의 ライフを１にする。")
	ELSEIF 발동不可:0 != 1
		RESULT = 0
	ELSEIF 발동不可:1 != 1
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58246,10)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件除去種 = 強奪
			CALL CARD_EQUIP_MONSTER_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT == 1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",500)
		ENDIF
	
	ELSEIF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58246,10)
		IF RESULT == 0
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",-1,1)
			FOR カウンタ,0,5
				SIF GETVAR(@"%듀얼리스트%_마함:カウンタ") == -1
					CONTINUE
				SIF GETVAR(@"%듀얼리스트%_魔_装:カウンタ") != 場所
					CONTINUE
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_마함:カウンタ")},"カテゴリ"
				SIF !MATCH(RESULTS,"넘버즈")
					CONTINUE
				CALL CARD_DISPOSE(듀얼리스트,"마함",カウンタ)
			NEXT
			CALL LIFE_SET(対面者,1)
			CALL SET_PLAYER_INFO(듀얼리스트,"ダメージ無効",1,1)
			CALL SET_PLAYER_INFO(듀얼리스트,"효과ダメージ無効",1,1)
		ENDIF
	ENDIF
ENDIF

