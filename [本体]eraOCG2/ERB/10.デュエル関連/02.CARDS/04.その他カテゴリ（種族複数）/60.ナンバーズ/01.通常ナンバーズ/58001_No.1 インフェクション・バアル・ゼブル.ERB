	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58001,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대EX덱 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58001,2,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류 = 2
		効果範囲相手戦場 = 1
効果範囲相手魔罠 = 1
CALL CARD_REMOVAL_ADV(決闘者,"単体除去",場所,"墓地")
	ENDIF

ELSEIF 종류 == ターン開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58001)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대묘지 = 1
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT == 1
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",1)
	ENDIF
ENDIF