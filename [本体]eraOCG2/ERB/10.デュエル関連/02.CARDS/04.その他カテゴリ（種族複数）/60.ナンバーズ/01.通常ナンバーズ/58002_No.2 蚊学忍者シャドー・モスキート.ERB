@CARDCAN_58002(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동불가,2
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58002)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0

	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	효과条件除去種 = 選択
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1
	
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	효과条件悪Ｃ所持 = 999
	효과条件除去種 = 選択
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	
	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_58002(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 발동불가,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58002)
	IF RESULT == 0
		SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
			발동불가:0 = 1
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件표시 = 表側표시
		효과条件除去種 = 選択
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:0 = 1
		
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件표시 = 表側표시
		효과条件悪Ｃ所持 = 999
		효과条件除去種 = 選択
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:1 = 1
		
		IF 발동불가:0 != 1 && 발동불가:1 != 1
			CALL YN_CHOICE(듀얼리스트,"●毒を打ち込む","●幻覚を見せる")
			SIF 듀얼리스트 != "자신"
				RESULT = 1
		ELSEIF 발동불가:0 != 1
			RESULT = 0
		ELSEIF 발동불가:1 != 1
			RESULT = 1
		ENDIF

		IF RESULT == 0
			CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"Ｘ",-1)
			CALL FULLRESET
			효과条件표시 = 表側표시
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
			IF RESULT == 1
				CALL CARD_SELECT(듀얼리스트,RESULT:1)
				選択カード = RESULT
				CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード,"悪Ｃ",1)
				CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード,"無効",2)
			ENDIF

		ELSEIF RESULT == 1
			CALL FULLRESET
			효과条件표시 = 表側표시
			효과条件悪Ｃ所持 = 999
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
			IF RESULT == 1
				CALL CARD_SELECT(듀얼리스트,RESULT:1)
				攻撃力修正 = GETVAR(@"%대상者（CS）%_MZ_攻:RESULT")
				CALL LIFE_CHANGE(듀얼리스트,"減少","효과",攻撃力修正,1)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 攻撃時強制誘発
	CALL SET_PLAYER_INFO(듀얼리스트,"ダメージ無効",3)

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"戦狂",,58002)
ENDIF
