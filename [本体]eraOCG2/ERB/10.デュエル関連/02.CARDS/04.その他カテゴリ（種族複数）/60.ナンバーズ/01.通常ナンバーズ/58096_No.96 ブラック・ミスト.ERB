@CARDCAN_58096(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58096)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF GETVAR(@"%対面者%_MZ_表:戦闘場所(듀얼리스트,1)") == 3
		RETURN 0
	IF 듀얼리스트 != "자신"
		SIF GETVAR(@"%듀얼리스트%_MZ_攻:場所") >= 3000 && GETVAR(@"%対面者%_MZ_攻:戦闘場所(듀얼리스트,1)") <= 2000
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	효과条件除去種 = 強奪
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_58096(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC セット先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58096,0,X消費1)
	IF RESULT == 0
		攻撃力修正 = GETVAR(@"%対面者%_MZ_攻:戦闘場所(듀얼리스트,1)")
		CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"一攻",攻撃力修正)
		CALL FULLRESET
		효과추가종류 = 2
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",戦闘場所(듀얼리스트,1),"永攻DOWN")
	ENDIF

ELSEIF 종류 == 戦闘→묘지 || 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58096)
	IF RESULT == 0
		CALL FULLRESET
		효과条件名前 = No.96 블랙 미스트
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
        	CALL CARD_DISPOSE(듀얼리스트,"묘지",選択カード,마함行き)
        	セット先 = カード설치先
			CALL FULLRESET
			효과条件표시 = 表側표시
			효과추가종류 = 50 + セット先
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
			CALL SET_FIELD_INFO(듀얼리스트,"마함",セット先,"装",コントロール先,1)
		ENDIF
	ENDIF
ENDIF
