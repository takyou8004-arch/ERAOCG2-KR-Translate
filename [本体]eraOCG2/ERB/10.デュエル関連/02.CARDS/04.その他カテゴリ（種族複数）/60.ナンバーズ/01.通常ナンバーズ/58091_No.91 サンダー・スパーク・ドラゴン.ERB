@CARDCAN_58091(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동불가,2
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58091)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= 1
		발동불가:0 = 1
	CALL FULLRESET
	SIF 듀얼리스트 == "자신"
		효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1
	
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= 3
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	
	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_58091(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 발동불가,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58091,10)
	IF RESULT == 0
		SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= 1
			발동불가:0 = 1
		CALL FULLRESET
		SIF 듀얼리스트 == "자신"
			효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件표시 = 表側표시
		효과条件他所 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:0 = 1
		
		SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= 3
			발동불가:1 = 1
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:1 = 1
		
		IF 발동불가:0 != 1 && 발동불가:1 != 1
			CALL YN_CHOICE(듀얼리스트,"●３つ：ブラック・ライトニング","●５つ：サンダー・スパーク・ボルト")
			SIF 듀얼리스트 != "자신"
				RESULT = 1
		ELSEIF 발동불가:0 != 1
			RESULT = 0
		ELSEIF 발동불가:1 != 1
			RESULT = 1
		ENDIF

		IF RESULT == 0
			CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"Ｘ",-3)
			PRINTW Ｘ소재를 ３つ取り除きました。
			CALL FULLRESET
			효과条件표시 = 表側표시
			효과条件他所 = 1
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드全体",場所,"묘지")

		ELSEIF RESULT == 1
			CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"Ｘ",-5)
			PRINTW Ｘ소재를 ５つ取り除きました。
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場全体",場所,"묘지")
		ENDIF
	ENDIF
ENDIF
