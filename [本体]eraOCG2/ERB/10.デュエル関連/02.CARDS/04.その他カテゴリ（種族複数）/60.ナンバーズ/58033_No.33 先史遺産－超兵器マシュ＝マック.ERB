@CARDCAN_58033(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58033)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	효과条件除去種 = 選択
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_58033(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC ダメージ修正
#DIM DYNAMIC 攻撃力修正
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58033,10,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
		IF RESULT == 1
			選択カード = RESULT:1
			選択カード_ID = RESULT:99
			TRYCALLFORM CARD_{選択カード_ID},"攻撃力"
			攻撃力修正 = RESULT
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",攻撃力修正 / 2)

			SIF 攻撃力修正 == GETVAR(@"%対面者%_MZ_攻:選択カード")
				RETURN 0
			IF RESULT > GETVAR(@"%対面者%_MZ_攻:選択カード")
				ダメージ修正 = RESULT - GETVAR(@"%対面者%_MZ_攻:選択カード")
				CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ修正,1)
			ELSEIF RESULT < GETVAR(@"%対面者%_MZ_攻:選択カード")
				ダメージ修正 = GETVAR(@"%対面者%_MZ_攻:選択カード") - 攻撃力修正
				CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ修正,1)
			ENDIF
		ENDIF
	ENDIF
ENDIF
