@CARDCAN_23072(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23072)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_1(듀얼리스트,23072)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,23072,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
	SIF RESULT != 1
		발동불가 += 1
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"EX특수소환")
	SIF RESULT != 1
		발동불가 += 1
	SIF 발동불가 >= 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드→묘지 || 종류 == 戦闘→묘지 || 종류 == 손패→묘지 || 종류 == 破壊→묘지
	SIF 발동済_2(듀얼리스트,23072)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23072(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23072,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)

		CALL FULLRESET
		효과範囲필드 = 1
		효과条件표시 = 表側표시
		효과条件任意 = 1
		CALL CARD_GRANT_ADV(듀얼리스트,ゾーン,場所,"表",3)
	ENDIF

ELSEIF 종류 == 필드→묘지 || 종류 == 戦闘→묘지 || 종류 == 손패→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23072,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			CALL CARD_SELECT(듀얼리스트,RESULT)
			選択カード = RESULT
			;表側守備
			IF GETVAR(@"%대상者（CS）%_MZ_表:選択カード") == 2
				SIF 듀얼리스트 == "자신"
PRINTL 표시 형식을 선택해 주세요
				CALL YN_CHOICE(대상者（CS）,"●表側攻撃표시","●裏側守備표시")
				IF RESULT == 0
					CALL SET_FIELD_INFO(대상者（CS）,参照先（CS）,選択カード,"表",1,上書きモード)
				ELSEIF RESULT == 1
					CALL SET_FIELD_INFO(대상者（CS）,参照先（CS）,選択カード,"表",3,上書きモード)
				ENDIF
			;攻撃표시
			ELSEIF GETVAR(@"%대상者（CS）%_MZ_表:選択カード") == 1
				CALL SET_FIELD_INFO(대상者（CS）,参照先（CS）,選択カード,"表",3,上書きモード)
			;裏側守備
			ELSEIF GETVAR(@"%대상者（CS）%_MZ_表:選択カード") == 3
				CALL SET_FIELD_INFO(대상者（CS）,参照先（CS）,選択カード,"表",1,上書きモード)
			ENDIF
		ENDIF
	ENDIF

ENDIF
