@CARDCAN_23071(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23071)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時
	SIF 발동済_1(듀얼리스트,23071)
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 닌자
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL 효과条件レベル_ADV(4,"以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 戦破壊→묘지
	SIF 발동済_1(듀얼리스트,23071)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") != 3
		RETURN 0
	SIF !GROUPMATCH(묘지送り종류,"破壊","戦闘破壊")
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 닌자
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL 효과条件レベル_ADV(4,"以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23071(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23071,1)
	IF RESULT == 0
		SIF 듀얼리스트 == "자신"
PRINTL 표시 형식을 선택해 주십시오
		CALL YN_CHOICE(듀얼리스트,"●表側攻撃표시","●裏側守備표시")

		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件カテゴリ = 닌자
			CALL 효과条件レベル_ADV(4,"以下")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"攻撃표시")

		ELSEIF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件カテゴリ = 닌자
			CALL 효과条件レベル_ADV(4,"以下")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"裏側守備표시")
		ENDIF
		CALL CARD_EX_RESTRICTION(듀얼리스트,"닌자")
	ENDIF

ENDIF
