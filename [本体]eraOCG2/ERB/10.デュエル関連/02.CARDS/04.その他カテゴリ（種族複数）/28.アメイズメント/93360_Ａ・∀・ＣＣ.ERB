@CARDCAN_93360(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,93360)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	IF 装備先 == 5
		IF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			SIF GETVARS(@"%듀얼리스트%_フィールド名") != "プレシャスパ-ク"
				RETURN 0
		ENDIF
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件표시 = 表側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0

	ELSE
		SIF 발동済_2(듀얼리스트,93360)
			RETURN 0
		IF 装備者 == 듀얼리스트
			CALL FULLRESET
			효과範囲상대마함 = 1
			효과条件除去種 = リリース
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				RETURN 0
		ELSE
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 어메이즈먼트
			효과条件종류 = モン全般
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				RETURN 0
		ENDIF
	ENDIF
	RETURN 1
ENDIF



@CARDEFFECT_93360(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	IF 装備先 == 5
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93360)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲상대필드 = 1
			CALLFORM CARD_EQUIP_ADV(듀얼리스트,場所,ゾーン)
		ENDIF

	ELSE
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93360,2)
		IF RESULT == 0
			IF 装備者 == 듀얼리스트
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함単体",場所,"リリース")
				SIF RESULT == 1
					CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			ELSE
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = 어메이즈먼트
				효과条件종류 = モン全般
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
					CALL FULLRESET
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",装備先,"リリース")
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
