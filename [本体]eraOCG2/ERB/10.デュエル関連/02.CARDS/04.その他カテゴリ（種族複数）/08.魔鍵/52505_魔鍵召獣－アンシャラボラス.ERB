@CARDSUMMON_52505(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 마건
ELSEIF EX参照 >= 10
	素材条件종류 = 通常モン
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,52505) 
	RETURN RESULT
ENDIF


@CARDCAN_52505(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52505)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,52505)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
효과条件名前 = 마건－마프테아
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	FOR カウンタ,1,8
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件スーパーカテゴリ = 마건
		효과条件スーパー속성 = カウンタ
		효과条件종류 = 通常モン
		효과条件속성 = カウンタ
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			CONTINUE
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件속성 = カウンタ
		효과条件표시 = 攻撃표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			CONTINUE
		条件달성 = 1
	NEXT
	SIF 条件달성 == 0
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_52505(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,8
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52505,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
효과条件名前 = 마건－마프테아
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52505,10)
	IF RESULT == 0
		FOR カウンタ,1,8
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件スーパーカテゴリ = 마건
			효과条件スーパー속성 = カウンタ
			효과条件종류 = 通常モン
			효과条件속성 = カウンタ
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				CONTINUE
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件속성 = カウンタ
			효과条件표시 = 攻撃표시
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				CONTINUE
			条件달성:カウンタ = 1
		NEXT
		CALL FULLRESET
		FOR カウンタ,1,8
			SIF 条件달성:カウンタ == 1
				효과条件속성:カウンタ = カウンタ
		NEXT
		효과条件표시 = 攻撃표시
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
		IF RESULT:1 != 9999
			選択カード = RESULT:1
			CALL SET_FIELD_INFO(対面者,"필드",選択カード,"表",2,1)
			CALL SET_FIELD_INFO(対面者,"필드",選択カード,"永守",-1000)
		ENDIF
	ENDIF

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦除")
ENDIF
