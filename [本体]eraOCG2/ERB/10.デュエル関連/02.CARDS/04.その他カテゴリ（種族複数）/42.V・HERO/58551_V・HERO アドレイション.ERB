	CASE "名前"
		RESULTS = 비전 히어로 애더레이션
	CASE "略称"
		RESULTS = 애더레이션
	CASE "カテゴリ"
		RESULTS:0 = HERO
		RESULTS:1 = V•HERO
ENDSELECT


@CARD_58551(参照先)

#DIMS DYNAMIC 参照先
