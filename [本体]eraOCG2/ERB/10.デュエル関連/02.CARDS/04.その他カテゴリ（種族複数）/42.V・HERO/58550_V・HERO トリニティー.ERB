@CARDSUMMON_58550(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 3
素材条件カテゴリ = V•HERO

IF EX参照 == 0 || EX参照 == 1
ELSEIF EX参照 >= 10
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,58550) 
	RETURN RESULT
ENDIF



@CARDCAN_58550(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58550)
SIF RESULT == 1
	RETURN 0


IF 종류 == EX소환時強制
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所") != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_58550(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時強制
	CALL FULLRESET
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"T1汎数",1)

ELSEIF 종류 == 攻守変動
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,2500)

ELSEIF 종류 == 지속효과
	IF GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所") == 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"直無")
	ENDIF
	IF GETVAR(@"%듀얼리스트%_MZ_召種:場所") == 召種EX덱
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"追戦",2)
	ENDIF
ENDIF
