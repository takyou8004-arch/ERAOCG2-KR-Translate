@CARDCAN_38251(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,38251)
SIF RESULT == 1
	RETURN 0

IF 종류 == 특수소환時
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,38251)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성 = 빛속성
	효과条件종족:0 = 야수족
	효과条件종족:1 = 식물족
	효과条件종족:2 = 천사족
	효과条件スーパー名前 = 고대 페어리 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_38251(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択レベル
#DIM DYNAMIC 条件合致数
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38251,1)
	IF RESULT == 0
		;자신フィールドのモンスター数をカウントしてその数まで자신のレベルを上げる選択肢を作る。
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류 = モン全般
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		条件合致数 = RESULT+1
		;下のforル-プの終了条件の調整で+1加算
		
		;PRINTFORMW モンスター数：{条件合致数}
		IF 듀얼리스트 == "자신"
			CUSTOMDRAWLINE -
PRINTL 몬스터의 레벨을 얼마나 올리겠습니까?
			CUSTOMDRAWLINE -
PRINTL [0] - 상승시키지 않는다.
			FOR カウンタ,1,条件合致数
				PRINTFORML [{カウンタ}] - {カウンタ}レベル상승させる。
			NEXT
			BINPUT
			選択レベル = RESULT
			IF 選択レベル != 0
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永星",選択レベル)
				PRINTFORMW 妖精胞スポ-アのレベルを{選択レベル}상승させました。
			ELSE
				PRINTFORMW レベルを상승させませんでした。
			ENDIF
		ELSE
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永星",条件合致数-1)
			PRINTFORMW 妖精胞スポ-アのレベルを{選択レベル}상승させました。
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,38251,2)
	IF RESULT == 0
		;묘지から自己蘇生
		CALL CARD_SP_SUMMON(듀얼리스트, "묘지", 場所)
		
		;EX소환縛り（싱크로）
		EX소환可能종류 = 싱크로
		CALL CARD_EX_RESTRICTION(듀얼리스트)
		
	ENDIF
ENDIF


