@CARDCAN_50561(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 추가효과판정
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50561)
SIF RESULT == 1
	RETURN 0
	
IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,50561)
		RETURN 0
	;필드에 「정령の世界」がある場合のサーチ処理のチェック
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件표시 = 表側표시
효과条件名前 = 정령의 세계
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件속성 = 빛속성
		효과条件종족:0 = 야수족
		효과条件종족:1 = 식물족
		효과条件종족:2 = 천사족
		효과条件スーパー名前 = 이터널 선샤인
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSE
		;「정령の世界」がない場合は１ドローとなる
		;ドロー효과仮置き
		SIF GETVAR(@"%듀얼리스트%_ドロー불가") >= 1
			RETURN 0
		SIF 現山札数(듀얼리스트) <= 0
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50561(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM 選択カード


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50561,1)
	IF RESULT == 0
		;필드에 「정령の世界」がある場合のサーチ処理のチェック
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件표시 = 表側표시
효과条件名前 = 정령의 세계
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件속성 = 빛속성
			효과条件종족:0 = 야수족
			효과条件종족:1 = 식물족
			효과条件종족:2 = 천사족
			효과条件スーパー名前 = 이터널 선샤인
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ELSE
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = 페어리
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"守戦")
ENDIF

