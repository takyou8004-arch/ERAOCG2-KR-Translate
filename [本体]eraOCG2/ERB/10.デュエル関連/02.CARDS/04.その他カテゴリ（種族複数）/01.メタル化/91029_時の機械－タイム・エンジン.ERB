@CARD_EXPLANATION_91029(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(1,효과後誘発)
PRINTL ①：자신 필드의 "메탈화 강화반사장갑" 몬스터가 전투 효과로 파괴되었을 경우에 발동할 수 있다.
PRINTL 묘지에서 "메탈화 강화반사장갑" 몬스터 1장을 특수 소환한다.
PRINTL 이 효과로 레벨 5 이상의 기계족 몬스터를 특수 소환하고,
PRINTL 자신 필드나 묘지에 이 카드명 이외의 "메탈화" 함정 카드가 존재할 경우, 추가로 이하의 효과를 적용할 수 있다.
PRINTL ●상대 필드의 몬스터를 전부 파괴한다.
PRINTL 그 후, 이 효과로 특수 소환한 몬스터의 원래 공격력만큼의 데미지를 상대에게 준다.


@CARDCAN_91029(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,91029)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	IF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") != 28023
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_無効:カウンタ") != 0
				CONTINUE
			条件달성 ++
		NEXT
		SIF 条件달성 == 0
			RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 메탈화 강화반사장갑
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 메탈화 강화반사장갑
	효과条件종류 = モン全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_91029(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択カード종족
#DIMS DYNAMIC 対面者

IF 종류 == 효과後誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,91029)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 메탈화 강화반사장갑
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		選択カード_ID = RESULT:1
		TRYCALLFORM CARD_{選択カード_ID},"レベル"
		IF RESULT >= 5
			TRYCALLFORM CARD_{選択カード_ID},"종족"
			IF RESULT == 기계족
				CALL FULLRESET
				효과範囲필드 = 1
				효과範囲묘지 = 1
				효과条件カテゴリ = 메탈화
				효과条件종류 = 함정全般
				효과条件固名前 = 시간의 기계－타임 엔진
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				SIF RESULT != 1
					RETURN 0
				SIF 듀얼리스트 == "자신"
PRINTL 상대 몬스터를 파괴합니까?
				CALL YN_CHOICE(듀얼리스트)
				SIF RESULT == いいえ
					RETURN 0

				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"묘지")
				TRYCALLFORM CARD_{選択カード_ID},"攻撃力"
				CALL LIFE_CHANGE(듀얼리스트,"減少","효과",RESULT,1)
			ENDIF
		ENDIF
	ENDIF
ENDIF
