		RESULTS = 시간의 기계－타임 엔진
	CASE "略称"
		RESULTS = 타임 엔진
	CASE "カテゴリ"
		RESULTS:0 = 메탈화
ENDSELECT


@CARD_91029(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常함정
