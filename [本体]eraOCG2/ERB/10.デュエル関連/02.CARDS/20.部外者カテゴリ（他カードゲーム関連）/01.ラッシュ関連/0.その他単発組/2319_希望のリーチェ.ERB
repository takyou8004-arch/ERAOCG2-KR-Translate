@CARDCAN_2319(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2319)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,2319)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_2319(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件達成
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2319,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = モン全般
		효과条件行先フラグ = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARDNAME_{選択カード_ID},"カテゴリ"
			SIF MATCH(RESULTS,"리추얼")
				条件達成 = 1
			TRYCALLFORM CARD_{選択カード_ID},"종류"
			SIF MATCH(RESULT,의식)
				条件達成 = 1
			
			CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",3)
			IF RESULT == 1 && 条件達成 != 1
				CALL FULLRESET
				효과条件종류 = モン全般
				효과条件任意 = 1
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)
				SIF RESULT == 9999
					RETURN 0
				選択カード = RESULT

				TRYCALLFORM CARD_{RESULT:99},"종족"
				IF MATCH(RESULT,언데드족)
					CALL FULLRESET
					CALL CARD_SP_SUMMON(듀얼리스트,"묘지",選択カード)
				ELSE
					CALL CARD_DISPOSE(듀얼리스트,"묘지",選択カード,손패行き)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF


