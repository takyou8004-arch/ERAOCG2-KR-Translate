PRINTL 대상으로 한 몬스터는 턴 종료시까지 공격력이 1200 상승하고, 효과로는 파괴되지 않는다.


@CARDCAN_82306(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,82306)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,82306)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件표시 = 1
	CALLFORM 효과条件レベル_ADV(4,"以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_82306(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード,10



IF 종류 == 마함起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,82306,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		選択カード:0 = 10
		選択カード:1 = 10
		選択カード:2 = 10
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件표시 = 1
		효과条件複数 = 3
		CALLFORM 효과条件レベル_ADV(4,"以下")
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード:0 = RESULT:0
		選択カード:1 = RESULT:1
		選択カード:2 = RESULT:2
		IF 選択カード:0 != 10
			CALL FULLRESET
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード:0,"一攻",1200)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード:0,"破耐",1)
		ENDIF
		IF 選択カード:1 != 10
			CALL FULLRESET
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード:1,"一攻",1200)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード:1,"破耐",1)
		ENDIF
		IF 選択カード:2 != 10
			CALL FULLRESET
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード:2,"一攻",1200)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード:2,"破耐",1)
		ENDIF
	ENDIF
ENDIF
