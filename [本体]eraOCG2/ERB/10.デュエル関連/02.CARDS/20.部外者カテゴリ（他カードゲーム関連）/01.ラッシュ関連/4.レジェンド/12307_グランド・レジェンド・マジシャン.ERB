@CARDNAME_12307,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 그랜드 레전드 마술사
	CASE "略称"
RESULTS = G L 마술사
	CASE "カテゴリ"
RESULTS:0 = 레전드
ENDSELECT


@CARD_12307(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 0
	CASE "종류"

		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 마법사족
	CASE "レベル"
		RETURN 7
	CASE "攻撃力"
		RETURN 2400
	CASE "守備力"
		RETURN 300
	CASE "성별"
		RETURN 雄性
ENDSELECT

RETURN 0

