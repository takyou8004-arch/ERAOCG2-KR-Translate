@CARDCAN_57820(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件종족 = 전사족
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		SIF 종류 == フリー誘発
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ENDIF

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件종족 = 전사족
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성:0 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件표시 = 裏側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성:1 = 1
	
	SIF 条件달성:0 != 1 && 条件달성:1 != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 戦破壊→묘지
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
효과条件名前 = 이매지너리 액터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_57820(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성,2
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57820,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件종족 = 전사족
		효과条件표시 = 表側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 = 1
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件표시 = 裏側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:1 = 1
		
		IF 条件달성:0 == 1 && 条件달성:1 == 1
			CALL YN_CHOICE(듀얼리스트,"●자신 몬스터의 공격력을 상대의 전사족の공격력의 합계分오른다。","●상대 필드의 뒷면 표시인 카드１장을 골라 파괴한다。")
		ELSEIF 条件달성:0 == 1
			RESULT = 0
		ELSE
			RESULT = 1
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件종족 = 전사족
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			攻撃力修正 = RESULT:3

			CALL FULLRESET
			효과条件종족 = 미확인족
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			IF RESULT != 9999
				CALL SET_FIELD_INFO(듀얼리스트,"필드",RESULT,"一攻",攻撃力修正)
			ENDIF

		ELSEIF RESULT == 1
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			효과条件표시 = 裏側표시
			CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"묘지")
		ENDIF
	ENDIF

ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57820)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
효과条件名前 = 이매지너리 액터
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종류 = モン全般
			효과条件複数 = 3
			효과条件行先플래그 = 덱行き
			효과条件任意 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"一攻DOWN",2500)
			ENDIF
		ENDIF
	ENDIF
ENDIF
