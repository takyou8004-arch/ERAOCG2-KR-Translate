@CARDCAN_57821(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件종족 = 드래곤족
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		SIF 종류 == フリー誘発
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ENDIF

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件종족 = 드래곤족
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성:0 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성:1 = 1
	
	SIF 条件달성:0 != 1 && 条件달성:1 != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 戦破壊→묘지
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
효과条件名前 = 이매지너리 액터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_57821(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성,2
#DIM DYNAMIC 破壊횟수

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57821,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件종족 = 드래곤족
		효과条件표시 = 表側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 = 1
		CALL FULLRESET
		효과範囲상대필드 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:1 = 1
		
		IF 条件달성:0 == 1 && 条件달성:1 == 1
			CALL YN_CHOICE(듀얼리스트,"●자신の메탈리온の数まで상대の드래곤족を破壊する。","●상대フィールドのモンスター１体を選んで表側攻撃표시または裏側守備표시にする。")
		ELSEIF 条件달성:0 == 1
			RESULT = 0
		ELSE
			RESULT = 1
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 메탈리온
			효과条件표시 = 表側표시
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			破壊횟수 = RESULT

			CALL FULLRESET
			효과条件종족 = 드래곤족
			효과条件표시 = 表側표시
			효과条件複数 = 100 - 破壊횟수
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")

		ELSEIF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
			IF RESULT:1 != 9999
				選択カード = RESULT:1
				;表側守備
				IF GETVAR(@"%対面者%_MZ_表:選択カード") == 2
					SIF 듀얼리스트 == "자신"
PRINTL 표시 형식을 선택해 주세요
					CALL YN_CHOICE(対面者,"●表側攻撃표시","●裏側守備표시")
					IF RESULT == 0
						CALL SET_FIELD_INFO(対面者,"필드",選択カード,"表",1,上書きモード)
					ELSEIF RESULT == 1
						CALL SET_FIELD_INFO(対面者,"필드",選択カード,"表",3,上書きモード)
					ENDIF
				;攻撃표시
				ELSEIF GETVAR(@"%対面者%_MZ_表:選択カード") == 1
					CALL SET_FIELD_INFO(対面者,"필드",選択カード,"表",3,上書きモード)
				;裏側守備
				ELSEIF GETVAR(@"%対面者%_MZ_表:選択カード") == 3
					CALL SET_FIELD_INFO(対面者,"필드",選択カード,"表",1,上書きモード)
				ENDIF
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57821)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
효과条件名前 = 이매지너리 액터
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 이매지너리
			효과条件任意 = 1
			효과条件複数 = 98
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"守備표시")
		ENDIF
	ENDIF
ENDIF
