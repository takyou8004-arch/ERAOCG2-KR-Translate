#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 멸룡제 디엔드 드라고니스
	CASE "略称"
		RESULTS = 멸룡제
	CASE "カテゴリ"
		RESULTS:0 = 멸룡
		RESULTS:4 = 배틀 스피리츠
ENDSELECT


@CARD_21237(参照先)

#DIMS DYNAMIC 参照先
