@CARDNAME_21282,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 휘룡 샤이닝 드래곤
	CASE "略称"
		RESULTS = 샤이닝 D
	CASE "カテゴリ"
		RESULTS:0 = 샤이닝 드래곤
		RESULTS:1 = 성룡
		RESULTS:2 = 강화
		RESULTS:4 = 배틀 스피리츠
ENDSELECT


@CARD_21282(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "外部者"
		RETURN 1
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 화염속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 6
	CASE "攻撃力"
		RETURN 2300
	CASE "守備力"
		RETURN 1500
	CASE "レア度"
		RETURN RARE
	CASE "連動ID"
		RETURN 4122
ENDSELECT

RETURN 0

@CARD_EXPLANATION_21282(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②③의 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,소환時 ,특수소환時)
PRINTL ①: 이 카드가 소환 / 특수 소환에 성공했을 경우에 발동할 수 있다.
PRINTL 자신 패・묘지에서 "검인" 지속 마법 카드 1장을 골라, 이 카드에 장착한다.
PRINTL 그렇게 했을 경우, 그 카드의 패에서 발동했을 때의 능력을 발동할 수 있다.
CALLFORM CARD_ABLE(2,필드起動,フリー誘発)
PRINTL ②: 상대 필드의 공격력 1500 이하의 몬스터 1장을 대상으로 발동할 수 있다. 그 몬스터를 파괴한다.
PRINTL 이 효과로 파괴하는 몬스터의 공격력 상한은 자신 필드의 "강화" 카드 1장당 300 올린다.
PRINTL 이 카드가 장착 카드를 장착하고 있을 경우, 이 효과는 상대 턴에도 발동할 수 있다.
CALLFORM CARD_ABLE(3,효과後誘発)
PRINTL ③: 자신이 직접 공격을 받았을 경우에 발동할 수 있다.
PRINTL 이 카드를 패에서 버리고, 상대 필드의 모든 몬스터를 수비 표시로 한다.

@CARDCAN_21282(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21282)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,21282)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 검인
	효과条件종류 = 지속마법
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_2(듀얼리스트,21282)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 강화
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = (RESULT * 300) + 1500

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件攻撃力 = 攻撃力修正
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	IF RESULT != 1
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
		SIF 종류 == フリー誘発
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVARS(@"%듀얼리스트%_フィールド名") != "聖剣連山"
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 검인
	효과条件종류 = 지속마법
	CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
	SIF RESULT < 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_3(듀얼리스트,21282)
		RETURN 0
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"被弾種",2)
	SIF RESULT != 1
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_21282(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 装備者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC レベル修正
#DIM DYNAMIC 装備先
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21282,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 검인
		효과条件종류 = 지속마법
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)	
		選択カード = RESULT
		IF 選択カード != 9999
			選択カード_ID = RESULT:99
			CALL CARD_SELECT(듀얼리스트,選択カード)
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件名前 = 휘룡 샤이닝 드래곤
			CALLFORM CARD_EQUIP_ADV(듀얼리스트,選択カード（CS）,参照先（CS）)
			CALLFORM CARDEFFECT_{選択カード_ID}(듀얼리스트,손패起動,"효과処理")
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21282,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件カテゴリ = 강화
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		攻撃力修正 = (RESULT * 300) + 1500

		CALL FULLRESET
		효과条件攻撃力 = 攻撃力修正
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"モ耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"魔耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21282,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과추가종류 = 2
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"표시변경")
	ENDIF
ENDIF

