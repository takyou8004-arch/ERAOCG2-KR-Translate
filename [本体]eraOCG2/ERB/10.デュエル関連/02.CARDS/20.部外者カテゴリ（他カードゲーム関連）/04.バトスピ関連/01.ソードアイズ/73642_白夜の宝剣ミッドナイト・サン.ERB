@CARD_73642(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 지속마법
	CASE "속성"
		RESULT:1 = 어둠속성
		RESULT:2 = 화염속성
		RESULT:3 = 물속성
		RESULT:4 = 빛속성
		RESULT:5 = 바람속성
		RETURN 땅속성
	CASE "종족"
		RETURN 야수족
	CASE "レベル"
		RETURN 6
	CASE "攻撃力"
		RETURN 1500
	CASE "守備力"
		RETURN 1500
	CASE "分割"
		RETURN クロスギア
ENDSELECT

RETURN 0

