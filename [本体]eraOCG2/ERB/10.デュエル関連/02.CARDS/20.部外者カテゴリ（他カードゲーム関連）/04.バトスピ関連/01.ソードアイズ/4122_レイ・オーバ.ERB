@CARDNAME_4122,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4122)

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 레이 오버
	CASE "略称"
RESULTS = 레이
	CASE "カテゴリ"
		RESULTS:0 = 시희
		IF TALENT:カード主:연모
			RESULTS:1 = 강화
		ENDIF
		IF TALENT:カード主:애처
			RESULTS:2 = 계약
		ENDIF
		RESULTS:4 = 배틀 스피리츠
ENDSELECT


@CARD_4122(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "外部者"
		RETURN 1
	CASE "종류"
	
		RETURN 효과モン
	CASE "속성"
		RETURN 화염속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 900
	CASE "守備力"
		RETURN 800
	CASE "성별"
		RETURN 牝性
ENDSELECT

RETURN 0

