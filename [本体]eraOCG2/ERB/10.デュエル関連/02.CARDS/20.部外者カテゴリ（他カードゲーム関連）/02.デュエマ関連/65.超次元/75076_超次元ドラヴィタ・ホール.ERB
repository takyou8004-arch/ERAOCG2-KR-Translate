			CALLFORM 효과条件レベル_ADV(7, "以下")
			CALL DIMSUMMON(듀얼리스트,ゾーン,場所,8)

;			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)	
;			選択カード = RESULT
;			IF 選択カード != 9999
;				CALL DIMSUMMON(듀얼리스트,ゾーン,場所,選択カード,7,8)
;			ENDIF

			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종류 = 마함全般
			효과条件固名前 = 초차원 드라비타 홀
			효과条件任意 = 1
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF

