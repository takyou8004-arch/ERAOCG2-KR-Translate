	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,150961,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"無効")
	ENDIF

ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,150961)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"条達",0,1)
		CALL CARD_RECONSTRUCT(듀얼리스트,ゾーン,場所,50961)
		RETURN 1
	ENDIF
	RETURN 0
ENDIF