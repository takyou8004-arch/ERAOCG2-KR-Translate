@CARDCAN_4022(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 必要リリース
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 효과소환
	IF GETVAR(@"%듀얼리스트%_手_一星:場所") >= 7
		必要リリース = 0
	ELSEIF GETVAR(@"%듀얼리스트%_手_一星:場所") >= 5
		必要リリース = 1
	ELSEIF GETVAR(@"%듀얼리스트%_手_一星:場所") >= 3
		必要リリース = 2
	ELSE
		必要リリース = 3
	ENDIF
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件표시 = 20
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 必要リリース
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時
	SIF 발동済_1(듀얼리스트,4022)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5 && 마함数(듀얼리스트) >= 5
		RETURN 0
		
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件표시 = 20
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT <= 1
		RETURN 0
	SIF 破壊대상ゾーン != "필드"
		RETURN 0
	SIF 破壊대상場所 != 場所
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_4022(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 必要リリース
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과소환
	IF GETVAR(@"%듀얼리스트%_手_一星:場所") >= 7
		必要リリース = 0
	ELSEIF GETVAR(@"%듀얼리스트%_手_一星:場所") >= 5
		必要リリース = 1
	ELSEIF GETVAR(@"%듀얼리스트%_手_一星:場所") >= 3
		必要リリース = 2
	ELSE
		必要リリース = 3
	ENDIF
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲필드 = 1		
	효과条件複数 = 必要リリース
	효과条件표시 = 20
	CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4022,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"마함")
		CALL LIFE_CHANGE(듀얼리스트,"増加","효과",4000)
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4022)
	IF RESULT == 0
		CALLFORM CARD_{GETVAR(@"%듀얼리스트%_덱:0")},"종류"
		IF INRANGE(RESULT,1,10)
			CALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:0")},"カテゴリ"
			IF GROUPMATCH(RESULTS,"오라클","언노운","제니스")
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트, "덱", 0)
			ELSE
				CALL CARD_DISPOSE(듀얼리스트,"덱",0,마함行き)
			ENDIF
		ELSE
			CALL CARD_DISPOSE(듀얼리스트,"덱",0,마함行き)
		ENDIF
	ENDIF
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4022)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 20
		효과条件複数 = 2
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"마함",ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
	ENDIF
	RETURN 0
ENDIF