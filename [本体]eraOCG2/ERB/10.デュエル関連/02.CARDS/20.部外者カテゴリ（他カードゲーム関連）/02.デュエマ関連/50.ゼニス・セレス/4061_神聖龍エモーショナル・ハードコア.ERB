@CARDCAN_4061(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4061)
SIF RESULT == 1
	RETURN 0
IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,4061)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4061(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード_ID
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4061,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과範囲덱 = 1
		효과範囲EX덱 = 1
		효과範囲제외 = 1

		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과範囲상대묘지 = 1
		효과範囲상대제외 = 1
		효과条件固名前 = 신성룡 이모셔널 하드코어
		효과条件종류 = モン全般
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT == 9999
			RETURN 0
		選択カード_ID = RESULT:99
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"汎数",選択カード_ID,1)
	ENDIF
ELSEIF 종류 == 지속효과
	選択カード_ID = GETVAR(@"%듀얼리스트%_MZ_汎数:場所")
	IF 選択カード_ID != -1
		CALL CARD_EFFECT_PROHIB(듀얼리스트,選択カード_ID,2)
		TRYCALLFORM CARDNAME_{選択カード_ID}("名前")
	ENDIF
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件他所 = 1
	효과条件カテゴリ = 오라클
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"対耐")
	ENDIF
ENDIF
