@CARD_21513(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	;효과モン/通常モン/의식/융합/싱크로/엑시즈/링크/초차원
	CASE "종류"
		RETURN 효과モン
	;어둠속성/빛속성/땅속성/물속성/화염속성/바람속성
	CASE "속성"
		RETURN 화염속성

	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 10
	CASE "攻撃力"
		RETURN 3300
	CASE "守備力"
		RETURN 2600
	;牝性/雄性があるよ
	CASE "성별"
		RETURN 雄性
	CASE "소환불가"
		RETURN 1
ENDSELECT
RETURN 0

