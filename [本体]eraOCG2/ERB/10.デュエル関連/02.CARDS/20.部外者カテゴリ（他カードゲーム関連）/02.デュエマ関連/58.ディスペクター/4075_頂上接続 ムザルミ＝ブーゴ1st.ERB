RESULTS:1 = 커맨드
RESULTS:2 = 드래그너
RESULTS:4 = 듀얼 마스터즈
ENDSELECT


@CARD_4075(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RESULT:1 = 땅속성
		RETURN 빛속성
	CASE "종족"
		RESULT:1 = 야수족
		RETURN 천사족
	CASE "レベル"
		RETURN 10
	CASE "攻撃力"
		RETURN 2550
	CASE "守備力"
		RETURN 3050
	CASE "성별"
		RETURN 牝性
	CASE "分割"
		RETURN 디스펙터
	CASE "특수制限"
		RETURN 1
ENDSELECT

RETURN 0

