	CASE "名前"
RESULTS = 용바람혼성 자-디클리카
	CASE "略称"
RESULTS = 자-디클리카
	CASE "カテゴリ"
RESULTS:0 = 디스펙터
RESULTS:1 = 커맨드
RESULTS:4 = 듀얼 마스터즈
ENDSELECT


@CARD_4060(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 융합
	CASE "속성"
		RESULT:1 = 물속성
		RETURN 화염속성
	CASE "종족"
		RESULT:1 = 드래곤족
		RETURN 원소정령족
	CASE "レベル"
		RETURN 7
	CASE "攻撃力"
		RETURN 2600
	CASE "守備力"
		RETURN 2400
	CASE "성별"
		RETURN 牝性
	CASE "分割"
		RETURN 디스펙터
	CASE "특수制限"
		RETURN 1
ENDSELECT

RETURN 0

