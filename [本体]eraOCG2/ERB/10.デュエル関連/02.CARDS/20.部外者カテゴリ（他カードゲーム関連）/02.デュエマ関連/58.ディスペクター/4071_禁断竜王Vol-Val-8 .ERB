@CARDSUMMON_4071(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	CALL 素材条件レベル_ADV(7, "以上")
	素材条件종족 = 기계족
ELSEIF EX参照 >= 10
	CALL 素材条件レベル_ADV(7, "以上")
	素材条件종족 = 드래곤족
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,4071) 
	RETURN RESULT
ENDIF



@CARDCAN_4071(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4071)
SIF RESULT == 1
	RETURN 0
IF 종류 == EX덱起動
	SIF 발동済_1(듀얼리스트,4071)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4060,ゾーン,1)
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	CALL 효과条件レベル_ADV(7, "以上")
	효과条件종족 = 기계족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	CALL 효과条件レベル_ADV(7, "以上")
	효과条件종족 = 드래곤족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF 破壊대상ゾーン != "필드"
		RETURN 0
	SIF 破壊대상場所 != 場所
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX소환時強制 || 종류 == 특수소환時強制
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF 발동済_2(듀얼리스트,4071)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF 발동済_3(듀얼리스트,4071)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF ターン破壊数 < 4
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_4071(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード


IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4071,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		CALL 효과条件レベル_ADV(7, "以上")
		효과条件종족 = 기계족
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲필드 = 1
			CALL 효과条件レベル_ADV(7, "以上")
			효과条件종족 = 드래곤족
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트, "EX덱", 場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == EX소환時強制 || 종류 == 특수소환時強制
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",1)
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4071,0,X消費1)
	IF RESULT == 0
		RETURN 1
	ENDIF
	RETURN 0
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4071,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所,5)
PRINTL 공격력 2000 이하의 몬스터를 전부 파괴하시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
		IF RESULT == はい
			CALL FULLRESET
			효과条件攻撃力 = 2000
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드全体",場所,"묘지")
		ENDIF
	ENDIF
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4071,3)
	IF RESULT == 0
		IF RAND:3 == 0
			SETCOLOR C_AQUA
			PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
			PRINTL
			PRINTFORMW "영구기관……エタ-ナルマシンプレミアムズ……始動……"
			PRINTL
			CUSTOMDRAWLINE ―
		ELSEIF RAND:2 == 0
			SETCOLOR C_AQUA
			PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
			PRINTL
			PRINTFORMW "電融、영구と無双の力……"
			PRINTL
			CUSTOMDRAWLINE ―
		ELSEIF RAND:1 == 0
			SETCOLOR C_AQUA
			PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
			PRINTL
			PRINTFORMW "温泉……入りたい……"
			PRINTL
			CUSTOMDRAWLINE ―
		ENDIF

		CALL SET_PLAYER_INFO(듀얼리스트,"メインスキップ", 1, 1)
	ENDIF
ENDIF
