@CARD_4071(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 융합
	CASE "속성"
		RESULT:2 = 화염속성
		RESULT:1 = 땅속성
		RETURN 물속성
	CASE "종족"
		RESULT:1 = 기계족
		RETURN 드래곤족
	CASE "レベル"
		RETURN 9
	CASE "攻撃力"
		RETURN 4300
	CASE "守備力"
		RETURN 2100
	CASE "성별"
		RETURN 牝性
	CASE "分割"
		RETURN 디스펙터
	CASE "특수制限"
		RETURN 1
ENDSELECT

RETURN 0

