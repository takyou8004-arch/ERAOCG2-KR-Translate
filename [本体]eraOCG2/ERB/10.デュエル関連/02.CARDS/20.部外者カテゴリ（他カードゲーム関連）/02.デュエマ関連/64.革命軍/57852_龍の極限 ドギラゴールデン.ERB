@CARDNAME_57852,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
RESULTS = 용의 극한 도기라골든
	CASE "略称"
RESULTS = 도기라골든
	CASE "カテゴリ"
RESULTS:0 = 햄카츠단
RESULTS:1 = 혁명군
RESULTS:2 = 도기라곤
RESULTS:3 = 커맨드
RESULTS:4 = 듀얼 마스터즈
ENDSELECT


@CARD_57852(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 초차원
	CASE "속성"
		RESULT:1 = 바람속성
		RETURN 화염속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 8
	CASE "攻撃力"
		RETURN 3000
	CASE "守備力"
		RETURN 2500
	CASE "성별"
		RETURN 雄性
	CASE "특수불가"
		RETURN 1

ENDSELECT

RETURN 0


