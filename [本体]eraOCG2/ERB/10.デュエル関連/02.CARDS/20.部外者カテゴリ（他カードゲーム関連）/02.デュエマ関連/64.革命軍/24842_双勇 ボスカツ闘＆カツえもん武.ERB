@CARD_24842(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "外部者"
		RETURN 1
	CASE "종류"

		RETURN 효과モン
	CASE "속성"
		RESULT:1 = 바람속성
