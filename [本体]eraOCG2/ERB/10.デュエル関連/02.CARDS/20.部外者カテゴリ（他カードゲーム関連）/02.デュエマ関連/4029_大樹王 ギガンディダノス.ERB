@CARDCAN_4029(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4029)
SIF RESULT == 1
	RETURN 0

IF 종류 == 묘지起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4029,"묘지")
	SIF RESULT == 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件속성:0 = 어둠속성
	효과条件속성:1 = 땅속성
	효과条件他所 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT:2 < 14
		RETURN 0
	RETURN 1

ELSEIF 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,4029)
		RETURN 0
	SIF ターン数 <= 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4029(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 묘지送りレベル

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4029,1)
	IF RESULT == 0
		$INPUT_LOOP
		CALL FULLRESET
		효과条件속성:0 = 어둠속성
		효과条件속성:1 = 땅속성
		효과条件他所 = 1
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		IF RESULT == 1
			CALLFORM CARD_{RESULT:1}, "レベル"
			IF RESULT + 묘지送りレベル >= 14
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
			ELSE
				묘지送りレベル += RESULT
				GOTO INPUT_LOOP
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4029,2)
	IF RESULT == 0
		FOR カウンタ,0,99
			SIF GETVAR(@"%対面者%_손패:カウンタ") == -1
				CONTINUE
			CALL CARD_DISPOSE(対面者,"손패",カウンタ)
		NEXT
	ENDIF

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件攻撃力 = 4999
	CALL STATCHANGE_EFFECT(対面者,"필드",場所,"戦無")
ENDIF

