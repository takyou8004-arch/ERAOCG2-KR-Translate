@CARD_4029(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RESULT:1 = 어둠속성
		RETURN 땅속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 12
	CASE "攻撃力"
		RETURN 5000
	CASE "守備力"
		RETURN 5000
	CASE "성별"
		RETURN 牝性
	CASE "소환불가"
		RETURN 1
ENDSELECT

RETURN 0

