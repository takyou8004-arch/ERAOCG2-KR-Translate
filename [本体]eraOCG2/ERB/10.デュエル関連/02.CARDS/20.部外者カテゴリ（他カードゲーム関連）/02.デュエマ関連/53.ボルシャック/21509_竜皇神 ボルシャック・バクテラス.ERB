@CARDCAN_21509(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21509)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,21509)
		RETURN 0
	TRYCALLFORM CARDNAME_{戦闘カードID(듀얼리스트)},"カテゴリ"
	SIF !MATCH(RESULTS, "볼샤크")
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_星:戦闘場所(듀얼리스트)") < 7
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF
		
@CARDEFFECT_21509(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 戦闘カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21509,1)
	IF RESULT == 0
		戦闘カード = 戦闘場所(듀얼리스트)
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,"필드",戦闘カード,손패行き)
		IF RESULT == 1
			SETCOLOR C_RED
			PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
			PRINTL
			PRINTFORMW "何もかも無責任だ！革命체인지！"
			PRINTL
			CUSTOMDRAWLINE ―	
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
			IF GETVAR(@"%듀얼리스트%_필드:カード소환先") > 0
				CALL EVADE_ATTACK(듀얼리스트)

				CALL FULLRESET
				효과範囲덱 = 1
				효과条件固名前 = 룡황신 볼샤크 바크테라스
				효과条件カテゴリ = 아머드
				효과条件山切り無し = 1
				효과条件任意 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,,4)
				IF RESULT == 1
					CALL FULLRESET
					효과範囲덱 = 1
					효과条件固名前 = 룡황신 볼샤크 바크테라스
					효과条件カテゴリ = 아머드
					효과条件山切り無し = 1
					효과条件任意 = 1
					CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,,3)
					IF RESULT == 1
						CALL FULLRESET
						효과範囲덱 = 1
						효과条件固名前 = 룡황신 볼샤크 바크테라스
						효과条件カテゴリ = 아머드
						효과条件山切り無し = 1
						효과条件任意 = 1
						CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,,2)
						IF RESULT == 1
							CALL FULLRESET
							효과範囲덱 = 1
							효과条件固名前 = 룡황신 볼샤크 바크테라스
							효과条件カテゴリ = 아머드
							효과条件任意 = 1
							CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,,1)
						ENDIF
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件종류 = モン全般
	효과条件他所 = 1
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"戦耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
ENDIF
