RESULTS:4 = 듀얼 마스터즈
ENDSELECT


@CARD_21509(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
