		RETURN 화염속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 6
	CASE "攻撃力"
		RETURN 2300
	CASE "守備力"
		RETURN 1500
	;牝性/雄性があるよ
	CASE "성별"
		RETURN 雄性
ENDSELECT
RETURN 0

