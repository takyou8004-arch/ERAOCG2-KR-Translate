	CASE "名前"
		RESULTS = 시공의 화염 볼샤크 드래곤
	CASE "略称"
		RESULTS = 시공 볼샤크
	CASE "カテゴリ"
		RESULTS:0 = 볼샤크
		RESULTS:1 = 사이킥
		RESULTS:2 = 아머드
		RESULTS:4 = DUEL MASTERS
ENDSELECT


@CARD_21505(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	;효과モン/通常モン/의식/융합/싱크로/엑시즈/링크/초차원
	CASE "종류"
		RETURN 초차원
	;어둠속성/빛속성/땅속성/물속성/화염속성/바람속성
	CASE "속성"
		RETURN 화염속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 7
	CASE "攻撃力"
		RETURN 2300
	CASE "守備力"
		RETURN 1500
	CASE "生成カード"
		RETURN 121505
	;牝性/雄性があるよ
	CASE "성별"
		RETURN 雄性
ENDSELECT
RETURN 0

@CARD_EXPLANATION_21505(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,攻守変動)
PRINTL ①: 자신 턴 동안, 이 카드의 공격력은 자신 묘지의 화염 속성 몬스터 1장당 200 포인트 상승한다.
CALLFORM CARD_ABLE(1,攻撃後誘発)
PRINTL ②: 이 카드가 몬스터를 전투로 파괴했을 경우에 발동할 수 있다.
PRINTL 이 카드는 각성하고 "승리의 각성자 볼샤크 메비우스"가 된다.
PRINTL 각성은 1턴에 1번밖에 할 수 없다.

@CARDCAN_21505(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21505)
SIF RESULT == 1
	RETURN 0
IF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,覚醒발동)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF GETVAR(@"%対面者%_直前戦闘破壊") == 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_21505(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタ数
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件속성 = 화염속성
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 200
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)
ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,覚醒발동,1)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"条達",2,1)
		CALL CARD_RECONSTRUCT(듀얼리스트,ゾーン,場所,121505)
	ENDIF
ENDIF

