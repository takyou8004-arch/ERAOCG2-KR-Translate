@CARDCAN_50982(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50982)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 
	SIF バトルフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 装備先 == 5
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_戦:装備先") > 0
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,50982,"마함")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	IF ゾーン == "마함"
		SIF 装備先 != 5
			RETURN 1
	ELSEIF ゾーン == "필드"
		RETURN 1
	ELSE
		RETURN 0
	ENDIF
	RETURN 0
ENDIF

@CARDEFFECT_50982(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

IF 종류 == 지속효과
	IF ゾーン == "마함"
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"戦耐")
	ELSEIF ゾーン == "필드"
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
	ENDIF
ELSEIF 종류 == 마함起動 
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50982)
	IF RESULT == 0
		PRINTFORMW 担い手の戦意に呼応し、드래그하트웨폰が변형をはじめた！！
		PRINTFORML 『熱血龍 クサリビッグ ホ-ン　龍　解　！！』
		CALL RESETCONDITION
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
