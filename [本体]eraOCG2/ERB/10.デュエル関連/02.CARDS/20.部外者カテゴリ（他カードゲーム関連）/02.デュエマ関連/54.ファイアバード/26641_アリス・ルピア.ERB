@CARDCAN_26641(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,26641)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,26641)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,26641,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 파이어 버드
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,26641)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 파이어 버드
	효과条件固名前 = 아리스 루피아
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_26641(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26641,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 파이어 버드
		효과条件複数 = 3
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
			CALL CARD_SS_RESTRICTION(듀얼리스트,"파이어 버드")
		ENDIF
	ENDIF

ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26641,2)
	IF RESULT == 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件固名前 = 아리스 루피아
	효과条件カテゴリ = 파이어 버드
	효과추가종류 = 効追終破
	효과条件山切り無し = 1
	효과条件任意 = 1
	CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,,3)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件固名前 = 아리스 루피아
			효과条件カテゴリ = 파이어 버드
			효과추가종류 = 効追終破
			효과条件山切り無し = 1
			효과条件任意 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,,2)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件固名前 = 아리스 루피아
				효과条件カテゴリ = 파이어 버드
				효과추가종류 = 効追終破
				효과条件任意 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,,1)
			ENDIF
		ENDIF
	ENDIF
ENDIF

