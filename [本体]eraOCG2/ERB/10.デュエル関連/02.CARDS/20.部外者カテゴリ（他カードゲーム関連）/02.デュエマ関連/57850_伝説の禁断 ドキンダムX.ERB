@CARDSUMMON_57850(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC カウンタ

RETURN 0


@CARDCAN_57850(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57850)
SIF RESULT == 1
	RETURN 0

IF 종류 == ターン開始時強制
	SIF ゾーン != "EX덱"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF 발동済_1(듀얼리스트,57850)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") > 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF !GROUPMATCH(ゾーン, "마함","필드")
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") < 1
		RETURN 0
	SIF 最終소환決者 != 듀얼리스트
		RETURN 0
	SIF 最終소환타입 == ""
		RETURN 0
	CALLFORM CARDNAME_{最終소환ID}("カテゴリ") 
	SIF !MATCH(RESULTS, "커맨드")
		RETURN 0
	CALLFORM CARD_{最終소환ID}("속성") 
	SIF !MATCH(RESULT, 화염속성)
		RETURN 0
	RETURN 1

ELSEIF 종류 == 永紋章起動
	RETURN 1
ENDIF

@CARDEFFECT_57850(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 카운터数
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == ターン開始時強制
	CALL FULLRESET
	CALL CARD_ADD(듀얼리스트,"EX덱", "마함", 場所,"表側표시")
	CALL SET_FIELD_INFO(듀얼리스트,"마함",カード설치先,"個Ｃ",6)
	REPEAT 6
		CALL CARD_DISPOSE(듀얼리스트,"덱",0,完全제외行き)
	REND
	CALL CARD_RESERV(듀얼리스트,57850,永紋章予約)
ELSEIF 종류 == 지속효과
	IF ゾーン == "마함"
		CALL STATCHANGE_EFFECT(듀얼리스트,"魔自身",場所,"対耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"魔自身",場所,"破耐")
	ELSEIF ゾーン == "필드"
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"対耐")
	ENDIF
ELSEIF 종류 == 소환強制誘発
	카운터数 = GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所")
	PRINTFORMW 전설の금단 ドキンダムXの封印카운터が取り除かれました。
	PRINTFORMW 封印카운터：{카운터数} → {카운터数 - 1}
	CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",-1)
	CALL CARD_DECK_DISPOSE(듀얼리스트,"제외",1)
	IF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") < 1
		SETCOLOR C_RED
PRINTL 전설의 금단 도킨덤X의 봉인이 풀렸습니다.
		PRINTW 禁 断 解 放!
		RESETCOLOR
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場全体",場所,"完全제외")
	ENDIF
ELSEIF 종류 == 永紋章起動
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲EX덱 = 1
	효과範囲제외 = 1
	효과範囲묘지 = 1
효과条件名前 = 전설의 금단 도킨덤X
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		CALL SET_PLAYER_INFO(듀얼리스트,"듀얼패배플래그",9)
ENDIF

