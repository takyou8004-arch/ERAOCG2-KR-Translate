	SIF 발동済_1(듀얼리스트,4408)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲덱 = 1
	효과条件ID = 4409
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件ID = 4409
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		CALL CARD_DRAW_CHECK(1)
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") != 0
		RETURN 0
	SIF 발동済_1(듀얼리스트,覚醒발동)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4408(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 守備力修正

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4408,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件ID = 4409
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL CARD_GENERATE_HAND(듀얼리스트,104408)
		ELSE
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件ID = 4409
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,覚醒발동,1)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"条達",2,1)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",1000)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永守",1000)
		CALLFORM CARDEFFECT_4408(듀얼리스트,소환時,"효과処理",場所)
		CALL RESETAREA_MAT
		素材範囲필드 = 1
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件종류 = 융합
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			효과条件任意 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
				CALL FUSSUMMON(듀얼리스트,選択カード,덱行き)
			ENDIF
		ENDIF
	ENDIF
ENDIF

