@CARDNAME_52083,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 크로노 드란 G
	CASE "略称"
		RESULTS = 드란 G
	CASE "カテゴリ"
		RESULTS:0 = 기어 크로니클
		RESULTS:1 = 십이지각수
		RESULTS:4 = 뱅가드
ENDSELECT


@CARD_52083(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 링크
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RESULT:1 = 기계족
		RETURN 드래곤족
	CASE "レベル"
		RETURN 1
	CASE "攻撃力"
		RETURN 900
	CASE "守備力"
		RETURN 700
	CASE "レア度"
		RETURN SPR
ENDSELECT

RETURN 0

