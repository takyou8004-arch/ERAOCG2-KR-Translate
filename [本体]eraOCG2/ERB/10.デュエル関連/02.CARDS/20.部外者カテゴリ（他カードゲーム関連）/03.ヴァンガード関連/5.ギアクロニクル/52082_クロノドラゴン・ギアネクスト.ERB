VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 크로노드래곤 기어넥스트
	CASE "略称"
		RESULTS = 기어넥스트
	CASE "カテゴリ"
		RESULTS:0 = 기어 크로니클
		RESULTS:1 = 크로노제트
		RESULTS:2 = 십이지각수
		RESULTS:4 = 뱅가드
ENDSELECT


@CARD_52082(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 초차원
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RESULT:1 = 드래곤족
		RETURN 기계족
	CASE "レベル"
		RETURN 10
	CASE "攻撃力"
		RETURN 1500
	CASE "守備力"
		RETURN 0
	CASE "특수불가"
		RETURN 1
	CASE "レア度"
		RETURN ULR

ENDSELECT

RETURN 0


