@CARDNAME_71660,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 진생의 십이지각수
	CASE "略称"
		RESULTS = 십이지각수의회국
	CASE "カテゴリ"
		RESULTS:0 = 기어 크로니클
		RESULTS:1 = 십이지각수
		RESULTS:4 = 뱅가드
ENDSELECT


@CARD_71660(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 지속마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_71660(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②의 효과는 1턴에 각각 1회밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,마함起動)
PRINTL ①: 자신 필드의 앞면 표시 카드 1장을 대상으로 하여 이 효과를 발동할 수 있다.
PRINTL 그 카드를 제외하고, 덱에서 "십이지각수" 몬스터 1장을 특수 소환한다.
PRINTL 이 효과로 특수 소환한 몬스터의 효과는 무효화된다.
CALLFORM CARD_ABLE(2,제외時)
PRINTL ②: 이 카드가 제외되었을 경우에 발동할 수 있다.
PRINTL 자신의 묘지의 "십이지각수" 카드 1장을 제외하고,
PRINTL 제외한 카드와 같은 종류(몬스터 / 마법 / 함정)의 "십이지각수" 카드 1장을 덱에서 패에 추가한다.


@CARDCAN_71660(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,71660)
SIF RESULT == 1
	RETURN 0




IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,71660)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 십이지각수
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 제외時
	SIF 발동済_2(듀얼리스트,71660)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 십이지각수
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 십이지각수
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			カウンタ ++
	ENDIF
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 십이지각수
	효과条件종류 = 마법全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 십이지각수
		효과条件종류 = 마법全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			カウンタ ++
	ENDIF
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 십이지각수
	효과条件종류 = 함정全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 십이지각수
		효과条件종류 = 함정全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			カウンタ ++
	ENDIF
	SIF カウンタ == 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_71660(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 속성数
#DIMS DYNAMIC 参照先
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択カード종류
#DIM DYNAMIC 条件달성モン
#DIM DYNAMIC 条件달성魔
#DIM DYNAMIC 条件달성함정

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71660,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件표시 = 表側표시
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)	
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 십이지각수
			효과추가종류 = 効追無効
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71660)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71660,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 십이지각수
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성モン = 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 십이지각수
		효과条件종류 = 마법全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성魔 = 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 십이지각수
		효과条件종류 = 함정全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성함정 = 1

		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 십이지각수
		효과条件行先플래그 = 제외行き
		효과条件종류:0 = 99
		IF 条件달성モン == 1
			효과条件종류:0 = モン全般
		ENDIF
		IF 条件달성魔 == 1
			효과条件종류:1 = フィールド
			효과条件종류:2 = 速攻마법
			효과条件종류:3 = 通常마법
		ENDIF
		IF 条件달성함정 == 1
			효과条件종류:4 = 通常함정
			효과条件종류:5 = 지속함정
		ENDIF
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARD_{選択カード_ID},"종류"
			選択カード종류 = RESULT
			IF 選択カード종류 < 20
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件종류 = モン全般
				효과条件カテゴリ = 십이지각수
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			ELSEIF 選択カード종류 >= 20 && 選択カード종류 < 30
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件종류 = 마법全般
				효과条件カテゴリ = 십이지각수
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			ELSEIF 選択カード종류 >= 30 && 選択カード종류 < 40
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件종류 = 함정全般
				효과条件カテゴリ = 십이지각수
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF

	ENDIF
ENDIF
