@CARDCAN_2791(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2791)
SIF RESULT == 1
	RETURN 0
	
IF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,2791)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 신기
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과除送")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件カテゴリ = 신기
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,2791)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_2791(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC ドロー枚数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2791,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 신기
		효과条件任意 = 1
		효과条件複数 = 97
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"제외",ゾーン,場所)
		IF RESULT == 1
			カウンタ = RESULT:2
		ENDIF

		CALL FULLRESET
		효과条件任意 = 1
		효과条件複数 = 100 - カウンタ
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지",2791)

		IF カウンタ >= 3
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦",1)
		ENDIF
	ENDIF
ELSEIF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2791,1)
	IF RESULT == 0
		REPEAT 3
			VARSET RESULTS
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:0")}, "カテゴリ"
			SIF MATCH(RESULTS, "신기")
				ドロー枚数 ++
			CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",0,제외行き)
		REND
		SIF ドロー枚数
			CALL CARDDRAW_BASIC(듀얼리스트,ドロー枚数)
	ENDIF
ENDIF