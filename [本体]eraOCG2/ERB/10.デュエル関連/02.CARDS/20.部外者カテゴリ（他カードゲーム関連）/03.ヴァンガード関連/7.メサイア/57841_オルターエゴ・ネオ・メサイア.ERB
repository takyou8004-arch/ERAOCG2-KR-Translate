@CARDNAME_57841,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 얼터에고 네오 메사이어
	CASE "略称"
		RESULTS = 얼터에고
	CASE "カテゴリ"
		RESULTS:0 = 얼터에고
		RESULTS:1 = 메사이어
		RESULTS:2 = 링크 조커
		RESULTS:4 = 뱅가드
ENDSELECT


@CARD_57841(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 링크
		CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 미확인족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 2500
	CASE "守備力"
		RETURN 2000
		CASE "レア度"
		RETURN SPR

ENDSELECT

RETURN 0

