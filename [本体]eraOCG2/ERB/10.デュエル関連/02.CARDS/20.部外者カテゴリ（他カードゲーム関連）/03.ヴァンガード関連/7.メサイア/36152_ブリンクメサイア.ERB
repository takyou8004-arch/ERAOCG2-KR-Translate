@CARDNAME_36152,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 블링크 메시아
	CASE "略称"
		RESULTS = 블링크 메시아
		CASE "カテゴリ"
		RESULTS:0 = 메시아
		RESULTS:1 = 링크 조커
		RESULTS:4 = 뱅가드
ENDSELECT


