@CARDCAN_93870(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,93870)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 메사이어
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_93870(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者

IF 종류 == 마함起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93870)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"表",3,1)
		CALL FULLRESET
		효과条件カテゴリ = 메사이어
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL YN_CHOICE(듀얼리스트,"●その표시形式を변경する。","●그 공격 力と수비력은 턴 종료시까지 ２０００오른다。")
			IF RESULT == 0
				IF GETVAR(@"%듀얼리스트%_필드_表:選択カード") != 1
					CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"表",1,上書きモード)
				ELSEIF GETVAR(@"%듀얼리스트%_필드_表:選択カード") == 1
					CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"表",2,上書きモード)
				ENDIF
			ELSE
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一攻",2000)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"一守",2000)
			ENDIF
		ENDIF
	ENDIF
ENDIF
