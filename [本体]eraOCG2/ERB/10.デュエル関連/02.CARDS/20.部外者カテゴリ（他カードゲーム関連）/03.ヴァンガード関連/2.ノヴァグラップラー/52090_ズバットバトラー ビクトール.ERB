@CARDCAN_52090(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52090)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,52090)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,52090)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == ターン開始時
	SIF 발동済_2(듀얼리스트,52090)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") > 4000 && 손패数(듀얼리스트) > 3
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_52090(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先
#DIM DYNAMIC 攻撃力修正

IF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52090,1)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)

		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종류 = モン全般
		효과条件任意 = 1
		효과条件종족 = 기계족
		효과条件속성 = 땅속성
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件レベル = 4
			효과条件종류 = レベル持ち
			효과条件カテゴリ = 노바 그래플러
			효과条件표시 = 表側표시
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			IF RESULT != 9999
				CALL SET_FIELD_INFO(듀얼리스트,"필드",RESULT,"戦",1)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52090,1)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)

		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종류 = モン全般
		효과条件任意 = 1
		효과条件カテゴリ = 노바 그래플러
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件レベル = 4
			효과条件종류 = レベル持ち
			효과条件カテゴリ = 노바 그래플러
			효과条件표시 = 表側표시
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			IF RESULT != 9999
				CALL SET_FIELD_INFO(듀얼리스트,"필드",RESULT,"戦",1)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == ターン開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52090,2)
	IF RESULT == 0
		IF GETVAR(@"ライフ_%듀얼리스트%") <= 4000
			CALL LIFE_CHANGE(듀얼리스트,"増加","효과",1500)
		ENDIF
		IF 손패数(듀얼리스트) <= 3
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF
	ENDIF
ENDIF
