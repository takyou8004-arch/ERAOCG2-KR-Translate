@CARDNAME_20530,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 용각마검사 다그자
	CASE "略称"
		RESULTS = 다그자
	CASE "カテゴリ"
		RESULTS:0 = 용각
		RESULTS:1 = 섀도우 팔라딘
		RESULTS:4 = 뱅가드
ENDSELECT


@CARD_20530(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 마법사족
	CASE "レベル"
		RETURN 2
	CASE "攻撃力"
		RETURN 1500
	CASE "守備力"
		RETURN 800
	CASE "성별"
		RETURN 雄性
ENDSELECT

RETURN 0

