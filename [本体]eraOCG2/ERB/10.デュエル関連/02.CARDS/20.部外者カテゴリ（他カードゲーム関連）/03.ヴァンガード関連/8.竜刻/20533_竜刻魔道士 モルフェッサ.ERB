@CARDNAME_20533,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 룡각 마도사 모르페사
	CASE "略称"
		RESULTS = 모르페사
	CASE "カテゴリ"
		RESULTS:0 = 룡각
		RESULTS:1 = 쉐도우 팔라딘
		RESULTS:4 = 뱅가드
ENDSELECT


@CARD_20533(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 마법사족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 1400
	CASE "守備力"
		RETURN 1400
	CASE "성별"
		RETURN 雄性
ENDSELECT

RETURN 0

@CARD_EXPLANATION_20533(종류)
