@CARDCAN_72260(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,5
#DIM DYNAMIC 素材候補数
#DIM DYNAMIC 素材軽減数
#DIM DYNAMIC 발동불가,2

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72260)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件속성 = 어둠속성
	효과条件レベル = 3
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	素材軽減数 = RESULT
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲손패 = 1
	효과条件속성 = 어둠속성
	효과条件レベル = 3
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	素材候補数 = RESULT

	CALL FULLRESET
	IF 素材軽減数 == 0 && 素材候補数 < 4
		RETURN 0
	ELSEIF 素材軽減数 == 1 && 素材候補数 < 3
		RETURN 0
	ELSEIF 素材軽減数 == 2 && 素材候補数 < 2
		RETURN 0
	ELSEIF 素材軽減数 == 3 && 素材候補数 < 1
		발동불가:1 = 1
	ENDIF

	SIF 素材軽減数 > 4
		발동불가:1 = 1
	SIF 素材軽減数 < 4
		발동불가:0 = 1
	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件종류 = 의식
	효과条件소환可 = 1
	효과条件特不無視 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,72260)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 용각
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72260(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC EX参照
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 素材数
#DIM DYNAMIC 選択済カード
#DIM DYNAMIC レベル合計
#DIM DYNAMIC 必要破壊
#DIM DYNAMIC 素材候補数
#DIM DYNAMIC 素材軽減数
#DIMS DYNAMIC 出所
#DIM DYNAMIC 발동불가,2

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72260)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件속성 = 어둠속성
		효과条件レベル = 3
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		素材軽減数 = RESULT

		CALL FULLRESET
				효과範囲필드 = 1
		효과範囲손패 = 1
		효과条件속성 = 어둠속성
		효과条件レベル = 3
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		素材候補数 = RESULT

		CALL FULLRESET
		IF 素材軽減数 == 0 && 素材候補数 < 4
			발동불가:1 = 1
		ELSEIF 素材軽減数 == 1 && 素材候補数 < 3
			발동불가:1 = 1
		ELSEIF 素材軽減数 == 2 && 素材候補数 < 2
			발동불가:1 = 1
		ELSEIF 素材軽減数 == 3 && 素材候補数 < 1
			발동불가:1 = 1
		ENDIF

		SIF 素材軽減数 < 4
			발동불가:0 = 1
		SIF 素材軽減数 >= 4
			발동불가:1 = 1

		IF 素材軽減数 >= 3
			必要破壊 = 1
		ELSEIF 素材軽減数 >= 2
			必要破壊 = 2
		ELSEIF 素材軽減数 >= 1
			必要破壊 = 3
		ELSE
			必要破壊 = 4
		ENDIF

		IF 듀얼리스트 == "자신"
			PRINTL 효과を選択してください
			PRINTL
			IF 발동불가:0 != 1
				PRINTL [0] - ●ノーコストで의식소환する。
			ELSE
				SETCOLOR C_GRAY
				PRINTL ［X］- 발동条件を満たしていません！
				RESETCOLOR
			ENDIF
			IF 발동불가:1 != 1
				PRINTL [1] - ●モンスターを破壊して의식소환する。
			ELSE
				SETCOLOR C_GRAY
				PRINTL ［X］- 발동条件を満たしていません！
				RESETCOLOR
			ENDIF
			BINPUT
		ELSE
			IF 발동불가:0 != 1
				RESULT = 0
			ELSEIF 발동불가:1 != 1
				RESULT = 1
			ENDIF
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과条件종류 = 의식
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			選択カード = RESULT
			SIF 選択カード == 9999
				RETURN 0

			CALL CARD_SELECT(듀얼리스트,選択カード)
			選択カード = RESULT
			出所 = %参照先（CS）%
			IF 選択カード != 9999
				TRYCALLFORM RITSUMMON(듀얼리스트, 選択カード,出所,1)
			ENDIF

		ELSEIF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과条件종류 = 의식
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			選択カード = RESULT
			SIF 選択カード == 9999
				RETURN 0

			CALL CARD_SELECT(듀얼리스트,選択カード)
			選択カード = RESULT
			出所 = %参照先（CS）%
			IF 選択カード != 9999
				CALL FULLRESET
				효과範囲필드 = 1
				효과範囲손패 = 1
				효과条件속성 = 어둠속성
				효과条件レベル = 3
				효과条件複数 = 必要破壊
				효과条件行先플래그 = 破壊行き
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
					TRYCALLFORM RITSUMMON(듀얼리스트, 選択カード,出所,1)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72260,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 용각
		효과条件行先플래그 = 破壊行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT == 1
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,손패行き)
	ENDIF
ENDIF

