@CARDNAME_4047,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 드래그하트 루아드
	CASE "略称"
		RESULTS = 와룡 루아드
	CASE "カテゴリ"
		RESULTS:0 = 루아드
		RESULTS:1 = 용각
		RESULTS:2 = 섀도우 팔라딘
		RESULTS:4 = 뱅가드
ENDSELECT


@CARD_4047(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"
		RETURN 의식
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 마법사족
	CASE "レベル"
		RETURN 8
	CASE "攻撃力"
		RETURN 2500
	CASE "守備力"
		RETURN 2100
	CASE "성별"
		RETURN 雄性
	CASE "특수制限"
		RETURN 1
	CASE "レア度"
		RETURN SPR
ENDSELECT
RETURN 0

