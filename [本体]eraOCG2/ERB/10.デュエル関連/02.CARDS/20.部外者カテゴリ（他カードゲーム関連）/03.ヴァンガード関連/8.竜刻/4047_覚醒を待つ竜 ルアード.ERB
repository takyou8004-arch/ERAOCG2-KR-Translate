@CARD_EXPLANATION_4047(종류)
#DIM DYNAMIC 종류

PRINTL "룡마도의 의식"에 의해 강림. 이 카드명의 ①②의 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①: 이 카드를 패에서 버리고 발동할 수 있다.
PRINTL 덱에서 "드래그하트 루아드" 이외의 "용각" 카드 1장을 패에 넣는다.
PRINTL 이 턴, 자신은 어둠 속성 몬스터밖에 특수 소환할 수 없다.
CALLFORM CARD_ABLE(2,필드起動)
PRINTL ②: 묘지의 레벨 3 몬스터 2장을 덱으로 되돌리고 발동할 수 있다.
PRINTL 이 턴, 자신이 "루아드" 초차원 몬스터를 『초월』할 경우에 1번,
PRINTL 코스트를 지불하지 않고 『초월』할 수 있다
PRINTL (이 효과는 선공 1턴째엔 사용할 수 없다.)
CALLFORM CARD_ABLE(3,필드起動)
PRINTL ③: 자신 필드의 이 카드 이외의 몬스터 1장을 파괴하고 발동할 수 있다.
PRINTL 덱에서 어둠 속성 / 레벨 3 몬스터 2장까지를 특수 소환할 수 있다.

@CARDCAN_4047(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 발동불가,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4047)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,4047)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 용각
	효과条件固名前 = 드래그하트 루아드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,4047)
		발동불가:0 = 1
	SIF 발동済_3(듀얼리스트,4047)
		발동불가:1 = 1
	SIF ターン数 <= 1
		발동불가:0 = 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件レベル = 3
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		발동불가:0 = 1
	CALL FULLRESET
	효과条件他所 = 1
	효과範囲필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 3
	효과条件속성 = 어둠속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_4047(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 발동불가,2
#DIM DYNAMIC 효과先
#DIM DYNAMIC カードID
#DIM DYNAMIC 選択カードID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4047,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 용각
		효과条件固名前 = 드래그하트 루아드
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		SS소환可能속성 = 어둠속성
		CALL CARD_SS_RESTRICTION(듀얼리스트)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4047)
	IF RESULT == 0
		SIF 발동済_2(듀얼리스트,4047)
			발동불가:0 = 1
		SIF 발동済_3(듀얼리스트,4047)
			발동불가:1 = 1
		SIF ターン数 <= 1
			발동불가:0 = 1
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件レベル = 3
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT < 2
			발동불가:0 = 1
		CALL FULLRESET
		효과条件他所 = 1
		효과範囲필드 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:1 = 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件レベル = 3
		효과条件속성 = 어둠속성
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:1 = 1

		IF 듀얼리스트 == "자신"
			PRINTL 효과를 選択してください
			PRINTL
			IF 발동불가:0 != 1
				PRINTL [0] - ●이 턴、ノーコストで『초월』できる。
			ELSE
				SETCOLOR C_GRAY
				PRINTL ［X］- 발동条件を満たしていません！
				RESETCOLOR
			ENDIF
			IF 발동불가:1 != 1
				PRINTL [1] - ●레벨３の몬스터를 특수 소환한다。
			ELSE
				SETCOLOR C_GRAY
				PRINTL ［X］- 발동条件を満たしていません！
				RESETCOLOR
			ENDIF
			BINPUT
		ELSE
			IF 발동불가:0 != 1
				RESULT = 0
			ELSEIF 발동불가:1 != 1
				RESULT = 1
			ENDIF
		ENDIF

		IF RESULT == 0
			CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4047,2)
			IF RESULT == 0
				CALL FULLRESET
				효과条件レベル = 3
				효과条件複数 = 2
				효과条件行先플래그 = 덱行き
				CALL CARD_ADD_GY_BASIC(듀얼리스트,"묘지",ゾーン,場所)
			ENDIF

		ELSEIF RESULT == 1
			CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4047,3)
			IF RESULT == 0
				CALL FULLRESET
				효과条件他所 = 1
				효과範囲필드 = 1
				효과条件行先플래그 = 破壊行き
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT == 1
						CALL FULLRESET
						효과範囲덱 = 1
						효과条件속성 = 어둠속성
						효과条件レベル = 3
						효과条件複数 = 2
						효과条件任意 = 1
						CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF