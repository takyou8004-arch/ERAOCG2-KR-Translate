@CARDNAME_23226,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 작은 군사 마론
	CASE "略称"
		RESULTS = 마론
	CASE "カテゴリ"
		RESULTS:0 = 로열 팔라딘
		RESULTS:1 = 성기사
		RESULTS:4 = 골드 팔라딘
		RESULTS:5 = 해방자
		RESULTS:6 = 뱅가드
ENDSELECT


@CARD_23226(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 마법사족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 500
	CASE "守備力"
		RETURN 1400
	CASE "성별"
		RETURN 雄性
ENDSELECT
RETURN 0

