	CASE "名前"
		RESULTS = 스타호프 트럼페터
	CASE "略称"
		RESULTS = 트럼페터
	CASE "カテゴリ"
		RESULTS:0 = 로열 팔라딘
		RESULTS:1 = 성기사
		RESULTS:4 = 골드 팔라딘
		RESULTS:5 = 해방자
		RESULTS:6 = 뱅가드
ENDSELECT


